      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Preload].[USP_PreloadDegreeDay]\n(\r\n\t@fy AS INT = NULL\r\n\t,@actionBy AS VARCHAR(25) = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSET @fy = ISNULL(@fy, DATEPART(yyyy, GETDATE()) + 1);\r\n\tSET @actionBy = ISNULL(@actionBy, 'SYSTEM');\r\n\r\n\tDELETE Preload.DegreeDay\r\n\tWHERE BillingPeriod / 100 = @fy - 2;\r\n\r\n\tINSERT INTO Preload.DegreeDay\r\n\t\t(BillingPeriod,\r\n\t\t[MonthName],\r\n\t\tActualCoolingDegreeDays,\r\n\t\tActualHeatingDegreeDays,\r\n\t\tNormalCoolingDegreeDays,\r\n\t\tNormalHeatingDegreeDays,\r\n\t\tCreatedDate,\r\n\t\tCreatedBy,\r\n\t\tModifiedDate,\r\n\t\tModifiedBy)\r\n\tSELECT CONVERT(INT, ddb.BillingPeriod),\r\n\t\thist.[MonthName],\r\n\t\tddb.BaseCoolingDegreeDays,\r\n\t\tddb.BaseHeatingDegreeDays,\r\n\t\thist.NormalCoolingDegreeDays,\r\n\t\thist.NormalHeatingDegreeDays,\r\n\t\tGETDATE() AS CreatedDate,\r\n\t\t@actionBy AS CreatedBy,\r\n\t\tGETDATE() AS ModifiedDate,\r\n\t\t@actionBy AS ModifiedBy\r\n\tFROM EC3DB.Factors_DegreeDayBase AS ddb\r\n\t\tINNER JOIN EC3DB.Factors_DegreeDayNormalized30YearAverage AS hist ON ddb.MM = hist.MM\r\n\tWHERE CONVERT(INT, SUBSTRING(ddb.BillingPeriod, 1, 4)) = @fy - 2;\r\nEND;\r"
        }
      ]
    }
  ]
