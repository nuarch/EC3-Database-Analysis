    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [input].[USP_TenantChargeDetailCreate]\n\t@tenantChargeId AS INT\r\n\t,@agencyCode AS VARCHAR(6)\r\n\t,@budgetGroupId AS INT\r\n\t,@chargePercentage AS DECIMAL(10, 5) = 0.0\r\n\t,@actionBy AS VARCHAR(25) = 'SYSTEM'\r\n\t,@id AS INT OUTPUT\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @IdOutput TABLE (ID INT);\r\n\r\n\tINSERT INTO input.TenantChargeDetail (TenantChargeID, AgencyCode, BudgetGroupID, ChargePercentage)\r\n\tOUTPUT INSERTED.DetailID INTO @IdOutput\r\n\tVALUES (@tenantChargeId, @agencyCode, @budgetGroupId, @chargePercentage);\r\n\r\n\tSELECT @id = ID FROM @IdOutput;\r\n\r\n--------------------------------------------------------------------\r\n-- Update TenantCharge and Scenario status if possible\r\n--------------------------------------------------------------------\r\n\t\r\n\tUPDATE input.TenantCharge\r\n\tSET ModifiedDate = GETDATE(), ModifiedBy = @actionBy\r\n\tWHERE id = @tenantChargeId;\r\n\r\n\tUPDATE budget.Scenario\r\n\tSET [Status] = 'REQUIRERECALC'\r\n\tWHERE TenantChargeID = @tenantChargeId AND [Status] IN ('CALCULATED');\r\nEND\r"
        }
      ]
