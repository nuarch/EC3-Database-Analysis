      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Preload].[USP_PreloadBudgetGroup]\n(\r\n\t@fy AS INT = NULL\r\n\t,@actionBy AS VARCHAR(25) = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSET @fy = ISNULL(@fy, DATEPART(yyyy, GETDATE()) + 1);\r\n\tSET @actionBy = ISNULL(@actionBy, 'SYSTEM');\r\n\r\n\t-- if the Budget Group list is populated already for the given FY, do not do it again\r\n\tIF (@fy = SOME(SELECT FY FROM Preload.BudgetGroupByFY))\r\n\tBEGIN\r\n\t\tRETURN;\r\n\tEND;\r\n\r\n\tINSERT INTO Preload.BudgetGroup\r\n\t\t(BudgetGroupID,\r\n\t\tBudgetGroupName,\r\n\t\tBudgetGroupDescription,\r\n\t\tEnergyType,\r\n\t\tEnergyUnit,\r\n\t\tCreatedDate,\r\n\t\tCreatedBy,\r\n\t\tModifiedDate,\r\n\t\tModifiedBy)\r\n\tSELECT BudgetGroupID,\r\n\t\tBudgetGroupName,\r\n\t\tBudgetGroupDescription,\r\n\t\tEnergyType,\r\n\t\tCASE WHEN EnergyType = 'STM' THEN 'Mlbs'\r\n\t\t\tWHEN EnergyType = 'GAS' THEN 'therms'\r\n\t\t\tWHEN EnergyType = 'CHW' THEN 'Mlbs'\r\n\t\t\tELSE 'kWh' END EnergyUnit,\r\n\t\tGETDATE() AS CreatedDate,\r\n\t\t@actionBy AS CreatedBy,\r\n\t\tGETDATE() AS ModifiedDate,\r\n\t\t@actionBy AS ModifiedBy\r\n\tFROM EC3DB.BudgetApp_vwBudgetGroups\r\n\tWHERE Active = 1 AND BudgetGroupID NOT IN (SELECT BudgetGroupID FROM Preload.BudgetGroup);\r\n\t\r\n\r\n\tINSERT INTO Preload.BudgetGroupByFY (FY, BudgetGroupID)\r\n\tSELECT @fy, BudgetGroupID\r\n\tFROM EC3DB.BudgetApp_vwBudgetGroups\r\n\tWHERE Active = 1;\r\nEND;\r"
        }
      ]
    }
  ]
