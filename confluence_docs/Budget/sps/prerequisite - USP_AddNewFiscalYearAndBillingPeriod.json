      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [prerequisite].[USP_AddNewFiscalYearAndBillingPeriod]\n    @actionBy AS VARCHAR(25) = NULL\r\nAS\r\nBEGIN\r\n    SET NOCOUNT ON;\r\n\r\n\tDECLARE @fy INT;\r\n\tSELECT @fy = (MAX(FY) + 1)  FROM [Preload].[BillingPeriod]  \r\n\r\n    SET @actionBy = ISNULL(@actionBy, 'SYSTEM');\r\n    DECLARE @increment INT = 1;\r\n\t \r\n    WHILE (@increment < 13)\r\n    BEGIN\r\n        IF @increment < 7\r\n            INSERT INTO [Preload].[BillingPeriod] ([BudgetBillingPeriod], [BillingPeriod], [CreatedDate], [CreatedBy])\r\n            VALUES (@fy * 100 + @increment, (@fy - 2) * 100 + @increment, GETDATE(), @actionBy);\r\n        ELSE\r\n            INSERT INTO [Preload].[BillingPeriod] ([BudgetBillingPeriod], [BillingPeriod], [CreatedDate], [CreatedBy])\r\n            VALUES ((@fy - 1) * 100 + @increment, (@fy - 2) * 100 + @increment, GETDATE(), @actionBy);\r\n\r\n        SET @increment = @increment + 1;\r\n    END;\r\nEND;\r"
        }
      ]
    }
  ]
