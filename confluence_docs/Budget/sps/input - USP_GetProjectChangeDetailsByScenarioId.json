    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [input].[USP_GetProjectChangeDetailsByScenarioId]\n(\r\n\t@ScenarioId AS INT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSELECT P.ProjectChangeID\r\n\t\t,P.AgencyCode\r\n\t\t,P.BudgetGroupID\r\n\t\t,P.BillingPeriod\r\n\t\t,SUM(P.MonthlyDemandUsage) AS MonthlyDemandUsage\r\n\t\t,SUM(P.MonthlyEnergyUsage) AS MonthlyEnergyUsage\r\n\t\t,SUM(P.MonthlyOnPeakEnergyUsage) AS MonthlyOnPeakEnergyUsage\r\n\t\t,SUM(P.MonthlyOffPeakEnergyUsage) AS MonthlyOffPeakEnergyUsage\r\n\t\t,SUM(P.EnergyUsageReactivePower) AS EnergyUsageReactivePower\r\n\t\t,SUM(P.StreetLightingFacilityPoints) AS StreetLightingFacilityPoints\r\n\t\t,SUM(P.NumberOfDistinctAccount) AS NumberOfDistinctAccount\r\n\tFROM input.vwProjectChangeDetailsMonthly AS P\r\n\t\tINNER JOIN budget.Scenario AS S ON S.ProjectChangeID = P.ProjectChangeID\r\n\tWHERE S.ID = @ScenarioId\r\n\tGROUP BY P.ProjectChangeID, P.AgencyCode, P.BudgetGroupID, P.BillingPeriod;\r\nEND;\r"
        }
