    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [billing].[USP_BudgetGroupsRetrieve]\n(\r\n\t@budgetGroupId AS INT = NULL\r\n\t,@providerId AS INT = NULL\r\n\t,@energyType AS VARCHAR(3) = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT BudgetGroupID\r\n\t\t,BudgetGroupName\r\n\t\t,BudgetGroupDescription\r\n\t\t,EnergyType\r\n\t\t,Active\r\n\tFROM EC3DB.BudgetApp_vwBudgetGroups\r\n\tWHERE BudgetGroupID = ISNULL(@budgetGroupId, BudgetGroupID)\r\n\t\tAND BudgetGroupID IN (SELECT DISTINCT BudgetGroupDEM\r\n\t\t\tFROM EC3DB.BudgetApp_vwProviderBudgetGroups\r\n\t\t\tWHERE [Provider] = ISNULL(@providerId, [Provider]))\r\n\t\tAND CASE WHEN ISNULL(@energyType, '') <> '' THEN CASE WHEN EnergyType = @energyType THEN 1 ELSE 0 END ELSE 1 END = 1\r\n\tUNION\r\n\tSELECT  CONVERT(INT, 0) AS BudgetGroupID,\r\n\t\t'', '', '', 'TRUE' AS Active\r\n\tORDER BY BudgetGroupName ASC;\r\nEND;\r"
        }
      ]
    }
