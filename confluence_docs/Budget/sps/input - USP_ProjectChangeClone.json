    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [input].[USP_ProjectChangeClone]\n(\r\n    @fy AS INT,\r\n    @name AS VARCHAR(250),\r\n    @description AS VARCHAR(500),\r\n    @actionBy AS VARCHAR(25) = 'SYSTEM',\r\n    @id AS INT OUTPUT,\r\n    @originalId AS INT\r\n)\r\nAS\r\nBEGIN\r\n    SET NOCOUNT ON;\r\n\r\n    DECLARE @IdOutput TABLE (ID INT);\r\n\r\n    INSERT INTO input.ProjectChange (FY, [Name], [Description], CreatedBy, ModifiedBy)\r\n    OUTPUT INSERTED.ID INTO @IdOutput\r\n    VALUES (@fy, @name, @description, @actionBy, @actionBy);\r\n\r\n    SELECT @id = ID FROM @IdOutput;\r\n\r\n    -----------------------------------------------------------------------------------------------------\r\n    -- get all old DetailID that are associated with the old ProjectChangeID\r\n    SELECT [DetailID]\r\n    INTO #TEMP_Detail_ID\r\n    FROM [input].[ProjectChangeDetail]\r\n    WHERE [ProjectChangeID] = @originalId;\r\n\r\n    -- persist the excluded items for return\r\n    SELECT DISTINCT DetailID\r\n        ,AgencyCode\r\n        ,BudgetGroupID\r\n    INTO #TEMP_Obsolete\r\n    FROM input.ProjectChangeDetail\r\n    WHERE DetailID IN (SELECT DetailID FROM #TEMP_Detail_ID)\r\n          AND (AgencyCode NOT IN (SELECT a.AgencyCodeOEC\r\n                FROM Preload.Agency AS a\r\n                    INNER JOIN Preload.AgencyByFY AS abf ON a.AgencyId = abf.AgencyId\r\n                  WHERE abf.FY = @fy)\r\n              OR BudgetGroupID NOT IN (SELECT BudgetGroupID FROM Preload.BudgetGroupByFY WHERE FY = @fy));\r\n\r\n    -- purge #TEMP_Detail_ID to exclude entries with obsolete agencies and budget groups\r\n    DELETE #TEMP_Detail_ID\r\n    WHERE [DetailID] IN (SELECT [DetailID] FROM #TEMP_Obsolete);\r\n    -----------------------------------------------------------------------------------------------------\r\n\r\n    INSERT INTO input.ProjectChangeDetail(ProjectChangeID\r\n        ,DEMProjectID\r\n        ,AgencyCode\r\n        ,FacilityNo\r\n        ,FacilityName\r\n        ,FacilityAddress\r\n        ,AccountNo\r\n        ,BudgetGroupID\r\n        ,EffectiveDate\r\n        ,DemandSavings\r\n        ,EnergySavings\r\n        ,EnergySavingsPeakPercentage\r\n        ,ProgramTypeId\r\n        ,PatternTypeId)\r\n    SELECT @id\r\n        ,DEMProjectID\r\n        ,AgencyCode\r\n        ,FacilityNo\r\n        ,FacilityName\r\n        ,FacilityAddress\r\n        ,AccountNo\r\n        ,BudgetGroupID\r\n        ,EffectiveDate\r\n        ,DemandSavings\r\n        ,EnergySavings\r\n        ,EnergySavingsPeakPercentage\r\n        ,ProgramTypeId\r\n        ,PatternTypeId\r\n    FROM input.ProjectChangeDetail\r\n    WHERE ProjectChangeID = @originalId\r\n          AND DetailID IN (SELECT DetailID FROM #TEMP_Detail_ID);\r\n\r\n    SELECT AgencyCode, BudgetGroupID\r\n    FROM #TEMP_Obsolete;\r\n\r\n    DROP TABLE #TEMP_Obsolete, #TEMP_Detail_ID;\r\nEND;\r"
        }
      ]
    }
