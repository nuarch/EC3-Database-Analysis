          "type": "text",
          "text": "CREATE PROCEDURE [input].[USP_DEMChangeDetailsDelete]\n(\r\n    @demChangeDetailEntityID AS INT\r\n\t,@actionBy AS VARCHAR(25) = 'SYSTEM'\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\t\r\n\tDECLARE @DEMChangeID INT;\r\n\r\n\tSELECT @DEMChangeID = MAX(DEMChangeID)\r\n\tFROM input.DEMChangeDetail\r\n\tWHERE demChangeDetailEntityID = @demChangeDetailEntityID;\r\n\r\n\r\n\tDELETE FROM input.DEMChangeDetail\r\n\tWHERE demChangeDetailEntityID = @demChangeDetailEntityID\r\n\r\n\tUPDATE input.DEMChange\r\n\tSET ModifiedDate=GETDATE(), ModifiedBy = @actionBy\r\n\tWHERE id = @DEMChangeID;\r\n\r\n\tUPDATE budget.Scenario\r\n\tSET [Status] = 'REQUIRERECALC'\r\n\tWHERE DEMChangeID=@DEMChangeID AND [Status] IN ('CALCULATED');\r\nEND;\r"
        }
