    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [prerequisite].[USP_InsertBudgetGroupsPrerequisite]\n(\r\n    @idList AS input.UDT_IDList READONLY\r\n   ,@fy AS INT\r\n   ,@actionBy AS VARCHAR(25) = NULL\r\n   ,@deleteExisting AS BIT = FALSE\r\n)\r\nAS\r\nBEGIN\r\n    SET NOCOUNT ON;\r\n\r\n    SET @actionBy = ISNULL(@actionBy, 'SYSTEM');\r\n\r\n    ------------- Part 1 ------------\r\n    DECLARE @idList2 AS input.UDT_IDList;\r\n\r\n    INSERT INTO @idList2\r\n    SELECT ID\r\n    FROM @idList\r\n    WHERE ID NOT IN (SELECT BudgetGroupID FROM Preload.BudgetGroup);\r\n\r\n    INSERT INTO [Preload].[BudgetGroup]\r\n        (BudgetGroupID,\r\n        BudgetGroupName,\r\n        BudgetGroupDescription,\r\n        EnergyType,\r\n        EnergyUnit,\r\n        CreatedDate,\r\n        CreatedBy,\r\n        ModifiedDate,\r\n        ModifiedBy)\r\n    SELECT BudgetGroupID,\r\n        BudgetGroupName,\r\n        BudgetGroupDescription,\r\n        EnergyType,\r\n        CASE WHEN EnergyType = 'STM' THEN 'MLBS'\r\n            WHEN EnergyType = 'GAS' THEN 'THERMS'\r\n            WHEN EnergyType = 'CHW' THEN 'MLBS'\r\n            ELSE 'KWH' END EnergyUnit,\r\n        GETDATE() AS CreatedDate,\r\n        @actionBy AS CreatedBy,\r\n        GETDATE() AS ModifiedDate,\r\n        @actionBy AS ModifiedBy\r\n    FROM EC3DB.BudgetApp_vwBudgetGroups\r\n    WHERE BudgetGroupID IN (SELECT ID FROM @idList2);\r\n\r\n    ------------- Part 2 ------------\r\n    IF @deleteExisting <> 0  -- for new fiscal year, users should be able to remove, not for current FY and last FY\r\n    BEGIN\r\n        DELETE Preload.BudgetGroupByFY\r\n        WHERE FY = @fy\r\n            AND BudgetGroupID NOT IN (SELECT ID FROM @idList\r\n                UNION\r\n                SELECT BudgetGroupID AS ID\r\n                FROM prerequisite.vwBudgetGroupsUsedByInputByFY\r\n                WHERE FY = @fy);\r\n    END;\r\n\r\n    DELETE @idList2;\r\n    INSERT INTO @idList2\r\n    SELECT ID\r\n    FROM @idList\r\n    WHERE ID NOT IN (SELECT BudgetGroupID FROM Preload.BudgetGroupByFY WHERE FY = @fy);\r\n\r\n    INSERT INTO [Preload].[BudgetGroupByFY]\r\n        (FY,\r\n        BudgetGroupID,\r\n        CreatedDate,\r\n        CreatedBy)\r\n    SELECT @fy,\r\n        BudgetGroupID,\r\n        GETDATE() AS CreatedDate,\r\n        @actionBy AS CreatedBy\r\n    FROM EC3DB.BudgetApp_vwBudgetGroups\r\n    WHERE BudgetGroupID IN (SELECT ID FROM @idList2);\r\n\r\n    IF NOT EXISTS (SELECT 1 FROM Preload.BudgetGroupByFY WHERE BudgetGroupID = 62 AND FY = @fy)\r\n    BEGIN\r\n        INSERT INTO [Preload].[BudgetGroupByFY]\r\n            (FY,\r\n            BudgetGroupID,\r\n            CreatedDate,\r\n            CreatedBy)\r\n        VALUES\r\n            (@fy,\r\n            62,\r\n            GETDATE(),\r\n            @actionBy);\r\n    END;\r\nEND;\r"
        }
      ]
    }
