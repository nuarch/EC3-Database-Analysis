        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "@actionBy AS VARCHAR(25) = 'SYSTEM'",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": This optional parameter is intended to record who initiated the delete action. It defaults to 'SYSTEM' if not provided. However, in the current implementation, this parameter is not utilized within the procedure."
                }
              ]
            }
          ]
        }
      ]
