      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [input].[USP_RateFactorDetailsUpdateByCommonRateFactors]\n\t@rateFactorID AS INT\r\n\t,@commonRateFactorIDs AS input.UDT_IDList READONLY\r\n\t,@actionBy AS VARCHAR(25) = 'SYSTEM'\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\t\r\n\tDECLARE @ComdtyMult_Desc AS VARCHAR(20) = 'MULT_COMMODITY';\r\n\r\n\tUPDATE input.RateFactorDetail\r\n\tSET CommodityMultiplier = c.multiplier\r\n\tFROM input.CommonRateFactor a JOIN input.CommonRateFactorType b ON a.CommonRateFactorTypeID = b.id\r\n\t\t JOIN input.CommonRateFactorDetail c ON a.id = c.commonRateFactorId\r\n\t\t JOIN input.CommonRateFactorTypeBudgetGroupMapping d ON a.CommonRateFactorTypeID = d.CommonRateFactorTypeID\r\n\tWHERE a.id IN (SELECT ID FROM @commonRateFactorIDs) \r\n\t\t AND b.[description] = @ComdtyMult_Desc\r\n\t\t AND input.RateFactorDetail.RateFactorID = @rateFactorID\r\n\t\t AND d.budgetGroupId = input.RateFactorDetail.budgetGroupId \r\n\t\t AND c.billingPeriod = input.RateFactorDetail.BillingPeriod;\t\r\n\t\r\n\tUPDATE input.RateFactor\r\n\tSET ModifiedBy = @actionBy, ModifiedDate = getdate()\r\n\tWHERE ID = @rateFactorID;\r\nEND\r"
        }
      ]
