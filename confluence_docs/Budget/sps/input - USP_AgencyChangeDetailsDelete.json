          "type": "text",
          "text": "CREATE PROCEDURE [input].[USP_AgencyChangeDetailsDelete]\n(\r\n      @agencyChangeDetailEntityId AS INT\r\n\t  ,@actionBy AS VARCHAR(25) = 'SYSTEM'\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @AgencyChangeID AS INT;\r\n\r\n\tSELECT @AgencyChangeID = MAX(AgencyChangeID)\r\n\tFROM input.AgencyChangeDetail\r\n\tWHERE agencyChangeDetailEntityId = @agencyChangeDetailEntityId;\r\n\r\n\tDELETE FROM input.AgencyChangeDetail\r\n\tWHERE agencyChangeDetailEntityId = @agencyChangeDetailEntityId;\r\n\t\r\n\tUPDATE input.AgencyChange\r\n\tSET ModifiedDate = GETDATE(), ModifiedBy = @actionBy\r\n\tWHERE id = @AgencyChangeID;\r\n\r\n\tUPDATE budget.Scenario\r\n\tSET [Status] = 'REQUIRERECALC'\r\n\tWHERE AgencyChangeID=@AgencyChangeID AND [Status] IN ('CALCULATED');\r\nEND;\r"
        }
