      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [budget].[USP_ScenarioCreate]\n(\r\n\t@fy AS INT\r\n\t,@name AS VARCHAR(250)\r\n\t,@description AS VARCHAR(500)\r\n\t,@baseYear AS INT\r\n\t,@publishedBillingPeriod AS INT\r\n\t,@agencyChangeId AS INT = NULL\r\n\t,@demChangeId AS INT = NULL\r\n\t,@projectChangeId AS INT = NULL\r\n\t,@tenantChargeId AS INT = NULL\r\n\t,@baseRateId AS INT = NULL\r\n\t,@rateFactorId AS INT = NULL\r\n\t,@actionBy AS VARCHAR(25) = 'SYSTEM'\r\n\t,@id AS INT OUTPUT\r\n\t,@isCurrentProjection AS BIT = 0\r\n\t,@isCurrentBudget AS BIT = 0\r\n\t,@actualDataEndMonth AS INT = 0\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @IdOutput TABLE (ID INT);\r\n\r\n\tINSERT INTO budget.Scenario ([Name], [Description], FY, BaseYear, PublishedBillingPeriod\r\n\t\t,AgencyChangeID, DEMChangeID, ProjectChangeID, TenantChargeID\r\n\t\t,BaseRateID, RateFactorID, Active\r\n\t\t,CreatedBy, ModifiedBy, IsCurrentProjection, IsCurrentBudget, ActualDataEndMonth)\r\n\tOUTPUT INSERTED.ID INTO @IdOutput\r\n\tVALUES (@name, @description, @fy, @baseYear, @publishedBillingPeriod\r\n\t\t,@agencyChangeId, @demChangeId, @projectChangeId, @tenantChargeId\r\n\t\t,@baseRateId, @rateFactorId, 1\r\n\t\t,@actionBy, @actionBy, @isCurrentProjection, @isCurrentBudget, @actualDataEndMonth);\r\n\r\n\tSELECT @id = ID FROM @IdOutput;\r\nEND;\r"
        }
      ]
