    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [budget].[USP_CalculationStageResultDelete]\n(\r\n\t@scenarioId AS INT\r\n\t,@stageId AS INT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\t DELETE FROM budget.StagingBudget WHERE ScenarioId = @scenarioId AND BudgetStageID = @stageId;\r\nEND;\r"
        }
      ]
    }
