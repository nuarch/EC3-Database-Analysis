      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [input].[USP_ProjectChangeUpdate]\n\t@id AS INT\r\n\t,@fy AS INT\r\n\t,@name AS VARCHAR(250)\r\n\t,@description AS VARCHAR(500)\r\n\t,@active AS BIT\r\n\t,@actionBy AS VARCHAR(25) = 'SYSTEM'\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tUPDATE input.ProjectChange\r\n\tSET FY = @fy\r\n\t\t,[Name] = @name\r\n\t\t,[Description] = @description\r\n\t\t,Active = @active\r\n\t\t,ModifiedBy = @actionBy\r\n\t\t,ModifiedDate = GETDATE()\r\n\tWHERE ID = @id;\r\nEND\r"
        }
