          "type": "text",
          "text": "CREATE PROCEDURE [input].[USP_ProjectChangeDetailsRetrieve]\n(\r\n\t@id AS INT = NULL\r\n\t,@projectChangeId AS INT = NULL\r\n\t,@budgetGroupId AS INT = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSET @id = NULLIF(ISNULL(@id, 0), 0);\r\n\tSET @projectChangeId = NULLIF(ISNULL(@projectChangeId, 0), 0);\r\n\tSET @budgetGroupId = NULLIF(ISNULL(@budgetGroupId, 0), 0);\r\n\r\n\tSELECT PCD.DetailID\r\n\t\t,PCD.ProjectChangeID\r\n\t\t,PCD.DEMProjectID\r\n\t\t,PCD.AgencyCode\r\n\t\t,PCD.FacilityNo\r\n\t\t,PCD.FacilityName\r\n\t\t,PCD.FacilityAddress\r\n\t\t,PCD.AccountNo\r\n\t\t,PCD.BudgetGroupID\r\n\t\t,PCD.EffectiveDate\r\n\t\t,PCD.DemandSavings\r\n\t\t,PCD.EnergySavings\r\n\t\t,PCD.EnergySavingsPeakPercentage\r\n\t\t,PCD.EnergyUsagePeak\r\n\t\t,PCD.EnergyUsageOffPeak\r\n\t\t,PCD.ProgramTypeID\r\n\t\t,PPT.Abbreviation AS ProgramType\r\n\t\t,PCD.PatternTypeID\r\n\t\t,PCD.Notes\r\n\t\t,PCD.CreatedDate\r\n\t\t,PCD.CreatedBy\r\n\t\t,PCD.ModifiedDate\r\n\t\t,PCD.ModifiedBy\r\n\tFROM input.vwProjectChangeDetails AS PCD\r\n\t\tINNER JOIN input.ProjectProgramType AS PPT ON PCD.ProgramTypeID = PPT.ProjectProgramId\r\n\tWHERE PCD.DetailID = ISNULL(@id, PCD.DetailID)\r\n\t\tAND PCD.ProjectChangeID = ISNULL(@projectChangeId, PCD.ProjectChangeID)\r\n\t\tAND PCD.BudgetGroupID = ISNULL(@budgetGroupId, PCD.BudgetGroupID)\r\n\tORDER BY PCD.BudgetGroupID ASC\r\n\t\t,PCD.AgencyCode ASC\r\n\t\t,PCD.FacilityNo ASC\r\n\t\t,PCD.AccountNo ASC;\r\nEND;\r"
        }
      ]
