        {
          "type": "text",
          "text": ", and "
        },
        {
          "type": "text",
          "text": "BudgetGroupID",
          "marks": [
            {
              "type": "code"
            }
          ]
        },
        {
          "type": "text",
          "text": ". The procedure joins this view with the "
