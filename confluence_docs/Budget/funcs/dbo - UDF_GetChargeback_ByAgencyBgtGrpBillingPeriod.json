      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[UDF_GetChargeback_ByAgencyBgtGrpBillingPeriod]\n(\r\n\t@billingPeriod AS VARCHAR(6) = NULL\r\n\t,@agencyCodeOEC AS VARCHAR(6) = NULL\r\n\t,@demBudgetGroup AS INT = NULL\r\n)\r\nRETURNS DECIMAL\r\nAS\r\nBEGIN\r\n\tDECLARE @chargeBackDollar AS DECIMAL(18,2);\r\n\r\n\tSELECT @chargeBackDollar = ISNULL(SUM(-1*ABS(ISNULL(a.AgencyShare, 0))), 0)\r\n\tFROM [input].vwChargebacks a\r\n\tWHERE a.BillingPeriod = ISNULL(@billingPeriod, a.BillingPeriod) \r\n\t\tAND a.AgencyNo = ISNULL(@agencyCodeOEC, a.AgencyNo)\r\n\t\tAND\ta.DemBudgetGroup = ISNULL(@demBudgetGroup, a.DemBudgetGroup);\r\n\r\n\tRETURN @chargeBackDollar;\r\nEND;\r"
        }
