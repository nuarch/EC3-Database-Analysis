    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[UDF_GetBillingPeriods]\n(\r\n\t@fy AS INT\r\n)\r\nRETURNS @Output TABLE (FY INT\r\n\t,BillingPeriod INT)\r\nAS\r\nBEGIN\r\n\tDECLARE @bpCtr INT, @maxBP INT;\r\n\r\n\tSET @bpCtr\t= ((@fy - 1) * 100) + 7;\r\n\tSET @maxBP\t= (@fy * 100) + 6;\r\n\r\n\tWHILE @bpCtr <= @maxBP\r\n\tBEGIN\r\n\t\tINSERT INTO @Output(FY, BillingPeriod) VALUES (@fy, @bpCtr);\r\n\t\tIF @bpCtr % 100 = 12\r\n\t\t\tSET @bpCtr = (@fy * 100) + 1;\r\n\t\tELSE\r\n\t\t\tSET @bpCtr = @bpCtr + 1;\r\n\tEND;\r\n \r\n\tRETURN;\r\nEND;\r"
        }
