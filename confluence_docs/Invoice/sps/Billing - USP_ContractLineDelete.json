    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[USP_ContractLineDelete]\n(\r\n\t@contractLineId\tAS INT\r\n\t,@correlationId AS VARCHAR(128) = NULL\r\n\t,@machineName AS VARCHAR(128) = NULL\r\n\t,@processName AS VARCHAR(128) = NULL\r\n\t,@domain AS VARCHAR(25) = NULL\r\n\t,@username AS VARCHAR(25) = NULL\r\n\t,@userId AS INT = NULL\r\n\t,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @contractId AS INT, @action AS VARCHAR(25) = 'DELETE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Deleted contract line'\r\n\t\t,@messageDetails AS VARCHAR(MAX), @startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0, @tranName AS VARCHAR(128) = CONVERT(VARCHAR(128), NEWID());\r\n\r\n\tSELECT @contractId = ContractID\r\n\tFROM Billing.ContractLine\r\n\tWHERE ContractLineID = @contractLineId;\r\n\t\r\n\tSELECT @correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID())), @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA')\r\n\t\t,@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA'), @userId = ISNULL(@userId, 0);\r\n\r\n\tSELECT @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @contractId AS CTRTID, @contractLineId AS CTRTLINEID FOR XML PATH('INPUTS')));\r\n\r\n\tBEGIN TRY\r\n\t\tBEGIN TRAN @tranName;\r\n\t\t\r\n\t\tIF NOT EXISTS (SELECT * FROM Invoice.InvoiceContractLine WHERE ContractLineID = @contractLineId)\r\n\t\tBEGIN\r\n\t\t\t-- Update history contract line\r\n\t\t\tDELETE FROM Billing.HistoricalContractLine WHERE ContractLineID = @contractLineId;\r\n\r\n\t\t\t-- Update contract line\r\n\t\t\tDELETE FROM Billing.ContractLine WHERE ContractLineID = @contractLineId;\r\n\r\n\t\t\t-- update contract table since contract amounts are from contract lines\r\n\t\t\tUPDATE Billing.[Contract]\r\n\t\t\tSET\tActualAmount = ISNULL(b.ActualAmount, 0)\r\n\t\t\t\t,CloseAmount = ISNULL(b.CloseAmount, 0)\r\n\t\t\t\t,OpenAmount = ISNULL(b.OpenAmount, 0)\r\n\t\t\t\t,ModifiedDate = GETDATE()\r\n\t\t\t\t,ModifiedBy = @userId\r\n\t\t\tFROM (SELECT SUM(ISNULL(ActualAmount, 0)) AS ActualAmount\r\n\t\t\t\t\t,SUM(ISNULL(CloseAmount, 0)) AS CloseAmount\r\n\t\t\t\t\t,SUM(ISNULL(OpenAmount, 0)) AS OpenAmount\r\n\t\t\t\tFROM Billing.ContractLine\r\n\t\t\t\tWHERE ContractID = @contractId) AS b\r\n\t\t\tWHERE ContractID = @contractId;\r\n\t\tEND;\r\n\r\n\t\tCOMMIT TRAN @tranName;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tIF (XACT_STATE() <> 0)\r\n\t\tBEGIN\r\n\t\t\tROLLBACK TRAN @tranName;\r\n\t\tEND;\r\n\r\n\t\tSELECT @exceptionDetails = ERROR_MESSAGE(), @severity\t= 'ERROR', @message\t= 'Failed to delete contract line', @sendEmail\t= 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@action = @action\r\n\t\t,@severity = @severity\r\n\t\t,@message = @message\r\n\t\t,@messageDetails = @messageDetails\r\n\t\t,@exceptionDetails = @exceptionDetails\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@sendEmail = @sendEmail\r\n\t\t,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
