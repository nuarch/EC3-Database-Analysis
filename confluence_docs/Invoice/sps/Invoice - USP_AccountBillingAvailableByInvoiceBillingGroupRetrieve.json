      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Invoice].[USP_AccountBillingAvailableByInvoiceBillingGroupRetrieve]\n(\r\n\t@invoiceId AS INT\r\n\t,@groupId AS INT\r\n\t,@correlationId AS VARCHAR(128) = NULL\r\n\t,@machineName AS VARCHAR(128) = NULL\r\n\t,@processName AS VARCHAR(128) = NULL\r\n\t,@domain AS VARCHAR(25) = NULL\r\n\t,@username AS VARCHAR(25) = NULL\r\n\t,@userId AS INT = NULL\r\n\t,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSELECT @invoiceId = NULLIF(@invoiceId, 0), @groupId = NULLIF(@groupId, 0), @correlationId\t= ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID()))\r\n\t\t,@machineName = COALESCE(@machineName, @@SERVERNAME, 'NA'), @userId = ISNULL(@userId, 0)\r\n\t\t,@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\r\n\tDECLARE @action AS VARCHAR(25) = 'RETRIEVE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Retrieved available account billing(s) by invoice and group'\r\n\t\t,@messageDetails AS VARCHAR(MAX), @startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0, @BillingPeriod AS VARCHAR(6);\r\n\t\r\n\tSELECT @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @invoiceId AS INVID, @groupId AS GRPID FOR XML PATH('INPUTS')));\r\n\tSELECT @BillingPeriod = InvoiceBillingPeriod FROM Invoice.Invoice WHERE InvoiceID = @invoiceId;\r\n\r\n\tBEGIN TRY\r\n\t\tSELECT BillingID\r\n\t\t\t,AmountBilled\r\n\t\t\t,AmountPaid\r\n\t\t\t,DateBilled\r\n\t\t\t,DateDue\r\n\t\t\t,BillingPeriod\r\n\t\t\t,BillingPeriodDays\r\n\t\t\t,FromDate\r\n\t\t\t,ToDate\r\n\t\t\t,IsEstimated\r\n\t\t\t,IsManualEntry\r\n\t\t\t,AccountID\r\n\t\t\t,AccountNumber\r\n\t\t\t,FormattedAccountNumber\r\n\t\t\t,EnergySource\r\n\t\t\t,EnergyUsage\r\n\t\t\t,DemandUsage\r\n\t\t\t,GroupID\r\n\t\t\t,GroupName\r\n\t\t\t,ProviderID\r\n\t\t\t,ProviderName\r\n\t\t\t,CreatedDate\r\n\t\t\t,CreatedBy\r\n\t\t\t,ModifiedDate\r\n\t\t\t,ModifiedBy\r\n\t\t\t,Active\r\n\t\t\t,ManualPaymentOverrideAmount\r\n\t\tFROM Billing.vwAccountBillings\r\n\t\tWHERE GroupID = ISNULL(@groupId, GroupID)\r\n\t\t\tAND BillingID NOT IN (SELECT DISTINCT BillingID FROM Invoice.vwInvoiceAccountBillings WHERE GroupID = ISNULL(@groupId, GroupID))\r\n\t\t\tAND BillingPeriod = @BillingPeriod\r\n\t\tORDER BY ProviderName ASC, GroupName ASC, BillingPeriod DESC, AccountNumber ASC;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tSELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Failed to retrieve available account billing(s) by invoice and group', @sendEmail = 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@action = @action\r\n\t\t,@severity = @severity\r\n\t\t,@message = @message\r\n\t\t,@messageDetails = @messageDetails\r\n\t\t,@exceptionDetails = @exceptionDetails\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@sendEmail = @sendEmail\r\n\t\t,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
