      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Invoice].[USP_InvoiceDelete]\n(\r\n\t@invoiceId AS INT\r\n\t,@comments AS VARCHAR(500) = NULL\r\n\t,@correlationId AS VARCHAR(128) = NULL\r\n\t,@machineName AS VARCHAR(128) = NULL\r\n\t,@processName AS VARCHAR(128) = NULL\r\n\t,@domain AS VARCHAR(25) = NULL\r\n\t,@username AS VARCHAR(25) = NULL\r\n\t,@userId AS INT = NULL\r\n\t,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @action AS VARCHAR(25), @severity AS VARCHAR(25), @message AS VARCHAR(255), @messageDetails AS VARCHAR(MAX)\r\n\t\t,@startTime AS DATETIME, @elapsedTime AS INT, @sendEmail AS BIT, @tranName AS VARCHAR(128);\r\n\r\n\tSELECT @invoiceId = NULLIF(@invoiceId, 0), @comments = ISNULL(NULLIF(@comments, ''), 'Deleted invoice');\r\n\tSELECT @startTime = GETDATE(), @action = 'DELETE', @severity = 'INFO', @message = 'Deleted invoice', @sendEmail = 0\r\n\t\t,@userId = ISNULL(@userId, 0), @tranName = CONVERT(VARCHAR(128), NEWID())\r\n\t\t,@correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID()))\r\n\t\t,@machineName = COALESCE(@machineName, @@SERVERNAME, 'NA')\r\n\t\t,@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA')\r\n\t\t,@messageDetails = CONVERT(VARCHAR(MAX), (SELECT @invoiceId AS PRVID, @comments AS CMT FOR XML PATH('INPUTS')));\t\r\n\r\n\tBEGIN TRY\r\n\t\tBEGIN TRAN @tranName;\r\n\r\n\t\t-- Delete from invoice payments\r\n\t\tDELETE FROM [Invoice].[InvoicePayment] WHERE InvoiceID = @invoiceId;\r\n\r\n\t\t-- Delete from invoice contract line allocations\r\n\t\tDELETE CLA\r\n\t\tFROM Invoice.InvoiceContractLineAllocation AS CLA\r\n\t\t\tINNER JOIN Invoice.InvoiceContractLine AS CL ON CL.InvoiceContractLineID = CLA.InvoiceContractLineID\r\n\t\tWHERE CL.InvoiceID = @invoiceId;\r\n\r\n\t\t-- Delete from invoice contract lines\r\n\t\tDELETE FROM Invoice.InvoiceContractLine WHERE InvoiceID = @invoiceId;\r\n\r\n\t\t-- Unlock associated bills in EC3 (for electronic billing only)\r\n\t\tUPDATE EB\r\n\t\tSET EB.InvoiceTrackingSeqid = NULL\r\n\t\t\t,EB.VoucherBillingStatus = NULL\r\n\t\t\t,EB.VoucherBillingStatusPeriod = NULL\r\n\t\t\t,EB.IsLockedForEdit = 'N'\r\n\t\t\t,EB.LastUpdate = GETDATE()\r\n\t\t\t,EB.AuthenticatedUserID = @userId\r\n\t\tFROM Billing.EC3_ManualBill_AccountManualBillingHeader_ElectronicBilling AS EB\r\n\t\t\tINNER JOIN Invoice.InvoiceAccountBilling AS ACCT ON ACCT.BillingID = EB.AccountManualBillingHeaderSeqid\r\n\t\t\tINNER JOIN Invoice.InvoiceGroupContract AS IGC ON IGC.InvoiceGroupContractID = ACCT.InvoiceGroupContractID\r\n\t\t\tINNER JOIN Billing.BillingGroupContract AS BGC ON BGC.BillingGroupContractID = IGC.BillingGroupContractID\r\n\t\t\tINNER JOIN Billing.vwBillingGroups AS BG ON BG.GroupID = BGC.GroupID\r\n\t\tWHERE IGC.InvoiceID = @invoiceId AND BG.BillingType = 'E'\r\n\t\t\tAND ACCT.BillingID NOT IN (SELECT DISTINCT BillingID FROM Invoice.InvoiceAccountBilling WHERE InvoiceID <> @invoiceId);\r\n\r\n\t\t-- Delete from invoice account billings\r\n\t\tDELETE FROM Invoice.InvoiceAccountBilling WHERE InvoiceID = @invoiceId;\r\n\r\n\t\t-- Delete from invoice group contracts\r\n\t\tDELETE FROM Invoice.InvoiceGroupContract WHERE InvoiceID = @invoiceId;\r\n\r\n\t\t-- Delete from invoice group contracts\r\n\t\tDELETE FROM Invoice.Invoice WHERE InvoiceID = @invoiceId;\r\n\r\n\t\t-- Update invoice header\r\n\t\tUPDATE Invoice.Invoice\r\n\t\tSET Active = 0\r\n\t\t\t,ModifiedDate = GETDATE()\r\n\t\t\t,ModifiedBy\t= @userId\r\n\t\tWHERE InvoiceID = @invoiceId;\r\n\r\n\t\t-- Create audit note\r\n\t\tINSERT INTO Common.Note(ParentType, ParentID, [Action], Note, CreatedBy)\r\n\t\tVALUES ('INVOICE', @invoiceId, 'DELETED', @comments, @userId);\r\n\r\n\t\tCOMMIT TRAN @tranName;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tIF (XACT_STATE() <> 0)\r\n\t\tBEGIN\r\n\t\t\tROLLBACK TRAN @tranName;\r\n\t\tEND;\r\n\r\n\t\tSELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Failed to update invoice', @sendEmail\t= 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@action = @action\r\n\t\t,@severity = @severity\r\n\t\t,@message = @message\r\n\t\t,@messageDetails = @messageDetails\r\n\t\t,@exceptionDetails = @exceptionDetails\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@sendEmail = @sendEmail\r\n\t\t,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
  ]
}