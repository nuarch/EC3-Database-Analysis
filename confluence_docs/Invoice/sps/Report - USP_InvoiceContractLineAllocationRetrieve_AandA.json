      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[USP_InvoiceContractLineAllocationRetrieve_AandA]\n(\r\n\t@invoiceId AS INT = NULL,@invoiceNumber AS VARCHAR(25) = NULL,@correlationId AS VARCHAR(128) = NULL,@machineName AS VARCHAR(128) = NULL,@processName AS VARCHAR(128) = NULL,@domain AS VARCHAR(25) = NULL,@username AS VARCHAR(25) = NULL,@userId AS INT = NULL,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\t\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT @invoiceId = NULLIF(@invoiceId, 0), @invoiceNumber = NULLIF(@invoiceNumber, ''), @userId = ISNULL(@userId, 0),@correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID())), @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA'),@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\r\n\tIF (ISNULL(@invoiceId, 0) <= 0 AND ISNULL(@invoiceNumber, '') = '')\r\n\tBEGIN\r\n RAISERROR (N'Either the invoice identifier or the invoice number must be specified', 16, 1);\r\n\tEND;\r\n\r\n\tDECLARE @action AS VARCHAR(25) = 'RETRIEVE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Reports - Retrieved invoice contract line allocations',@messageDetails AS VARCHAR(MAX), @startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0;\r\n\t\r\n\tSELECT @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @invoiceId AS INVID, @invoiceNumber AS INVNUM FOR XML PATH('INPUTS')));\r\n\r\n\tBEGIN TRY\r\n DECLARE @invoiceIsSplitFY AS BIT = Billing.UDF_IsSplitFYInvoice(@invoiceId);\r\n\r\n IF (@invoiceIsSplitFY = 0)\r\n BEGIN\r\n SELECT ICLA.ContractNumber AS [Contract],ICLA.AllocationFiscalYear AS [Fiscal Year],ICLA.CommodityLine AS [Commodity Line],ICLA.AccountingLine AS [Accounting Line],ICLA.UoA AS [U/A],ICLA.BudgetCode AS [Budget Code],ICLA.ObjectCode AS [Object Code],FORMAT(ICLA.AllocationAmount, 'C') AS [Allocation Amount]\r\n FROM Invoice.vwInvoiceContractLineAllocations AS ICLA\r\n INNER JOIN Invoice.Invoice AS b ON ICLA.InvoiceID = b.InvoiceID\r\n WHERE ICLA.InvoiceID = ISNULL(@invoiceId, ICLA.InvoiceID)\r\n AND ICLA.InvoiceNumber = ISNULL(@invoiceNumber, ICLA.InvoiceNumber)\r\n ORDER BY ICLA.ContractNumber ASC,ICLA.FiscalYear DESC,ICLA.CommodityLine ASC,ICLA.AccountingLine ASC;\r\n END;\r\n ELSE\r\n BEGIN\r\n WITH tmpTbl AS (SELECT ICLA.ContractNumber,ICLA.AllocationFiscalYear,ICLA.CommodityLine,ICLA.AccountingLine,ICLA.UoA,ICLA.BudgetCode,ICLA.ObjectCode,ISNULL((SELECT SUM(a.AllocationAmount)\r\n FROM invoice.InvoiceContractLineAllocation a\r\n INNER JOIN invoice.InvoiceContractLine b ON a.InvoiceContractLineID = b.InvoiceContractLineID\r\n INNER JOIN invoice.Invoice c ON b.InvoiceID = c.InvoiceID\r\n GROUP BY c.InvoiceID, a.AllocationAmount, a.AllocationFiscalYear, b.InvoiceContractLineID, b.FiscalYear\r\n HAVING b.InvoiceContractLineID = ICLA.InvoiceContractLineID AND a.AllocationFiscalYear = ICLA.AllocationFiscalYear\r\n ),0) AS AllocationAmount\r\n FROM Invoice.vwInvoiceContractLineAllocations ICLA\r\n WHERE InvoiceID = ISNULL(@invoiceId, InvoiceID)\r\n AND InvoiceNumber = ISNULL(@invoiceNumber, InvoiceNumber)\r\n AND AllocationAmount <> 0)\r\n SELECT R.ContractNumber AS [Contract],R.AllocationFiscalYear AS [Fiscal Year],R.CommodityLine AS [Commodity Line],R.AccountingLine AS [Accounting Line],R.UoA AS [U/A],R.BudgetCode AS [Budget Code],R.ObjectCode AS [Object Code],FORMAT(R.AllocationAmount, 'C') AS [Allocation Amount]\r\n FROM tmpTbl AS R\r\n ORDER BY R.ContractNumber ASC,R.AllocationFiscalYear ASC,R.CommodityLine ASC,R.AccountingLine ASC;\r\n END;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n SELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Reports - Failed to retrieve invoice contract line allocations', @sendEmail = 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId,@machineName = @machineName,@processName = @processName,@action = @action,@severity = @severity,@message = @message,@messageDetails = @messageDetails,@exceptionDetails = @exceptionDetails,@domain = @domain,@username = @username,@userId = @userId,@sendEmail = @sendEmail,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
  ]
}