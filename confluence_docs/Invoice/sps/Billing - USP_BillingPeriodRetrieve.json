      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[USP_BillingPeriodRetrieve]\n(\r\n\t@billingPeriod AS VARCHAR(6) = NULL\r\n\t,@currentOnly AS BIT = 0\r\n\t,@correlationId AS VARCHAR(128) = NULL\r\n\t,@machineName AS VARCHAR(128) = NULL\r\n\t,@processName AS VARCHAR(128) = NULL\r\n\t,@domain AS VARCHAR(25) = NULL\r\n\t,@username AS VARCHAR(25) = NULL\r\n\t,@userId AS INT = NULL\r\n\t,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSELECT @billingPeriod = NULLIF(@billingPeriod, ''), @currentOnly = ISNULL(@currentOnly, 0), @userId = ISNULL(@userId, 0)\r\n\t\t,@correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID())), @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA')\r\n\t\t,@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\r\n\tDECLARE @action AS VARCHAR(25) = 'RETRIEVE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Retrieved billing periods', @messageDetails AS VARCHAR(MAX)\r\n\t\t,@startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0;\r\n\t\r\n\tSET @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @billingPeriod AS BILLPRD FOR XML PATH('INPUTS')));\r\n\r\n\tBEGIN TRY\r\n\t\tDECLARE @minPeriod AS VARCHAR(6), @maxPeriod AS VARCHAR(6);\r\n\t\t\r\n\t\tSET @minPeriod = CONVERT(VARCHAR(4), YEAR(DATEADD(M, -6, GETDATE())));\r\n\r\n\t\tIF (MONTH(DATEADD(M, -6, GETDATE())) < 10)\r\n\t\tBEGIN\r\n\t\t\tSET @minPeriod = @minPeriod + '0';\r\n\t\tEND;\r\n\r\n\t\tSET @minPeriod = @minPeriod + CONVERT(VARCHAR(2), MONTH(DATEADD(M, -6, GETDATE())));\r\n\t\tSET @maxPeriod = CONVERT(VARCHAR(4), YEAR(DATEADD(M, 2, GETDATE())));\r\n\r\n\t\tIF (MONTH(DATEADD(M, 2, GETDATE())) < 10)\r\n\t\tBEGIN\r\n\t\t\tSET @maxPeriod = @maxPeriod + '0';\r\n\t\tEND;\r\n\r\n\t\tSET @maxPeriod = @maxPeriod + CONVERT(VARCHAR(2), MONTH(DATEADD(M, 2, GETDATE())));\r\n\r\n\t\tIF (@currentOnly = 1)\r\n\t\tBEGIN\r\n\t\t\tSELECT DISTINCT B.BillingPeriod, B.BillingPeriodDescription, B.Active\r\n\t\t\tFROM Billing.vwBillingPeriods AS B\r\n\t\t\t\tLEFT JOIN Invoice.vwInvoices AS I ON B.BillingPeriod = I.InvoiceBillingPeriod\r\n\t\t\tWHERE B.BillingPeriod >= @minPeriod AND B.BillingPeriod <= @maxPeriod\r\n\t\t\tORDER BY B.BillingPeriod ASC;\r\n\t\tEND;\r\n\t\tELSE\r\n\t\tBEGIN\r\n\t\t\tSELECT DISTINCT B.BillingPeriod, B.BillingPeriodDescription, B.Active\r\n\t\t\tFROM Billing.vwBillingPeriods AS B\r\n\t\t\t\tINNER JOIN Invoice.vwInvoices AS I ON B.BillingPeriod = I.InvoiceBillingPeriod\r\n\t\t\tWHERE B.BillingPeriod\t= ISNULL(@billingPeriod, B.BillingPeriod)\r\n\t\t\tORDER BY B.BillingPeriod ASC;\r\n\t\tEND;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tSELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Failed to retrieve billing periods', @sendEmail = 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@action = @action\r\n\t\t,@severity = @severity\r\n\t\t,@message = @message\r\n\t\t,@messageDetails = @messageDetails\r\n\t\t,@exceptionDetails = @exceptionDetails\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@sendEmail = @sendEmail\r\n\t\t,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
