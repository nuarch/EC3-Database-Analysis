    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[USP_InvoiceDetailsRetrieve]\n(\r\n    @invoiceNumber AS VARCHAR(25) = NULL\r\n    ,@providerId AS INT = NULL\r\n    ,@groupId AS INT = NULL\r\n    ,@fiscalYear AS VARCHAR(4) = NULL\r\n    ,@contractId AS INT = NULL\r\n    ,@billingPeriod AS VARCHAR(6) = NULL\r\n    ,@fromDate AS DATETIME = NULL\r\n    ,@toDate AS DATETIME = NULL\r\n    ,@statusId AS INT = NULL\r\n)\r\nAS\r\nBEGIN\r\n    SET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n    SELECT @invoiceNumber = NULLIF(@invoiceNumber, '0'), @providerId = NULLIF(@providerId, 0), @groupId = NULLIF(@groupId, 0)\r\n        ,@fiscalYear = NULLIF(@fiscalYear, ''), @contractId = NULLIF(@contractId, 0), @billingPeriod = NULLIF(@billingPeriod, '0')\r\n        ,@statusId = NULLIF(@statusId, 0);\r\n\r\n\tSELECT IAB.InvoiceNumber AS InvoiceNumber\r\n\t\t,FORMAT(INV.InvoiceDate, 'M/d/yyyy') AS InvoiceDate\r\n\t\t,SUBSTRING(P.Payments, 0, 1000) AS Payments\r\n\t\t,INVSTS.StatusDescription AS [Status]\r\n\t\t,IAB.GroupName AS GroupName\r\n\t\t,SUBSTRING(C.ContractNumbers, 0, 65) AS ContractNumber\r\n\t\t,IAB.AccountNumber AS AccountNumber\r\n\t\t,IIF(IAB.IsEstimated = 1, 'Estimated', 'Actual') AS IsEstimatedOrActual\r\n\t\t,IAB.BillingPeriod AS BillingPeriod\r\n\t\t,FORMAT(IAB.FromDate, 'M/d/yyyy') + ' - ' + FORMAT(IAB.ToDate, 'M/d/yyyy') AS [FromToDate]\r\n\t\t,IAB.EnergyUsage + ' / ' + IAB.DemandUsage AS EnergyDemandUsage\r\n\t\t,FORMAT(IAB.AmountBilled, 'C') + ' / ' + FORMAT(IAB.AmountPaid, 'C') AS AmountBilledPaid\r\n\t\t,FORMAT(IAB.AmountPaidPriorFY, 'C') + ' / ' + FORMAT(IAB.AmountPaidCurrentFY, 'C') AS AmountPaidPriorCurrentFY\r\n\tFROM Invoice.vwInvoiceAccountBillings AS IAB\r\n\t\tINNER JOIN Invoice.Invoice AS INV ON INV.InvoiceID = IAB.InvoiceID\r\n\t\tINNER JOIN Invoice.InvoiceStatus AS INVSTS ON INVSTS.StatusID = INV.StatusID\r\n\t\tLEFT JOIN (SELECT InvoiceID, STRING_AGG(PaymentNumber, ', ') AS Payments\r\n\t\t\tFROM Invoice.vwInvoicePayments\r\n\t\t\tGROUP BY InvoiceID) AS P ON P.InvoiceID = INV.InvoiceID\r\n\t\tLEFT JOIN (SELECT InvoiceID, GroupID, STRING_AGG(ContractNumber, ', ') AS ContractNumbers\r\n\t\t\tFROM Invoice.vwInvoiceGroupContracts\r\n\t\t\tGROUP BY InvoiceID, GroupID) AS C ON C.InvoiceID = INV.InvoiceID AND C.GroupID = IAB.GroupID\r\n\tWHERE (@invoiceNumber IS NULL OR IAB.InvoiceNumber = @invoiceNumber)\r\n\t\tAND (@providerId IS NULL OR INV.ProviderID = @providerId)\r\n\t\tAND (@groupId IS NULL OR IAB.GroupID = @groupId)\r\n\t\tAND (@fiscalYear IS NULL OR IAB.FiscalYear = @fiscalYear)\r\n\t\tAND (@contractId IS NULL OR IAB.ContractID = @contractId)\r\n\t\tAND (@billingPeriod IS NULL OR IAB.BillingPeriod = @billingPeriod)\r\n\t\tAND (@fromDate IS NULL OR IAB.FromDate >= @fromDate)\r\n\t\tAND (@toDate IS NULL OR IAB.ToDate <= @toDate)\r\n\t\tAND (@statusId IS NULL OR INV.StatusID = @statusId)\r\n\tORDER BY INV.InvoiceDate DESC, IAB.AccountNumber ASC;\t\r\nEND;\r"
        }
      ]
    }
  ]
}