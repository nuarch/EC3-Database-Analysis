      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Invoice].[USP_InvoiceEmailUnsentInvoiceRetrieve]\n(\r\n\t@PaymentNumber AS VARCHAR(255) = NULL,@PreviousDayNum AS INT = 1000,@applicationId AS VARCHAR(128) = NULL,@correlationId AS VARCHAR(128) = NULL,@machineName AS VARCHAR(128) = NULL,@processName AS VARCHAR(128) = NULL,@domain AS VARCHAR(25) = NULL,@username\tAS VARCHAR(25) = NULL,@userId AS INT = NULL,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\t\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT @PaymentNumber = NULLIF(@PaymentNumber, ''), @PreviousDayNum = ISNULL(@PreviousDayNum, 9999);\r\n\r\n\tDECLARE @action AS VARCHAR(25), @severity AS VARCHAR(25), @message AS VARCHAR(255), @messageDetails AS VARCHAR(MAX),@startTime AS DATETIME, @elapsedTime AS INT, @sendEmail AS BIT;\r\n\tDECLARE @providerList TABLE(providerID INT NOT NULL);\r\n\r\n\tSELECT @startTime = GETDATE(), @applicationId = ISNULL(@applicationId, 103), @correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID())),\r\n @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA'), @processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA'),\r\n @action = 'RETRIEVE', @severity = 'INFO', @message = 'Invoices - Retrieved Invoices by Payment# (notification is unsent)',\r\n @messageDetails = CONVERT(VARCHAR(MAX), (SELECT ISNULL(@PaymentNumber, @PreviousDayNum) AS PaymentNumber FOR XML PATH('INPUTS'))),\r\n @sendEmail = 0, @userId = ISNULL(@userId, 0);\r\n\tINSERT INTO @providerList (providerID) VALUES (1), (2), (3), (7), (9), (12), (16), (18), (19), (43), (47), (69);\r\n\r\n\tBEGIN TRY\r\n SELECT DISTINCT b.invoiceid, b.invoicenumber, b.providerid, c.ProviderName, a.PaymentType, a.PaymentNumber, a.PaymentAmount, a.DateIssued,CAST(IIF(a.groupid=10, 1, 0) AS BIT) AS IsConEdSteam\r\n FROM Invoice.InvoicePayment AS a\r\n INNER JOIN Invoice.Invoice AS b ON a.InvoiceID = b.InvoiceID\r\n INNER JOIN Billing.vwProviders AS c ON b.providerid = c.ProviderID\r\n WHERE a.PaymentNumber = ISNULL(@PaymentNumber, a.PaymentNumber) AND b.ProviderID IN (SELECT providerID FROM @providerList) AND b.StatusID >= 8 \r\n AND NOT EXISTS (SELECT 1 FROM Invoice.InvoiceProviderEmailLog AS b WHERE a.PaymentNumber = b.EFTNumber AND a.InvoiceID = b.InvoiceID AND b.Success = 1)\r\n AND a.DateIssued >= DATEADD(DAY, -120, GETDATE())\r\n ORDER BY a.PaymentNumber, b.invoiceid;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n SELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Invoices - Failed to retrieve Invoices by Payment# (notification is unsent)',@sendEmail = 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId,@machineName = @machineName,@processName = @processName,@action = @action,@severity = @severity,@message = @message,@messageDetails = @messageDetails,@exceptionDetails = @exceptionDetails,@domain = @domain,@username = @username,@userId = @userId,@sendEmail = @sendEmail,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
