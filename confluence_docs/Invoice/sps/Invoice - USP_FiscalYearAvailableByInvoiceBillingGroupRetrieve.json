      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Invoice].[USP_FiscalYearAvailableByInvoiceBillingGroupRetrieve]\n(\r\n\t@fiscalYear AS VARCHAR(4) = NULL\r\n\t,@groupId AS INT = NULL\r\n\t,@activeOnly AS BIT = NULL\r\n\t,@correlationId AS VARCHAR(128) = NULL\r\n\t,@machineName AS VARCHAR(128) = NULL\r\n\t,@processName AS VARCHAR(128) = NULL\r\n\t,@domain AS VARCHAR(25) = NULL\r\n\t,@username AS VARCHAR(25) = NULL\r\n\t,@userId AS INT = NULL\r\n\t,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @action AS VARCHAR(25) = 'RETRIEVE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Retrieved  fiscal years', @messageDetails AS VARCHAR(MAX)\r\n\t\t,@startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0;\r\n\r\n\tSELECT @fiscalYear = NULLIF(@fiscalYear, ''), @groupId = NULLIF(@groupId, 0), @activeOnly = ISNULL(@activeOnly, 0), @userId = ISNULL(@userId, 0)\r\n\t\t,@correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID())), @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA')\r\n\t\t,@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\r\n\tSELECT @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @fiscalYear AS FY, @groupId AS GRPID, @activeOnly AS ACT FOR XML PATH('INPUTS')));\r\n\r\n\tBEGIN TRY\r\n\r\n\t\tDECLARE @tmpFiscalYears TABLE(FiscalYear INT);\r\n\r\n\t\tINSERT INTO @tmpFiscalYears\r\n\t\tSELECT DISTINCT FiscalYear\r\n\t\tFROM Billing.vwBillingGroupContracts\r\n\t\tWHERE GroupID = ISNULL(@groupId, GroupID);\r\n\r\n\t\tSELECT FY.FiscalYear, FY.FiscalYearDescription, FY.FiscalYearStart, FY.FiscalYearEnd, FY.Active\r\n\t\tFROM Billing.vwFiscalYears AS FY\r\n\t\t\tINNER JOIN @tmpFiscalYears AS T ON T.FiscalYear = FY.FiscalYear\r\n\t\tWHERE FY.FiscalYear = ISNULL(@fiscalYear, FY.FiscalYear)\r\n\t\t\tAND FY.Active = CASE WHEN @activeOnly = 1 THEN 1 ELSE FY.Active END\r\n\t\tORDER BY FY.FiscalYear DESC;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tSELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Failed to retrieve fiscal years', @sendEmail = 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@action = @action\r\n\t\t,@severity = @severity\r\n\t\t,@message = @message\r\n\t\t,@messageDetails = @messageDetails\r\n\t\t,@exceptionDetails = @exceptionDetails\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@sendEmail = @sendEmail\r\n\t\t,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
