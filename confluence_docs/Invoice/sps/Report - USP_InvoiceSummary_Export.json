    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "4. Business Logic and Workflow"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Initialization",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure begins by setting "
                },
                {
                  "type": "text",
                  "text": "NOCOUNT ON",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " to prevent the message indicating the number of rows affected by a T-SQL statement from being returned. It sets the transaction isolation level to "
                },
                {
                  "type": "text",
                  "text": "READ UNCOMMITTED",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " to avoid locking issues and allow dirty reads."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Parameter Normalization",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Converts zero or empty string parameters to "
                },
                {
                  "type": "text",
                  "text": "NULL",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " using "
                },
                {
                  "type": "text",
                  "text": "NULLIF",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", which simplifies the filtering logic."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Logging Setup",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Initializes variables for logging purposes, including action, severity, message, and message details. Constructs a detailed message of input parameters using "
                },
                {
                  "type": "text",
                  "text": "FOR XML PATH",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Data Retrieval",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Executes a "
                },
                {
                  "type": "text",
                  "text": "SELECT",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " statement to fetch invoice details from the "
                },
                {
                  "type": "text",
                  "text": "Invoice.vwInvoices",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " view. It joins related data from "
                },
                {
                  "type": "text",
                  "text": "Invoice.vwInvoiceGroupContracts",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " and "
                },
                {
                  "type": "text",
                  "text": "Invoice.vwInvoicePayments",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " using subqueries to concatenate group names, contract numbers, and payment numbers."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Filtering Logic",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Applies filters based on the input parameters using "
                },
                {
                  "type": "text",
                  "text": "ISNULL",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " and conditional logic to handle optional parameters. The "
                },
                {
                  "type": "text",
                  "text": "CASE",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " statements ensure that filters are applied only when parameters are provided."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Ordering",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Orders the results by the "
                },
                {
                  "type": "text",
                  "text": "CreatedDate",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " in descending order."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "5. Performance Considerations"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "READ UNCOMMITTED",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": While this isolation level improves performance by reducing locking, it may lead to dirty reads, which could be problematic if data consistency is critical."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Subqueries",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of subqueries with "
                },
                {
                  "type": "text",
                  "text": "FOR XML PATH",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " to concatenate strings can be resource-intensive, especially if the dataset is large."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Index Usage",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The performance of the procedure heavily depends on the indexing of the "
                },
                {
                  "type": "text",
                  "text": "Invoice.vwInvoices",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", "
                },
                {
                  "type": "text",
                  "text": "Invoice.vwInvoiceGroupContracts",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", and "
                },
                {
                  "type": "text",
                  "text": "Invoice.vwInvoicePayments",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " views. Proper indexing on the columns used in "
                },
                {
                  "type": "text",
                  "text": "WHERE",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " clauses and joins is crucial."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Parameter Sniffing",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of optional parameters with "
                },
                {
                  "type": "text",
                  "text": "ISNULL",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " can lead to parameter sniffing issues, where the execution plan is not optimal for all parameter combinations."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "6. Potential Issues or Risks"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Dirty Reads",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of "
                },
                {
                  "type": "text",
                  "text": "READ UNCOMMITTED",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " can lead to reading uncommitted data, which might not be suitable for all business scenarios."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "String Concatenation Limits",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The "
                },
                {
                  "type": "text",
                  "text": "SUBSTRING",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " function limits concatenated strings to 1000 characters, which might truncate data if there are many groups, contracts, or payments associated with an invoice."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Date Conversion",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The conversion of dates to "
                },
                {
                  "type": "text",
                  "text": "VARCHAR(12)",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " for comparison might lead to inefficiencies and should be handled with care to ensure correct date filtering."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Scalability",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": As the dataset grows, the performance might degrade due to the complexity of the query and the use of subqueries. Regular monitoring and optimization may be required."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Error Handling",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure lacks explicit error handling, which could lead to unhandled exceptions and unclear error messages in case of failures."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[USP_InvoiceSummary_Export]\n(\r\n\t@invoiceId AS INT = NULL\r\n\t,@providerId AS INT = NULL\r\n\t,@groupId AS INT = NULL\r\n\t,@fiscalYear AS VARCHAR(4) = NULL\r\n\t,@contractId AS INT = NULL\r\n\t,@billingPeriod AS VARCHAR(6) = NULL\r\n\t,@fromDate AS DATETIME = NULL\r\n\t,@toDate AS DATETIME = NULL\r\n\t,@statusId AS INT = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT @invoiceId = NULLIF(@invoiceId, 0), @providerId = NULLIF(@providerId, 0), @groupId = NULLIF(@groupId, 0), @fiscalYear = NULLIF(@fiscalYear, '')\r\n\t\t,@contractId = NULLIF(@contractId, 0), @billingPeriod = NULLIF(@billingPeriod, '0'), @statusId = NULLIF(@statusId, 0);\r\n\r\n\tDECLARE @action AS VARCHAR(25) = 'RETRIEVE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Retrieved report for invoices', @messageDetails AS VARCHAR(MAX)\r\n\t\t,@startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0;\r\n\r\n\tSET @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @invoiceId AS INVID, @providerId AS PRVID, @groupId AS GRPID, @fiscalYear AS FY, @contractId AS CNTRCTID\r\n\t\t,@billingPeriod AS BILLPRD, @fromDate AS FROMDATE, @toDate AS TODATE, @statusId AS STSID FOR XML PATH('INPUTS')));\r\n\r\n\tSELECT INV.InvoiceNumber AS [Invoice #]\r\n\t\t,INV.InvoiceBillingPeriod AS [Billing Period]\r\n\t\t,SUBSTRING((SELECT DISTINCT ', ' + IGC.GroupName FROM Invoice.vwInvoiceGroupContracts AS IGC WHERE IGC.InvoiceID = INV.InvoiceID FOR XML PATH('')), 2, 1000) AS [Billing Group(s)]\r\n\t\t,SUBSTRING((SELECT DISTINCT ', ' + IGC.ContractNumber FROM Invoice.vwInvoiceGroupContracts AS IGC WHERE IGC.InvoiceID = INV.InvoiceID FOR XML PATH('')), 2, 1000) AS [Contract(s)]\r\n\t\t,SUBSTRING((SELECT DISTINCT ', ' + P.PaymentNumber FROM Invoice.vwInvoicePayments AS P WHERE P.InvoiceID = INV.InvoiceID FOR XML PATH('')), 2, 1000) AS [Payment(s)]\r\n\t\t,FORMAT(INV.InvoiceDate, 'M/d/yyyy') AS [Invoice Date]\r\n\t\t,FORMAT(INV.AmountPaid, 'C') AS [Amount Paid]\r\n\t\t,INV.StatusDescription AS [Status]\r\n\tFROM Invoice.vwInvoices AS INV\r\n\tWHERE INV.InvoiceID\t= ISNULL(@invoiceId, INV.InvoiceID)\r\n\t\tAND INV.ProviderID = ISNULL(@providerId, INV.ProviderID)\r\n\t\tAND CASE WHEN NOT @billingPeriod IS NULL THEN CASE WHEN INV.InvoiceBillingPeriod = ISNULL(@billingPeriod, INV.InvoiceBillingPeriod) THEN 1 ELSE 0 END ELSE 1 END = 1\r\n\t\tAND CASE WHEN NOT @fromDate IS NULL THEN CASE WHEN CONVERT(VARCHAR(12), INV.InvoiceDate, 112) >= CONVERT(VARCHAR(12), @fromDate, 112) THEN 1 ELSE 0 END ELSE 1 END = 1\r\n\t\tAND CASE WHEN NOT @toDate IS NULL THEN CASE WHEN CONVERT(VARCHAR(12), INV.InvoiceDate, 112) <= CONVERT(VARCHAR(12), @toDate, 112) THEN 1 ELSE 0 END ELSE 1 END = 1\r\n\t\tAND INV.StatusID = ISNULL(@statusId, INV.StatusID)\r\n\t\tAND INV.InvoiceID IN (SELECT InvoiceID FROM Invoice.vwInvoiceGroupContracts\r\n\t\t\tWHERE CASE WHEN NOT @fiscalYear IS NULL THEN CASE WHEN FiscalYear = @fiscalYear THEN 1 ELSE 0 END ELSE 1 END = 1\r\n\t\t\t\tAND GroupID = ISNULL(@groupId, GroupID)\r\n\t\t\t\tAND ContractID = ISNULL(@contractId, ContractID))\r\n\tORDER BY INV.CreatedDate DESC;\r\nEND;\r"
        }
      ]
    }
  ]
}