          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "@invoiceId AS INT = NULL",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
