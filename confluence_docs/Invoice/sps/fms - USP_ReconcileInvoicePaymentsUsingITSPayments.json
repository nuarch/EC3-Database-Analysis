      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [fms].[USP_ReconcileInvoicePaymentsUsingITSPayments]\n(\r\n\t@correlationId AS VARCHAR(128) = NULL\r\n\t,@machineName AS VARCHAR(128) = NULL\r\n\t,@processName AS VARCHAR(128) = NULL\r\n\t,@domain AS VARCHAR(25) = NULL\r\n\t,@username AS VARCHAR(25) = NULL\r\n\t,@userId AS INT = NULL\r\n\t,@exceptionDetails AS VARCHAR(MAX) = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @action AS VARCHAR(25) = 'RETRIEVE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Reconciled invoice payments using ITS payment(s)'\r\n\t\t,@messageDetails AS VARCHAR(MAX), @startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0, @tranName AS VARCHAR(128) = CONVERT(VARCHAR(128), NEWID());\r\n\r\n\tSELECT @correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID())), @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA')\r\n\t\t,@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA')\r\n\t\t,@messageDetails\t= NULL, @userId = ISNULL(@userId, 0);\r\n\r\n\tBEGIN TRY\r\n\t\tDECLARE @aaProcessing TABLE(InvoiceID INT NOT NULL, InvoiceGroupContractID INT NOT NULL, ContractNumber VARCHAR(30) NOT NULL);\r\n\t\tDECLARE @aaProcessed TABLE(InvoiceID INT NOT NULL, InvoiceGroupContractID INT NOT NULL, ContractNumber VARCHAR(30) NOT NULL);\r\n\r\n\t\tBEGIN TRAN @tranName;\r\n\r\n\t\t-- Find only new payment requests being processed by A&A\r\n\t\tINSERT INTO @aaProcessing (InvoiceID, InvoiceGroupContractID, ContractNumber)\r\n\t\tSELECT DISTINCT IGC.InvoiceID, IGC.InvoiceGroupContractID, IGC.ContractNumber\r\n\t\tFROM Invoice.vwInvoiceGroupContracts AS IGC\r\n\t\t\tINNER JOIN its.AuditsAndAccountsPayments AS ITSPR ON RIGHT(ITSPR.InvoiceNumber ,9) = RIGHT(IGC.InvoiceNumber, 9) AND RIGHT(IGC.ContractNumber, 11) = ITSPR.PurchaseOrder_Registration\r\n\t\t\tINNER JOIN Invoice.vwInvoices AS INV ON INV.InvoiceID = IGC.InvoiceID\r\n\t\tWHERE INV.StatusID = 4 AND INV.Active = 1;\r\n\r\n\t\t-- Update status to sent to A&A\r\n\t\tUPDATE INV\r\n\t\tSET INV.StatusID = 5, INV.ModifiedDate = GETDATE(), ModifiedBy = 0\r\n\t\tFROM Invoice.Invoice AS INV\r\n\t\t\tINNER JOIN @aaProcessing AS PR ON PR.InvoiceID = INV.InvoiceID;\r\n\r\n\t\t-- Create audit note for all invoices that are being processed by A&A\r\n\t\tINSERT INTO Common.Note(ParentType, ParentID, [Action], Note, CreatedBy)\r\n\t\tSELECT 'INVOICE', T.InvoiceID, 'SENT TO A&A', 'A&A processing invoice', 0\r\n\t\tFROM (SELECT DISTINCT InvoiceID FROM @aaProcessing) AS T;\r\n\r\n\t\t-- Find only new payment requests processed by A&A\r\n\t\tINSERT INTO @aaProcessed (InvoiceID, InvoiceGroupContractID, ContractNumber)\r\n\t\tSELECT DISTINCT IGC.InvoiceID, IGC.InvoiceGroupContractID, IGC.ContractNumber\r\n\t\tFROM Invoice.vwInvoiceGroupContracts AS IGC\r\n\t\t\tINNER JOIN its.AuditsAndAccountsPayments AS ITSPR ON RIGHT(ITSPR.Invoicenumber, 9) = RIGHT(IGC.InvoiceNumber, 9) AND RIGHT(IGC.ContractNumber, 11) = ITSPR.PurchaseOrder_Registration\r\n\t\t\tINNER JOIN Invoice.vwInvoices AS INV ON INV.InvoiceID = IGC.InvoiceID\r\n\t\tWHERE INV.StatusID = 5 AND INV.Active = 1 AND NOT ITSPR.VoucherNumber IS NULL;\r\n\r\n\t\t-- Update status to processed by A&A\r\n\t\tUPDATE INV\r\n\t\tSET INV.StatusID = 6, INV.ModifiedDate = GETDATE(), ModifiedBy = 0\r\n\t\tFROM Invoice.Invoice AS INV\r\n\t\t\tINNER JOIN @aaProcessed AS PR ON PR.InvoiceID = INV.InvoiceID;\r\n\r\n\t\t-- Create audit note for all invoices that have been processed by A&A\r\n\t\tINSERT INTO Common.Note(ParentType, ParentID, [Action], Note, CreatedBy)\r\n\t\tSELECT 'INVOICE', T.InvoiceID, 'PROCESSED BY A&A', 'A&A has sent invoice to FMS', 0\r\n\t\tFROM (SELECT DISTINCT InvoiceID FROM @aaProcessed) AS T;\r\n\r\n\t\tCOMMIT TRAN @tranName;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tIF (XACT_STATE() <> 0)\r\n\t\tBEGIN\r\n\t\t\tROLLBACK TRAN @tranName;\r\n\t\tEND;\r\n\r\n\t\tSELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Failed to reconcile invoice payments using ITS payment(s)', @sendEmail\t= 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@action = @action\r\n\t\t,@severity = @severity\r\n\t\t,@message = @message\r\n\t\t,@messageDetails = @messageDetails\r\n\t\t,@exceptionDetails = @exceptionDetails\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@sendEmail = @sendEmail\r\n\t\t,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
  ]
}