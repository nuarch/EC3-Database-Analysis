          "type": "text",
          "text": "CREATE PROCEDURE [Invoice].[USP_InvoiceContractLineAllocationRetrieve]\n\t@invoiceId\t\t\t\t\tINT = NULL\r\n\t,@invoiceContractLineId\tINT = NULL\r\n\t,@correlationId\t\t\tVARCHAR(128) = NULL\r\n\t,@machineName\t\t\t\tVARCHAR(128) = NULL\r\n\t,@processName\t\t\t\tVARCHAR(128) = NULL\r\n\t,@domain\t\t\t\t\tVARCHAR(25) = NULL\r\n\t,@username\t\t\t\t\tVARCHAR(25) = NULL\r\n\t,@userId\t\t\t\t\tINT = NULL\r\n\t,@exceptionDetails\t\t\tVARCHAR(MAX) = NULL OUTPUT\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSET @invoiceId\t\t\t\t= NULLIF(@invoiceId, 0);\r\n\tSET @invoiceContractLineId\t= NULLIF(@invoiceContractLineId, 0);\r\n\r\n\tDECLARE @action VARCHAR(25), @severity VARCHAR(25), @message VARCHAR(255), @messageDetails VARCHAR(MAX)\r\n\t\t, @startTime DATETIME, @elapsedTime INT, @sendEmail BIT;\r\n\tSET @startTime\t\t\t= GETDATE();\r\n\t\r\n\tSET @correlationId\t\t= ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID()));\r\n\tSET @machineName\t\t= COALESCE(@machineName, @@SERVERNAME, 'NA');\r\n\tSET @processName\t\t= COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\tSET @action\t\t\t\t= 'RETRIEVE';\r\n\tSET @severity\t\t\t= 'INFO';\r\n\tSET @message\t\t\t= 'Retrieved invoice contract line allocation(s)';\r\n\tSET @messageDetails\t\t= CONVERT(VARCHAR(MAX), (SELECT @invoiceId AS INVID, @invoiceContractLineId AS ICLINEID\r\n\t\t\t\t\t\t\t\t\t\t\t\t\t\tFOR XML PATH('INPUTS')));\r\n\tSET @sendEmail\t\t\t= 0;\r\n\tSET @userId\t\t\t\t= ISNULL(@userId, 0);\r\n\r\n\tBEGIN TRY\r\n\t\tSELECT ICLA.InvoiceContractLineAllocationID, ICLA.AllocationFiscalYear, ICLA.AllocationAmount\r\n\t\t\t, ICLA.InvoiceContractLineID\r\n\t\t\t, ICLA.InvoiceID, ICLA.InvoiceNumber\r\n\t\t\t, ICLA.ContractID, ICLA.ContractNumber\r\n\t\t\t, ICLA.FiscalYear, ICLA.CommodityLine, ICLA.AccountingLine, ICLA.BudgetCode, ICLA.ObjectCode, ICLA.UoA, ICLA.AmountPaid, ICLA.Comments\r\n\t\t\t, ICLA.CreatedBy, ICLA.CreatedDate, ICLA.ModifiedBy, ICLA.ModifiedDate\r\n\t\t\t, ICLA.Active\r\n\t\tFROM [Invoice].[vwInvoiceContractLineAllocations] ICLA\r\n\t\tWHERE ICLA.InvoiceID\t\t\t\t= ISNULL(@invoiceId, ICLA.InvoiceID)\r\n\t\t\tAND ICLA.InvoiceContractLineID\t= ISNULL(@invoiceContractLineId, ICLA.InvoiceContractLineID)\r\n\t\tORDER BY ICLA.InvoiceNumber ASC, ICLA.CommodityLine ASC, ICLA.AccountingLine ASC;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tSELECT @exceptionDetails = ERROR_MESSAGE();\r\n\t\tSET @severity\t= 'ERROR';\r\n\t\tSET @message\t= 'Failed to retrieve invoice contract line allocation(s)';\r\n\t\tSET @sendEmail\t= 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@action = @action\r\n\t\t,@severity = @severity\r\n\t\t,@message = @message\r\n\t\t,@messageDetails = @messageDetails\r\n\t\t,@exceptionDetails = @exceptionDetails\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@sendEmail = @sendEmail\r\n\t\t,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
