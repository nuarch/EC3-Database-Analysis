      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [fms].[USP_ReconcileEC3InvoicePaymentsFromFMS]\n(\r\n\t@correlationId AS VARCHAR(128) = NULL\r\n\t,@machineName AS VARCHAR(128) = NULL\r\n\t,@processName AS VARCHAR(128) = NULL\r\n\t,@domain AS VARCHAR(25) = NULL\r\n\t,@username AS VARCHAR(25) = NULL\r\n\t,@userId AS INT = NULL\r\n\t,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tTRUNCATE TABLE fms.Disbursement;\r\n\tTRUNCATE TABLE fms.PaymentRequest;\r\n\r\n\tINSERT INTO fms.Disbursement(ContractNumber\r\n        ,DisbursementID\r\n        ,DisbursementNumber\r\n        ,DisbursementVersionNumber\r\n        ,InvoiceNumber\r\n        ,PaymentType\r\n        ,BANK_ACCT_CD\r\n        ,CHK_EFT_STA\r\n        ,CHK_EFT_NO\r\n        ,CHK_EFT_AM\r\n        ,CHK_EFT_ISS_DT\r\n        ,CHK_EFT_REC_DT\r\n        ,DISB_CAT\r\n        ,CLR_DT)\r\n    SELECT ContractNumber\r\n        ,DisbursementID\r\n        ,DisbursementNumber\r\n        ,DisbursementVersionNumber\r\n        ,InvoiceNumber\r\n        ,PaymentType\r\n        ,BANK_ACCT_CD\r\n        ,CHK_EFT_STA\r\n        ,CHK_EFT_NO\r\n        ,CHK_EFT_AM\r\n        ,CHK_EFT_ISS_DT\r\n        ,CHK_EFT_REC_DT\r\n        ,DISB_CAT\r\n        ,CLR_DT\t\r\n    FROM Invoice.vwDisbursements;\r\n\r\n\tINSERT INTO fms.PaymentRequest(ContractNumber\r\n        ,PaymentRequestID\r\n        ,PaymentRequestNumber\r\n        ,PaymentRequestVersionNumber\r\n        ,InvoiceNumber\r\n        ,DOC_ACTU_AM\r\n        ,PYMT_AM\r\n        ,DOC_APPL_CREA_DT\r\n        ,DOC_APPL_LAST_DT)\r\n    SELECT ContractNumber\r\n        ,PaymentRequestID\r\n        ,PaymentRequestNumber\r\n        ,PaymentRequestVersionNumber\r\n        ,InvoiceNumber\r\n        ,DOC_ACTU_AM\r\n        ,PYMT_AM\r\n        ,DOC_APPL_CREA_DT\r\n        ,DOC_APPL_LAST_DT\r\n    FROM Invoice.vwPaymentRequests;\r\n\r\n\tEXEC fms.USP_ReconcileInvoicePaymentsUsingFMSDisbursements @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@exceptionDetails = @exceptionDetails\r\nEND;\r"
        }
      ]
