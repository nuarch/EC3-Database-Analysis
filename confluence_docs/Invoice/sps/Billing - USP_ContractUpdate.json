      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[USP_ContractUpdate]\n(\r\n\t@contractId AS INT,@providerId AS INT,@contractNumber AS VARCHAR(25),@name AS VARCHAR(100),@description AS VARCHAR(500) = NULL,@fiscalYearStart AS VARCHAR(8),@fiscalYearEnd AS VARCHAR(8),@actualAmount AS DECIMAL(18, 2),@closeAmount AS DECIMAL(18, 2),@openAmount AS DECIMAL(18, 2),@active AS BIT,@capacityAmount AS DECIMAL(18, 2) = NULL,@correlationId AS VARCHAR(128) = NULL,@machineName AS VARCHAR(128) = NULL,@processName AS VARCHAR(128) = NULL,@domain AS VARCHAR(25) = NULL,@username AS VARCHAR(25) = NULL,@userId AS INT = NULL,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSELECT @description = NULLIF(@description, ''), @correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID())),@machineName = COALESCE(@machineName, @@SERVERNAME, 'NA'), @userId = ISNULL(@userId, 0),@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\r\n\tDECLARE @action AS VARCHAR(25) = 'UPDATE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Updated contract', @messageDetails AS VARCHAR(MAX),@startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0, @tranName AS VARCHAR(128) = CONVERT(VARCHAR(128), NEWID());\r\n\t\r\n\tSELECT @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @contractId AS CTRTID, @providerId AS PRVID, @contractNumber AS CTRTNUM, @name AS NAME, @description AS DSC,@fiscalYearStart AS FYSTART, @fiscalYearEnd AS FYEND, @actualAmount AS ACTAMT, @closeAmount AS CLSAMT, @openAmount AS OPENAMT, @capacityAmount AS CAPAMT,@active AS ACT FOR XML PATH('INPUTS')));\r\n\r\n\tBEGIN TRY\r\n BEGIN TRAN @tranName;\r\n\r\n -- Update contract\r\n UPDATE Billing.[Contract]\r\n SET ContractNumber = @contractNumber,[Name] = @name,[Description] = @description,ProviderID = @providerId,FiscalYearStart = @fiscalYearStart,FiscalYearEnd = @fiscalYearEnd,CapacityAmount\t= ISNULL(@capacityAmount, CapacityAmount),ModifiedDate = GETDATE(),ModifiedBy = @userId\r\n WHERE ContractID = @contractId;\r\n\r\n COMMIT TRAN @tranName;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n IF (XACT_STATE() <> 0)\r\n BEGIN\r\n ROLLBACK TRAN @tranName;\r\n END;\r\n\r\n SELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Failed to update contract', @sendEmail\t= 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId,@machineName = @machineName,@processName = @processName,@action = @action,@severity = @severity,@message = @message,@messageDetails = @messageDetails,@exceptionDetails = @exceptionDetails,@domain = @domain,@username = @username,@userId = @userId,@sendEmail = @sendEmail,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
