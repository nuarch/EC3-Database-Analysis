          "text": "CREATE PROCEDURE [Billing].[USP_BillingPeriodByBillingTypeRetrieve]\n(\r\n\t@billingType AS CHAR(1) = NULL,@billingPeriod AS VARCHAR(6) = NULL,@currentOnly AS BIT = NULL,@correlationId AS VARCHAR(128) = NULL,@machineName AS VARCHAR(128) = NULL,@processName AS VARCHAR(128) = NULL,@domain AS VARCHAR(25) = NULL,@username AS VARCHAR(25) = NULL,@userId AS INT = NULL,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSELECT @billingType = NULLIF(@billingType, ''), @billingPeriod = NULLIF(@billingPeriod, ''), @currentOnly = NULLIF(@currentOnly, 0), @userId = ISNULL(@userId, 0),@correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID())), @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA'),@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\r\n\tDECLARE @action AS VARCHAR(25) = 'RETRIEVE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Retrieved billing periods', @messageDetails AS VARCHAR(MAX),@startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0;\r\n\t\r\n\tSELECT @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @billingType AS BILLTYPE, @billingPeriod AS BILLPRD, @currentOnly AS CURR FOR XML PATH('INPUTS')));\r\n\r\n\tBEGIN TRY\r\n SELECT DISTINCT BillingType,BillingPeriod,BillingPeriodDescription,IsCurrentProcessingPeriod,PublishedBillingPeriod,FiscalYear,FiscalYearStart,FiscalYearEnd,bp.Active\r\n FROM Billing.vwBillingPeriodsByBillingType bp\r\n INNER JOIN Invoice.vwInvoices invoice ON bp.BillingPeriod = invoice.InvoiceBillingPeriod\r\n WHERE BillingType = ISNULL(@billingType, BillingType)\r\n AND BillingPeriod = ISNULL(@billingPeriod, BillingPeriod)\r\n AND IsCurrentProcessingPeriod = ISNULL(@currentOnly, IsCurrentProcessingPeriod)\r\n ORDER BY BillingType ASC, BillingPeriod ASC, IsCurrentProcessingPeriod DESC;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n SELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Failed to retrieve billing periods', @sendEmail = 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId,@machineName = @machineName,@processName = @processName,@action = @action,@severity = @severity,@message = @message,@messageDetails = @messageDetails,@exceptionDetails = @exceptionDetails,@domain = @domain,@username = @username,@userId = @userId,@sendEmail = @sendEmail,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
