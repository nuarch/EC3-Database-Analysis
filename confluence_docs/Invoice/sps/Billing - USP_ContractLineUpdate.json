      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[USP_ContractLineUpdate]\n(\r\n\t@contractLineId AS INT\r\n\t,@contractId AS INT\r\n\t,@fiscalYear AS VARCHAR(4)\r\n\t,@commodityLine AS INT\r\n\t,@accountingLine AS INT\r\n\t,@budgetCode AS VARCHAR(4)\r\n\t,@objectCode AS VARCHAR(3)\r\n\t,@uoa AS VARCHAR(3)\r\n\t,@actualAmount AS DECIMAL(18, 2)\r\n\t,@closeAmount AS DECIMAL(18, 2)\r\n\t,@openAmount AS DECIMAL(18, 2)\r\n\t,@changeAmount AS DECIMAL(18, 2)\r\n\t,@active AS BIT\r\n\t,@correlationId AS VARCHAR(128) = NULL\r\n\t,@machineName AS VARCHAR(128) = NULL\r\n\t,@processName AS VARCHAR(128) = NULL\r\n\t,@domain AS VARCHAR(25) = NULL\r\n\t,@username AS VARCHAR(25) = NULL\r\n\t,@userId AS INT = NULL\r\n\t,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @action AS VARCHAR(25), @severity AS VARCHAR(25), @message AS VARCHAR(255), @messageDetails AS VARCHAR(MAX)\r\n\t\t,@startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT\r\n\t\t,@tranName AS VARCHAR(128) = CONVERT(VARCHAR(128), NEWID());\r\n\t\r\n\tSELECT @correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID())), @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA')\r\n\t\t,@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA')\r\n\t\t,@action = 'UPDATE', @severity = 'INFO', @message = 'Updated contract line', @sendEmail = 0, @userId = ISNULL(@userId, 0)\r\n\t\t,@messageDetails = CONVERT(VARCHAR(MAX), (SELECT @contractLineId AS CLINEID, @contractId AS CTRTID, @fiscalYear AS FY\r\n\t\t\t,@commodityLine AS COMMLINE, @accountingLine AS ACCTLINE, @budgetCode AS BCODE, @objectCode AS OCODE, @uoa AS UA\r\n\t\t\t,@actualAmount AS ACTAMT, @closeAmount AS CLSAMT, @openAmount AS OPENAMT, @active AS ACT FOR XML PATH('INPUTS')));\r\n\r\n\tBEGIN TRY\r\n\t\tBEGIN TRAN @tranName;\r\n\r\n\t\t-- Update contract line\r\n\t\tUPDATE Billing.ContractLine\r\n\t\tSET ContractID = @contractId\r\n\t\t\t,FiscalYear = @fiscalYear\r\n\t\t\t,CommodityLine = @commodityLine\r\n\t\t\t,AccountingLine\t= @accountingLine\r\n\t\t\t,BudgetCode\t= @budgetCode\r\n\t\t\t,ObjectCode = @objectCode\r\n\t\t\t,UoA = @uoa\r\n\t\t\t,ActualAmount = @actualAmount + @changeAmount\r\n\t\t\t,CloseAmount = @closeAmount\r\n\t\t\t,OpenAmount = @openAmount + @changeAmount\r\n\t\t\t,ModifiedDate = GETDATE()\r\n\t\t\t,ModifiedBy\t= @userId\r\n\t\tWHERE ContractLineID = @contractLineId;\r\n\r\n\t\tUPDATE C\r\n\t\tSET\tC.ActualAmount = ISNULL(B.ActualAmount, 0)\r\n\t\t\t,C.CloseAmount = ISNULL(B.CloseAmount, 0)\r\n\t\t\t,C.OpenAmount = ISNULL(B.OpenAmount, 0)\r\n\t\t\t,C.ModifiedDate = GETDATE()\r\n\t\t\t,C.ModifiedBy = @userId\r\n\t\tFROM Billing.[Contract] AS C\r\n\t\t\tINNER JOIN (SELECT ContractID, SUM(ISNULL(ActualAmount, 0)) AS ActualAmount\r\n\t\t\t\t,SUM(ISNULL(CloseAmount, 0)) AS CloseAmount\r\n\t\t\t\t,SUM(ISNULL(OpenAmount, 0)) AS OpenAmount\r\n\t\t\tFROM Billing.ContractLine\r\n\t\t\tGROUP BY ContractID) AS B ON C.ContractID = B.ContractID\r\n\t\tWHERE C.ContractID = @contractId;\r\n\r\n\t\tEXEC Billing.USP_HistoricalContractLineInsert @contractLineId, 1, @username, @actualAmount, @changeAmount, 0;\r\n\r\n\t\tCOMMIT TRAN @tranName;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tIF (XACT_STATE() <> 0)\r\n\t\tBEGIN\r\n\t\t\tROLLBACK TRAN @tranName;\r\n\t\tEND;\r\n\r\n\t\tSELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Failed to update contract line', @sendEmail = 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@action = @action\r\n\t\t,@severity = @severity\r\n\t\t,@message = @message\r\n\t\t,@messageDetails = @messageDetails\r\n\t\t,@exceptionDetails = @exceptionDetails\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@sendEmail = @sendEmail\r\n\t\t,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
