        {
          "type": "text",
          "text": "CREATE PROCEDURE [Invoice].[USP_InvoiceWorkQueueRetrieve]\n\t@providerId INT = NULL,@billingPeriod VARCHAR(6) = NULL,@pageNumber INT = NULL,@pageSize INT = NULL,@sortBy VARCHAR(25) = NULL,@sortDirection VARCHAR(5) = NULL,@searchValue VARCHAR(25) = NULL,@correlationId AS VARCHAR(128) = NULL,@machineName AS VARCHAR(128) = NULL,@processName AS VARCHAR(128) = NULL,@domain AS VARCHAR(25) = NULL,@username AS VARCHAR(25) = NULL,@userId AS INT = NULL,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSET @providerId = NULLIF(@providerId, 0);\r\n\tSET @billingPeriod = NULLIF(@billingPeriod, '');\r\n\tSET @pageNumber = ISNULL(NULLIF(@pageNumber, 0), 1);\r\n\tSET @pageSize = ISNULL(NULLIF(@pageSize, 0), 1000);\r\n\tSET @sortBy = ISNULL(NULLIF(@sortBy, ''), 'INVOICENO');\r\n\tSET @sortDirection = ISNULL(NULLIF(@sortDirection, ''), 'DESC');\r\n\tSET @searchValue = NULLIF(@searchValue, '');\r\n\r\n\tDECLARE @action VARCHAR(25), @severity VARCHAR(25), @message VARCHAR(255), @messageDetails VARCHAR(MAX), @startTime DATETIME, @elapsedTime INT, @sendEmail BIT;\r\n\tSET @startTime = GETDATE();\r\n\tSET @correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID()));\r\n\tSET @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA');\r\n\tSET @processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\tSET @action = 'RETRIEVE';\r\n\tSET @severity = 'INFO';\r\n\tSET @message = 'Retrieved invoices';\r\n\tSET @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @providerId AS PRVID, @billingPeriod AS BILLPRD, @pageNumber AS PAGENUM, @pageSize AS PAGESIZE\r\n FOR XML PATH('INPUTS')));\r\n\tSET @sendEmail = 0;\r\n\tSET @userId = ISNULL(@userId, 0);\r\n\r\n\tDECLARE @startRowIndex INT, @endRowIndex INT;\r\n\tSET @startRowIndex\t= ((@pageNumber - 1) * @pageSize) + 1;\r\n\tSET @endRowIndex\t= @pageNumber * @pageSize;\r\n\tIF @endRowIndex <= 0 SET @endRowIndex = 10000; -- Hard-coding for 10,000 rows of data\r\n\r\n\tBEGIN TRY\r\n DECLARE @tmpInvoices TABLE (\r\n InvoiceID INT NOT NULL, BillingGroups VARCHAR(1000) NULL, Contracts VARCHAR(1000) NULL, Payments VARCHAR(1000) NULL\r\n );\r\n\r\n INSERT INTO @tmpInvoices(InvoiceID, BillingGroups, Contracts, Payments)\r\n SELECT INV.InvoiceID, SUBSTRING((SELECT DISTINCT ', ' + IGC.GroupName FROM [Invoice].[vwInvoiceGroupContracts] IGC WHERE IGC.InvoiceID = INV.InvoiceID FOR XML PATH('')), 2, 1000) AS BillingGroups, SUBSTRING((SELECT DISTINCT ', ' + IGC.ContractNumber FROM [Invoice].[vwInvoiceGroupContracts] IGC WHERE IGC.InvoiceID = INV.InvoiceID FOR XML PATH('')), 2, 1000) AS Contracts, SUBSTRING((SELECT DISTINCT ', ' + IP.PaymentNumber FROM [Invoice].[vwInvoicePayments] IP WHERE IP.InvoiceID = INV.InvoiceID FOR XML PATH('')), 2, 1000) AS Payments\r\n FROM [Invoice].[vwInvoices] INV;\r\n\r\n WITH invoicesCTE AS (\r\n SELECT CASE\r\n WHEN @sortBy = 'INVOICENO' AND @sortDirection = 'ASC' THEN ROW_NUMBER() OVER (ORDER BY INV.InvoiceBillingPeriod ASC, RIGHT(INV.InvoiceNumber, 3) ASC)\r\n WHEN @sortBy = 'INVOICENO' AND @sortDirection = 'DESC' THEN ROW_NUMBER() OVER (ORDER BY INV.InvoiceBillingPeriod DESC, RIGHT(INV.InvoiceNumber, 3) DESC)\r\n WHEN @sortBy = 'INVOICEDATE' AND @sortDirection = 'ASC' THEN ROW_NUMBER() OVER (ORDER BY INV.InvoiceDate ASC)\r\n WHEN @sortBy = 'INVOICEDATE' AND @sortDirection = 'DESC' THEN ROW_NUMBER() OVER (ORDER BY INV.InvoiceDate DESC)\r\n WHEN @sortBy = 'PROVIDER' AND @sortDirection = 'ASC' THEN ROW_NUMBER() OVER (ORDER BY INV.ProviderName ASC)\r\n WHEN @sortBy = 'PROVIDER' AND @sortDirection = 'DESC' THEN ROW_NUMBER() OVER (ORDER BY INV.ProviderName DESC)\r\n WHEN @sortBy = 'BILLINGGROUP' AND @sortDirection = 'ASC' THEN ROW_NUMBER() OVER (ORDER BY T.BillingGroups ASC)\r\n WHEN @sortBy = 'BILLINGGROUP' AND @sortDirection = 'DESC' THEN ROW_NUMBER() OVER (ORDER BY T.BillingGroups DESC)\r\n WHEN @sortBy = 'CONTRACT' AND @sortDirection = 'ASC' THEN ROW_NUMBER() OVER (ORDER BY T.Contracts ASC)\r\n WHEN @sortBy = 'CONTRACT' AND @sortDirection = 'DESC' THEN ROW_NUMBER() OVER (ORDER BY T.Contracts DESC)\r\n WHEN @sortBy = 'PAYMENT' AND @sortDirection = 'ASC' THEN ROW_NUMBER() OVER (ORDER BY T.Payments ASC)\r\n WHEN @sortBy = 'PAYMENT' AND @sortDirection = 'DESC' THEN ROW_NUMBER() OVER (ORDER BY T.Payments DESC)\r\n WHEN @sortBy = 'INVOICEAMOUNT' AND @sortDirection = 'ASC' THEN ROW_NUMBER() OVER (ORDER BY INV.AmountPaid ASC)\r\n WHEN @sortBy = 'INVOICEAMOUNT' AND @sortDirection = 'DESC' THEN ROW_NUMBER() OVER (ORDER BY INV.AmountPaid DESC)\r\n WHEN @sortBy = 'BILLINGPERIOD' AND @sortDirection = 'ASC' THEN ROW_NUMBER() OVER (ORDER BY INV.InvoiceBillingPeriod ASC)\r\n WHEN @sortBy = 'BILLINGPERIOD' AND @sortDirection = 'DESC' THEN ROW_NUMBER() OVER (ORDER BY INV.InvoiceBillingPeriod DESC)\r\n WHEN @sortBy = 'STATUS' AND @sortDirection = 'ASC' THEN ROW_NUMBER() OVER (ORDER BY INV.StatusDescription ASC)\r\n WHEN @sortBy = 'STATUS' AND @sortDirection = 'DESC' THEN ROW_NUMBER() OVER (ORDER BY INV.StatusDescription DESC)\r\n ELSE ROW_NUMBER() OVER (ORDER BY INV.InvoiceBillingPeriod DESC, RIGHT(INV.InvoiceNumber, 3) DESC)\r\n END AS RowID, INV.InvoiceID, INV.InvoiceNumber, INV.AmountBilled, INV.AmountPaid, INV.InvoiceBillingPeriod, INV.StatusID, INV.ProviderID, INV.ProviderName, T.BillingGroups, T.Contracts, T.Payments, INV.InvoiceDate, INV.CreatedDate, INV.CreatedBy, INV.ModifiedDate, INV.ModifiedBy, INV.Active\r\n FROM [Invoice].[vwInvoices] INV\r\n JOIN @tmpInvoices T ON T.InvoiceID = INV.InvoiceID\r\n WHERE Active = 1\r\n AND INV.ProviderID = ISNULL(@providerId, ProviderID)\r\n AND INV.InvoiceBillingPeriod\t= ISNULL(@billingPeriod, InvoiceBillingPeriod)\r\n \r\n AND 1 = CASE\r\n WHEN ISNULL(@searchValue, '') <> '' THEN\r\n CASE\r\n WHEN INV.InvoiceNumber LIKE '%' + @searchValue + '%'\r\n OR T.BillingGroups LIKE '%' + @searchValue + '%'\r\n OR T.Contracts LIKE '%' + @searchValue + '%'\r\n OR T.Payments LIKE '%' + @searchValue + '%'\r\n THEN 1\r\n ELSE 0\r\n END\r\n ELSE 1\r\n END\r\n )\r\n SELECT INV.InvoiceID, INV.InvoiceNumber, INV.AmountBilled, INV.AmountPaid, INV.InvoiceBillingPeriod, INV.StatusID, INV.ProviderID, INV.ProviderName, INV.BillingGroups, INV.Contracts, INV.Payments, INV.InvoiceDate, INV.CreatedDate, INV.CreatedBy, INV.ModifiedDate, INV.ModifiedBy, INV.Active, CONVERT(INT, (SELECT COUNT(1) FROM Invoice.vwInvoices WHERE Active = 1)) AS TotalRecords, CONVERT(INT, (SELECT COUNT(1) FROM invoicesCTE)) AS FilteredRecords\r\n FROM invoicesCTE INV\r\n JOIN @tmpInvoices T ON T.InvoiceID = INV.InvoiceID\r\n WHERE (RowID BETWEEN @startRowIndex AND @endRowIndex)\r\n AND ((@billingPeriod IS NOT NULL AND INV.InvoiceBillingPeriod = @billingPeriod) OR (@billingPeriod IS NULL))\r\n ORDER BY RowID;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n SELECT @exceptionDetails = ERROR_MESSAGE();\r\n SET @severity\t= 'ERROR';\r\n SET @message\t= 'Failed to retrieve invoices';\r\n SET @sendEmail\t= 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId,@machineName = @machineName,@processName = @processName,@action = @action,@severity = @severity,@message = @message,@messageDetails = @messageDetails,@exceptionDetails = @exceptionDetails,@domain = @domain,@username = @username,@userId = @userId,@sendEmail = @sendEmail,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
  ]
