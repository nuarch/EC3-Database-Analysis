      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[USP_InvoiceDetailsSummary_Export]\n(\r\n @invoiceNumber AS VARCHAR(25) = NULL,@providerId AS INT = NULL,@groupId AS INT = NULL,@fiscalYear AS VARCHAR(4) = NULL,@contractId AS INT = NULL,@billingPeriod AS VARCHAR(6) = NULL,@fromDate AS DATETIME = NULL,@toDate AS DATETIME = NULL,@statusId AS INT = NULL\r\n)\r\nAS\r\nBEGIN\r\n SET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n SELECT @invoiceNumber = NULLIF(@invoiceNumber, '0'), @providerId = NULLIF(@providerId, 0), @groupId = NULLIF(@groupId, 0),@fiscalYear = NULLIF(@fiscalYear, ''), @contractId = NULLIF(@contractId, 0), @billingPeriod = NULLIF(@billingPeriod, '0'),@statusId = NULLIF(@statusId, 0);\r\n\r\n\tSELECT IAB.InvoiceNumber AS [Invoice #],FORMAT(INV.InvoiceDate, 'M/d/yyyy') AS [Invoice Date],SUBSTRING((SELECT DISTINCT ', ' + IP.PaymentNumber FROM [Invoice].[vwInvoicePayments] IP WHERE IP.InvoiceID = INV.InvoiceID FOR XML PATH('')), 2, 1000) AS [Payment(s)],INVSTS.StatusDescription AS [Invoice Status],IAB.GroupName AS [Invoice Billing Group],SUBSTRING((SELECT DISTINCT ', ' + IP.ContractNumber\r\n FROM Invoice.vwInvoiceGroupContracts IP \r\n WHERE IP.InvoiceID = INV.InvoiceID AND IP.GroupID = IAB.GroupID\r\n ORDER BY ', ' + IP.ContractNumber\r\n FOR XML PATH('')), 3, 65) AS [Contract(s)],IAB.AccountNumber AS [Account #],IIF(IAB.IsEstimated = 1, 'Estimated', 'Actual') AS [Est./Act.],IAB.BillingPeriod AS [Billing Period],FORMAT(IAB.FromDate, 'M/d/yyyy') AS [From Date],FORMAT(IAB.ToDate, 'M/d/yyyy') AS [To Date],IAB.EnergyUsage AS [Usage Energy],IAB.DemandUsage AS [Usage Demand],FORMAT(IAB.AmountBilled, 'C') AS [Amounts Billed],FORMAT(IAB.AmountPaid, 'C') AS [Amounts Paid],FORMAT(IAB.AmountPaidPriorFY, 'C') AS [Amounts Prior FY],FORMAT(IAB.AmountPaidCurrentFY, 'C') AS [Amounts Current FY]\r\n\tFROM Invoice.vwInvoiceAccountBillings AS IAB\r\n INNER JOIN Invoice.Invoice AS INV ON INV.InvoiceID = IAB.InvoiceID --AND INV.ProviderID = ISNULL(@providerId, INV.ProviderID)\r\n INNER JOIN Invoice.InvoiceStatus AS INVSTS ON INVSTS.StatusID = INV.StatusID\r\n\tWHERE 1 = CASE WHEN NOT @invoiceNumber IS NULL THEN\r\n CASE WHEN IAB.InvoiceNumber = ISNULL(@invoiceNumber, IAB.InvoiceNumber) THEN 1 ELSE 0 END\r\n ELSE 1 END\r\n AND 1 = CASE WHEN NOT @providerId IS NULL THEN\r\n CASE WHEN INV.ProviderID = ISNULL(@providerId, INV.ProviderID) THEN 1 ELSE 0 END\r\n ELSE 1 END\r\n AND 1 = CASE WHEN NOT @groupId IS NULL THEN\r\n CASE WHEN IAB.GroupID = ISNULL(@groupId, IAB.GroupID) THEN 1 ELSE 0 END\r\n ELSE 1 END\r\n AND 1 = CASE WHEN NOT @fiscalYear IS NULL THEN\r\n CASE WHEN IAB.FiscalYear = @fiscalYear THEN 1 ELSE 0 END\r\n ELSE 1 END\r\n AND 1 = CASE WHEN NOT @contractId IS NULL THEN\r\n CASE WHEN IAB.ContractID = ISNULL(@contractId, IAB.ContractID) THEN 1 ELSE 0 END\r\n ELSE 1 END\r\n AND 1 = CASE WHEN NOT @billingPeriod IS NULL THEN\r\n CASE WHEN IAB.BillingPeriod = ISNULL(@billingPeriod, IAB.BillingPeriod) THEN 1 ELSE 0 END\r\n ELSE 1 END\r\n AND 1 = CASE WHEN NOT @fromDate IS NULL THEN\r\n CASE WHEN CONVERT(VARCHAR(12), IAB.FromDate, 112) >= CONVERT(VARCHAR(12), @fromDate, 112) THEN 1 ELSE 0 END\r\n ELSE 1 END\r\n AND 1 = CASE WHEN NOT @toDate IS NULL THEN\r\n CASE WHEN CONVERT(VARCHAR(12), IAB.ToDate, 112) <= CONVERT(VARCHAR(12), @toDate, 112) THEN 1 ELSE 0 END\r\n ELSE 1 END\r\n AND 1 = CASE WHEN NOT @statusId IS NULL THEN\r\n CASE WHEN INV.StatusID = ISNULL(@statusId, INV.StatusID) THEN 1 ELSE 0 END\r\n ELSE 1 END\r\n\tORDER BY INV.InvoiceDate DESC, IAB.AccountNumber ASC;\t\r\nEND;\r"
        }
      ]
    }
