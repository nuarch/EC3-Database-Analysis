      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Invoice].[USP_BillingGroupAvailableByInvoiceRetrieve]\n(\r\n\t@invoiceId AS INT\r\n\t,@billingType AS CHAR(1) = NULL\r\n\t,@correlationId AS VARCHAR(128) = NULL\r\n\t,@machineName AS VARCHAR(128) = NULL\r\n\t,@processName AS VARCHAR(128) = NULL\r\n\t,@domain AS VARCHAR(25) = NULL\r\n\t,@username AS VARCHAR(25) = NULL\r\n\t,@userId AS INT = NULL\r\n\t,@exceptionDetails AS VARCHAR(MAX) = NULL OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSELECT @invoiceId = NULLIF(@invoiceId, 0), @billingType = NULLIF(@billingType, ''), @correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID()))\r\n\t\t,@machineName = COALESCE(@machineName, @@SERVERNAME, 'NA'), @userId = ISNULL(@userId, 0)\r\n\t\t,@processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\r\n\tDECLARE @action AS VARCHAR(25) = 'RETRIEVE', @severity AS VARCHAR(25) = 'INFO', @message AS VARCHAR(255) = 'Retrieved utility provider billing groups for invoices'\r\n\t\t,@messageDetails AS VARCHAR(MAX), @startTime AS DATETIME = GETDATE(), @elapsedTime AS INT, @sendEmail AS BIT = 0, @providerId AS INT;\r\n\t\r\n\tSELECT @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @invoiceId AS INVID, @billingType AS BILLTYPE FOR XML PATH('INPUTS')));\r\n\tSELECT @providerId = ProviderID FROM Invoice.vwInvoices WHERE InvoiceID = @invoiceId;\r\n\r\n\tIF (ISNULL(@providerId, 0) = 0)\r\n\tBEGIN\r\n\t\tRAISERROR (N'Unable to determine provider for invoice', 16, 1);\r\n\tEND;\r\n\r\n\tBEGIN TRY\r\n\t\tSELECT GroupID\r\n\t\t\t,GroupName\r\n\t\t\t,GroupDescription\r\n\t\t\t,SummaryAccountNumber\r\n\t\t\t,IsSummaryBilling\r\n\t\t\t,AccountCount\r\n\t\t\t,ProviderID\r\n\t\t\t,BillingType\r\n\t\t\t,CreatedDate\r\n\t\t\t,CreatedBy\r\n\t\t\t,ModifiedDate\r\n\t\t\t,ModifiedBy\r\n\t\t\t,Active\r\n\t\tFROM Billing.vwBillingGroups\r\n\t\tWHERE ProviderID = @providerId\r\n\t\t\tAND BillingType = ISNULL(@billingType, BillingType)\r\n\t\t\tAND Active = 1\r\n\t\tORDER BY GroupName ASC;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tSELECT @exceptionDetails = ERROR_MESSAGE(), @severity = 'ERROR', @message = 'Failed to retrieve utility provider billing groups for invoices', @sendEmail = 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId\r\n\t\t,@machineName = @machineName\r\n\t\t,@processName = @processName\r\n\t\t,@action = @action\r\n\t\t,@severity = @severity\r\n\t\t,@message = @message\r\n\t\t,@messageDetails = @messageDetails\r\n\t\t,@exceptionDetails = @exceptionDetails\r\n\t\t,@domain = @domain\r\n\t\t,@username = @username\r\n\t\t,@userId = @userId\r\n\t\t,@sendEmail = @sendEmail\r\n\t\t,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
