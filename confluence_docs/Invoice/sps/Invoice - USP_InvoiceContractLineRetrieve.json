      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Invoice].[USP_InvoiceContractLineRetrieve]\n\t@invoiceId INT = NULL,@invoiceContractLineId\tINT = NULL,@correlationId VARCHAR(128) = NULL,@machineName VARCHAR(128) = NULL,@processName VARCHAR(128) = NULL,@domain VARCHAR(25) = NULL,@username VARCHAR(25) = NULL,@userId INT = NULL,@exceptionDetails VARCHAR(MAX) = NULL OUTPUT\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSET @invoiceId = NULLIF(@invoiceId, 0);\r\n\tSET @invoiceContractLineId\t= NULLIF(@invoiceContractLineId, 0);\r\n\r\n\tDECLARE @action VARCHAR(25), @severity VARCHAR(25), @message VARCHAR(255), @messageDetails VARCHAR(MAX), @startTime DATETIME, @elapsedTime INT, @sendEmail BIT;\r\n\tSET @startTime = GETDATE();\r\n\t\r\n\tSET @correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID()));\r\n\tSET @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA');\r\n\tSET @processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\tSET @action = 'RETRIEVE';\r\n\tSET @severity = 'INFO';\r\n\tSET @message = 'Retrieved invoice contract line(s)';\r\n\tSET @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @invoiceId AS INVID, @invoiceContractLineId AS ICLINEID\r\n FOR XML PATH('INPUTS')));\r\n\tSET @sendEmail = 0;\r\n\tSET @userId = ISNULL(@userId, 0);\r\n\r\n\tBEGIN TRY\r\n DECLARE @invoiceIsSplitFY BIT, @currentFY INT;\r\n\r\n IF @invoiceId IS NULL\r\n SELECT @invoiceId = InvoiceID \r\n FROM invoice.InvoiceContractLine \r\n WHERE InvoiceContractLineID = @invoiceContractLineId;\r\n\r\n SET @invoiceIsSplitFY = Billing.UDF_IsSplitFYInvoice(@invoiceId);\r\n\r\n SELECT @currentFY = Billing.UDF_GetFiscalYear(CreatedDate) \r\n FROM Invoice.Invoice\r\n WHERE InvoiceID=@invoiceId;\r\n\r\n SELECT DISTINCT ICL.InvoiceContractLineID, ICL.InvoiceID, ICL.InvoiceNumber, ICL.ContractID, ICL.ContractNumber, ICL.ContractLineID, ICL.FiscalYear, ICL.CommodityLine, ICL.AccountingLine, ICL.BudgetCode, ICL.ObjectCode, ICL.UoA, ICL.ActualAmount, ICL.CloseAmount, ICL.OpenAmount, ICL.AvailableAmount, ICL.AmountPaid, ICL.CreatedDate, ICL.CreatedBy, ICL.ModifiedDate, ICL.ModifiedBy, ICL.Active, SUM(IIF(ICLA.AllocationFiscalYear<Billing.UDF_GetFiscalYear(I.CreatedDate), ICLA.AllocationAmount, 0)) OVER (PARTITION BY ICL.InvoiceContractLineID) AS PriorFYAmountPaid, SUM(IIF(ICLA.AllocationFiscalYear=Billing.UDF_GetFiscalYear(I.CreatedDate), ICLA.AllocationAmount, 0)) OVER (PARTITION BY ICL.InvoiceContractLineID) AS CurrentFYAmountPaid, @invoiceIsSplitFY AS InvoiceIsSplitFY, IIF(@invoiceIsSplitFY = 1, @currentFY, ICL.FiscalYear) AS CurrentFY\r\n\r\n FROM [Invoice].[vwInvoiceContractLines] ICL\r\n JOIN Invoice.InvoiceContractLineAllocation ICLA ON ICL.InvoiceContractLineID=ICLA.InvoiceContractLineID\r\n JOIN Invoice.Invoice I ON icl.InvoiceID=I.InvoiceID\r\n WHERE ICL.InvoiceID = ISNULL(@invoiceId, ICL.InvoiceID)\r\n AND ICL.InvoiceContractLineID\t= ISNULL(@invoiceContractLineId, ICL.InvoiceContractLineID)\r\n ORDER BY ICL.CommodityLine ASC, ICL.AccountingLine ASC;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n SELECT @exceptionDetails = ERROR_MESSAGE();\r\n SET @severity\t= 'ERROR';\r\n SET @message\t= 'Failed to retrieve invoice contract line(s)';\r\n SET @sendEmail\t= 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n \r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId,@machineName = @machineName,@processName = @processName,@action = @action,@severity = @severity,@message = @message,@messageDetails = @messageDetails,@exceptionDetails = @exceptionDetails,@domain = @domain,@username = @username,@userId = @userId,@sendEmail = @sendEmail,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
  ]
