      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Invoice].[USP_InvoiceContractLineUpdate]\n\t@invoiceContractLineId INT,@amount DECIMAL(18, 2),@allocations [Invoice].[UDT_InvoiceContractLineAllocation] READONLY,@correlationId VARCHAR(128) = NULL,@machineName VARCHAR(128) = NULL,@processName VARCHAR(128) = NULL,@domain VARCHAR(25) = NULL,@username VARCHAR(25) = NULL,@userId INT = NULL,@exceptionDetails VARCHAR(MAX) = NULL OUTPUT\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSET @invoiceContractLineId\t= NULLIF(@invoiceContractLineId, 0);\r\n\tSET @amount = NULLIF(@amount, 0);\r\n\r\n\tDECLARE @action VARCHAR(25), @severity VARCHAR(25), @message VARCHAR(255), @messageDetails VARCHAR(MAX), @startTime DATETIME, @elapsedTime INT, @sendEmail BIT;\r\n\tSET @startTime = GETDATE();\r\n\t\r\n\tSET @correlationId = ISNULL(@correlationId, CONVERT(VARCHAR(128), NEWID()));\r\n\tSET @machineName = COALESCE(@machineName, @@SERVERNAME, 'NA');\r\n\tSET @processName = COALESCE(@processName, QUOTENAME(OBJECT_SCHEMA_NAME(@@PROCID)) + '.' + QUOTENAME(OBJECT_NAME(@@PROCID)), 'NA');\r\n\tSET @action = 'UPDATE';\r\n\tSET @severity = 'INFO';\r\n\tSET @message = 'Updated invoice contract line';\r\n\tSET @messageDetails = CONVERT(VARCHAR(MAX), (SELECT @invoiceContractLineId AS ICLINEID, @amount AS AMT, (SELECT * FROM @allocations FOR XML PATH('ALLOC'), TYPE)\r\n FOR XML PATH('INPUTS')));\r\n\tSET @sendEmail = 0;\r\n\tSET @userId = ISNULL(@userId, 0);\r\n\r\n\tDECLARE @invoiceId INT;\r\n\tSELECT @invoiceId = InvoiceID FROM [Invoice].[vwInvoiceContractLines] CL WHERE CL.InvoiceContractLineID = @invoiceContractLineId;\r\n\r\n\tIF ISNULL(@invoiceId, 0) = 0 AND ISNULL(@invoiceContractLineId, 0) = 0\r\n RAISERROR (N'Please specify either the invoice or the line', 16, 1);\r\n\r\n\tDECLARE @noteFiller VARCHAR(500);\r\n\tSELECT @noteFiller = (CL.ContractNumber + ',' + CONVERT(VARCHAR(10), CL.CommodityLine) + ',' + CONVERT(VARCHAR(10), CL.AccountingLine))\r\n\tFROM [Invoice].[vwInvoiceContractLines] CL\r\n\tWHERE CL.InvoiceContractLineID = @invoiceContractLineId;\r\n\r\n\tDECLARE @tranName VARCHAR(128);\r\n\tSET @tranName = CONVERT(VARCHAR(128), NEWID());\r\n\r\n\tBEGIN TRY\r\n BEGIN TRAN @tranName;\r\n\r\n -- Update contract line\r\n UPDATE [Invoice].[InvoiceContractLine] SET AmountPaid = @amount\r\n WHERE InvoiceContractLineID = @invoiceContractLineId;\r\n\r\n -- Delete existing contract line allocations\r\n DELETE FROM [Invoice].[InvoiceContractLineAllocation]\r\n WHERE InvoiceContractLineID = @invoiceContractLineId;\r\n\r\n -- Insert new contract line allocations\r\n INSERT INTO [Invoice].[InvoiceContractLineAllocation] (InvoiceContractLineID, AllocationFiscalYear, AllocationAmount, Comments, CreatedBy)\r\n SELECT @invoiceContractLineId, FiscalYear, Amount, Comments, @userId\r\n FROM @allocations;\r\n\r\n -- Create audit note\r\n INSERT INTO [Common].[Note] (ParentType, ParentID, [Action], Note, CreatedBy)\r\n VALUES ('INVOICE', @invoiceId, 'UPDATE CONTRACT LINE', 'Updated contract line (' + @noteFiller + ')', @userId);\r\n\r\n COMMIT TRAN @tranName;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n IF XACT_STATE() <> 0 ROLLBACK TRAN @tranName;\r\n\r\n SELECT @exceptionDetails = ERROR_MESSAGE();\r\n SET @severity\t= 'ERROR';\r\n SET @message\t= 'Failed to update invoice contract line';\r\n SET @sendEmail\t= 1;\r\n\tEND CATCH;\r\n\r\n\tSET @elapsedTime = DATEDIFF(MILLISECOND, GETDATE(), @startTime);\r\n\r\n\tEXEC dbo.USP_AppLogCreate @correlationId = @correlationId,@machineName = @machineName,@processName = @processName,@action = @action,@severity = @severity,@message = @message,@messageDetails = @messageDetails,@exceptionDetails = @exceptionDetails,@domain = @domain,@username = @username,@userId = @userId,@sendEmail = @sendEmail,@elapsedTime = @elapsedTime;\r\nEND;\r"
        }
      ]
    }
  ]
