      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Billing].[UDF_GetFundingType]\n(\r\n\t@budgetCode AS VARCHAR(4)\r\n) RETURNS VARCHAR(MAX)\r\nAS\r\nBEGIN\r\n\tDECLARE @fundType AS VARCHAR(MAX);\r\n\r\n\tSELECT @fundType = LTRIM(combinedFundingTypes)\r\n\tFROM (SELECT STUFF((SELECT CAST(', ' + FundingSourceDescription AS VARCHAR(MAX))\r\n\t\tFROM Billing.EC3_Billing_AgencyFunding\r\n\t\tWHERE BudgetCode = @budgetCode\r\n\t\tFOR XML PATH (''), TYPE).value('.', 'VARCHAR(MAX)'), 1,1,'') AS combinedFundingTypes) AS R;\r\n\r\n\tRETURN @fundType;\r\nEND;\r"
        }
