    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Published_ActiveAccountsNotBilledReport]\n(\r\n\t@EmailAddress AS VARCHAR(100),\r\n\t@BillingPeriodStart AS BillingPeriod,\r\n\t@BillingPeriodEnd AS BillingPeriod\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @spname AS VARCHAR(100) = OBJECT_NAME(@@PROCID);\r\n\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName\t\t\t\t\t= @spname,\r\n\t\t@StoredProcName\t\t\t\t= @spname,\r\n\t\t@RequestedBy\t\t\t\t= @EmailAddress,\r\n\t\t@prmPublishedBillingPeriod\t= NULL,\r\n\t\t@prmBillingPeriod\t\t\t= NULL,\r\n\t\t@prmAgency_ies\t\t\t\t= '*',\r\n\t\t@prmFacilityNumber_s\t\t= NULL,\r\n\t\t@prmStartingBillingPeriod\t= @BillingPeriodStart,\r\n\t\t@prmEndingBillingPeriod\t\t= @BillingPeriodEnd\r\n\r\n\tDECLARE @CurrentBillingPeriod AS VARCHAR(6), @PreviousYearBillingPeriodEnd AS BillingPeriod, @NumberofMonthsinSelectedRange AS INT;;\r\n\tSELECT @CurrentBillingPeriod = BillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\r\n\tIF (@BillingPeriodEnd > @CurrentBillingPeriod)\r\n\tBEGIN\r\n\t\tSET @BillingPeriodEnd = @CurrentBillingPeriod;\r\n\tEND;\r\n\r\n\tSELECT @PreviousYearBillingPeriodEnd = @BillingPeriodEnd -99, @NumberofMonthsinSelectedRange = DATEDIFF(MONTH, @BillingPeriodStart + '01', @BillingPeriodEnd + '01') + 1;\r\n\t\r\n\tSELECT DISTINCT MAX(ab.BillingPeriod) AS LastBilledPeriod\r\n\t\t,a.BillingCycle\r\n\t\t,a.CurrentAccountNumber\r\n\t\t,a.AccountStatus + ' (' + AMS.ShortDesc + ')' AS AccountStatus\r\n\t\t,uc.ShortDesc AS [Utility Company]\r\n\t\t,CONVERT(VARCHAR(10), CONVERT(DATETIME, a.AccountEffectiveTurnOn, 1), 101) AS AccountEffectiveTurnOn\r\n\t\t,a.UtilityServiceAddress\r\n\t\t,utri.BudgetGroupDEMName AS DEMBudgetGroup\r\n\t\t,ad.AgencyName\r\n\t\t,edt.EnergyType\r\n\t\t,a.UniqueAccountSeqid\r\n\t\t,(SELECT COUNT(DISTINCT BillingPeriod) FROM Billing.AccountBilling WHERE AccountSeqid = ab.AccountSeqid\r\n\t\t\tAND BillingPeriod BETWEEN @PreviousYearBillingPeriodEnd AND @BillingPeriodEnd) AS HowManyTimesBilledinLast12Months\r\n\tFROM Billing.Account AS a\r\n\t\tINNER JOIN Billing.UtilityCompany AS uc ON uc.UtilityCompanySeqid = a.UtilityAccountProvider\r\n\t\tINNER JOIN Billing.AgencyDivision AS ad  ON ad.AgencyDivisionSeqid = a.AgencyAccount\r\n\t\tINNER JOIN Billing.EnergyDeliveryType AS edt ON edt.EnergyDeliveryType = a.EnergyAccountDescription\r\n\t\tINNER JOIN Billing.UtilityTariffRateInformation AS utri ON utri.UtilityTariffRateInformationSeqid = a.UtilityTariffRateInformationSeqid\r\n\t\tLEFT JOIN Billing.AccountBilling AS ab ON ab.AccountSeqid = a.AccountSeqid AND ab.BillingPeriod BETWEEN @BillingPeriodStart AND @BillingPeriodEnd\t\t\r\n\t\tLEFT JOIN Billing.AccountMeterStatus AS AMS ON AMS.AccountMeterStatus = a.AccountStatus\r\n\tWHERE a.IsActive = 1 AND a.IsCurrentRecord ='Y'\r\n\tGROUP BY a.CurrentAccountNumber\r\n\t\t,a.AccountStatus + ' (' + AMS.ShortDesc + ')'\r\n\t\t,uc.ShortDesc\r\n\t\t,a.AccountEffectiveTurnOn\r\n\t\t,a.UtilityServiceAddress\r\n\t\t,ad.AgencyName\r\n\t\t,utri.BudgetGroupDEMName\r\n\t\t,edt.EnergyType\r\n\t\t,a.UniqueAccountSeqid\r\n\t\t,a.BillingCycle\r\n\t\t,ab.AccountSeqid\r\n\tHAVING COUNT(DISTINCT ab.BillingPeriod) < @NumberofMonthsinSelectedRange;\r\nEND;"
        }
      ]
    }
