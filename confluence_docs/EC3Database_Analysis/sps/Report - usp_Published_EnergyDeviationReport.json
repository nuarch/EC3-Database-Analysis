    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Published_EnergyDeviationReport]\n(\r\n\t@EmailAddress AS VARCHAR(75)\r\n\t,@PublishedBillingPeriod AS VARCHAR(6)\r\n\t,@AgencyCodeOEC AS VARCHAR(MAX)\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @spname AS VARCHAR(100) = OBJECT_NAME(@@PROCID)\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName\t\t\t\t\t= @spname,\r\n\t\t@StoredProcName\t\t\t\t= @spname,\r\n\t\t@RequestedBy\t\t\t\t= @EmailAddress,\r\n\t\t@prmPublishedBillingPeriod\t= @PublishedBillingPeriod,\r\n\t\t@prmBillingPeriod\t\t\t= NULL,\r\n\t\t@prmAgency_ies\t\t\t\t= @AgencyCodeOEC,\r\n\t\t@prmFacilityNumber_s\t\t= NULL,\r\n\t\t@prmStartingBillingPeriod\t= NULL,\r\n\t\t@prmEndingBillingPeriod\t\t= NULL;\r\n\r\n\tDECLARE @CurrentBillingPeriod AS VARCHAR(6), @BillingPeriodOneYearAgo AS VARCHAR(6), @MonthName AS VARCHAR(30);\r\n\r\n\tSELECT @MonthName = DATENAME(MM, @PublishedBillingPeriod+'01'), @CurrentBillingPeriod = @PublishedBillingPeriod, @BillingPeriodOneYearAgo = dbo.CalcBillingPeriodYearPrior(@PublishedBillingPeriod);\r\n\r\n\tSELECT DISTINCT c.PublishedBillingPeriod, \r\n\t\tc.FiscalYear,\r\n\t\tc.CurrentFiscalYear,\r\n\t\tc.PriorFiscalYear,\r\n\t\tc.CurrentAccountNumber, \r\n\t\tc.OriginalAccountNumber, \r\n\t\tc.UtilityServiceAddress, \r\n\t\tc.Borough, c.Block, c.LotNumber, c.CityPlanningBIN, c.Address1, c.EnergyType,c.EstimatedReading, c.BillingPeriodDays, c.Consumption, \r\n\t\tP.BillingPeriodDays as PriorBillingPeriodDays, P.PriorConsumption as PriorConsumption, P.EnergyType as PriorEnergyType,P.EstimatedReading as PriorEstimatedReading,\r\n\t\tcase when p.PriorConsumption = 0 then 0 else ((cast(c.Consumption as float)/p.PriorConsumption)-1.0) *100 end as PercentageDeviation,\r\n\t\tp.FacilityName,p.OecFacilityNumber,p.UtilityCompany\r\n\tFROM (SELECT @PublishedBillingPeriod AS PublishedBillingPeriod, \r\n\t\t\tT.FiscalYear, \r\n\t\t\tT.FiscalYear AS CurrentFiscalYear, \r\n\t\t\tSUBSTRING(dbo.CreatePreviousPeriod(T.FiscalYear + '01', 'Y'), 1, 4) AS PriorFiscalYear, \r\n\t\t\tT.ActualOrEstimated AS EstimatedReading, \r\n\t\t\tT.BillingPeriodDays, \r\n\t\t\tT.AccountEnergyUsage AS Consumption, \r\n\t\t\tT.CurrentAccountNumber, \r\n\t\t\tT.OriginalAccountNumber, \r\n\t\t\tT.UtilityServiceAddress, \r\n\t\t\tT.Borough, \r\n\t\t\tT.Block, \r\n\t\t\tT.LotNumber, \r\n\t\t\tT.CityPlanningBIN, \r\n\t\t\tT.OecFacilityNumber, \r\n\t\t\tT.Address1, \r\n\t\t\tT.EnergyType, \r\n\t\t\tT.FacilityName, \r\n\t\t\tT.UtilityCompany\r\n\t\tFROM Billing.uftn_TableGetAgencyChildrenByAgencyCodeOEC(@AgencyCodeOEC, @EmailAddress) AS A\r\n\t\t\tINNER JOIN Published.TemporalAccountLevelRawDataForCurrentPeriod AS T ON A.AgencyCodeOEC = T.AgencyCodeOEC\r\n\t\tWHERE (T.EffectiveStartPeriod <= @PublishedBillingPeriod AND T.EffectiveEndPeriod > @PublishedBillingPeriod )\r\n\t\t\tAND T.BillingPeriod IN (@CurrentBillingPeriod)\r\n\t\t\tAND T.BillingMonth = @MonthName) AS c \r\n\t\tINNER JOIN (SELECT @PublishedBillingPeriod AS PublishedBillingPeriod, \r\n\t\t\t\tT.FiscalYear, \r\n\t\t\t\tT.FiscalYear AS CurrentFiscalYear, \r\n\t\t\t\tSUBSTRING(dbo.CreatePreviousPeriod(T.FiscalYear + '01', 'Y'), 1, 4) AS PriorFiscalYear, \r\n\t\t\t\tT.ActualOrEstimated AS EstimatedReading, \r\n\t\t\t\tT.BillingPeriodDays, \r\n\t\t\t\tT.AccountEnergyUsage AS PriorConsumption, \r\n\t\t\t\tT.CurrentAccountNumber, \r\n\t\t\t\tT.OriginalAccountNumber, \r\n\t\t\t\tT.UtilityServiceAddress, \r\n\t\t\t\tT.Borough, \r\n\t\t\t\tT.[Block], \r\n\t\t\t\tT.LotNumber, \r\n\t\t\t\tT.CityPlanningBIN, \r\n\t\t\t\tT.OecFacilityNumber, \r\n\t\t\t\tT.Address1, \r\n\t\t\t\tT.EnergyType, \r\n\t\t\t\tT.FacilityName, \r\n\t\t\t\tT.UtilityCompany\r\n\t\t\tFROM Billing.uftn_TableGetAgencyChildrenByAgencyCodeOEC(@AgencyCodeOEC, @EmailAddress) AS A\r\n\t\t\t\tINNER JOIN Published.TemporalAccountLevelRawDataForCurrentPeriod AS T ON A.AgencyCodeOEC = T.AgencyCodeOEC\r\n\t\t\tWHERE (T.EffectiveStartPeriod <= @PublishedBillingPeriod AND T.EffectiveEndPeriod > @PublishedBillingPeriod)\r\n\t\t\t\tAND T.BillingPeriod IN (@BillingPeriodOneYearAgo)\r\n\t\t\t\tAND T.BillingMonth = @MonthName) AS p ON c.CurrentAccountNumber = p.CurrentAccountNumber\r\n\tWHERE case when p.PriorConsumption = 0 then 0 else ((cast(c.Consumption as float)/p.PriorConsumption)-1.00) *100 end>=25;\r\nEND;"
        }
      ]
    }
  ]
}