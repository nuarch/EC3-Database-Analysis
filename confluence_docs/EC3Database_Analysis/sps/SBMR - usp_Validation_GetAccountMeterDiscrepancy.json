    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [SBMR].[usp_Validation_GetAccountMeterDiscrepancy]\n\t@SBMRHeaderSeqid INT\r\nAS\r\nBEGIN\t\r\n\t\r\n\tSELECT 'A' AS RecordType, a.CurrentAccountNumber AS RecordData\r\n\tFROM SBMR.SBMRHeader AS h\r\n\tINNER JOIN SBMR.SBMRAccount AS a\r\n\tON h.SBMRHeaderSeqId = a.SBMRHeaderseqid\r\n\tWHERE \r\n\th.SBMRAction IN (4, 5, 6, 13, 17)\r\n\tAND a.CurrentAccountNumber NOT IN (SELECT OriginalAccountNumber FROM billing.Account)\r\n\tAND h.SBMRHeaderSeqid = @SBMRHeaderSeqid\r\n\tUNION all\r\n\tSELECT 'M' AS RecordType, m.CurrentMeterNumber AS RecordData\r\n\tFROM SBMR.SBMRHeader AS h\r\n\tINNER JOIN SBMR.SBMRMeter AS m\r\n\tON h.SBMRHeaderSeqId = m.SBMRHeaderseqid\r\n\tWHERE \r\n\th.SBMRHeaderSeqid = @SBMRHeaderSeqid\r\n\tand\th.SBMRAction IN (4, 5, 6, 13, 17)\r\n\tAND m.CurrentMeterNumber NOT IN (SELECT OriginalMeterNumber FROM billing.Meter)\r\n\r\n\r\nEND"
        }
      ]
    }
