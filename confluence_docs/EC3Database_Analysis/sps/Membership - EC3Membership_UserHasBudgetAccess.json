      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Membership].[EC3Membership_UserHasBudgetAccess]\n(\r\n    @UserEmail AS VARCHAR(75),\r\n    @IsAuthenticated AS BIT OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tDECLARE @UserCount AS INT;\r\n\r\n\tSELECT @UserCount = COUNT(M.MembershipSeqID)\r\n\tFROM Membership.EC3Membership AS M\r\n\t\tINNER JOIN dbo.aspnet_UsersInRoles AS UR ON UR.UserId = M.UserID\r\n\t\tINNER JOIN dbo.aspnet_Roles AS R ON R.RoleId = UR.RoleId\r\n\tWHERE M.Email = @UserEmail\r\n\t\tAND M.IsInUse = 1\r\n\t\tAND M.IsActive = 1\r\n\t\tAND R.RoleName IN ('Administrator', 'SeniorAdministrator');\r\n\r\n\tIF (@UserCount >= 1)\r\n\tBEGIN\r\n\t\tSET @IsAuthenticated = 1;\r\n\tEND;\r\n\tELSE\r\n\tBEGIN\r\n\t\tSET @IsAuthenticated = 0;\r\n\tEND;\r\nEND;"
        }
