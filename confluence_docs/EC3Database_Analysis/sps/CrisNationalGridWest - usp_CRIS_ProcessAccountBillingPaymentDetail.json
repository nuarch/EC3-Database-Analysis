          "type": "text",
          "text": "CREATE PROCEDURE [CrisNationalGridWest].[usp_CRIS_ProcessAccountBillingPaymentDetail] @AuthenticatedUserID int , @StatusCode int  OUTPUT\n   \r\nAS \r\n--**************************************************************************************\r\n--* Name:         \r\n--*\r\n--* Description:  \r\n--*               \r\n--*               \r\n--*               \r\n--* Exec:         [CrisNationalGridWest].[usp_CrisTransformUploadedData]\r\n--*\r\n--* Parameter(s):         \r\n--*                            StatusCode  int output       \t   -  Execution Return Status \r\n--*\r\n--* Database:     OEC\r\n--*\r\n--* Return:\t    0 Success\r\n--*                   9 Failure\r\n--*\r\n--* AUTHOR:       Peter Heller (PAH)\r\n--* Created On:   10/17/2006\r\n--**************************************************************************************\r\n--* Date         Tech Description of Change\r\n--* ---------- ----  -------------------------------------------------------------\r\n--* 11/24/2009 PAH  First Version  \r\n--***************************************************************************************\r\nBegin \r\n--************************************************************************************** \r\n--Declare Variables                                            \r\n--**************************************************************************************\r\n\r\n--************************************************************************************** \r\n--\tDeclare Cursor\r\n--**************************************************************************************\r\n--\r\n--************************************************************************************** \r\n--\tMain Processing\r\n--**************************************************************************************\r\n--\r\n--\tInsert Applied payment details to the prior months account billing row\r\n--\r\n--\r\nINSERT INTO Billing.AccountBillingPaymentDetailCrisGas\r\n\t\t  (UtilityCompanySeqid, AccountInvoiceBillingGroup, AccountBillingSeqid, BillingPeriod, PaymentBillingPeriod, AccountNumber, MeterReadWorkDay, \r\n\t\t  ActivityDateTime, TransactionCode, SLAccountNUmber, AccountStatus, PaymentAmount, PaymentDate, CurrentAccountBalance, \r\n\t\t  AcountArrears, TerminationBalance, OldCurrentAccountBalance, OldAcountArrears, OldTerminationBalance, MiscellaneousCreditAmount, \r\n\t\t  MiscellaneousCreditType, GasRateCode, AuthenticatedUserID,EC3PaymentBillingPeriodTotalAmountDue)\r\nSELECT \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.UtilityCompanySeqid,\r\n\t\tCrisNationalGridWest.UploadPaymentDetail.AccountInvoiceBillingGroup,\r\n\t\tBilling.AccountBilling.AccountBillingSeqid, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.BillingPeriod, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.PaymentBillingPeriod, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.AccountNumber, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.MeterReadWorkDay, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.ActivityDateTime, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.TransactionCode, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.SLAccountNUmber, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.AccountStatus, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.PaymentAmount, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.PaymentDate,\r\n\t\tCrisNationalGridWest.UploadPaymentDetail.CurrentAccountBalance, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.AcountArrears,\r\n\t\tCrisNationalGridWest.UploadPaymentDetail.TerminationBalance, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.OldCurrentAccountBalance,\r\n\t\tCrisNationalGridWest.UploadPaymentDetail.OldAcountArrears, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.OldTerminationBalance, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.MiscellaneousCreditAmount, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.MiscellaneousCreditType, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.GasRateCode, \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.AuthenticatedUserID,\r\n\t\tBilling.AccountBilling.TotalAmountDue as EC3PaymentBillingPeriodTotalAmountDue\r\nFROM \r\n\t\tCrisNationalGridWest.UploadPaymentDetail INNER JOIN\r\n\t\tBilling.AccountBilling ON CrisNationalGridWest.UploadPaymentDetail.UtilityCompanySeqid = Billing.AccountBilling.UtilityCompanySeqid AND \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.PaymentBillingPeriod = Billing.AccountBilling.BillingPeriodRevision AND \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.AccountNumber = Billing.AccountBilling.OriginalAccountNumber\r\n--\r\n--\tUpdate Applied payments to the prior months account billing row\r\n--\r\nUPDATE    Billing.AccountBilling\r\nSET              \r\n\t\tCreditedPaidAmount = CrisNationalGridWest.UploadPaymentDetail.PaymentAmount,  \r\n\t\tCreditedPaidAmountDate = CrisNationalGridWest.UploadPaymentDetail.PaymentDate\r\nFROM \r\n\t\tCrisNationalGridWest.UploadPaymentDetail INNER JOIN\r\n\t\tBilling.AccountBilling ON CrisNationalGridWest.UploadPaymentDetail.UtilityCompanySeqid = Billing.AccountBilling.UtilityCompanySeqid AND \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.PaymentBillingPeriod = Billing.AccountBilling.BillingPeriodRevision AND \r\n\t\tCrisNationalGridWest.UploadPaymentDetail.AccountNumber = Billing.AccountBilling.OriginalAccountNumber\r\n--\r\nset @StatusCode = 0\r\n--\r\nend"
        }
      ]
    }
  ]
}