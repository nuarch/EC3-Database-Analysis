    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Scheduler].[usp_Report_GetReportPersonalizationParameterValue]\n(\r\n\t@DistributionReportID AS INT,\r\n\t@JobId AS INT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\t\r\n\tDECLARE @TableSourceName AS VARCHAR(100), @TableSchemaName AS VARCHAR(100)\r\n\t\t,@RecipientEmailColumnName AS VARCHAR(30) = 'EmailAddress', @query AS VARCHAR(MAX);\r\n\r\n\t-- parameter table name\r\n\tSELECT @TableSourceName = ParameterValueTableSourceName\r\n\tFROM Scheduler.DistributionReport\r\n\tWHERE DistributionReportID = @DistributionReportID;\r\n\t\r\n\tSELECT CAST(DP.DistributionProfileSeqID AS VARCHAR) AS DistributionProfileSeqID INTO #DistributionProfileIds \r\n\tFROM Scheduler.DistributionJobDistributionProfile AS DP \r\n\tWHERE DP.JobId = @JobId;\r\n\r\n\t-- email column to be used in mapping\r\n\tSELECT TOP 1 @RecipientEmailColumnName = ISNULL(RecipientEmailColumnName, 'EmailAddress')\r\n\tFROM Scheduler.ReportParameterValueMapping AS rpm\r\n\t\tINNER JOIN Scheduler.DistributionReport AS dr ON rpm.DistributionReportID = dr.DistributionReportID\r\n\tWHERE dr.DistributionReportID = @DistributionReportID AND rpm.RecipientEmailColumnName IS NOT NULL;\r\n\r\n\t-- find schema name based on the view name\r\n\tSELECT @TableSchemaName = TABLE_SCHEMA FROM information_scheMA.VIEWS WHERE TABLE_NAME = @TableSourceName;\r\n\r\n\t-- if schema name is not found, that means the table source is no longer available.\r\n\tIF(@TableSchemaName IS NULL)\r\n    BEGIN\r\n\t\tRAISERROR('Parameter Table Source could not be found ', 12, 1);\r\n\t\tRETURN;\r\n    END;\r\n\t\r\n\tSET @query = 'SELECT DISTINCT CA.ContactAddressSeqid, P.*\r\n\tFROM Contact.ContactAddress AS CA\r\n\t\tINNER JOIN Contact.MassDistributionListReportContext AS MRC ON CA.ContactAddressSeqid = MRC.ContactAddressSeqid\r\n\t\tINNER JOIN ' + @TableSchemaName + '.' + @TableSourceName + ' AS P ON LOWER(P.' + @RecipientEmailColumnName +') = LOWER(CA.EmailAddress)\r\n\t\tINNER JOIN #DistributionProfileIds AS PId ON PId.DistributionProfileSeqID = MRC.MassDistributionProfileSeqid\r\n\tORDER BY P.EmailAddress';\r\n\tEXEC(@query);\r\nEND;"
        }
      ]
    }
  ]
