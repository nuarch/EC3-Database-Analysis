    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [SBMR].[usp_Review_GetSBMRReviewerEmail]\r\n\t@SBMRReferenceNumber VARCHAR(7)\r\nAS\r\nBEGIN\r\n\r\n\tSELECT m.Email FROM \r\n\tSBMR.SBMRHeader AS h\r\n\tINNER JOIN Membership.EC3Membership AS m\r\n\tON h.ReviewerAuthenticatedUserID = m.AuthenticatedUserID\t\r\n\tWHERE h.SbmrReferenceNumber = @SBMRReferenceNumber\r\n\t\r\nEND"
        }
      ]
