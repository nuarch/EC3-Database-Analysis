      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\tdho\r\n-- Create date: <Create Date,,>\r\n-- Description:\tupdate user role information\r\n-- =============================================\r\nCREATE PROCEDURE [Membership].[usp_Access_UpdateUserRoles]\r\n\t/*\r\n\t<Roles>\r\n\t\t<Role>\r\n\t\t\t<RoleName>\r\n\t*/\r\n\t@RolesNames XML,\r\n\t@AuthenticatedUserID seqid\r\nAS\r\nBEGIN\r\n\tDECLARE @UserID UNIQUEIDENTIFIER\r\n\tSELECT @UserID = UserID from Membership.EC3Membership WHERE AuthenticatedUserID = @AuthenticatedUserID\r\n    \r\n\tDECLARE @UserRoles TABLE\r\n\t(\r\n\t\tRoleName NVARCHAR(256)\r\n\t)\r\n\r\n\tINSERT @UserRoles\r\n\t        ( RoleName )\r\n\tSELECT\r\n\t\tDISTINCT \r\n\t\tCAST(tbl.col.query('data(RoleName)') AS NVARCHAR(256)) \r\n\tFROM \r\n\t\t@RolesNames.nodes('//Roles//Role') tbl(col)\r\n\r\n\tDELETE ur\r\n\tfrom \r\n\t\tdbo.aspnet_Roles AS r\r\n\t\tINNER JOIN dbo.aspnet_UsersInRoles ur\r\n\t\tON r.RoleId = ur.RoleId\r\n\tWHERE\r\n\t\tUserId = @UserID\r\n\t\tAND  \r\n\t\tr.LoweredRoleName\r\n\tNOT iN\r\n\t(\r\n\t\tSELECT RoleName FROM @UserRoles\r\n\t)  \r\n\r\n\tINSERT INTO dbo.aspnet_UsersInRoles\r\n\t        ( UserId, RoleId )\r\n\tSELECT @UserId, RoleID\r\n\tFROM dbo.aspnet_Roles AS r\r\n\t\tINNER JOIN  @UserRoles ur\r\n\t\tON r.LoweredRoleName = ur.RoleName\r\n\tWHERE \r\n\tRoleID NOT IN\r\n\t(\r\n\t\tSELECT RoleID FROM aspnet_UsersInRoles\r\n\t\tWHERE UserId = @UserID\r\n\t)\r\n\r\n\tSELECT 0\r\nEND"
        }
      ]
    }
