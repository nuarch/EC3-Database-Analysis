      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Scheduler].[usp_InsertIntoMassDistListReportContext]\n(\r\n\t@jobId AS INT\r\n\t,@userId AS INT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\t\r\n\tDECLARE @DistributionProfile AS TABLE(DistributionProfileSeqId INT NOT NULL);\r\n\tINSERT INTO @DistributionProfile(DistributionProfileSeqId)\r\n\tSELECT DP.DistributionProfileSeqID FROM Scheduler.DistributionJobDistributionProfile AS DP\r\n\t\t\tINNER JOIN Contact.MassDistributionProfile AS MP ON MP.MassDistributionProfileSeqid = DP.DistributionProfileSeqID\r\n\t\t\tINNER JOIN Contact.ContactProfile AS CP ON CP.ContactProfileSeqid = MP.ContactProfileSeqID\r\n\tWHERE DP.JobId = @jobId;\r\n\r\n\tIF(EXISTS (SELECT TOP (1) DistributionProfileSeqId FROM @DistributionProfile))\r\n\tBEGIN\r\n    \tMERGE Contact.MassDistributionListReportContext AS T\r\n\t\tUSING (SELECT MP.MassDistributionProfileSeqid\r\n\t\t\t,CA.ContactAddressSeqid\r\n\t\t\t,@userId AS AuthenticatedUserId\r\n\t\t\t,GETDATE() AS DateAdded\r\n\t\tFROM Scheduler.DistributionJobDistributionProfile AS DP\r\n\t\t\tINNER JOIN Contact.MassDistributionProfile AS MP ON MP.MassDistributionProfileSeqid = DP.DistributionProfileSeqID\r\n\t\t\tINNER JOIN Contact.ContactProfile AS CP ON CP.ContactProfileSeqid = MP.ContactProfileSeqID\r\n\t\t\tINNER JOIN Contact.ContactProfileAddress AS CPA ON CPA.ContactProfile = CP.ContactProfileSeqid\r\n\t\t\tINNER JOIN Contact.ContactAddress AS CA ON CA.ContactAddressSeqid = CPA.ContactAddress\r\n\t\tWHERE DP.JobId = @jobId) AS S ON S.MassDistributionProfileSeqid = T.MassDistributionProfileSeqid AND S.ContactAddressSeqid = T.ContactAddressSeqid\r\n\t\tWHEN NOT MATCHED BY TARGET THEN\r\n\t\t\tINSERT (MassDistributionProfileSeqid, ContactAddressSeqid, AuthenticatedUserID, DateAdded)\r\n\t\t\tVALUES(MassDistributionProfileSeqid, ContactAddressSeqid, AuthenticatedUserId, DateAdded)\r\n\t\tWHEN NOT MATCHED BY SOURCE AND T.MassDistributionProfileSeqid IN (SELECT DistributionProfileSeqId FROM @DistributionProfile) THEN\r\n\t\t\tDELETE;\r\n\t\t\t--OUTPUT $action, inserted.MassDistributionProfileSeqid, inserted.ContactAddressSeqid, deleted.MassDistributionProfileSeqid, deleted.ContactAddressSeqid\r\n\tEND;\r\nEND;"
        }
      ]
