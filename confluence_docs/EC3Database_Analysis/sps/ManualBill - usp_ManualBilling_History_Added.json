      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [ManualBill].[usp_ManualBilling_History_Added]\n\t@AccountNumber AS VARCHAR(15)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\t\r\nSELECT    header.BillingPeriod, header.ActualOrEstimated,\r\n    header.VoucherBillingStatus,   dbo.ConvertYYYYMMDDToDatetime(header.FromDate) AS FromDate, dbo.ConvertYYYYMMDDToDatetime(header.ToDate) as ToDate, header.CurrentChargeAmount, header.ManualPaymentOverrideAmount,header.TotalAmountDue, header.AccountEnergyUsage, header.AccountDemandUsage, header.Notes\r\nFROM ManualBill.AccountManualBillingHeader header INNER JOIN\r\n      Billing.Account ON header.AccountSeqid = Billing.Account.AccountSeqid\r\n\t  \r\n     WHERE (header.BillingPeriod <= (SELECT  BillingPeriod FROM ManualBill.ManualBillingApplicationTimeFrame \r\n\t    WHERE (CurrentProcessingPeriod = 'Y')))\r\n        AND (header.AccountManualBillingHeaderSeqid <> 91451)\r\n        AND (header.InitialPostingDate IS NOT NULL)\r\n        AND (Billing.Account.CurrentAccountNumber = @AccountNumber)\r\n   ORDER BY header.BillingPeriod desc\r\n\r\n\tSET NOCOUNT OFF;\r\nEND"
        }
      ]
    }
