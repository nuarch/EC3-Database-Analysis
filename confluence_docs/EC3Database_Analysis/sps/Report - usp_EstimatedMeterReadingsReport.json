    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_EstimatedMeterReadingsReport]\n(\r\n\t@EnergyType AS VARCHAR(100) = '%'\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tWITH TemporalAccountMeterLevelRawDataForCurrentPeriod AS (\r\n\tSELECT  ML.Seqid AS AccountMeterLevelRawDataForCurrentPeriodSeqid\r\n\t\t,(SELECT MAX(PublishedBillingPeriod) AS PublishedBillingPeriod FROM Published.MonthlyPublishedSummaryData) AS PublishedBillingPeriod\r\n\t\t,CAST(dbo.FindMonthFromBillingPeriod(ML.BillingPeriod) AS VARCHAR(30)) + ' ' + LEFT(ML.BillingPeriod, 4) AS BillingPeriod\r\n\t\t,ML.FiscalYear\r\n\t\t,ML.ConsecutivePeriodsEstimatedReading AS [# of Months Since Last Meter Reading]\r\n\t\t,ML.CurrentAccountNumber AS [Account Number]\r\n\t\t,ML.OriginalAccountNumber\r\n\t\t,ML.AccountEffectiveTurnOn\r\n\t\t,ML.AccountEffectiveTurnOff\r\n\t\t,ML.CurrentMeterNumber AS [Meter Number]\r\n\t\t,ML.UtilityServiceAddress\r\n\t\t,ML.OecFacilityNumber\r\n\t\t,COALESCE('(' + ML.FacilityName + ')', '()') AS FacilityName\r\n\t\t,ML.Borough\r\n\t\t,ML.[Block]\r\n\t\t,ML.LotNumber\r\n\t\t,ML.CityPlanningBIN\r\n\t\t,ML.Address1\r\n\t\t,ML.AgencyCodeOEC\r\n\t\t,ML.AgencyName\r\n\t\t,ML.EnergyType AS [Energy Type]\r\n\t\t,ML.UtilityCompany AS [Utility Company]\r\n\t\t,ML.UtilityCompanySeqid\r\n\t\t,EDT.ShortDesc\r\n\tFROM Published.TemporalAccountMeterLevelRawDataForCurrentPeriod AS ML\r\n\t\tINNER JOIN Billing.EnergyDeliveryType AS EDT ON ML.EnergyDeliveryType = EDT.EnergyDeliveryType\r\n\tWHERE ML.BillingPeriod = (SELECT MAX(PublishedBillingPeriod) AS PublishedBillingPeriod FROM Published.MonthlyPublishedSummaryData)\r\n\t\tAND EDT.ShortDesc LIKE CASE @EnergyType WHEN '%' THEN @EnergyType ELSE @EnergyType + '%' END)\r\n\r\n\tSELECT AgencyName\r\n\t\t,CAST(BillingPeriod AS NVARCHAR(20)) AS [BillingPeriod]\r\n\t\t,Address1 + ' ' + FacilityName AS [Facility Address/Name]\r\n\t\t,OecFacilityNumber AS [OEC ID]\r\n\t\t,CASE WHEN [Block] IS NULL AND (LotNumber IS NULL OR LotNumber = '0000') THEN Borough ELSE Borough + '-' + [Block] + '-' + LotNumber END AS BBL\r\n\t\t,[Energy Type]\r\n\t\t,[Utility Company]\r\n\t\t,[Account Number]\r\n\t\t,[Meter Number]\r\n\t\t,[# of Months Since Last Meter Reading]\r\n\t\t,AccountMeterLevelRawDataForCurrentPeriodSeqid\r\n\tFROM TemporalAccountMeterLevelRawDataForCurrentPeriod\r\n\tWHERE [# of Months Since Last Meter Reading] >= 1\r\n\tORDER BY AgencyName, [Account Number];\r\nEND;"
        }
      ]
    }
  ]
