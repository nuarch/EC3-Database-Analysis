        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "@EnergyType AS VARCHAR(100) = '%'",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": This parameter allows filtering the report based on the type of energy. The default value is '%', which means no filtering is applied, and all energy types are included. If a specific energy type is provided, the procedure filters the results to include only those matching the specified type."
                }
              ]
            }
          ]
        }
      ]
    },
