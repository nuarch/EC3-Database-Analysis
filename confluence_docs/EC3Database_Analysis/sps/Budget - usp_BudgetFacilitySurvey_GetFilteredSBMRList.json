      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [Budget].[usp_BudgetFacilitySurvey_GetFilteredSBMRList]\r\n\t@SBMRReferenceNumber VARCHAR(10),\r\n\t@AgencyDivisionSeqID seqid,\r\n\t@FacilitySeqID seqid = null\r\nAS\r\nBEGIN\r\n\t\r\n\tSELECT \r\n\t\tSBMRHeaderSeqid, \r\n\t\tSbmrReferenceNumber, \r\n\t\tSBMR.SbmrAction.Description SBMRAction\r\n\tFROM SBMR.SBMRHeader\r\n\t\tINNER JOIN SBMR.SbmrAction\r\n\t\tON SBMR.SBMRHeader.SBMRAction = SBMR.SbmrAction.SbmrActionSeqid\r\n\tWHERE SbmrReferenceNumber LIKE (ISNULL(@SBMRReferenceNumber, '') + '%')\r\n\tAND AgencyDivisionSeqid = @AgencyDivisionSeqID\r\n\tAND ISNULL(FacilitySeqid, '') LIKE COALESCE(@FacilitySeqID,                                             ISNULL(FacilitySeqid, ''))\r\n\tORDER BY SbmrReferenceNumber\r\n\t\r\nEND"
        }
