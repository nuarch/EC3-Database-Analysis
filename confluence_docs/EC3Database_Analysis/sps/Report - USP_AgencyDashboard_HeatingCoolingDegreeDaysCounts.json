    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "@debugMode AS BIT = NULL",
                  "marks": [
                    {
                      "type": "code"
