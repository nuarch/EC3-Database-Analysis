      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "The current billing period is determined by selecting the maximum "
                },
                {
                  "type": "text",
                  "text": "PublishedBillingPeriod",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " from the "
                },
                {
                  "type": "text",
                  "text": "MonthlyPublishedSummaryData",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " table."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "The fiscal year for the current billing period is calculated using the "
                },
                {
                  "type": "text",
                  "text": "CalculateFiscalYear",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " function."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "The start of the current billing period is determined based on whether the month is in the first half (January to June) or the second half (July to December) of the fiscal year."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "orderedList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Prior Billing Period Calculation",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ":"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "The prior billing period and its start are calculated by subtracting 100 from the current billing period and its start, respectively, effectively moving back one year."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "orderedList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Month Name Calculation",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The month name is extracted from the current billing period for use in the report."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Data Retrieval and Aggregation",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ":"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "The procedure retrieves and aggregates data from the "
                },
                {
                  "type": "text",
                  "text": "DegreeDayBase",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " and "
                },
                {
                  "type": "text",
                  "text": "DegreeDayNormalized30YearAverage",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " tables."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "It calculates fiscal year-to-date summaries and monthly summaries, using a "
                },
                {
                  "type": "text",
                  "text": "UNION",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " to combine results."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "The results are ordered by "
                },
                {
                  "type": "text",
                  "text": "SortOrder",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " and "
                },
                {
                  "type": "text",
                  "text": "Category",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "5. Performance Considerations"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "READ UNCOMMITTED Isolation Level",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": This level can improve performance by reducing locking overhead but leads to dirty reads."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "NOLOCK Hint",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Used in table queries to avoid locking, which can improve performance but also risks reading uncommitted data."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Aggregation and Joins",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure performs aggregation and joins, which can be resource-intensive. Indexes on the join columns ("
                },
                {
                  "type": "text",
                  "text": "MM",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ") and billing period columns improve performance."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Function Calls",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of the "
                },
                {
                  "type": "text",
                  "text": "CalculateFiscalYear",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " function in the "
                },
                {
                  "type": "text",
                  "text": "SELECT",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " and "
                },
                {
                  "type": "text",
                  "text": "GROUP BY",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " clauses impact performance, especially if the function is complex."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "6. Potential Issues or Risks"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Dirty Reads",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of "
                },
                {
                  "type": "text",
                  "text": "READ UNCOMMITTED",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " and "
                },
                {
                  "type": "text",
                  "text": "NOLOCK",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " can lead to reading uncommitted or inconsistent data."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Unused Parameter",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The "
                },
                {
                  "type": "text",
                  "text": "@debugMode",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " parameter is defined but not used, which could lead to confusion or maintenance issues."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Assumption of Billing Period Format",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure assumes a specific format for billing periods (e.g., "
                },
                {
                  "type": "text",
                  "text": "YYYYMM",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "), which must be consistent across the database."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Function Dependency",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure relies on the "
                },
                {
                  "type": "text",
                  "text": "CalculateFiscalYear",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " function, which must be correctly implemented and performant."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Hardcoded Logic",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The logic for determining fiscal year start and prior periods is hardcoded, which may require updates if fiscal year definitions change."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[USP_AgencyDashboard_HeatingCoolingDegreeDaysCounts]\n(\r\n\t@debugMode AS BIT = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @currentFiscalYear VARCHAR(4), @currentBillingPeriod VARCHAR(6), @currentBillingPeriodStart VARCHAR(6)\r\n\t\t,@priorBillingPeriod VARCHAR(6), @priorBillingPeriodStart VARCHAR(6), @monthName VARCHAR(3);\r\n\r\n\tSELECT @currentBillingPeriod = MAX(PublishedBillingPeriod) FROM Published.MonthlyPublishedSummaryData WITH (NOLOCK);\r\n\tSELECT @currentFiscalYear = dbo.CalculateFiscalYear(@currentBillingPeriod);\r\n\tSELECT @currentBillingPeriodStart = CASE\r\n\t\t\t\t\t\t\t\t\t\t\tWHEN CONVERT(INT, RIGHT(@currentBillingPeriod, 2)) BETWEEN 1 AND 6 THEN CONVERT(VARCHAR(4), CONVERT(INT, @currentFiscalYear) - 1) + '07'\r\n\t\t\t\t\t\t\t\t\t\t\tELSE CONVERT(VARCHAR(4), LEFT(@currentBillingPeriod, 4)) + '07'\r\n\t\t\t\t\t\t\t\t\t\tEND;\r\n\r\n\tSET @priorBillingPeriod = CAST(CAST(@currentBillingPeriod AS INT) - 100 AS VARCHAR(6));\r\n\tSET @priorBillingPeriodStart = CAST(CAST(@currentBillingPeriodStart AS INT) - 100 AS VARCHAR(6));\r\n\tSET @monthName = LEFT(DATENAME(MONTH, CONVERT(DATETIME, LEFT(@currentBillingPeriod, 4) + '-' + RIGHT(@currentBillingPeriod, 2) + '-01')), 3);\r\n\r\n\tSELECT [dbo].[CalculateFiscalYear](degreeDayBase.BillingPeriod) AS FiscalYear\r\n\t\t,'FYTD ' + [dbo].[CalculateFiscalYear](degreeDayBase.BillingPeriod) AS Category\r\n\t\t,SUM(degreeDayBase.BaseHeatingDegreeDays) BaseHeatingDegreeDays\r\n\t\t,SUM(degreeDayBase.BaseCoolingDegreeDays) BaseCoolingDegreeDays\r\n\t\t,SUM(normalDegreeDay.NormalCoolingDegreeDays) NormalCoolingDegreeDays\r\n\t\t,SUM(normalDegreeDay.NormalHeatingDegreeDays) NormalHeatingDegreeDays\r\n\t\t,1 AS SortOrder\r\n\tFROM [Factors].[DegreeDayBase] AS degreeDayBase WITH (NOLOCK)\r\n\t\tINNER JOIN [Factors].[DegreeDayNormalized30YearAverage] AS normalDegreeDay WITH (NOLOCK) ON degreeDayBase.MM = normalDegreeDay.MM\r\n\tWHERE degreeDayBase.BillingPeriod BETWEEN @priorBillingPeriodStart AND @priorBillingPeriod\r\n\t\tOR degreeDayBase.BillingPeriod BETWEEN @currentBillingPeriodStart AND @currentBillingPeriod\r\n\tGROUP BY [dbo].[CalculateFiscalYear](degreeDayBase.BillingPeriod)\r\n\tUNION\r\n\tSELECT [dbo].[CalculateFiscalYear](degreeDayBase.BillingPeriod) AS FiscalYear\r\n\t\t,@monthName + ' ' + LEFT(degreeDayBase.BillingPeriod, 4) AS Category\r\n\t\t,degreeDayBase.BaseHeatingDegreeDays\r\n\t\t,degreeDayBase.BaseCoolingDegreeDays\r\n\t\t,normalDegreeDay.NormalCoolingDegreeDays\r\n\t\t,normalDegreeDay.NormalHeatingDegreeDays\r\n\t\t,2 AS SortOrder\r\n\tFROM [Factors].[DegreeDayBase] AS degreeDayBase WITH (NOLOCK)\r\n\t\tINNER JOIN [Factors].[DegreeDayNormalized30YearAverage] AS normalDegreeDay WITH (NOLOCK) ON degreeDayBase.MM = normalDegreeDay.MM\r\n\tWHERE degreeDayBase.BillingPeriod = @currentBillingPeriod OR degreeDayBase.BillingPeriod = @priorBillingPeriod\r\n\tORDER BY SortOrder ASC, Category DESC;\r\nEND;"
        }
      ]
    }
