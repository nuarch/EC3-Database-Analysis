    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE    PROCEDURE [Nypa].[usp_InitialCheckForUpload] (@TimeFrameBillingPeriod varchar(6) output,@DatabaseServer varchar(20) output,@DatabaseName varchar(20) output,@AllLinkedServersAvailiable varchar(1) output)\nas\r\n\r\nDECLARE @RC int\r\nDECLARE @UtilityCompanyDesc varchar(20)\r\nDECLARE @LinkedServerCount int\r\n\r\nEXECUTE @RC = [Common].[usp_FindUploadLinkedServers] 'NYPA',@LinkedServerCount OUTPUT\r\nif( @LinkedServerCount = 6) set @AllLinkedServersAvailiable = 'Y' else set @AllLinkedServersAvailiable = 'N' \r\n\r\nSELECT @TimeFrameBillingPeriod=BillingPeriod FROM Billing.ApplicationTimeFrame WHERE (CurrentProcessingPeriod = 'Y')\r\nSELECT @DatabaseServer=@@SERVERNAME,@DatabaseName=DB_NAME()"
        }
      ]
    }
