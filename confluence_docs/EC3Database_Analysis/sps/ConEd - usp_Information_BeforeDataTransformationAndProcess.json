          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [ConEd].[usp_Information_BeforeDataTransformationAndProcess]\r\n\t\r\nAS\r\nBEGIN\r\n\t\r\n\tDECLARE @BillingPeriod BillingPeriod\r\n\r\n\tSELECT @BillingPeriod = BillingPeriod \r\n\tFROM Billing.ApplicationTimeFrame\r\n\tWHERE CurrentProcessingPeriod = 'Y'\r\n\r\n\r\n\tSELECT \r\n\t\t'Account with invalid billing period' AS DataType,\r\n\t\tAccountNumber, FromDate, ToDate, BillingPeriodRevision, FirstPeriodCanceled\r\n\t\tFROM ConEd.UploadConEdisonAccount\r\n\tWHERE \r\n\tBillingPeriodRevision IS NULL \r\n\tOR BillingPeriodRevision > @BillingPeriod\r\n\tOR FirstPeriodCanceled IS NULL\r\n\r\n\t\r\nEND"
