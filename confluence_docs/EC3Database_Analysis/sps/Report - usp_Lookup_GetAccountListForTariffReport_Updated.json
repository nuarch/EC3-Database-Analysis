      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Lookup_GetAccountListForTariffReport_Updated]\n(\r\n\t@EmailAddress AS VARCHAR(75)\r\n\t,@AgencyCode AS VARCHAR(MAX)\r\n\t,@TariffClass AS VARCHAR(MAX)\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @spname VARCHAR(100) = OBJECT_NAME(@@PROCID);\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName = @spname,\r\n\t\t@StoredProcName = @spname,\r\n\t\t@RequestedBy = @EmailAddress,\r\n\t\t@prmPublishedBillingPeriod = NULL,\r\n\t\t@prmBillingPeriod = NULL,\r\n\t\t@prmAgency_ies = @AgencyCode,\r\n\t\t@prmFacilityNumber_s = NULL,\r\n\t\t@prmStartingBillingPeriod = NULL,\r\n\t\t@prmEndingBillingPeriod = NULL;\r\n\t\r\n\tSELECT DISTINCT A.CurrentAccountNumber AS AccountNumber\r\n\t\t,AG.AgencyName\r\n\t\t,AG.AgencyCodeOEC\r\n\t\t,UT.UtilityTariffRateInformationSeqid AS UtilityTariffRateInformationSeqId\r\n\t\t,UC.[Description] AS UtilityCompanyName\r\n\t\t,A.UtilityServiceAddress\r\n\t\t,F.Address1 AS AccountAddress\r\n\tFROM Billing.Account AS A\r\n\t\tINNER JOIN Billing.uftn_TableGetAgencyChildrenByAgencyCodeOEC(@AgencyCode, @EmailAddress) AS AG ON A.AgencyAccount = AG.AgencyDivisionSeqID\r\n\t\tINNER JOIN Billing.UtilityCompany AS UC ON A.UtilityAccountProvider = UC.UtilityCompanySeqid\r\n\t\tINNER JOIN Billing.UtilityTariffRateInformation AS UT ON A.UtilityTariffRateInformationSeqid = UT.UtilityTariffRateInformationSeqid\r\n\t\tINNER JOIN Billing.UtilityTariffClass AS UTC ON UTC.[Name] = UT.ShortDesc\r\n\t\tINNER JOIN Billing.Facility AS F ON A.FacilityAccount = F.FacilitySeqid\r\n\tWHERE A.AccountStatus IN ('AC', '46', 'UA') AND UTC.Id IN (SELECT ID FROM dbo.UDF_SplitToTable(@TariffClass, ','))\r\n\tORDER BY AG.AgencyCodeOEC, A.CurrentAccountNumber;\r\nEND;"
        }
      ]
    }
  ]
