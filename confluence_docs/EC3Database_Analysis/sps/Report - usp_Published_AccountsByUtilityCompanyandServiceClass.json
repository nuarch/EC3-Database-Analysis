    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Published_AccountsByUtilityCompanyandServiceClass]\n(\r\n\t@EnergyParameter AS VARCHAR(40) = '*'\r\n\t,@PublishedBillingPeriod AS VARCHAR(6)\r\n\t,@BillingPeriod AS VARCHAR(8)\r\n\t,@UtilityCompany AS VARCHAR(2) = '*'\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\t DECLARE @spname AS VARCHAR(100) = OBJECT_NAME(@@PROCID)\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName\t\t\t\t\t= @spname,\r\n\t\t@StoredProcName\t\t\t\t= @spname,\r\n\t\t@RequestedBy\t\t\t\t= 'reportlog@dcas.nyc.gov',\r\n\t\t@prmPublishedBillingPeriod\t= @PublishedBillingPeriod,\r\n\t\t@prmBillingPeriod = @BillingPeriod,\r\n\t\t@prmAgency_ies = NULL,\r\n\t\t@prmFacilityNumber_s\t\t= NULL,\r\n\t\t@prmStartingBillingPeriod\t= NULL,\r\n\t\t@prmEndingBillingPeriod\t\t= NULL\r\n\r\n\tSELECT U.UtilityTariffRateInformationSeqid\r\n\t\t,U.DeliveryTariffRate, U.IsTod\r\n\t\t,U.BudgetGroupDEM, U.BudgetRateClassDescription AS ServiceClassDescription\r\n\t\t,U.UtilityCompanyTariff, TA.AgencyCodeOEC, TA.AgencyName, TA.FacilityName\r\n\t\t,TA.OecFacilityNumber, TA.CurrentAccountNumber, TA.Address1, TA.UtilityServiceAddress\r\n\t\t,TA.AccountStatus, TA.Borough, TA.[Block], TA.LotNumber, TA.EnergyType\r\n\t\t,TA.UtilityCompany, @PublishedBillingPeriod AS PublishedBillingPeriod\r\n\t\t,CAST(U.UtilityCompanyTariff AS VARCHAR(2)) + '-' + U.DeliveryTariffRate + '-' + U.IsTod AS 'Service Class'\r\n\t\t,TA.IsTimeOfDayAccount, F.Zipcode, SUM(TA.RevisedBilledAmount) AS RevisedBilledAmount\r\n\t\t,SUM(TA.AccountEnergyUsage) AS AccountEnergyUsage\r\n\t\t,SUM(CASE WHEN Energytype = 'ELE' THEN AccountEnergyUsage * 0.00341297 \r\n\t\t\t\tWHEN Energytype = 'GAS' THEN AccountEnergyUsage * 0.1 \r\n\t\t\t\tWHEN Energytype = 'STM' THEN AccountEnergyUsage * 1.11718000 END) AS mmBTUs\r\n\t\t,SUM(AccountDemandUsage) AS 'DemandUsage'\r\n\tFROM Billing.UtilityTariffRateInformation AS U\r\n\t\tRIGHT JOIN Published.TemporalAccountLevelRawDataForCurrentPeriod AS TA\r\n\t\t\tON U.UtilityCompanyTariff = TA.UtilityCompanySeqid AND U.DeliveryTariffRate = TA.DeliveryTariffRate\r\n\t\t\t\tAND U.IsTod = TA.IsTimeOfDayAccount\r\n\t\tINNER JOIN Billing.Facility AS F ON TA.OecFacilityNumber = F.OecFacilityNumber\r\n\tWHERE TA.energytype = CASE @EnergyParameter WHEN '*' THEN TA.energytype\r\n\t\t\t\tWHEN 'Total Energy (in mmBTUs)' THEN TA.energytype\r\n\t\t\t\tWHEN 'Electric Demand (kW)' THEN 'ELE'\r\n\t\t\t\tWHEN 'Electric Consumption (kWh)' THEN 'ELE'\r\n\t\t\t\tWHEN 'Natural Gas (therms)' THEN 'GAS'\r\n\t\t\t\tWHEN 'Steam (MLbs)' THEN 'STM'\r\n\t\t\t\tWHEN 'Total Cost' THEN TA.energytype \r\n\t\t\t\tWHEN 'Electricity Cost' THEN 'ELE' \r\n\t\t\t\tWHEN 'Gas Cost' THEN 'GAS' \r\n\t\t\t\tWHEN 'Steam Cost' THEN 'STM' END\r\n\t\tAND TA.AccountStatus in ('46','47','AC','LA','UA') AND TA.EffectiveStartPeriod <= @PublishedBillingPeriod\r\n\t\tAND TA.EffectiveEndPeriod > @PublishedBillingPeriod AND TA.BillingPeriod = @BillingPeriod\r\n\t\tAND CAST(TA.UtilityCompanySeqid AS VARCHAR) LIKE CASE WHEN @UtilityCompany='*' THEN '%' ELSE LTRIM(RTRIM(@UtilityCompany)) + '%' END\r\n\tGROUP BY U.UtilityTariffRateInformationSeqid, U.DeliveryTariffRate, U.IsTod, U.BudgetGroupDEM\r\n\t\t,U.BudgetRateClassDescription, U.UtilityCompanyTariff, TA.AgencyCodeOEC, TA.AgencyName\r\n\t\t,TA.FacilityName, TA.OecFacilityNumber, TA.CurrentAccountNumber, TA.Address1, TA.UtilityServiceAddress\r\n\t\t,TA.AccountStatus, TA.Borough, TA.[Block], TA.LotNumber, TA.EnergyType, TA.UtilityCompany\r\n\t\t, CAST(U.UtilityCompanyTariff AS VARCHAR(2)) + '-' + U.DeliveryTariffRate + '-' + U.IsTod\r\n\t\t,TA.IsTimeOfDayAccount, F.Zipcode;\r\nEND;"
        }
      ]
    }
  ]
}