    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [ManualBill].[usp_testingErrorHandling]\n\t@BillingPeriod varchar(6),\r\n\t@authenticatedID int,\r\n\t@utilityCompany dbo.seqid,\r\n\t@invoiceBillingGroup dbo.seqid,\r\n\t@Status int  OUTPUT      \r\n   \r\n AS \r\n begin\r\n\t\t\r\n\t\tdeclare @userName nvarchar(256)\r\n\t\t\r\n\t\tBEGIN try\r\n\t\t    set @Status = 0\r\n\t\t    SELECT @userName = Email FROM Membership.EC3Membership WHERE (AuthenticatedUserID = @authenticatedID )\r\n\t\t\tRAISERROR ('Success', 10, 1) \r\n\t\t\tprint 'hello this is a message from db'\r\n\t\t\t--RAISERROR ('%s is not authorized to approve proposals.', 11, 1, @userName ) \r\n\t\t    \r\n\t\tEND TRY\r\n\t\tBEGIN CATCH\r\n--\t\t   IF ERROR_NUMBER()> -1 --=16 AND ERROR_STATE()=2 \r\n--\t\t   BEGIN \r\n\t\t\t\tdeclare @err_msg varchar(4000)\r\n\t\t\t\tdeclare @err_sev int\r\n\t\t\t\tdeclare @err_state int\r\n\t\t\t\tset @err_msg = ERROR_MESSAGE()\r\n\t\t\t\tset @err_sev = ERROR_NUMBER()\r\n\t\t\t\tset @err_state = ERROR_STATE()\r\n\t\t\t\t\r\n\t\t\t\t--RAISERROR(@err_msg, @err_sev ,@err_state) \r\n\t\t\t\tRAISERROR(@err_msg, 11 ,1) \r\n--\t\t\tEND \r\n\t\tEND CATCH\r\n\t \r\n \r\n end"
        }
      ]
    }
  ]
