    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE     PROCEDURE [Common].[usp_PrepareForNextBillingPeriod](@StatusCode int output)\nAS\r\n/* =============================================\r\n-- =============================================  */\r\n--\r\nDELETE FROM Billing.ApplicationTimeFrame where (CurrentProcessingPeriod = 'N')\r\n--\r\nSELECT BillingPeriod, PreviousBillingPeriodOneMonth, CurrentProcessingPeriod, CurrentProcessingPeriodCompleted\r\nFROM Billing.ApplicationTimeFrame\r\n--\r\nUPDATE    Billing.ApplicationTimeFrame\r\nSET              CurrentProcessingPeriod ='N', CurrentProcessingPeriodCompleted = dbo.[ConvertDateToYYYYMMDD] ( getdate())\r\nwhere (CurrentProcessingPeriod = 'Y')\r\n--\r\nset @StatusCode = 0"
        }
      ]
    }
