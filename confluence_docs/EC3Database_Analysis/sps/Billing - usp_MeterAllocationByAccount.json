      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[usp_MeterAllocationByAccount]\n(\r\n\t@EmailAddress AS VARCHAR(75),\r\n\t@AccountSeqId AS INT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT\tMA.AllocationPercentage AS AllocationPercentage\r\n\t\t   ,P.PropertyName AS PropertyName\r\n\t\t   ,M.OriginalMeterNumber\r\n\t\t   ,M.MeterSeqid \r\n\tFROM Billing.Account AS A INNER JOIN Billing.Meter AS M ON M.UniqueAccountSeqID = A.UniqueAccountSeqid\r\n\t\tINNER JOIN Billing.MeterAllocation AS MA ON MA.UniqueMeterSeqid = M.UniqueMeterSeqid\r\n\t\tINNER JOIN Billing.Property AS P ON P.PropertySeqid = MA.PropertySeqid\r\n\t\tINNER JOIN  Billing.uftn_TableGetAgencyChildrenByAgencyCodeOEC('*', @EmailAddress) AS AD ON AD.AgencyDivisionSeqID = A.AgencyAccount\r\n\tWHERE A.AccountSeqid = @AccountSeqId AND M.IsCurrentRecord = 'Y' AND M.IsActive = 1\r\n\tUNION\r\n\tSELECT\tR.AllocationPercentage AS AllocationPercentage\r\n\t\t   ,R.PropertyName AS PropertyName\r\n\t\t   ,M.OriginalMeterNumber\r\n\t\t   ,M.MeterSeqid \r\n\tFROM Billing.Account AS A INNER JOIN Billing.Meter AS M ON M.UniqueAccountSeqID = A.UniqueAccountSeqid\r\n\t\tINNER JOIN  Billing.uftn_TableGetAgencyChildrenByAgencyCodeOEC('*', @EmailAddress) AS AD ON AD.AgencyDivisionSeqID = A.AgencyAccount\r\n\t\tINNER JOIN (SELECT 100 - SUM(AllocationPercentage) AS AllocationPercentage, 'Unassigned' AS PropertyName, UniqueMeterSeqid\r\n\t\t\tFROM Billing.MeterAllocation\r\n\t\t\tGROUP BY UniqueMeterSeqid HAVING SUM(AllocationPercentage) < 100) AS R ON R.UniqueMeterSeqid = M.UniqueMeterSeqid\r\n\tWHERE A.AccountSeqid = @AccountSeqId AND M.IsCurrentRecord = 'Y' AND M.IsActive = 1\r\n\tORDER BY M.MeterSeqid;\r\nEND;"
        }
      ]
    }
  ]
