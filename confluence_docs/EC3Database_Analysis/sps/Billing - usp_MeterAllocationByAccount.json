                {
                  "type": "text",
                  "text": ", and "
                },
                {
                  "type": "text",
                  "text": "Property",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " tables, and filters records based on the account sequence ID, current record status, and active status."
