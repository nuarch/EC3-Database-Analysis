    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [NationalGridWest].[usp_CreateNationalGridWestLinkedServers] (@Status int output)\nAS\r\n--**************************************************************************************\r\n--* Name:         \r\n--*\r\n--* Description:  Not Used\r\n---*               \r\n--* Exec:       \t\t[NationalGridWest].[usp_CreateNationalGridWestLinkedServers]\r\n--*\r\n--* Parameter(s):         @Status int output\r\n--*\r\n--*\r\n--* Database:     OEC\r\n--*\r\n--* Return:\t    0 Success\r\n--*                   9 Failure\r\n--*\r\n--* AUTHOR:       Peter Heller (PAH)\r\n--* Created On:   5/05/2006\r\n--**************************************************************************************\r\n--* Date         Tech Description of Change\r\n--* ---------- ----  -------------------------------------------------------------\r\n--* 10/26/2005 PAH  First Version \r\n--**************************************************************************************\r\n\r\n--**************************************************************************************\r\n--Declare Variables\r\n--**************************************************************************************\r\n--\r\n--**************************************************************************************\r\n--Set defaults\r\n--**************************************************************************************\r\n\r\n--**************************************************************************************\r\n--Main Process\r\n--**************************************************************************************\r\n\r\n\r\n\r\nEXEC master.dbo.sp_addlinkedserver @server = N'KeyspanWestSpecialLedgerAccountBilling', @srvproduct=N'Jet 4.0', @provider=N'Microsoft.Jet.OLEDB.4.0', @datasrc=N'\\\\dcasec3\\UploadDataFiles\\KeyspanWestMainframeData\\KeyspanWestCurrentBillingCycle\\SpecialLedger\\AccountBilling', @provstr=N'Text'\r\n--"
        }
      ]
    }
