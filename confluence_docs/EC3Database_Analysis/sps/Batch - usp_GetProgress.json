      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "--[Batch].[usp_GetProgress] null, null\nCREATE     PROCEDURE [Batch].[usp_GetProgress]\r\n@accountNumber varchar(20),\r\n@billingperiod varchar(20)\r\nAS\r\nBEGIN\r\n       \r\n       IF (@accountNumber is null or @accountNumber = '') -- get consolidated report\r\n              BEGIN\r\n\r\n\t\t\t\t\tSELECT ROW_NUMBER() OVER(ORDER BY T.BillingPeriod, T.AccountNumber, T.StepId) [Id], \r\n\t\t\t\t\t(SELECT DATENAME(MONTH, CONVERT(DATE, T.BillingPeriod + '01')) + ', ' +  CAST(YEAR(CONVERT(DATE, T.BillingPeriod + '01')) AS VARCHAR(4))) [MonthYear], \r\n\t\t\t\t\tT.*, '' [Message], '' [Error], B.Name, B.Description, B.IsAdminAction, B.Action, null [IsSuccess]\t\t\t\r\n\t\t\t\t\t\r\n\t\t\t\t\tFROM \r\n                    (\r\n\t\t\t\t\t\tSELECT DISTINCT A.BillingPeriod, A.AccountNumber,\r\n\t\t\t\t\t\t\t\tCASE WHEN EXISTS\r\n                                         (SELECT 1 FROM Batch.FileStep WHERE IsSuccess = 0 AND BillingPeriod = A.BillingPeriod AND AccountNumber = A.AccountNumber ) -- PENDING\r\n                                         THEN \r\n                                         (SELECT TOP 1 StepId FROM Batch.FileStep WHERE IsSuccess = 0 AND BillingPeriod = A.BillingPeriod AND AccountNumber = A.AccountNumber ORDER BY StepId)\r\n                                         ELSE -- Complete\r\n                                          (SELECT TOP 1 StepId FROM Batch.FileStep WHERE IsSuccess = 1 AND BillingPeriod = A.BillingPeriod AND AccountNumber = A.AccountNumber ORDER BY StepId DESC)\r\n                                         END\r\n                                  [StepId],\r\n                                  CASE WHEN EXISTS\r\n                                         (SELECT 1 FROM Batch.FileStep WHERE IsSuccess = 0 AND BillingPeriod = A.BillingPeriod AND AccountNumber = A.AccountNumber AND ISNULL(Error, '') <> '') -- ERROR\r\n                                         THEN \r\n                                         'Error'\r\n                                         WHEN EXISTS\r\n                                         (SELECT 1 FROM Batch.FileStep WHERE IsSuccess = 0 AND BillingPeriod = A.BillingPeriod AND AccountNumber = A.AccountNumber AND ISNULL(Error, '') = '') -- Pending\r\n                                         THEN\r\n                                         'Pending'\r\n                                         ELSE\r\n                                         'Complete'\r\n                                         END\r\n                                  [Status]\r\n                           FROM Batch.FileStep A\r\n                           GROUP BY A.BillingPeriod, A.AccountNumber\r\n                     ) T JOIN [Batch].[Step] B ON T.StepId = B.StepId  \r\n                     ORDER BY T.BillingPeriod DESC\r\n\r\n              END\r\n       ELSE\r\n              BEGIN\r\n\r\n                     SELECT ROW_NUMBER() OVER(ORDER BY A.BillingPeriod, A.AccountNumber, A.StepId) [Id], \r\n\t\t\t\t\t A.[BillingPeriod], A.[AccountNumber], A.StepId, A.Message, A.Error, A.IsSuccess, B.Name, B.Description, B.IsAdminAction, B.Action, \r\n\t\t\t\t\t (SELECT DATENAME(MONTH, CONVERT(DATE, A.BillingPeriod + '01')) + ', ' +  CAST(YEAR(CONVERT(DATE, A.BillingPeriod + '01')) AS VARCHAR(4))) [MonthYear], \r\n\t\t\t\t\t '' [Status]\r\n                     FROM [Batch].[FileStep] A JOIN [Batch].[Step] B ON A.StepId = B.StepId\r\n                     WHERE B.IsActive = 1 AND A.[AccountNumber] = @accountNumber AND A.[BillingPeriod] = @billingperiod\r\n                     ORDER BY A.StepId\r\n\r\n              END\r\n\r\n       END;"
        }
      ]
    }
