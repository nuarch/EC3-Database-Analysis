      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [SBMR].[usp_Update_UpdateSBMRMeters]\r\n\t/*\r\n\t<Meters>\r\n\t\t<Meter>\r\n\t\t\t<OriginalMeterNumber>\r\n\t\t\t<CurrentMeterNumber>\r\n\t\t\t<CurrentAccountNumber>\r\n\t*/\r\n\t@MeterInformationXML XML,\r\n\t@SBMRHeaderSeqID seqid,\r\n\t@AuthenticatedUserID seqid\r\nAS\r\nBEGIN\r\n\t\r\n\tDECLARE @UpdateMeters TABLE\r\n\t(\r\n\t\tOriginalMeterNumber MeterNumber,\r\n\t\tCurrentMeterNumber MeterNumber,\r\n\t\tCurrentAccountNumber acctnum\r\n\t)\r\n\t\r\n\tINSERT INTO @UpdateMeters\r\n    ( \r\n\t\tOriginalMeterNumber,\r\n\t\tCurrentMeterNumber,\r\n\t\tCurrentAccountNumber\r\n    )\r\n\tSELECT\r\n\t\tDISTINCT \r\n\t\tCAST(tbl.col.query('data(OriginalMeterNumber)') AS varchar),\r\n\t\tCAST(tbl.col.query('data(CurrentMeterNumber)') AS varchar),\r\n\t\tCAST(tbl.col.query('data(CurrentAccountNumber)') AS varchar) \r\n\tFROM \r\n\t\t@MeterInformationXML.nodes('//Meters//Meter') tbl(col)\r\n\t\r\n\t-- insert new records\r\n\tINSERT INTO SBMR.SBMRMeter\r\n\t        ( OriginalMeterNumber ,\r\n\t          CurrentMeterNumber ,\r\n\t          CurrentAccountNumber ,\r\n\t          SBMRHeaderSeqid ,\r\n\t          AuthenticatedUserID ,\r\n\t          DateAdded ,\r\n\t          LastUpdate\r\n\t        )\t\r\n\tSELECT OriginalMeterNumber,\r\n\t\t   CurrentMeterNumber,\r\n\t\t   CurrentAccountNumber,\r\n\t\t   @SBMRHeaderSeqid,\r\n\t\t   @AuthenticatedUserID,\r\n\t\t   GETDATE(),\r\n\t\t   GETDATE()\r\n\tFROM @UpdateMeters\r\n\tWHERE CurrentMeterNumber NOT IN \r\n\t(\r\n\t\tSELECT CurrentMeterNumber FROM SBMR.SBMRMeter\r\n\t\tWHERE SBMRHeaderSeqid = @SBMRHeaderSeqID\r\n\t)\r\n\t\r\n\t-- update existing records\r\n\tUPDATE a\r\n\t\tSET \r\n\t\t\ta.OriginalMeterNumber = ua.OriginalMeterNumber,\r\n\t\t\ta.CurrentMeterNumber = ua.CurrentMeterNumber,\r\n\t\t\ta.CurrentAccountNumber = ua.CurrentAccountNumber,\r\n\t\t\ta.LastUpdate = GETDATE(),\r\n\t\t\ta.AuthenticatedUserID = @AuthenticatedUserID\r\n\tFROM\r\n\tSBMR.SBMRMeter AS a\t\r\n\tINNER JOIN @UpdateMeters AS ua\r\n\tON a.CurrentMeterNumber = ua.CurrentMeterNumber\r\n\tWHERE\r\n\ta.SBMRHeaderSeqID = @SBMRHeaderSeqID\r\n\t\r\n\t-- delete records removed by user\r\n\tDELETE FROM SBMR.SBMRMeter\r\n\tWHERE \r\n\tSBMRHeaderSeqid = @SBMRHeaderSeqID\r\n\tAND\r\n\tCurrentMeterNumber NOT\r\n\tIN (SELECT CurrentMeterNumber FROM @UpdateMeters)\r\n\t\r\n\tSELECT 0;\r\nEND"
        }
      ]
    }
  ]
