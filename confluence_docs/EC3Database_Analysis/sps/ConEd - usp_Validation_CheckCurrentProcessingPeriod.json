    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\tDHO\r\n-- Create date: <Create Date,,>\r\n-- Description:\tcheck if current period has been processed\r\n-- =============================================\r\nCREATE PROCEDURE [ConEd].[usp_Validation_CheckCurrentProcessingPeriod]\r\n\t\r\nAS\r\nBEGIN\r\n\r\n\tDECLARE @BillingPeriod BillingPeriod\r\n\r\n\tSELECT @BillingPeriod = BillingPeriod \r\n\tFROM Billing.ApplicationTimeFrame\r\n\tWHERE CurrentProcessingPeriod = 'Y'\r\n\r\n\tDECLARE @errMessage VARCHAR(MAX)\r\n\r\n\tIF(EXISTS(SELECT * FROM billing.AccountBilling\r\n\tWHERE BillingPeriodRevision = @BillingPeriod AND CurrentInvoiceAccountBillingGroup = 2))\r\n\tBEGIN\r\n\t\tSET @errMessage = 'ConEd data for period ' + @BillingPeriod + ' has already been processed. The application timeframe might need to be updated.' \r\n\r\n\t\tUPDATE ConEd.ConEdDataUploadStep\r\n\t\tSET CurrentBillingPeriod = @BillingPeriod,\r\n\t\t\tisCompleted = 1\r\n        \r\n\t\tRAISERROR(@errMessage, 12, 1)\r\n\tEND  \r\n\r\nEND"
        }
      ]
    }
