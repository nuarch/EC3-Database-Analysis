      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [ConEd].[usp_Validation_CheckMeterBillingAdjustmentGas]\r\n\r\nAS\r\nBEGIN\r\n\t\r\n\tDECLARE @errMessage VARCHAR(MAX)\r\n\r\n\tIF(EXISTS (\r\n\t\t\r\n\t\t\tSELECT DISTINCT ad.OriginalAccountNumber, ad.OriginalMeterNumber, ad.BillingPeriodRevision\r\n\t\t\tFROM \r\n\t\t\t\tConEd.UploadConEdisonMeterBillingAdjustmentGas ad\r\n\t\t\t\tINNER JOIN billing.MeterBilling AS mb\r\n\t\t\t\tON ad.OriginalAccountNumber = mb.OriginalAccountNumber\r\n\t\t\t\tAND ad.OriginalMeterNumber = mb.OriginalMeterNumber\r\n\t\t\t\tAND ad.BillingPeriodRevision = mb.BillingPeriodRevision\r\n\t\t\tWHERE ad.AccountExchangeMeterTrackSeqid IS NULL OR ad.AccountBilled IS NULL OR ad.AdjustedMeterBilling IS null\r\n\t\t)\r\n\t)\r\n\tBEGIN\r\n\t\tSET @errMessage = 'There are records in UploadConEdisonMeterBillingAdjustmentGas with missing exchange meter track.'\r\n\t\tRAISERROR(@errMessage, 12, 1)\r\n\tEND\r\n    \r\nEND"
