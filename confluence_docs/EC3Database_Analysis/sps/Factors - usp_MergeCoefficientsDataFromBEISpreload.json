    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "create PROCEDURE [Factors].[usp_MergeCoefficientsDataFromBEISpreload]\nAS\r\nBEGIN\r\n\r\n\r\nMERGE Factors.ConversionEquivalentsForBtuAndCO2eByBillingPeriod AS Target\r\nUSING Factors.vw_BEIS_CoefficientsByBillingPeriod AS Source\r\nON Source.BillingPeriod = Target.BillingPeriod AND Source.EnergyType = Target.EnergyType  \r\nWHEN MATCHED THEN\r\n    UPDATE SET\r\n\t Target.MMBtusFactor = ISNULL(Source.MMBtusFactor,Target.MMBtusFactor)\r\n\t,Target.MMBtus = Target.NumberOfUnits * ISNULL(Source.MMBtusFactor,Target.MMBtusFactor)\r\n\t,Target.CO2EquivalentEmissionsFactor = ISNULL(Source.CO2EquivalentEmissionsFactor, Target.CO2EquivalentEmissionsFactor) \r\n\t, Target.CO2EquivalentEmissions = Target.NumberOfUnits * ISNULL(Source.CO2EquivalentEmissionsFactor, Target.CO2EquivalentEmissionsFactor) \r\n\t, Target.UpdatedBy =1\r\n\t, Target.UpdatedOn = GETDATE()\r\nWHEN NOT MATCHED THEN\r\n    INSERT (\r\n    [EnergyDeliveryType],\r\n    [EnergyType],\r\n    [BillingPeriod],\r\n    [NumberOfUnits],\r\n    [MMBtus],\r\n    [MMBtusFactor],\r\n    [CO2EquivalentEmissions],\r\n    [CO2EquivalentEmissionsFactor],\r\n    [Notes],\r\n    [IsInUse],\r\n    [CreatedBy],\r\n    [CreatedOn],\r\n    [UpdatedBy],\r\n    [UpdatedOn]\r\n\t)\r\n\r\n\tVALUES\r\n\t(   Source.EnergyDeliveryType,                  -- EnergyDeliveryType - seqid\r\n\t\tSource.EnergyType,                  -- EnergyType - EnergyDeliveryType\r\n\t\tSource.BillingPeriod,                  -- BillingPeriod - varchar(6)\r\n\t\tSource.NumberOfUnits,                  -- NumberOfUnits - int\r\n\t\tSource.NumberOfUnits * Source.MMBtusFactor,                  -- MMBtus - decimal(12, 5)\r\n\t\tSource.MMBtusFactor,                  -- MMBtusFactor - decimal(10, 7)\r\n\t\tSource.NumberOfUnits * Source.CO2EquivalentEmissionsFactor,                  -- CO2EquivalentEmissions - decimal(16, 9)\r\n\t\tSource.CO2EquivalentEmissionsFactor,                  -- CO2EquivalentEmissionsFactor - decimal(14, 9)\r\n\t\tNULL ,                  -- Notes - notes\r\n\t\t1,                  -- IsInUse - bit\r\n\t\t1,                  -- CreatedBy - int\r\n\t\tGETDATE(), -- CreatedOn - smalldatetime\r\n\t\t1,                  -- UpdatedBy - int\r\n\t\tGETDATE()  -- UpdatedOn - smalldatetime\r\n\t\t);\r\nEND;"
        }
      ]
