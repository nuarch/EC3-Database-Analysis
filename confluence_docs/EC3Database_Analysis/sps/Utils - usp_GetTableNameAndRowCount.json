      "content": [
        {
          "type": "text",
          "text": "5. Performance Considerations"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Cursor Usage",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Cursors can be resource-intensive, especially in large databases with many tables. This procedure could be optimized by using set-based operations instead of a cursor."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Dynamic SQL",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of dynamic SQL ("
                },
                {
                  "type": "text",
                  "text": "sp_executesql",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ") is necessary for executing the row count query but can introduce overhead and potential security risks if not handled properly."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Table Truncation",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Truncating the "
                },
                {
                  "type": "text",
                  "text": "Utils.TableNameAndRowCount",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " table at the start ensures no stale data remains, but it also means the procedure is not incremental and must be run in its entirety each time."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "6. Potential Issues or Risks"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Security Risks",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Dynamic SQL execution can be vulnerable to SQL injection if not properly parameterized. Although this procedure constructs SQL from system metadata, care should be taken if modifications are made."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Concurrency",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Truncating the table at the start could lead to data loss if multiple instances of the procedure are run concurrently."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Unused Variables",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Several declared variables are not used in the procedure, which could lead to confusion or maintenance challenges."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Scalability",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": As the number of tables grows, the cursor-based approach may become less efficient. A set-based approach could improve scalability and performance."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Utils].[usp_GetTableNameAndRowCount]\nAS\r\n--**************************************************************************************\r\n--\r\n--\r\n--\r\n--\r\n--\r\n--Declare Variables                                            \r\n--**************************************************************************************\r\ndeclare @I int\r\ndeclare @k int\r\ndeclare @SQLString NVARCHAR(512)\r\ndeclare @View NVARCHAR(512)\r\ndeclare @SchemaQualifiedTriggerName NVARCHAR(256)\r\ndeclare @TABLE_SCHEMA NVARCHAR(256)\r\ndeclare @TABLE_NAME NVARCHAR(256)\r\ndeclare @Schema_NAME NVARCHAR(256)\r\ndeclare @DOMAIN_SCHEMA NVARCHAR(256)\r\ndeclare @DOMAIN_NAME NVARCHAR(256) \r\ndeclare @COLUMN_NAME NVARCHAR(256)\r\n\r\ndeclare @View_SCHEMA_NAME NVARCHAR(256)\r\ndeclare @View_NAME NVARCHAR(256)\r\ndeclare @IsTable VARCHAR(1)\r\n--\r\ndeclare @SqlQuote char(1)\r\n--\r\nset @I = 0\r\nset @SqlQuote = char(39)\r\n--\r\n--\r\nDECLARE GetTableCounts CURSOR FOR\r\nselect SCHEMA_NAME(tbl.schema_id) as SchemaName,SCHEMA_NAME(tbl.schema_id)+'.'+ tbl.name as TableName FROM sys.tables AS tbl\r\norder by SCHEMA_NAME(tbl.schema_id)+'.'+ tbl.name\r\n--\r\nOPEN GetTableCounts;\r\n--\r\nFETCH NEXT FROM GetTableCounts INTO @Schema_NAME,@TABLE_NAME\r\n--\r\n-- Check @@FETCH_STATUS to see if there are any more rows to fetch.\r\ntruncate table Utils.TableNameAndRowCount\r\nWHILE @@FETCH_STATUS = 0\r\n   BEGIN\r\n\t--\r\n\tselect @TABLE_NAME as tableName\r\n\tset @SQLString = N'select @k=count(*) from '+@TABLE_NAME\r\n\r\n\t--\r\n\t--select @SQLString\r\n\tEXEC sp_executesql @SQLString, N'@k INT OUTPUT', @k output;\r\n\tINSERT  INTO  Utils.TableNameAndRowCount(SchemaName,TableName, rows)\r\n\tVALUES     (@Schema_NAME,@TABLE_NAME,@k)\r\n\tset @I = @I+1\r\n\t--print @I\r\n\t--\r\n\tFETCH NEXT FROM GetTableCounts INTO @Schema_NAME,@TABLE_NAME\r\n   END\r\n\r\nCLOSE GetTableCounts;\r\nDEALLOCATE GetTableCounts;"
        }
      ]
    }
