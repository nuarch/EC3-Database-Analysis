          "type": "text",
          "text": "CREATE PROCEDURE [Gas].[usp_PreProcessFinalCheckOfGasBillsAdjustments]\n(\r\n      @StatusCode int OUTPUT,\r\n      @NumberOfUnknownAccounts INT OUTPUT,\r\n      @NumberOfUnknownMeters INT output\r\n)\r\n\r\nAS\r\n--**************************************************************************************\r\n--* Name:         \r\n--*\r\n--* Description:  Process the NYPA account billing original bills.  The sequential processing steps needed to\r\n--* \r\n--                     Step 01)      Insert the new Cover sheet billing types\r\n--\r\n-- Update the Account billing records with the correct account statuses of the existing accounts and the\r\n-- current cycle exchange actions.  The exchange code will be set to null.\r\n-- \r\n-- Determine the active accounts that the utility company did not send a bill for the cycle and add them to the \r\n-- to the \"UploadNYPAAccountBilling\" table.  At this point, we should have a collection of all of the accounts \r\n-- that were billed and all of the accounts that should have been billed.\r\n-- \r\n--*               \r\n--* Exec:  \t\t usp_ProcessAccountBillingSaveCanceRebillAdjustments\r\n--*\r\n--* Parameter(s):         \r\n--*\t\t\t       AuthenticatedUserID int Output\r\n--*\t\t\t       NumberOfAdjustmentsAdded int Output\r\n--*                            StatusCode  int output       -  Execution Return Status \r\n--*\r\n--* Database:     OEC\r\n--*\r\n--* Return:\t    0 Success\r\n--*                   9 Failure\r\n--*\r\n--* AUTHOR:       Peter Heller (PAH)\r\n--* Created On:   10/26/2005\r\n--**************************************************************************************\r\n--* Date         Tech Description of Change\r\n--* ---------- ----  -------------------------------------------------------------\r\n--* 10/26/2005 PAH  First Version  \r\n--* 03/27/2006 PAH  Revised to \r\n--***************************************************************************************\r\nBegin \r\n--************************************************************************************** \r\n--Declare Variables                                            \r\n--**************************************************************************************\r\n--\r\ndeclare @NumberOfAdjustmentsAdded int\r\ndeclare @CurrentBillingPeriod varchar(8)\r\ndeclare @UtilityCompanyDeFaultBillingCycle varchar(1)\r\n--**************************************************************************************  \r\n--SET DEFAULTS                                                  \r\n--**************************************************************************************\r\n--\r\n--************************************************************************************** \r\n--\tMain Processing\r\n--**************************************************************************************\r\n--\r\n--\tMake sure all meters are account for prior to pushing data into the BILLING system\r\n--\r\nupdate\tGas.UploadMeterBillingAdjustmentGas\r\nSET              \r\n\t\tAccountExchangeMeterTrackSeqid =Billing.AccountExchangeMeterTrack.AccountExchangeMeterTrackSeqid, \r\n\t\tMeterSeqid =Billing.AccountExchangeMeterTrack.OriginalMeterSeqid\r\nFROM \r\n\t\tGas.UploadMeterBillingAdjustmentGas INNER JOIN\r\n\t\tBilling.AccountExchangeMeterTrack ON \r\n\t\tGas.UploadMeterBillingAdjustmentGas.OriginalAccountNumber = Billing.AccountExchangeMeterTrack.OriginalAccountNumber AND \r\n\t\tGas.UploadMeterBillingAdjustmentGas.OriginalMeterNumber = Billing.AccountExchangeMeterTrack.OriginalMeterNumber\r\nWHERE \r\n\t\t(Gas.UploadMeterBillingAdjustmentGas.AccountExchangeMeterTrackSeqid IS NULL)\r\n--\r\n--\t@UtilityCompanyDeFaultBillingCycle currently  handles Con Edison Gas and National Grid West\r\n--\tSpecial Ledger.  Needs to be adjusted for National Grid West CRIS accounts (\"M\"onthly ????)\r\n--\r\nSELECT    \r\n\t TOP (1) @UtilityCompanyDeFaultBillingCycle=\r\n\t \t\t\t\tcase \r\n\t\t\t\t\t\twhen UtilityCompanySeqid= 9 and InvoiceAccountBillingGroupSeqid = 2 then 'M'\r\n\t\t\t\t\t\twhen UtilityCompanySeqid= 2 and InvoiceAccountBillingGroupSeqid = 4 then 'B'\r\n\t\t\t\t\t\telse 'M' \r\n\t\t\t\t\tend\r\nFROM Gas.UploadAccountBillingAdjustmentGas\r\nselect @UtilityCompanyDeFaultBillingCycle\r\n--\r\nUPDATE    Gas.UploadAccountBillingAdjustmentGas\r\nSET              \r\n\t\tEnergySource = Billing.Account.EnergySource, \r\n\t\tBillingCycle = IsNull(Billing.Account.BillingCycle,@UtilityCompanyDeFaultBillingCycle), \r\n\t\tSalesType = Billing.Account.SalesType, \r\n\t\tManualPaymentOverride = 'N', \r\n\t\tManualDataEntry = 'N', \r\n\t\tIsTimeOfDayAccount = 'N', \r\n\t\tInvoiceAccountBillingGroupSeqid = Billing.Account.CurrentInvoiceAccountGroup\r\nFROM \r\n\t\tGas.UploadAccountBillingAdjustmentGas INNER JOIN\r\n\t\tBilling.Account ON Gas.UploadAccountBillingAdjustmentGas.AccountSeqid = Billing.Account.AccountSeqid AND \r\n\t\tGas.UploadAccountBillingAdjustmentGas.OriginalAccountNumber = Billing.Account.OriginalAccountNumber AND \r\n\t\tGas.UploadAccountBillingAdjustmentGas.UtilityCompanySeqid = Billing.Account.UtilityAccountProvider\r\n--\r\n--\r\n--\r\nUPDATE    Gas.UploadMeterBillingAdjustmentGas\r\nSET              EnergySource = Billing.Account.EnergySource, BillingCycle = Billing.Account.BillingCycle, SalesType = Billing.Account.SalesType, \r\n                      IsTimeOfDayAccount = 'N', UtilityServiceAddress = Billing.Account.UtilityServiceAddress, \r\n                      MeterDials = Billing.Meter.MeterDials\r\nFROM Gas.UploadMeterBillingAdjustmentGas INNER JOIN\r\n                      Billing.Account ON Gas.UploadMeterBillingAdjustmentGas.AccountSeqid = Billing.Account.AccountSeqid AND \r\n                      Gas.UploadMeterBillingAdjustmentGas.UtilityCompanySeqid = Billing.Account.UtilityAccountProvider INNER JOIN\r\n                      Billing.Meter ON Gas.UploadMeterBillingAdjustmentGas.MeterSeqid = Billing.Meter.MeterSeqid AND \r\n                      Gas.UploadMeterBillingAdjustmentGas.OriginalMeterNumber = Billing.Meter.OriginalMeterNumber AND \r\n                      Gas.UploadMeterBillingAdjustmentGas.OriginalAccountNumber = Billing.Meter.OriginalAccountNumber\r\nWHERE (Gas.UploadMeterBillingAdjustmentGas.UtilityCompanySeqid = 9)\r\n--\r\nSET @NumberOfUnknownAccounts = (SELECT COUNT(*) AS UnknownAccountCounts\r\nFROM Gas.UploadAccountBillingAdjustmentGas\r\nwhere (AccountSeqid IS NULL))\r\n--\r\nSET @NumberOfUnknownMeters = (SELECT COUNT(*) AS UnknownAccountMetersCounts\r\nFROM Gas.UploadMeterBillingAdjustmentGas\r\nwhere (AccountExchangeMeterTrackSeqid IS NULL))\r\n--\r\nSELECT 'Problem if the number Of Unknown accounts is not zero: ' as description,  @NumberOfUnknownAccounts\r\nSELECT 'Problem if the number Of Unknown meters is not zero: ' as description, @NumberOfUnknownMeters\r\n--\r\n--\r\n--SELECT 'Problem if the number Of Unknown accounts is not zero: ' as description,    COUNT(*) AS UnknownAccountCounts\r\n--FROM Gas.UploadAccountBillingAdjustmentGas\r\n--WHERE  (AccountSeqid IS NULL)\r\n--\r\n--SELECT 'Problem if the number Of Unknown meters is not zero: ' as description,    COUNT(*) AS UnknownAccountMetersCounts\r\n--FROM Gas.UploadMeterBillingAdjustmentGas\r\n--where  (AccountExchangeMeterTrackSeqid IS NULL)\r\n--\r\n--\r\nset @StatusCode = 0\r\n\r\nEnd"
        }
      ]
