    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [ContentManagement].[usp_GetEndOfMonthFileListInAgencyAccessFolder]\n(\r\n\t@AgencyAccessFolder AS VARCHAR(13)\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\t\r\n\tSELECT doc.DocumentEndOfMonthSeqid,\r\n        doc.UserId,\r\n        mem.Email AS recepientEmail,\r\n        doc.FiscalYear,\r\n        doc.BillingPeriod,\r\n        doc.AgencyAccessFolder,\r\n        doc.DocumentName,\r\n        doc.DocumentByteCount,\r\n        doc.DocumentType,\r\n        doc.Notes,\r\n        dt.DocumentTypeName,\r\n        dt.FileExtension,\r\n        doc.AuthenticatedUserID,\r\n        doc.DateAdded,\r\n        doc.LastUpdate\r\n\tFROM ContentManagement.DocumentEndOfMonth AS doc\r\n\t\tINNER JOIN dbo.aspnet_Membership AS mem ON doc.UserId = mem.UserId\r\n\t\tINNER JOIN ContentManagement.DocumentType AS dt ON dt.DocumentTypeID = doc.DocumentType\r\n\tWHERE doc.AgencyAccessFolder LIKE ('%' + @AgencyAccessFolder)\r\n\tORDER BY doc.AgencyAccessFolder, mem.Email;\r\nEND;"
        }
      ]
    }
