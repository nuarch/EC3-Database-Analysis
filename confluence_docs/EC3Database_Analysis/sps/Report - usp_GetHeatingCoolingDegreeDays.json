    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\tdho\r\n-- Create date: <Create Date,,>\r\n-- Description:\tGet heating and cooling degree days informatino for 4 fiscal year\r\n-- =============================================\r\ncreate PROCEDURE [Report].[usp_GetHeatingCoolingDegreeDays]\r\n\r\nAS\r\nBEGIN\r\n\r\n\tDECLARE @CurrentFiscalYear VARCHAR(4)\r\n\tDECLARE @BeginningFiscalYear VARCHAR(4)\r\n\r\n\tSELECT @CurrentFiscalYear = FiscalYear\r\n\tFROM Billing.ApplicationTimeFrame\r\n\tWHERE CurrentProcessingPeriod = 'Y'\r\n\r\n\tSELECT @BeginningFiscalYear = CAST(CAST(@CurrentFiscalYear AS INT) - 3 AS VARCHAR(4))\r\n\r\n\r\n\tSELECT [dbo].[CalculateFiscalYear](degreeDayBase.BillingPeriod) AS FiscalYear, degreeDayBase.BillingPeriod, degreeDayBase.BaseHeatingDegreeDays, degreeDayBase.BaseCoolingDegreeDays, normalDegreeDay.NormalCoolingDegreeDays, normalDegreeDay.NormalHeatingDegreeDays\r\n\tFROM \r\n\t[Factors].[DegreeDayBase] degreeDayBase\r\n\tINNER JOIN\r\n\t[Factors].[DegreeDayNormalized30YearAverage] normalDegreeDay\r\n\tON degreeDayBase.MM = normalDegreeDay.MM\r\n\twhere\r\n\t[dbo].[CalculateFiscalYear](degreeDayBase.BillingPeriod) BETWEEN @BeginningFiscalYear AND @CurrentFiscalYear\r\n\tORDER BY [dbo].[CalculateFiscalYear](degreeDayBase.BillingPeriod) DESC, degreeDayBase.BillingPeriod\r\n\r\nEND"
        }
      ]
    }
