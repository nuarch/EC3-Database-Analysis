          "type": "text",
          "text": "CREATE   PROC [Batch].[usp_Process_Main_LoadMeterBills2]\nAS\r\nBEGIN\r\n\t  \t  \r\n\t --ProcessMeterBillingSaveTransactions\r\n\tDECLARE @RC int\r\n\tdeclare @AuthenticatedUserID int\r\ndeclare @StatusCode int\r\nset  @AuthenticatedUserID = 1\r\nset  @StatusCode = 0\r\n\r\nexecute @RC = [Nypa].[usp_ProcessMeterBillingSaveTransactions] \r\n   @AuthenticatedUserID\r\n  ,@StatusCode output\r\n\r\n--------------------------------------------------------------------------------------------------------------------------------------------\r\n--25.\t\"usp_ProcessMeterBillingOriginalBills\".\r\n-- this process takes about a min\r\n\r\ndeclare\t@return_value int\r\n \r\nselect\t@StatusCode = 0\r\nexec\t@return_value = [Nypa].[usp_ProcessMeterBillingOriginalBills]\r\n\t\t@AuthenticatedUserID = 1,\r\n\t\t@StatusCode = @StatusCode output\r\n\r\nselect\t@StatusCode as N'@StatusCode'\r\nselect\t'Return Value' = @return_value\r\n\r\n\r\n----------------------------------------------------------------------------------------------------------------------------------------------\r\n--26. Process the  Meter billing adjustments and Meter billing processing is completed.\r\n--\r\n\r\nselect\t@StatusCode = 0\r\nexec\t@return_value = [Nypa].[usp_ProcessMeterBillingRebills]\r\n\t\t@AuthenticatedUserID = 1,\r\n\t\t@StatusCode = @StatusCode output\r\n\r\nselect\t@StatusCode as N'@StatusCode'\r\nselect\t'Return Value' = @return_value\r\n\r\n-- Load Nypa Bill Print CoverSheet Summary\r\n\r\nselect\t@StatusCode = 0\r\n\r\nexec\t@return_value = [Nypa].[usp_ProcessNypaBillPrintCoverSheetSummary]\r\n\t\t@StatusCode = @StatusCode output\r\n\r\nselect\t@StatusCode as N'@StatusCode'\r\n\r\nselect\t'Return Value' = @return_value\r\n\r\n\r\n-------------------------------------------------------------------------------------------------------------------------------------------------------------\r\n--\tNypaAccountLevelServiceClassificationDiscrepancy\r\n--  ()Reports and corrects any ServiceClassificationDiscrepancy (DeliveryTariffCode) and IsTimeOfDay)\r\n--\r\n\r\n-- SEE IF THERE IS DISCREPENCY\r\n\r\n\r\nexec\t@return_value = [Nypa].[usp_NypaAccountLevelServiceClassificationDiscrepancy]\r\n\r\nselect\t'Return Value' = @return_value\r\n\r\n\r\n--\r\n-------------------------------------------------------------------------------------------------------------------------------------------------------------\r\n-- this query is showing whats fixed\r\nSELECT * \r\nfrom Common.uvw_AccountLevelServiceClassificationDiscrepancyCorrectionFromUploadData vw\r\nWHERE \r\n\t\t(vw.BillingPeriod = '202305') and \r\n\t\t(vw.CurrentInvoiceAccountGroup = 1)\r\n\r\n\r\n\r\n-----------------------------------------------------------------------------------------------------------------------------------------------------------\r\n\r\n       \r\n-----------------------------------------------------------------------------------------------------------------------------------------------------------        \r\nselect  BillingPeriod ,\r\n        TotalEnergyUsage ,\r\n        TotalDemandUsage ,\r\n        TotalReactivePowerEnergyUsage ,\r\n        RevisedEnergyUsage ,\r\n        RevisedDemandUsage ,\r\n        RevisedReactivePowerEnergyUsage \r\n from Billing.uvw_ValidateNypaBillPrintPageEnergyUsage   where BillingPeriod='202305'    \r\n\r\n\r\n ----------------------------------------------------------------------------------------------------------------------------------------------------------------\r\n  \r\n\r\nEXEC [Billing].[usp_InsertNetMeteringAttributeFromEFile] @BillingPeriod = '202305' -- int\r\n\r\n\t  \t \r\nEND"
        }
      ]
