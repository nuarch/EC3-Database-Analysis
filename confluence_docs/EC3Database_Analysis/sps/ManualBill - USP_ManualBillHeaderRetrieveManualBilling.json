    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "6. Potential Issues or Risks"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Lack of Pagination in SQL",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The absence of SQL-based pagination (e.g., "
                },
                {
                  "type": "text",
                  "text": "OFFSET-FETCH",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ") means that all records are retrieved before pagination is applied, which can be inefficient for large datasets."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Parameter Misuse",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": If users frequently pass 0 instead of NULL for optional parameters, it could lead to unexpected results if not handled correctly."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Concurrency",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": If the underlying view or tables are subject to frequent updates, there could be concurrency issues or performance degradation due to locks."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Scalability",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": As the dataset grows, the lack of efficient pagination and potential absence of proper indexing could lead to slower query performance."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [ManualBill].[USP_ManualBillHeaderRetrieveManualBilling]\n\t@manualBillHeaderId\t\tINT = NULL\r\n\t, @providerId\t\t\tINT = NULL\r\n\t, @billingGroupId\t\tINT = NULL\r\n\t, @pageNumber\t\t\tINT = NULL\r\n\t, @pageSize\t\t\t\tINT = NULL\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tSET @manualBillHeaderId\t= NULLIF(@manualBillHeaderId, 0);\r\n\tSET @providerId\t\t\t= NULLIF(@providerId, 0);\r\n\tSET @billingGroupId\t\t= NULLIF(@billingGroupId, 0);\r\n\tSET @pageNumber\t\t\t= ISNULL(NULLIF(@pageNumber, 0), 1);\r\n\tSET @pageSize\t\t\t= ISNULL(NULLIF(@pageSize, 0), 1000);\r\n\r\n\tSELECT MBH.AccountManualBillingHeaderSeqid, MBH.AccountSeqid, MBH.SummaryAccountNumber\r\n\t\t, MBH.CurrentInvoiceAccountGroup, MBH.AccountUtilityCompanySeqid\r\n\t\t, MBH.TotalAmountDue, MBH.ManualPaymentOverrideAmount\r\n\t\t, MBH.AccountEnergySource, MBH.AccountEnergyUsage, MBH.AccountDemandUsage, MBH.EnergyUnit\r\n\t\t\t, MBH.EnergyUsage, MBH.DemandUsage\r\n\t\t, MBH.BillCreationDate, MBH.DatePaymentDue\r\n\t\t, MBH.BillingPeriod, MBH.BillingPeriodDays, MBH.FromDate, MBH.ToDate, MBH.ActualOrEstimated\r\n\t\t, MBH.DateAdded, MBH.AuthenticatedUserID, MBH.LastUpdate\r\n\t\t, MBH.InitialPostingDate, MBH.BillingType\r\n\t\t, MBH.VoucherBillingStatus, MBH.IsLockedForEdit\r\n\tFROM ManualBill.uvw_AccountManualBillingHeaders_ManualBilling MBH\r\n\tWHERE MBH.AccountManualBillingHeaderSeqid\t= ISNULL(@manualBillHeaderId, MBH.AccountManualBillingHeaderSeqid)\r\n\t\tAND MBH.AccountUtilityCompanySeqid\t\t= ISNULL(@providerId, MBH.AccountUtilityCompanySeqid)\r\n\t\tAND MBH.CurrentInvoiceAccountGroup\t\t= ISNULL(@billingGroupId, MBH.CurrentInvoiceAccountGroup)\r\n\tORDER BY MBH.BillingPeriod DESC, MBH.AccountUtilityCompanySeqid ASC, MBH.CurrentInvoiceAccountGroup ASC;\r\n\r\n\tSET NOCOUNT OFF;\r\nEND"
        }
      ]
    }
  ]
