    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[USP_AgencyDashboard_AnnualEnergyUsageRetrieveCitywideCurrentVsPriorFY]\n(\r\n\t@period AS INT = NULL\r\n\t,@debugMode AS BIT = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\t\r\n\t-- Set rolling 12 months if period is not specified\r\n\tSET @period = ISNULL(@period, 12);\r\n\r\n\tDECLARE @publishedBillingPeriod VARCHAR(6), @currentFY INT, @startBillingPeriod VARCHAR(6);\r\n\tSELECT @publishedBillingPeriod = MAX(PublishedBillingPeriod) FROM Published.MonthlyPublishedSummaryData WITH (NOLOCK);\r\n\tSELECT @currentFY = dbo.CalculateFiscalYear(@publishedBillingPeriod);\r\n\r\n\tDECLARE @currentBPDate DATETIME, @startBPDate DATETIME;\r\n\tSET @currentBPDate = CONVERT(DATETIME, LEFT(@publishedBillingPeriod, 4) + '-' + RIGHT(@publishedBillingPeriod, 2) + '-01');\r\n\tSET @startBPDate = DATEADD(MM, 0 - (@period - 1), @currentBPDate);\r\n\tSET @startBillingPeriod = CONVERT(VARCHAR(12), @startBPDate, 112);\r\n\r\n\tDECLARE @billingPeriodTable TABLE (BillingPeriod VARCHAR(6), CurrentPeriod BIT NOT NULL DEFAULT(0));\r\n\r\n\tWHILE @startBillingPeriod <= @publishedBillingPeriod\r\n\tBEGIN\r\n\t\tINSERT INTO @billingPeriodTable (BillingPeriod, CurrentPeriod) VALUES (@startBillingPeriod, 1), (@startBillingPeriod - 100, 0);\r\n\r\n\t\tIF RIGHT(@startBillingPeriod, 2) = 12\r\n\t\t\tSET @startBillingPeriod = CONVERT(VARCHAR(4), (CONVERT(INT, LEFT(@startBillingPeriod, 4)) + 1)) + '01';\r\n\t\tELSE\r\n\t\t\tSET @startBillingPeriod = CONVERT(VARCHAR(6), CONVERT(INT, @startBillingPeriod) + 1);\r\n\tEND;\r\n\t\r\n\t-- Agency usage current and prior FY\r\n\tSELECT 'CITY' AS AgencyCodeOEC\r\n\t\t,A.FiscalYear\r\n\t\t,A.BillingPeriod\r\n\t\t,A.CalendarYear\r\n\t\t,A.[MonthName]\r\n\t\t,(LEFT(A.[MonthName], 3) + ' ' + CONVERT(VARCHAR(10), A.CalendarYear)) AS [MonthYear]\r\n\t\t,(SUM(CONVERT(DECIMAL(36, 2), EnergyUsage)) / 1000000.00) AS EnergyUsage\r\n\t\t,(SUM(CONVERT(DECIMAL(36, 2), DemandUsage)) / 1000000.00) AS DemandUsage\r\n\t\t,SUM(CONVERT(DECIMAL(36, 2), BilledAmount)) AS BilledAmount\r\n\t\t,(SUM(CONVERT(DECIMAL(36, 2), BTU)) / 1000000.00) AS BTU\r\n\t\t,T.CurrentPeriod\r\n\tFROM @billingPeriodTable AS T\r\n\t\tLEFT JOIN Published.TemporalAccountLevelSummaryByAgency AS A WITH (NOLOCK) ON A.BillingPeriod = T.BillingPeriod\r\n\tWHERE A.EffectiveStartPeriod <= @PublishedBillingPeriod AND A.EffectiveEndPeriod > @PublishedBillingPeriod\r\n\tGROUP BY A.FiscalYear, A.BillingPeriod, A.CalendarYear, A.[MonthName], T.CurrentPeriod\r\n\tORDER BY A.FiscalYear ASC, A.BillingPeriod ASC;\r\nEND;"
        }
      ]
    }
  ]
}