    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[usp_AccountBillingConEdSteam_Retrieve]\n(\r\n\t@billingPeriod AS VARCHAR(6)\r\n\t,@accountSeqid AS INT = NULL\r\n\t,@accountBillingConEdSteamSeqid AS INT = NULL\r\n)\r\nAS  \r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tIF @accountBillingConEdSteamSeqid IS NOT NULL AND @accountBillingConEdSteamSeqid <> 0\r\n\tBEGIN\r\n\t\tSELECT *\r\n\t\tFROM Billing.AccountBillingConEdSteam\r\n\t\tWHERE BillingPeriod = @billingPeriod\r\n\t\t\tAND AccountBillingConEdSteamSeqid = ISNULL(@accountBillingConEdSteamSeqid, AccountBillingConEdSteamSeqid);\r\n\tEND;\r\n\tELSE IF @accountSeqid IS NOT NULL AND @accountSeqid <> 0\r\n\tBEGIN\r\n\t\tSELECT *\r\n\t\tFROM Billing.AccountBillingConEdSteam\r\n\t\tWHERE BillingPeriod = @billingPeriod\r\n\t\t\tAND AccountSeqid = ISNULL(@accountSeqid, AccountSeqid);\r\n\tEND;\r\n\tELSE\r\n\tBEGIN\r\n\t\tSELECT *\r\n\t\tFROM Billing.AccountBillingConEdSteam\r\n\t\tWHERE BillingPeriod = @billingPeriod;\r\n\tEND;\r\nEND;"
        }
