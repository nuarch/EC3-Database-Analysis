              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "WHERE Clause",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Filters the records based on the provided "
                },
                {
                  "type": "text",
                  "text": "@InvoiceAccountGroupSeqId",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " and "
                },
                {
                  "type": "text",
                  "text": "@BillingCycle",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " parameters."
                }
              ]
            }
          ]
        }
