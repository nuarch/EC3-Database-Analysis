    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE   PROCEDURE [Batch].[usp_ProcessData]\nAS\r\nBEGIN  \r\n\r\n\tDECLARE @billperiod varchar(20)\r\n\tSELECT TOP 1 @billperiod = A.BillingPeriod FROM Batch.FileStep A \r\n\tWHERE A.BillingPeriod IN (SELECT MAX(BillingPeriod) FROM NYPA.UploadNYPAAccountBillingPreload)\r\n\r\n\tBEGIN TRY\r\n\t\tDECLARE @RC int\r\n\t\tDECLARE @AuthenticatedUserID int = 1 -- get system user from Zafar\r\n\t\tDECLARE @StatusCode int\r\n\t\tSET @AuthenticatedUserID = 1\r\n\r\n\t\tEXECUTE @RC = [NYPA].[usp_ProcessNypaAddReactivePowerData] @AuthenticatedUserID, @StatusCode\t   \r\n\t   \r\n\t\tEXECUTE @RC = [NYPA].[usp_ProcessNypaAddPage3CutomerLevelAllocation] @AuthenticatedUserID, @StatusCode\r\n      \r\n\t\tEXECUTE @RC = [NYPA].[usp_PreProcessingVerifyAccountsAndMetersExistence] @StatusCode\r\n\t\r\n\t\t-- Update Step \t\r\n\t\tIF EXISTS (SELECT 1 FROM NYPA.UploadNYPAReconcileExchangeProcessTransactionVerification WHERE SeverityError like 'F%')\r\n\t\t\tBEGIN\t\t\t\r\n\t\t\t\tUPDATE Batch.FileStep SET IsSuccess = 0, UpdatedOn = getdate(), \r\n\t\t\t\t\t\tMessage = 'Validation failed : [NYPA].[UploadNYPAReconcileExchangeProcessTransactionVerification] - Severity/Fatal Error found.'  WHERE \r\n\t\t\t\t\t\tBillingPeriod = @billperiod AND StepId = 2\r\n\t\t\tEND \r\n\t\tELSE\r\n\t\t\tBEGIN\t\t\r\n\t\t\t\t-----------------------------------------------------------------------------------------------------------------\r\n\t\t\t\t-- Flags MiscellaneousCharges to be excluded from delivery allocation charges.\r\n\t\t\t\t-- process update\r\n\t\t\t\tUPDATE NYPA.UploadNYPACoverSheet SET MiscellaneousCharges = 'N'\r\n\t\t\t\t-------------------------------------------------------------------------------------------------------------------\r\n\t\t\t\t-- Places notes on reactive power to indicate that reactive power is included as part of the account billing upload.  -- Rajiv Step 3\r\n\t\t\t\t-- process update\r\n\t\t\t\tUPDATE NYPA.UploadNYPACoverSheet SET MiscellaneousCharges = 'N', \r\n\t\t\t\tNotes = 'REACTIVE POWER is included as part of the account billing upload' WHERE (CoverSheetRecordType = '58')\r\n\t\t\t\r\n\t\t\t\tUPDATE Batch.FileStep SET IsSuccess = 1, UpdatedOn = getdate() WHERE BillingPeriod = @billperiod AND StepId = 2\r\n\r\n\t\t\tEND\r\n\tEND TRY\r\n    \r\n\tBEGIN CATCH\r\n\r\n\t\tDECLARE @Err varchar(5000)\t\t\r\n\t\tSELECT @Err = 'Error #: ' + CAST(ERROR_NUMBER() AS varchar(100)) + '. Procedure: ' + ERROR_PROCEDURE() + '. Error Line #: ' + CAST(ERROR_LINE() AS VARCHAR(100)) + '. Error Message: ' + ERROR_MESSAGE() \r\n\r\n\t\tUPDATE Batch.FileStep SET IsSuccess = 0, UpdatedOn = getdate(), Message = 'Error: Please contact administrator.', Error = @Err WHERE \r\n\t\tBillingPeriod = @billperiod AND StepId = 2\r\n\r\n    END CATCH\r\n\t\r\n\t\t  \r\nEND"
        }
      ]
    }
  ]
