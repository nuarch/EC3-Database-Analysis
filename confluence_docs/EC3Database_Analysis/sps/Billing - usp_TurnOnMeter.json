    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[usp_TurnOnMeter]\n(\r\n\t@AccountSeqId AS INT,\r\n\t@MeterSeqId AS INT,\r\n\t@AuthenticatedUserID AS INT,\r\n\t@Notes AS notes,\r\n\t@StatusCode AS INT OUTPUT,\r\n\t@Message AS VARCHAR(1000) OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @StatusCodePeriod AS VARCHAR(6) = (SELECT BillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y');\r\n\r\n\tIF (@Notes IS NULL OR LEN(LTRIM(RTRIM(@Notes))) = 0)\r\n\tBEGIN\r\n\t\tSET @Notes = 'Notes are empty.';\r\n\tEND;\r\n\r\n\tIF EXISTS(SELECT AccountSeqid FROM Billing.Account WHERE IsActive = 0 AND AccountSeqid = @AccountSeqId)\r\n\tBEGIN\r\n\t\tSELECT @Message = 'This account is not active.', @StatusCode = 0;\r\n\t\tRETURN @StatusCode;\r\n\tEND;\r\n\r\n\tIF EXISTS(SELECT MeterSeqid FROM Billing.Meter WHERE IsActive = 1 AND MeterSeqid = @MeterSeqId)\r\n\tBEGIN\r\n\t\tSELECT @Message = 'This Meter is already active.', @StatusCode = 0;\r\n\t\tRETURN @StatusCode;\r\n\tEND;\r\n\r\n\tIF EXISTS(SELECT M.MeterSeqid\r\n\t\tFROM Billing.Account AS A\r\n\t\t\tINNER JOIN Billing.AccountExchangeMeterTrack AS AEMT ON AEMT.OriginalAccountSeqid = A.AccountSeqid\r\n\t\t\tINNER JOIN  Billing.Meter AS M ON M.MeterSeqid = AEMT.OriginalMeterSeqid\r\n\t\tWHERE A.AccountSeqid <> @AccountSeqId AND A.Isactive = 1 AND  M.MeterSeqid = @MeterSeqId)\r\n\tBEGIN\r\n\t\tSELECT @Message = 'The meter does not belong to this account. Please verify.', @StatusCode = 0;\r\n\t\tRETURN @StatusCode;\r\n\tEND;\r\n\r\n\tBEGIN TRY\r\n\t\tBEGIN TRANSACTION;\r\n\r\n\t\t-- Meter Turn On\r\n\t\tUPDATE Billing.Meter\r\n\t\tSET MeterPreviousStatus = MeterStatus\r\n\t\t\t,MeterStatus = 'AC'\r\n\t\t\t,MeterStatusCodePeriod = @StatusCodePeriod\r\n\t\t\t,MeterEffectiveOffDate = '99991231'\r\n\t\t\t,TurnOffDate = '999912'\r\n\t\t\t,LastUpdate = GETDATE()\r\n\t\t\t,Notes = @Notes\r\n\t\t\t,FireAuditTrigger = 'Y'\r\n\t\t\t,AuthenticatedUserID = @AuthenticatedUserID\r\n\t\tWHERE MeterSeqid = @MeterSeqId;\r\n\r\n\t\t-- AccountExchangeMeterTrack update\r\n\t\tUPDATE Billing.AccountExchangeMeterTrack\r\n\t\tSET MeterEffectiveBillingEndDate = '99991231'\r\n\t\t\t,AccountEffectiveBillingEndDate = '99991231'\r\n\t\t\t,FireAuditTrigger = 'Y'\r\n\t\t\t,LastUpdate = GETDATE()\r\n\t\t\t,Notes = @Notes\r\n\t\t\t,AuthenticatedUserID = @AuthenticatedUserID\r\n\t\tWHERE OriginalMeterSeqid = @MeterSeqId AND OriginalAccountSeqid = @AccountSeqId;\r\n\r\n\t\tCOMMIT TRANSACTION;\r\n\t\tSELECT @Message = 'Meter is turned on by the DEM user.', @StatusCode = 1;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tDECLARE @ErrorMessage AS NVARCHAR(4000), @ErrorSeverity AS INT, @ErrorState AS INT, @ErrorLine AS INT, @ErrorProcedure AS NVARCHAR(126);\r\n\r\n\t\tSELECT @ErrorMessage ='Please contact IT with a screenshot of this error message! ' + ERROR_MESSAGE(),\r\n\t\t\t@ErrorSeverity = ERROR_SEVERITY(),\r\n\t\t\t@ErrorState = ERROR_STATE(),\r\n\t\t\t@ErrorProcedure = ERROR_PROCEDURE(),\r\n\t\t\t@ErrorLine = ERROR_LINE();\r\n\r\n\t\tRAISERROR (@ErrorMessage, @ErrorSeverity, @ErrorState, @ErrorProcedure, @ErrorLine);\r\n\t\tSELECT @Message = @ErrorMessage, @StatusCode = 0;\r\n   \r\n\t\tIF (@@TRANCOUNT > 0)\r\n\t\tBEGIN\r\n\t\t\tROLLBACK TRANSACTION;\r\n\t\tEND;\r\n\tEND CATCH;\r\nEND;"
        }
      ]
    }
  ]
