      "content": [
        {
          "type": "text",
          "text": "create PROCEDURE [Published].[usp_SSIS_CreateDEPExtractInSeptsFormat] ( @Status int output)\nAS\r\n\r\n/*\r\n\t1. Load data into preload table\r\n*/\r\nDECLARE @ssispath VARCHAR(1000)\r\nDECLARE @cmd VARCHAR(1000)\r\n/**********************************************\r\nDEPExtractInSeptsFormat\r\n**********************************************/\r\n\r\n--SET @ssispath = '\\\\dcasec3sql1\\z$\\SSISpackage\\SSiSDataUpload\\test\\Nypa.dtsx'\r\nSET @ssispath = '\\\\ec3sqlprod\\y$\\SSISpackage\\SSISDataUpload\\Extracts\\DEPExtract\\DEPExtractInSeptsFormat.dtsx'\r\n\r\nSET @cmd = 'dtexec /f \"' + @ssispath + '\"' -- set ssis path\r\nSET @cmd = @cmd + ' /SET \\Package.Variables[User::DatabaseName].Properties[Value];\"' + DB_NAME() + '\"'\r\nSET @cmd = @cmd + ' /SET \\Package.Variables[User::ServerName].Properties[Value];\"' + @@SERVERNAME + '\"' \r\n\r\nEXEC sp_configure 'show advanced options', 1\r\nRECONFIGURE\r\nEXEC sp_configure 'xp_cmdshell', 1\r\nRECONFIGURE\r\nEXEC xp_cmdshell @cmd\r\n\r\n\r\n\r\n/************************* End Preload Data *********************/"
        }
      ]
