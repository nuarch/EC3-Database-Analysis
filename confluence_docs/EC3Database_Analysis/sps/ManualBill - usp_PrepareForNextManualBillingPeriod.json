        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE     PROCEDURE [ManualBill].[usp_PrepareForNextManualBillingPeriod](@StatusCode int output)\nAS\r\n/* =============================================\r\n-- =============================================  */\r\n--\r\nDELETE FROM [ManualBill].[ManualBillingApplicationTimeFrame] where (CurrentProcessingPeriod = 'N')\r\n--\r\nSELECT BillingPeriod, PreviousBillingPeriodOneMonth, CurrentProcessingPeriod, CurrentProcessingPeriodCompleted\r\nFROM [ManualBill].[ManualBillingApplicationTimeFrame]\r\n--\r\nUPDATE    [ManualBill].[ManualBillingApplicationTimeFrame]\r\nSET              CurrentProcessingPeriod ='N', CurrentProcessingPeriodCompleted = dbo.[ConvertDateToYYYYMMDD] ( getdate())\r\nwhere (CurrentProcessingPeriod = 'Y')\r\n--\r\nset @StatusCode = 0"
        }
      ]
    }
