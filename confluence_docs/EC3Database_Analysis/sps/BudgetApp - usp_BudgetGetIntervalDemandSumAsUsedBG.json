    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [BudgetApp].[usp_BudgetGetIntervalDemandSumAsUsedBG]\r\n\t@baseYear VARCHAR(4)\r\nAS\r\nBEGIN\r\n\t\r\n\tSELECT intervalData.BillingPeriod\r\n\t\t , ad.AgencyCodeOEC\r\n\t\t , a.BillingCycle\r\n\t\t , uc.ShortDesc UtilityCompany\r\n\t\t , uc.UtilityCompanySeqid\r\n\t\t , a.IsTimeOfDayAccount\r\n\t\t , a.CurrentAccountNumber\r\n\t\t , a.DeliveryTariffRate\r\n\t\t , utri.EnergyUnit\r\n\t\t , utri.EnergyDeliveryType EnergyType\r\n\t\t , '56' BudgetGroupDEM\r\n\t\t , 0 RevisedBilledAmount\r\n\t\t , 0 AccountEnergyUsage\r\n\t\t , intervalData.sumDemand AccountDemandUsage\r\n\t\t , 0 OnPeakEnergyUsage\r\n\t\t , 0 OffPeakEnergyUsage\r\n\t\t , 0 RevisedReactivePowerDollars\r\n\t\t , 0 AccountReactivePowerEnergy\r\n\t\t , 0 IsMinimumBilledCharged\r\n\t\t , 0 MinimumBilledDemandDollars\r\n\t\t , 0 MinimumBilledDemandUsage\r\n\t\t , 'N' IsDeliveryMinimumBilledFlag\r\n\t\t , 0 DeliveryMinimumBilledAmount\r\n\t\t , 0 DeliveryMinimumBilledDemand\r\n\t\t , 0 MinimumBilledEnergyDollars\r\n\t\t , 0 MinimumBilledEnergyUsage\r\n\t\t , 0 DeliveryStreetLightingFacilityPoints\r\n\t\t , 0 CustomerLevelAdjustmentAmount\r\n\t\t , 0 CommodityAllocationCharge\r\n\t\t , 0 DeliveryAllocationCharge\r\n\tFROM\r\n\t(\r\n\t\tSELECT dd.UniqueAccountSeqid\r\n\t\t\t , dd.BillingPeriod\r\n\t\t\t , SUM(dd.Demand) sumDemand\r\n\t\tFROM Billing.IntervalAccountBillingDaily AS dd\r\n\t\tWHERE (SUBSTRING(dd.BillingPeriod, 1, 4) = CAST(@baseYear AS VARCHAR))\r\n\t\tGROUP BY dd.BillingPeriod\r\n\t\t\t   , dd.UniqueAccountSeqid\r\n\t)                                                              AS intervalData\r\n\t\tINNER JOIN Billing.Account                     AS a\r\n\t\t\tON a.UniqueAccountSeqid = intervalData.UniqueAccountSeqid\r\n\t\t\t   AND a.IsCurrentRecord = 'Y'\r\n\t\tINNER JOIN Billing.AgencyDivision              AS ad\r\n\t\t\tON ad.AgencyDivisionSeqid = a.AgencyAccount\r\n\t\tINNER JOIN Billing.UtilityCompany              AS uc\r\n\t\t\tON uc.UtilityCompanySeqid = a.UtilityAccountProvider\r\n\t\tINNER JOIN Billing.UtilityTariffRateInformation AS utri ON utri.UtilityTariffRateInformationSeqid = a.UtilityTariffRateInformationSeqid\r\n\t\r\nEND"
        }
      ]
    }
  ]
