    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[usp_AccountBilling_Retrieve]\n(\r\n\t@billingPeriod AS VARCHAR(6)\r\n\t,@currentInvoiceAccountBillingGroup AS INT = NULL\r\n\t,@originalAccountNumber AS VARCHAR(15) = NULL\r\n\t,@accountBillingSeqid AS INT = NULL\r\n)\r\nAS  \r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tIF (@accountBillingSeqid IS NOT NULL AND @accountBillingSeqid <> 0)\r\n\tBEGIN\r\n\t\tSELECT *\r\n\t\tFROM Billing.AccountBilling\r\n\t\tWHERE BillingPeriod = @billingPeriod\r\n\t\t\tAND AccountBillingSeqid = ISNULL(@accountBillingSeqid, AccountBillingSeqid);\r\n\tEND;\r\n\tELSE IF @originalAccountNumber IS NOT NULL\r\n\tBEGIN\r\n\t\tSELECT *\r\n\t\tFROM Billing.AccountBilling\r\n\t\tWHERE BillingPeriod = @billingPeriod\r\n\t\t\tAND OriginalAccountNumber = ISNULL(@originalAccountNumber, OriginalAccountNumber);\r\n\tEND;\r\n\tELSE\r\n\tBEGIN\r\n\t\tSELECT *\r\n\t\tFROM Billing.AccountBilling\r\n\t\tWHERE BillingPeriod = @billingPeriod\r\n\t\t\tAND CurrentInvoiceAccountBillingGroup = ISNULL(@currentInvoiceAccountBillingGroup, CurrentInvoiceAccountBillingGroup);\r\n\tEND;\r\nEND;"
        }
      ]
