      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\tzd\r\n-- Create date: <Create Date,,>\r\n-- Description:\tcheck if all the codes from input file is availanble in lookup table\r\n-- =============================================\r\nCREATE PROCEDURE [ConEd].[usp_Validation_CheckReadingCode]\r\n\t\r\nAS\r\nBEGIN\r\n\r\n\tDECLARE @BillingPeriod BillingPeriod\r\n\r\n\r\n\tDECLARE @errMessage VARCHAR(MAX)\r\n\r\n\tIF(EXISTS\r\n\t\t(\r\n\t\t\tSELECT *\r\n\t\t\tFROM ConEd.UploadConEdisonMeter AS ucm \r\n\t\t\tLEFT  JOIN (SELECT * FROM Billing.UtilityReadingCode WHERE UtilityCompanySeqid = 9) urc\r\n\t\t\tON ucm.ReadingCode  = urc.ReadingCode\r\n\t\t\tWHERE \r\n\t\t\turc.ReadingCode IS NULL \r\n\t\t)\r\n\t)\r\n\tBEGIN\r\n\t\tSET @errMessage = 'There is a missing reading code in UtilityReadingCode, please Add new code to table'\r\n\t\t;THROW 51000, @errMessage, 1;  \r\n\tEND  \r\n\r\nEND"
        }
