    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\tMubarak Abdella\r\n-- Create date: 2010 March 25\r\n-- Description:\tGet list of Pending SBMR\r\n-- =============================================\r\nCREATE PROCEDURE [SBMR].[usp_SBMR_getPendingSBMRsList]\r\nAS\r\nBEGIN\r\n\r\nSELECT DISTINCT \r\n                      u.ShortDesc AS UtilityCompany, h.SBMRHeaderSeqid, h.SbmrReferenceNumber, d.AgencyCodeOEC, d.AgencyShortDesc, d.AgencyDivisionSeqid, \r\n                      f.OecFacilityNumber, h.ELOAddress AS ServiceAddress, h.IsCompleted, h.SBMRAction, dbo.ConvertYYYYMMDDToDatetime(h.RequestedAccountEffectiveDate) \r\n                     AS RequestAccountEffectiveDate, d.AgencyName\r\nFROM SBMR.SBMRHeader AS h INNER JOIN\r\n                      Billing.UtilityCompany AS u ON h.CommodityUtilityCompanySeqid = u.UtilityCompanySeqid RIGHT JOIN\r\n                      SBMR.SBMRAccount AS sa ON h.SBMRHeaderSeqid = sa.SBMRHeaderSeqid LEFT JOIN\r\n                      Billing.Facility AS f ON h.FacilitySeqid = f.FacilitySeqid LEFT JOIN\r\n                      Billing.AgencyDivision AS d ON h.AgencyDivisionSeqid = d.AgencyDivisionSeqid\r\nWHERE (h.IsCompleted = 'N')\r\nORDER BY h.SbmrReferenceNumber DESC, UtilityCompany\r\nEND"
        }
      ]
