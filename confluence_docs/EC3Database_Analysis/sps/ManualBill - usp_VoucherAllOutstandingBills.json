    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "--******************************************************************************************************************************************************************************************\n--* Description: Quick and dirty vouchering of manual billing until we get the vouchering specs\r\n--*\t\t\t\t The SP vouchers any manual bill that hasnt been vouchered  yet \r\n--*\r\n--* Parameter(s):         \r\n--*    @AuthenticatedUserID int  - The user submitting the action,\r\n--*    BillingPeriod varchar(6)  - Current billing period\r\n--*    StatusCode  int output    - Execution Return Status \r\n--*\r\n--* Return:\t0 Success\r\n--*         9 Failure\r\n--*\r\n--* AUTHOR:       MOHAMMED BELARREM\r\n--* Created On:   04/28/2010\r\n--**************************************************************************************\r\n--* Date       Tech\t\tDescription of Change\r\n--* ---------- ----\t\t-------------------------------------------------------------\r\n--* 04/28/2010 MOH\t\tFirst Version  \r\n--* 10/28/2011 MOH\t\tupdate: Added vouchering fix until I finish the vouchering\r\n--******************************************************************************************************************************************************************************************\r\nCREATE PROCEDURE [ManualBill].[usp_VoucherAllOutstandingBills]\r\n(\r\n\t@AuthenticatedUserID AS INT,\r\n\t@BillingPeriod AS VARCHAR(6),\r\n\t@StatusCode AS INT OUTPUT\r\n)\r\nAS\r\nBegin\r\n\tSET @StatusCode = 9;\r\n\r\n\tDECLARE @RC AS INT, @UtilityCompanySeqid AS INT, @InvoiceBillingGroup AS INT;\r\n\r\n\tDECLARE voucher_cursor CURSOR FOR\r\n\tSELECT InvoiceAccountGroupSeqid, InvoiceAccountGroupUtiliyCompany FROM Billing.InvoiceAccountGroup\r\n\tWHERE InvoiceAccountGroupSeqid IN (SELECT InvoiceAccountGroupSeqid FROM Billing.InvoiceAccountGroup WHERE BillingType = 'M');\r\n \r\n\tOPEN voucher_cursor  \r\n\tFETCH NEXT FROM voucher_cursor INTO @InvoiceBillingGroup, @UtilityCompanySeqid\r\n\t\t\r\n\tWHILE (@@FETCH_STATUS = 0)\r\n\tBEGIN\r\n\t\tIF (EXISTS(SELECT BillingPeriod, AccountUtilityCompanySeqid, CurrentInvoiceAccountGroup, InitialPostingDate, InvoiceTrackingSeqid\r\n\t\t\tFROM ManualBill.AccountManualBillingHeader\r\n\t\t\tWHERE BillingPeriod = @BillingPeriod AND AccountUtilityCompanySeqid = @UtilityCompanySeqid\r\n\t\t\tAND CurrentInvoiceAccountGroup = @InvoiceBillingGroup AND InitialPostingDate IS NOT NULL\r\n\t\t\tAND InvoiceTrackingSeqid IS NULL))\r\n\t\tBEGIN\r\n\t\t\tEXECUTE @RC = [ManualBill].[usp_VoucherBillsByInvoiceBillingGroup]\r\n\t\t\t\t@AuthenticatedUserID, @BillingPeriod, @UtilityCompanySeqid, @InvoiceBillingGroup, @StatusCode OUTPUT\r\n\t\tEND;\r\n\t\t\r\n\t\tFETCH NEXT FROM voucher_cursor INTO @InvoiceBillingGroup, @UtilityCompanySeqid\r\n\tEND;\r\n\r\n\tCLOSE voucher_cursor\r\n\tDEALLOCATE voucher_cursor\r\n\r\n\t-- fix until we get the vouchering done\r\n\t-- voucher everything as 1\r\n\r\n\t-- get current period\r\n\tDECLARE @ManualBillingCurrentPeriod AS BillingPeriod;\r\n\tSELECT @ManualBillingCurrentPeriod = BillingPeriod FROM ManualBill.ManualBillingApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\r\n\tUPDATE ManualBill.AccountManualBillingHeader\r\n\tSET\tInvoiceTrackingSeqid\t\t = 1\r\n\t\t,VoucherBillingStatus\t\t = 'VC'\r\n\t\t,VoucherBillingStatusPeriod  = @ManualBillingCurrentPeriod\r\n\t\t,VoucheredAmount\t\t\t = ManualPaymentOverrideAmount\r\n\tWHERE BillingPeriod = @ManualBillingCurrentPeriod AND  InitialPostingDate IS NOT NULL;\r\n\t\t\r\n\tSET @StatusCode = 0;\r\nEND;"
        }
      ]
    }
  ]
