          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[usp_UpdateAccountTensionFromMeters]\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\t-- Update tension in meter table from upcoming meter billing files\r\n\tUPDATE M2\r\n\tSET M2.Tension = t.Tension\r\n\t\t,M2.FireAuditTrigger = 'Y'\r\n\t\t,M2.LastUpdate = GETDATE()\r\n\t\t,M2.Notes = 'Tension is updated from meterbilling file.'\r\n\tFROM Billing.Meter AS M2\r\n\t\tINNER JOIN (SELECT MB.UniqueMeterSeqID\r\n\t\t\t\t,MIN(MB.MeterTensionCode) AS Tension\r\n\t\t\t\t,COUNT(DISTINCT MB.MeterTensionCode) AS cnt\r\n\t\t\tFROM Nypa.UploadNYPAMeterBilling AS MB\r\n\t\t\t\tINNER JOIN Billing.Meter AS M ON M.UniqueMeterSeqid = MB.UniqueMeterSeqID\r\n\t\t\t\t\tAND M.IsCurrentRecord = 'Y'\r\n\t\t\tGROUP BY MB.UniqueMeterSeqID) AS T ON T.UniqueMeterSeqID = m2.UniqueMeterSeqid\r\n\t\t\tAND M2.IsCurrentRecord = 'Y'\r\n\tWHERE ISNULL(M2.Tension, '') <> T.Tension;\r\n\r\n\t-- update account tension from meter table , ignoring numeric records\r\n\tUPDATE ACT\r\n\tSET ACT.Tension = T2.Tension\r\n\t\t,ACT.FireAuditTrigger = 'Y'\r\n\t\t,ACT.LastUpdate = GETDATE()\r\n\t\t,ACT.Notes = 'Tension is updated from billing files and meter table'\r\n\tFROM Billing.Account AS ACT\r\n\t\tINNER JOIN Billing.Meter AS M ON M.UniqueAccountSeqID = ACT.UniqueAccountSeqid\r\n\t\t\tAND M.IsCurrentRecord = 'Y' AND ACT.IsCurrentRecord = 'Y'\r\n\t\tINNER JOIN (SELECT A.UniqueAccountSeqid\r\n\t\t\t\t,MIN(M.Tension) AS Tension\r\n\t\t\tFROM Billing.Meter AS M\r\n\t\t\t\tINNER JOIN Billing.Account AS A ON M.UniqueAccountSeqId = A.UniqueAccountSeqid\r\n\t\t\t\t\tAND A.IsCurrentRecord = 'Y' AND M.IsCurrentRecord = 'Y'\r\n\t\t\tWHERE A.CurrentInvoiceAccountGroup = 1\r\n\t\t\t\tAND A.IsActive = 1 AND m.IsActive = 1\r\n\t\t\t\tAND M.Tension IN ('H', 'L', 'N')\r\n\t\t\tGROUP BY A.UniqueAccountSeqid) AS T2 ON T2.UniqueAccountSeqid = ACT.UniqueAccountSeqid\r\n\t\t\tAND ACT.IsCurrentRecord = 'Y' AND ACT.CurrentInvoiceAccountGroup = 1\r\n\tWHERE ACT.Tension <> T2.Tension AND m.IsActive = 1\r\n\t\tAND ACT.UniqueAccountSeqid NOT IN (SELECT UniqueAccountSeqID\r\n\t\t\tFROM Billing.Meter\r\n\t\t\tWHERE Tension IN ('H','L')\r\n\t\t\t\tAND IsActive = 1\r\n\t\t\tGROUP BY UniqueAccountSeqID\r\n\t\t\tHAVING COUNT(DISTINCT Tension) > 1);\r\nEND;"
        }
