      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "6. Potential Issues or Risks"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Dirty Reads",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of "
                },
                {
                  "type": "text",
                  "text": "READ UNCOMMITTED",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " can result in dirty reads, where the procedure might retrieve data that is not yet committed and could be rolled back."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Data Integrity",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": If there are any data integrity issues in the source tables (e.g., duplicate records or incorrect relationships), the results may be inaccurate."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Scalability",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": As the volume of data grows, the performance of the subqueries and joins may degrade if not optimized with appropriate indexing."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Concurrency",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": While the procedure avoids locking issues with "
                },
                {
                  "type": "text",
                  "text": "READ UNCOMMITTED",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", it does not handle concurrent data modifications, which could lead to inconsistent results."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_GetAccountMeterExchangeHistoryForCleanEnergyAccounts]\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT DISTINCT EDT.EnergyType\r\n\t\t,UC.ShortDesc AS UtilityCompany\r\n\t\t,A.UniqueAccountSeqid AS UniqueAccountSeqId\r\n\t\t,M.UniqueMeterSeqid AS UniqueMeterSeqId\r\n\t\t,A.CurrentAccountNumber AS CurrentAccountNumber\r\n\t\t,STUFF(\r\n\t\t\t\t(\tSELECT DISTINCT ',' + A2.OriginalAccountNumber FROM Billing.Account AS A2\r\n\t\t\t\t\tWHERE A.CurrentAccountNumber <> A2.OriginalAccountNumber AND A.UniqueAccountSeqid = A2.UniqueAccountSeqid\r\n\t\t\t\t\tFOR XML PATH('')\r\n\t\t\t\t), 1, 1, '') AS PreviousAccountNumbers\r\n\t\t, M.CurrentMeterNumber\r\n\t\t,STUFF(\r\n\t\t\t\t(\tSELECT DISTINCT ',' + M2.OriginalMeterNumber FROM Billing.Meter AS M2\r\n\t\t\t\t\tWHERE M.CurrentMeterNumber <> M2.OriginalMeterNumber AND M.UniqueMeterSeqid = M2.UniqueMeterSeqid\r\n\t\t\t\t\tFOR XML PATH('')\r\n\t\t\t\t), 1, 1, '') AS PreviousMeterNumbers\r\n\tFROM Billing.Meter AS M\r\n\t\tINNER JOIN Solar.SiteHardware AS SSH ON SSH.UniqueMeterSeqID = M.UniqueMeterSeqid AND SSH.DataCategory = 1 AND SSH.Active = 1\r\n\t\tINNER JOIN Billing.Account AS A ON A.UniqueAccountSeqid = M.UniqueAccountSeqID\r\n\t\tINNER JOIN Billing.UtilityCompany AS UC ON UC.UtilityCompanySeqid = A.UtilityAccountProvider\r\n\t\tINNER JOIN Billing.EnergyDeliveryType AS EDT ON EDT.EnergyDeliveryType = A.EnergyAccountDescription\r\n\tWHERE M.IsCurrentRecord ='Y' AND A.IsCurrentRecord='Y'\r\n\tGROUP BY EDT.EnergyType\r\n\t\t,UC.ShortDesc\r\n\t\t,A.UniqueAccountSeqid\r\n\t\t,M.UniqueMeterSeqid\r\n\t\t,A.CurrentAccountNumber\r\n\t\t,A.CurrentAccountNumber\r\n\t\t,M.CurrentMeterNumber\r\n\t\t,M.CurrentMeterNumber;\r\nEND;"
        }
      ]
    }
  ]
