        {
          "type": "text",
          "text": "--***********************************************************************************************************\n\t--* Description:\tPop latest period from Temporal TemporalAccountLevelSummaryForDollarsBtusAndCo2\r\n\t--*\r\n\t--* AUTHOR:       MOHAMMED BELARREM\r\n\t--* Created On:   02/03/2016\r\n\t--\r\n\t--* History of changes\r\n\t--* ---------- ---\t-------------------------------------------------------------\r\n\t--* 02/03/2016 MB  First Version \r\n\t--***********************************************************************************************************\r\n\r\nCREATE  PROCEDURE [Temporal].[usp_RemoveLastPublishedBillingPeriodFromTemporalAccountLevelSummaryForDollarsBtusAndCo2]\r\n\t@PublishedBillingPeriod VARCHAR(6)\r\nAS\r\n\r\n\tDECLARE @MaxPeriod VARCHAR(6) = (SELECT MAX(EffectiveStartPeriod) FROM Published.TemporalAccountLevelSummaryForDollarsBtusAndCo2)\r\n     \r\n\t-- Make sure user is removing latest period\r\n\tIF ( @MaxPeriod <> @PublishedBillingPeriod  )\r\n\tBEGIN\r\n\t\tRAISERROR ('ERROR: You can only remove the latest period, this period: %s', 12, 1, @MaxPeriod) \r\n\t\tRETURN;\r\n\tEND\r\n\r\n\r\n\tDELETE FROM Published.TemporalAccountLevelSummaryForDollarsBtusAndCo2 WHERE EffectiveStartPeriod = @PublishedBillingPeriod\r\n\r\n\tUPDATE Published.TemporalAccountLevelSummaryForDollarsBtusAndCo2\r\n\tSET EffectiveEndPeriod = '999912'\r\n\tWHERE EffectiveEndPeriod = @PublishedBillingPeriod\r\n\r\n\tPRINT 'Removed billing Period: '+@PublishedBillingPeriod;"
        }
