      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [Contact].[usp_MassDist_GetXMLMassDistributionTreeDataGroupByAgency]\r\n\t@distributionProfileID INT\r\nAS\r\nBEGIN\r\n\tDECLARE @ContactProfileSeqID INT\r\n\tDECLARE @tblPrimaryContact TABLE\r\n\t(\r\n\t\tContactName varchar(100),\r\n\t\tContactAddressSeqId INT,\r\n\t\tAgencyDivisionSeqId int\r\n\t)\r\n\t\r\n\tDECLARE @tblAgency TABLE\r\n\t(\r\n\t\tAgencyDivisionName VARCHAR(100),\r\n\t\tAgencyDivisionSeqId int\r\n\t)\r\n\t\r\n\t-- It is possible that distribution is constructed using contact category (contact profile). If contact profile is not null, use contact profile to retrieve primary contact list \r\n\tSELECT @ContactProfileSeqID = ContactProfileSeqID FROM Contact.MassDistributionProfile WHERE MassDistributionProfileSeqid = @distributionProfileID\r\n\t\r\n\t-- 1) generate primary contact list\r\n\tIF(@ContactProfileSeqID IS NULL)\r\n\tBEGIN\r\n\t\tINSERT INTO @tblPrimaryContact\r\n\t\t        ( ContactName ,\r\n\t\t          ContactAddressSeqId,\r\n\t\t          AgencyDivisionSeqId\r\n\t\t        )\r\n\t\tSELECT DISTINCT pContact.ContactLastName + ', ' + pContact.ContactFirstName + '(' + pContact.EmailAddress + ')' as '@ContactName',\r\n\t\t\tpContact.ContactAddressSeqId as '@ContactAddressSeqId',\r\n\t\t\tisnull(pContact.AgencyContact, -1)\r\n\t\tFROM\r\n\t\t\tContact.MassDistributionListReportContext as pMd\r\n\t\t\tinner join\r\n\t\t\tContact.ContactAddress as pContact\r\n\t\t\ton pMd.ContactAddressSeqid = pContact.ContactAddressSeqid\r\n\t\t\tWHERE\r\n\t\t\tpMd.MassDistributionProfileSeqid = @distributionProfileID\r\n\t\t\tAND \r\n\t\t\tpContact.IsRemoved = 'N'\r\n\t\tORDER BY [@ContactName]\r\n\tEND\r\n\tELSE\r\n\tbegin\r\n\t\tINSERT INTO @tblPrimaryContact\r\n\t\t        ( ContactName ,\r\n\t\t          ContactAddressSeqId,\r\n\t\t          AgencyDivisionSeqId\r\n\t\t        )\r\n\t\tSELECT DISTINCT pContact.ContactLastName + ', ' + pContact.ContactFirstName + '(' + pContact.EmailAddress + ')' as '@ContactName',\r\n\t\t\tpContact.ContactAddressSeqId as '@ContactAddressSeqId',\r\n\t\t\tisnull(pContact.AgencyContact, -1)\r\n\t\tFROM Contact.ContactAddress AS pContact\r\n\t\tINNER JOIN Contact.ContactProfileAddress AS CPA\r\n\t\tON pContact.ContactAddressSeqid = CPA.ContactAddress\r\n\t\tINNER JOIN Contact.ContactProfile AS cp\r\n\t\tON CPA.ContactProfile = cp.ContactProfileSeqid\r\n\t\tWHERE cp.ContactProfileSeqid = @ContactProfileSeqID\r\n\t\tAND pContact.IsRemoved = 'N'\r\n\t\tORDER BY [@ContactName]\r\n\tEND\r\n\t\r\n\t\t\r\n\t-- 2) Agency for the primary contacts\r\n\tINSERT @tblAgency\r\n\t        ( AgencyDivisionName ,\r\n\t          AgencyDivisionSeqId\r\n\t        )\r\n\tSELECT DISTINCT \r\n\t\tisnull(ad.AgencyCodeOEC + '-' + ad.AgencyName, 'Other') as AgencyDivisionName,\r\n\t\tisnull(ad.AgencyDivisionSeqID, -1) as AgencyDivisionSeqId\r\n\tFROM Billing.AgencyDivision AS ad\r\n\tRIGHT JOIN @tblPrimaryContact AS pc\r\n\tON ad.AgencyDivisionSeqid = pc.AgencyDivisionSeqId\r\n\tORDER BY AgencyDivisionName\r\n\t\r\n\t-- 3) return data\r\n\tSELECT \r\n\t\tag.AgencyDivisionName AS '@AgencyDivisionName',\r\n\t\tag.AgencyDivisionSeqID AS '@AgencyDivisionSeqID',\r\n\t\t(\r\n\t\t\tSELECT pContact.ContactName as '@ContactName',\r\n\t\t\tpContact.ContactAddressSeqId as '@ContactAddressSeqId',\r\n\t\t\t(\t\r\n\t\t\t\tselect secondaryContact.ContactLastName + ', ' + secondaryContact.ContactFirstName + '(' + secondaryContact.EmailAddress + ')' as '@ContactName',\r\n\t\t\t\t\tmdr.SecondaryEmailRecipient AS '@ContactAddressSeqid'\r\n\t\t\t\tfrom Contact.MassDistributionListEmailRecipient as mdr\r\n\t\t\t\tinner join Contact.ContactAddress as secondaryContact\r\n\t\t\t\ton mdr.SecondaryEmailRecipient = secondaryContact.ContactAddressSeqid\r\n\t\t\t\twhere mdr.ContactAddressSeqid = pContact.ContactAddressSeqid\r\n\t\t\t\tFOR XML PATH('SecondaryContact'), TYPE\r\n\t\t\t)\r\n\t\t\tfrom\r\n\t\t\t@tblPrimaryContact as pContact\r\n\t\t\tWHERE pContact.AgencyDivisionSeqId = ag.AgencyDivisionSeqId\r\n\t\t\tFOR XML PATH('PrimaryContact'), TYPE\r\n\t\t)\r\n\tFROM @tblAgency AS ag\r\n\tFOR XML PATH('Agency'), ROOT('Contacts')\r\n\t\r\n\r\n\r\nEND"
        }
      ]
    }
  ]
}