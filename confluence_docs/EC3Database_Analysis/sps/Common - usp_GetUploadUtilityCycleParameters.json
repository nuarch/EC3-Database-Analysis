        {
          "type": "text",
          "text": "CREATE PROCEDURE [Common].[usp_GetUploadUtilityCycleParameters] @UtilityCompanySeqid int , @InvoiceAccountGroupSeqid int , @BillingPeriod varchar(6) , @BillCreationDate varchar(8)  OUTPUT , @PostMarkDate varchar(8)  OUTPUT , @DatePaymentDue varchar(8)  OUTPUT , @DateAcceptanceIntoOEC varchar(8)  OUTPUT , @StatusCode int  OUTPUT\n   \r\n AS SELECT @PostMarkDate = PostMarkDate, @DatePaymentDue = DatePaymentDue, @DateAcceptanceIntoOEC = DateAcceptanceIntoOEC, @BillCreationDate = BillCreationDate\r\nFROM Common.UploadCycleParameters\r\nWHERE (InvoiceAccountGroupSeqid = @InvoiceAccountGroupSeqid) AND (UtilityCompanySeqid = @UtilityCompanySeqid) AND (BillingPeriod = @BillingPeriod)"
        }
