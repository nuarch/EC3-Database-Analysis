        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE    PROCEDURE [Common].[usp_ChangeCurrentBillingPeriod]\n\t@SuccessfulCreation int output\r\nAS\r\n/* =============================================\r\n-- =============================================  */\r\n--\r\nDECLARE @RC int\r\ndeclare\t@CurrentProcessingPeriodCompleted varchar(8)\r\ndeclare\t@BillingPeriod varchar(6)\r\ndeclare\t@PreviousBillingPeriod varchar(6)\r\n\r\nSELECT @BillingPeriod = BillingPeriod, @PreviousBillingPeriod = PreviousBillingPeriodOneMonth\r\nFROM Billing.ApplicationTimeFrame\r\nWHERE (CurrentProcessingPeriod = 'Y')\r\n--\r\nSELECT @BillingPeriod, @PreviousBillingPeriod\r\n--\r\nEXEC @RC = [Common].[usp_PrepareForNextBillingPeriod] null, @BillingPeriod, @PreviousBillingPeriod,null\r\n--\r\n-- Set parameter values\r\nEXEC @RC = [Common].[usp_InsertNewCurrentBillingPeriod] null \r\n--\r\nset @SuccessfulCreation = 100"
        }
      ]
    }
