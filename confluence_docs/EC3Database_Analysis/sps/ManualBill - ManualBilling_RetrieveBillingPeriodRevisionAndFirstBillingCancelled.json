          "type": "text",
          "text": "CREATE PROCEDURE [ManualBill].[ManualBilling_RetrieveBillingPeriodRevisionAndFirstBillingCancelled]\n(\r\n\t@FromDate AS VARCHAR(8)\r\n\t,@ToDate AS VARCHAR(8)\r\n\t,@UniqueAccountSeqId AS INT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\t\r\n\tDECLARE @FromPeriod AS VARCHAR(6), @ToPeriod AS VARCHAR(6), @InvoiceAccountGroup AS INT, @UtilityCompany AS INT\r\n\t\t,@TripNumber AS CHAR(2), @BillingCycle AS CHAR(1);\r\n\r\n\tSELECT @TripNumber = A.TripNumber, @BillingCycle = A.BillingCycle, @InvoiceAccountGroup = A.CurrentInvoiceAccountGroup\r\n\t\t,@UtilityCompany = A.UtilityAccountProvider\r\n\tFROM Billing.Account AS A WHERE A.UniqueAccountSeqid = @UniqueAccountSeqId AND A.IsCurrentRecord ='Y' AND A.IsActive = 1;\r\n\r\n\t-- get the lower bound period\r\n\tSELECT TOP (1) @FromPeriod = BillingPeriod\r\n\tFROM ManualBill.ReadingScheduleManualBilling\r\n\tWHERE UtilityCompanySeqid = @UtilityCompany AND InvoiceAccountGroupSeqid = @InvoiceAccountGroup AND TripNumber = @TripNumber\r\n\t\tAND BillingCycle = @BillingCycle AND MeterReadingFromDate <= @FromDate AND @FromDate < MeterReadingToDate\r\n\tORDER BY BillingPeriod ASC;\r\n\r\n\t-- get the upper bound period\r\n\tSELECT TOP (1) @ToPeriod = BillingPeriod\r\n\tFROM ManualBill.ReadingScheduleManualBilling\r\n\tWHERE UtilityCompanySeqid = @UtilityCompany AND InvoiceAccountGroupSeqid = @InvoiceAccountGroup AND TripNumber = @TripNumber\r\n\t\tAND BillingCycle = @BillingCycle AND MeterReadingFromDate < @ToDate AND @ToDate <= MeterReadingToDate\r\n\tORDER BY BillingPeriod ASC;\r\n\r\n\t-- get the periods in between\r\n\t;WITH ce AS(SELECT BillingPeriod, MeterReadingFromDate AS FromDate, MeterReadingToDate AS ToDate\r\n\t\t\t,dbo.CalculateNumberOfBillingDays(MeterReadingFromDate, MeterReadingToDate) AS DeltaDays\r\n\t\t\t,dbo.CalculateNumberOfBillingDays((SELECT CASE WHEN MeterReadingFromDate > @FromDate THEN MeterReadingFromDate ELSE @FromDate END), (SELECT CASE WHEN MeterReadingToDate < @ToDate THEN MeterReadingToDate ELSE @ToDate END)) AS BilledDays\r\n\t\tFROM ManualBill.ReadingScheduleManualBilling\r\n\t\tWHERE UtilityCompanySeqid = @UtilityCompany AND InvoiceAccountGroupSeqid = @InvoiceAccountGroup AND TripNumber = @TripNumber\r\n\t\t\tAND BillingCycle = @BillingCycle AND BillingPeriod BETWEEN @FromPeriod AND @ToPeriod)\r\n\tSELECT MAX(ce.BillingPeriod) AS BillingPeriodRevision, MIN(ce.BillingPeriod) AS FirstPeriodCancaled\r\n\tFROM ce\r\n\tWHERE CASE WHEN 1.00 * ce.BilledDays / ce.DeltaDays > 0.5 THEN ce.BillingPeriod ELSE 'none' END <> 'none';\r\nEND;"
        }
