    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [ManualBill].[usp_Processing_PreProcessingStatusReport_New]\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @BillingPeriod AS VARCHAR(6);\r\n\r\n\tSELECT @BillingPeriod = BillingPeriod FROM ManualBill.ManualBillingApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\r\n\tSELECT AccountData.AccountUtilityCompanySeqid\r\n\t\t,AccountData.CurrentInvoiceAccountGroup\r\n\t\t,AccountData.InvoiceAccountBillingGroupDesc\r\n\t\t,AccountData.ActiveAccounts\r\n\t\t,ISNULL(MBData.Received, 0) AS Received\r\n\t\t,ISNULL(MBData.Vouchered, 0) AS Vouchered\r\n\t\t,ISNULL(MBData.Transferred, 0) AS Transferred\r\n\t\t,ISNULL(MBData.Unvouchered, 0) AS Unvouchered\r\n\t\t,AccountData.JobStatus AS [Status]\r\n\tFROM (SELECT DISTINCT IAG.InvoiceAccountGroupUtiliyCompany AS AccountUtilityCompanySeqid\r\n\t\t\t,A.CurrentInvoiceAccountGroup\r\n\t\t\t,IAG.InvoiceAccountBillingGroupDesc\r\n\t\t\t,COUNT(CASE A.IsActive WHEN 1 THEN 1 ELSE 0 END) AS ActiveAccounts\r\n\t\t\t,MAX(ISNULL(S.[Name], 'N/A')) AS JobStatus\r\n\t\tFROM Billing.InvoiceAccountGroup AS IAG\r\n\t\t\tINNER JOIN Billing.Account AS A ON A.CurrentInvoiceAccountGroup = IAG.InvoiceAccountGroupSeqid\r\n\t\t\tINNER JOIN Billing.Meter AS M ON A.UniqueAccountSeqid = M.UniqueAccountSeqID\r\n\t\t\tLEFT JOIN (SELECT J.InvoiceBillingGroupSeqId, J.JobStatusId\r\n\t\t\t\tFROM ManualBill.InvoiceBillingGroupJob AS J\r\n\t\t\t\tWHERE J.BillingPeriod = @BillingPeriod AND J.InvoiceBillingGroupJobSeqId IN (SELECT MAX(InvoiceBillingGroupJobSeqId) \r\n\t\t\t\t\tFROM ManualBill.InvoiceBillingGroupJob\r\n\t\t\t\t\tWHERE BillingPeriod = @BillingPeriod\r\n\t\t\t\t\tGROUP BY InvoiceBillingGroupSeqId)) AS JS ON JS.InvoiceBillingGroupSeqId = IAG.InvoiceAccountGroupSeqid\r\n\t\t\tLEFT JOIN [Lookup].JobStatus AS S ON S.JobStatusId = JS.JobStatusId\r\n\t\tWHERE A.AccountStatus IN ('46' ,'AC', '27', '28') AND A.ManualDataEntry = 'Y' AND A.IsCurrentRecord = 'Y'\r\n\t\t\tAND IAG.Active = 1 AND M.IsCurrentRecord = 'Y'\r\n\t\tGROUP BY IAG.InvoiceAccountGroupUtiliyCompany, A.CurrentInvoiceAccountGroup, IAG.InvoiceAccountBillingGroupDesc) AS AccountData\r\n\t\tLEFT JOIN (SELECT CurrentInvoiceAccountGroup\r\n\t\t\t\t,COUNT(CASE InitialPostingDate WHEN NULL THEN 0 ELSE 1 END) AS Received\r\n\t\t\t\t,COUNT(CASE InvoiceTrackingSeqid WHEN NULL THEN 0 ELSE 1 END) AS Vouchered\r\n\t\t\t\t,SUM(CASE WHEN ProcessedInTheCurrentPeriod = 'Y' THEN 1 ELSE 0 END) AS Transferred\r\n\t\t\t\t,COUNT(*) - COUNT(CASE InvoiceTrackingSeqid WHEN NULL THEN 0 ELSE 1 END) AS Unvouchered\r\n\t\t\tFROM ManualBill.AccountBillingEntry\r\n\t\t\tWHERE BillingPeriod = @BillingPeriod AND InitialPostingDate IS NOT NULL\r\n\t\t\tGROUP BY CurrentInvoiceAccountGroup) AS MBData ON MBData.CurrentInvoiceAccountGroup = AccountData.CurrentInvoiceAccountGroup\r\n\tORDER BY AccountData.InvoiceAccountBillingGroupDesc;\r\nEND;"
        }
      ]
    }
  ]
}