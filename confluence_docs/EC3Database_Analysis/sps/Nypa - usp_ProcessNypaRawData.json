          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Data Preparation",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ":"
                }
              ]
            },
            {
              "type": "bulletList",
              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "type": "text",
                          "text": "Several tables in the "
                        },
                        {
                          "type": "text",
                          "text": "Nypa",
                          "marks": [
                            {
                              "type": "code"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " schema are truncated to remove existing data."
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "type": "text",
                          "text": "The identity columns of these tables are reseeded to start from 1, ensuring that new data entries begin with a consistent identity value."
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Final Configuration",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ":"
                }
              ]
            },
            {
              "type": "bulletList",
              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "type": "text",
                          "text": "The procedure ensures that "
                        },
                        {
                          "type": "text",
                          "text": "xp_cmdshell",
                          "marks": [
                            {
                              "type": "code"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " is disabled after its use to prevent unauthorized command execution."
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "5. Performance Considerations"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Use of `xp_cmdshell`",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Enabling "
                },
                {
                  "type": "text",
                  "text": "xp_cmdshell",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " can pose security risks and should be used cautiously. Its temporary enabling and disabling add overhead to the procedure."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Truncation and Reseeding",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Truncating tables and reseeding identity columns are efficient operations but can be resource-intensive if the tables are large."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "SSIS Package Execution",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The performance of the SSIS package execution depends on the complexity of the package and the network speed, as it is accessed from a network location."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "6. Potential Issues or Risks"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Security Risks",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of "
                },
                {
                  "type": "text",
                  "text": "xp_cmdshell",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " can expose the system to security vulnerabilities if not properly managed. It is crucial to ensure that only authorized users can execute this procedure."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Output Parameter Usage",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The "
                },
                {
                  "type": "text",
                  "text": "@Status",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " output parameter is not utilized, which may lead to confusion or errors if other systems expect a status code."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Hardcoded Paths",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The SSIS package path is hardcoded, which can lead to maintenance challenges if the path changes. It would be beneficial to store such configurations in a more flexible manner, such as a configuration table or file."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Error Handling",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure lacks error handling, which means any failure in executing the SSIS package or truncating tables will not be captured or logged, potentially leading to data inconsistencies or loss of traceability."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Nypa].[usp_ProcessNypaRawData]\n(\r\n\t@Status AS INT OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\t--****************************************************************************\r\n\t--* AUTHOR: Peter Heller (PAH)\r\n\t--****************************************************************************\r\n\t--* Date       Tech  Description of Change\r\n\t--* ---------- ----  ---------------------------------------------------------\r\n\t--* 10/17/2006 PAH   First Version\r\n\t--* 09/26/2018 ZD\t Updated the SSIS package name to point to the latest one.\r\n\t--****************************************************************************\r\n\r\n\t/*1. Load data into preload table*/\r\n\tDECLARE @ssispath AS VARCHAR(1000), @cmd AS VARCHAR(1000);\r\n\t/*Upload ConEdison Raw Data*/\r\n\r\n\t--SET @ssispath = '\\\\msdcasnetapp01m\\shr_ec3_archive1$\\SSISpackage\\SSISDataUpload\\NypaWithStandby.dtsx'\r\n\tSET @ssispath = '\\\\dcas.nycnet\\dfs\\shr_ec3_archive1$\\SSISpackage\\SSISDataUpload\\NypaAsOf202309.dtsx';\r\n\tSET @cmd = 'dtexec /f \"' + @ssispath + '\"'; -- set ssis path\r\n\tSET @cmd = @cmd + ' /SET \\Package.Variables[User::DatabaseName].Properties[Value];\"' + DB_NAME() + '\"';\r\n\tSET @cmd = @cmd + ' /SET \\Package.Variables[User::ServerName].Properties[Value];\"' + @@SERVERNAME + '\"';\r\n\r\n\tEXEC sp_configure 'show advanced options', 1;\r\n\tRECONFIGURE;\r\n\tEXEC sp_configure 'xp_cmdshell', 1;\r\n\tRECONFIGURE;\r\n\tEXEC xp_cmdshell @cmd;\r\n\r\n\t/************************* End Preload Data *********************/\r\n\r\n\t/*2. prepare upload table*/\r\n\tTRUNCATE TABLE Nypa.UploadNYPAEncoreMonthlyBilling;\r\n\tTRUNCATE TABLE Nypa.UploadNYPACoverSheet;\r\n\tTRUNCATE TABLE Nypa.UploadNYPAExchangeData;\r\n\tTRUNCATE TABLE Nypa.UploadNYPAAccountBilling;\r\n\tTRUNCATE TABLE Nypa.UploadNYPAMeterBilling;\r\n\tTRUNCATE TABLE Nypa.UploadNypaAllActiveAccounts;\r\n\tTRUNCATE TABLE Nypa.UploadNYPAKvarAccountMeterDetail;\r\n\t----\r\n\tDBCC CHECKIDENT ('Nypa.UploadNYPAEncoreMonthlyBilling', RESEED, 1);\r\n\tDBCC CHECKIDENT ('Nypa.UploadNYPACoverSheet', RESEED, 1);\r\n\tDBCC CHECKIDENT ('Nypa.UploadNYPAExchangeData', RESEED, 1);\r\n\tDBCC CHECKIDENT ('Nypa.UploadNYPAAccountBilling', RESEED, 1);\r\n\tDBCC CHECKIDENT ('Nypa.UploadNYPAMeterBilling', RESEED, 1);\r\n\tDBCC CHECKIDENT ('Nypa.UploadNYPAKvarAccountMeterDetail', RESEED, 1);\r\n\tDBCC CHECKIDENT ('Nypa.UploadNypaAllActiveAccounts', RESEED, 1);\r\n\r\n\tEXEC sp_configure 'show advanced options', 1;\r\n\tRECONFIGURE;\r\n\tEXEC sp_configure 'xp_cmdshell', 0;\r\n\tRECONFIGURE;\r\nEND;"
        }
      ]
    }
  ]
}