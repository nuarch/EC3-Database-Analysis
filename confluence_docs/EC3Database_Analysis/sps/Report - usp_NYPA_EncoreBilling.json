    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE     PROCEDURE [Report].[usp_NYPA_EncoreBilling] @StartingBillingPeriod varchar(6), @EndingBillingPeriod varchar(6)\nas\r\n\r\nselect  Billing.AccountCICBilling.IsSenyCic ,\r\n        Billing.AccountCICBilling.CICBillingAccount ,\r\n        Billing.AccountCICBilling.OriginalAccountNumber ,\r\n        Billing.AccountCICBilling.BillingPeriod as NypaEncoreInvoicePeriod,\r\n        dbo.CalculatePreviousBillingPeriod(Billing.AccountCICBilling.BillingPeriod,'M') as  BillingPeriod,\r\n        Billing.AccountCICBilling.AccountInvoiceEncorePaidOn ,\r\n        Billing.AccountCICBilling.CurrentInvoiceAccountCICGroup ,\r\n        Billing.AccountCICBilling.CurrentCICBillingInvoiceContractBudgetLine ,\r\n        Billing.AccountCICBilling.ProjectTrackEncoreNumber ,\r\n        Billing.AccountCICBilling.IsConventionalCICContract ,\r\n        Billing.AccountCICBilling.BillingDate ,\r\n        cast(Billing.AccountCICBilling.NypaSAPLoanNumber as int) as NypaSAPLoanNumber ,\r\n        Billing.AccountCICBilling.NypaProjectNumber ,\r\n        Billing.AccountCICBilling.CICNumber ,\r\n        Billing.AccountCICBilling.CapitalExpenditure ,\r\n        Billing.AccountCICBilling.CICPaymentType ,\r\n        Billing.AccountCICBilling.ProgramCode ,\r\n        Billing.AccountCICBilling.ProgramCodeDescription ,\r\n        Billing.AccountCICBilling.NYPAFinanceCode ,\r\n        Billing.AccountCICBilling.FinanceCodeDescription ,\r\n        Billing.AccountCICBilling.RateAsOfPeriod ,\r\n        Billing.AccountCICBilling.AnnualInterestRate ,\r\n        Billing.AccountCICBilling.TotalNumberOfPayments ,\r\n        cast(Billing.AccountCICBilling.TotalPaymentsRemainingAfterPayment as int) as TotalPaymentsRemainingAfterPayment ,\r\n        Billing.AccountCICBilling.FinalCICInstalledCost ,\r\n        Billing.AccountCICBilling.FinalCICInstalledInterest ,\r\n        Billing.AccountCICBilling.RemainderLoanInterest ,\r\n        Billing.AccountCICBilling.MonthlyPaymentAmount ,\r\n        Billing.AccountCICBilling.RemainingPrincipalAmountAfterPayment ,\r\n        Billing.AccountCICBilling.FinalCicAmortizedProjectCost ,\r\n        Billing.AccountCICBilling.PrincipalAmountUsedForARMCalculation ,\r\n        Billing.AccountCICBilling.ProjectPeriodFirstBilled ,\r\n        Billing.AccountCICBilling.PreviousCICNumber ,\r\n        Billing.AccountCICBilling.InitialPostingDate ,\r\n        Billing.AccountCICBilling.CICProjectDescription ,\r\n        dateadd(month,\r\n                cast(Billing.AccountCICBilling.TotalPaymentsRemainingAfterPayment as int),\r\n                Billing.AccountCICBilling.BillingPeriod + '01') as PayOffPeriod ,\r\n        Billing.AgencyDivision.AgencyCodeOEC ,\r\n        Billing.AgencyDivision.AgencyShortDesc ,\r\n        Billing.Facility.OecFacilityNumber ,\r\n        Billing.Facility.Address1 ,\r\n        Billing.Facility.FacilityName ,\r\n        Billing.UtilityCompany.ShortDesc ,\r\n        Billing.Account.CurrentAccountNumber\r\nFROM Billing.Facility\r\n        inner join Billing.Account on Billing.Facility.FacilitySeqid = Billing.Account.FacilityAccount\r\n        inner join Billing.UtilityCompany on Billing.Account.UtilityAccountProvider = Billing.UtilityCompany.UtilityCompanySeqid\r\n        inner join Billing.AgencyDivision on Billing.Account.AgencyAccount = Billing.AgencyDivision.AgencyDivisionSeqid\r\n        inner join Billing.AccountCICBilling on Billing.Account.OriginalAccountNumber = Billing.AccountCICBilling.OriginalAccountNumber\r\nwhere   ( @StartingBillingPeriod<= dbo.CalculatePreviousBillingPeriod(Billing.AccountCICBilling.BillingPeriod,'M') and dbo.CalculatePreviousBillingPeriod(Billing.AccountCICBilling.BillingPeriod,'M')<= @EndingBillingPeriod)"
        }
      ]
    }
  ]
