    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[usp_GetAccountProgramAttributeTypeByAccountUniqueSeqID]\n(\r\n\t@AccountUniqueSeqID AS INT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT\r\n\t\tAP.AccountProgramAttributeTypeSeqid,\r\n\t\tAP.AccountUniqueSeqID,\r\n\t\tAP.AttributeUpdatedOn,\r\n\t\tAP.DateAdded,\r\n\t\tAP.LastUpdate,\r\n\t\tAP.Notes,\r\n\t\tAP.ProgramAttributeTypeSeqid,\r\n\t\tAP.AttributeTypeOptionSeqid,\r\n\t\tPA.[Description] AS ProgramAttributeTypeDescription,\r\n\t\tPA.ToolTip,\r\n\t\tATO.[Description] AS AttributeTypeOptionDescription,\r\n\t\tATO.ShortDescription AS AttributeTypeOptionShortDescription,\r\n\t\tAP.AttributeStatusSeqId,\r\n\t\tAP.AttributeStatusOptionSeqId,\r\n\t\tAST.[Description] AS AttributeStatusOptionDescription,\r\n\t\tAST.ShortDescription AS AttributeStatusOptionShortDescription,\r\n\t\tPA.DisplayOrder,\r\n\t\tISNULL(M.UserFirstName, 'System') AS UserFirstName,\r\n\t\tISNULL(M.UserLastName, '') AS UserLastName\r\n\tFROM Billing.AccountProgramAttributeType AS AP\r\n\t\tINNER JOIN\tBilling.Account AS A ON AP.AccountUniqueSeqID = A.UniqueAccountSeqid\r\n\t\tINNER JOIN Billing.ProgramAttributeType AS PA ON AP.ProgramAttributeTypeSeqid = PA.ProgramAttributeTypeSeqID\r\n\t\tLEFT JOIN Billing.AttributeTypeOption AS ATO ON AP.AttributeTypeOptionSeqid = ATO.AttributeTypeOptionSeqid\r\n\t\tLEFT JOIN Membership.EC3Membership AS M ON AP.AuthenticatedUserID = M.AuthenticatedUserID\r\n\t\tLEFT JOIN Billing.AttributeTypeOption AS AST ON AP.AttributeStatusOptionSeqId = AST.AttributeTypeOptionSeqid\r\n\tWHERE A.AccountSeqid = @AccountUniqueSeqID\r\n\tORDER BY PA.DisplayOrder, AP.DateAdded;\r\nEND;"
        }
      ]
    }
  ]
