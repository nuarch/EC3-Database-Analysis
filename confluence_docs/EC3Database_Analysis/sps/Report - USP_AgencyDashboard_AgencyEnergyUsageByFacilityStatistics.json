    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[USP_AgencyDashboard_AgencyEnergyUsageByFacilityStatistics]\n(\r\n\t@agencyCode AS VARCHAR(10)\r\n\t,@countThreshold AS INT = NULL\r\n\t,@percentThreshold AS DECIMAL(6, 2) = NULL\r\n\t,@debugMode AS BIT = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT @countThreshold = ISNULL(@countThreshold, 10), @percentThreshold = ISNULL(@percentThreshold, 80.00);\r\n\r\n\t-- Get the agency hierarchy\r\n\tSELECT AgencyCodeOEC INTO #tmpAgencies FROM [Billing].[UDF_GetAgencyHierarchy](@agencyCode);\r\n\t\r\n\tDECLARE @publishedBillingPeriod AS VARCHAR(6), @currentFY AS INT;\r\n\tSELECT @publishedBillingPeriod = MAX(PublishedBillingPeriod) FROM Published.MonthlyPublishedSummaryData WITH (NOLOCK);\r\n\tSELECT @currentFY = dbo.CalculateFiscalYear(@publishedBillingPeriod);\r\n\t\r\n\tDECLARE @tmpFacilities TABLE (OECFacilityNumber VARCHAR(7), BTU BTUEquivalentBig)\r\n\tDECLARE @tmpFacilityStats TABLE (RowID BIGINT, OECFacilityNumber VARCHAR(7), BTU BTUEquivalentBig, CumBTU BTUEquivalentBig)\r\n\r\n\tINSERT INTO @tmpFacilities (OECFacilityNumber, BTU)\r\n\tSELECT ALSF.OECFacilityNumber, SUM(BTU) AS BTU\r\n\tFROM Published.TemporalAccountLevelSummaryByFacility AS ALSF WITH (NOLOCK)\r\n\tJOIN (\r\n\t\tSELECT AgencyCodeOEC FROM [Billing].[UDF_GetAgencyHierarchy](@agencyCode)\r\n\t) AGNC ON AGNC.AgencyCodeOEC = ALSF.AgencyCodeOEC\r\n\tJOIN Billing.Facility FAC ON FAC.OecFacilityNumber = ALSF.OECFacilityNumber\r\n\tWHERE (ALSF.EffectiveStartPeriod <= @PublishedBillingPeriod AND ALSF.EffectiveEndPeriod > @PublishedBillingPeriod)\r\n\tAND ALSF.BillingPeriod = @publishedBillingPeriod\r\n\t\tAND ALSF.OECFacilityNumber IN (\r\n\t\t\tSELECT FAC.OECFacilityNumber\r\n\t\t\tFROM Billing.Facility AS FAC WITH (NOLOCK)\r\n\t\t\tJOIN Billing.Account AS ACCT WITH (NOLOCK) ON ACCT.FacilityAccount = FAC.FacilitySeqId\r\n\t\t\tWHERE ACCT.IsActive = 1\r\n\t\t)\r\n\tGROUP BY ALSF.OECFacilityNumber;\r\n\t\r\n\tDECLARE @totalUsage DECIMAL(18, 2), @usageThreshold DECIMAL(18, 2), @totalFacilityCount INT;\r\n\tSELECT @totalUsage = SUM(FAC.BTU), @totalFacilityCount = COUNT(DISTINCT(FAC.OECFacilityNumber))\r\n\tFROM @tmpFacilities FAC;\r\n\tSET @totalUsage = ISNULL(@totalUsage, 0.00);\r\n\tSET @usageThreshold = (@percentThreshold / 100.00) * @totalUsage;\r\n\tSET @totalFacilityCount = ISNULL(@totalFacilityCount, 0);\r\n\t\r\n\tINSERT INTO @tmpFacilityStats\r\n\tSELECT T.RowID, T.OECFacilityNumber, T.BTU, SUM(BTU) OVER (ORDER BY BTU DESC) AS CumBTU\r\n\tFROM (\r\n\t\tSELECT FAC.OECFacilityNumber, SUM(FAC.BTU) AS BTU, ROW_NUMBER() OVER (ORDER BY SUM(FAC.BTU) DESC) AS RowID\r\n\t\tFROM @tmpFacilities FAC\r\n\t\tGROUP BY FAC.OECFacilityNumber\r\n\t) T\r\n\r\n\tDECLARE @minRow AS INT;\r\n\tSELECT @minRow = MIN(RowID) FROM @tmpFacilityStats WHERE CumBTU >= @usageThreshold;\r\n\r\n\t-- Facilities using up to 80% of the total energy usage\r\n\tSELECT @agencyCode AS AgencyCodeOEC\r\n\t\t,@publishedBillingPeriod AS BillingPeriod\r\n\t\t,'Count' AS Category\r\n\t\t,'Number of Facilities Using 80%' AS Label\r\n\t\t,@minRow AS [Count]\r\n\t\t,ISNULL(@totalFacilityCount, 0.00) AS TotalCount\r\n\t\t,CASE WHEN @totalFacilityCount > 0.00 THEN ((@minRow * 100.00) / @totalFacilityCount) ELSE 0.00 END AS [Percent]\r\n\tUNION\r\n\t-- Usage by Top 10 facilities\r\n\tSELECT @agencyCode AS AgencyCodeOEC\r\n\t\t,@publishedBillingPeriod AS BillingPeriod\r\n\t\t,'Usage' AS Category\r\n\t\t,'Top 10 Facilities' AS Label\r\n\t\t,ISNULL(SUM(BTU), 0.00) AS [Count]\r\n\t\t,ISNULL(@totalUsage, 0.00) AS TotalCount\r\n\t\t,CASE WHEN @totalUsage > 0.00 THEN ROUND(((SUM(BTU) * 100.00) / @totalUsage), 0) ELSE 0.00 END AS [Percent]\r\n\tFROM @tmpFacilityStats\r\n\tWHERE RowID BETWEEN 1 AND 10\t\t\r\n\tORDER BY Category ASC;\r\nEND;"
        }
      ]
    }
  ]
}