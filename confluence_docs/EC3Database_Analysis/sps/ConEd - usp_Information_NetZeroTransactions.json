    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [ConEd].[usp_Information_NetZeroTransactions]\t\r\nAS\r\nBEGIN\r\n\t\r\n\t-- return net zero transaction record\r\n\tSELECT  \r\n\t\t\t'Net Zero Transaction' AS DataType,\r\n\t\t\tBillingPeriod ,\r\n\t\t\tBillingPeriodRevision ,\r\n\t\t\tAccountNumber ,\r\n\t\t\tUploadConEdisonAccountSeqid ,\r\n\t\t\tUploadConEdisonCancellationSeqid ,\r\n\t\t\tTherms ,\r\n\t\t\tCancellationTherms ,\r\n\t\t\tCCF ,\r\n\t\t\tCancellationCCF ,\r\n\t\t\tBilledAmount ,\r\n\t\t\tCancellationBilledAmount\r\n\tFROM ConEd.UploadConEdisonNetZeroTransactions\r\n\tORDER BY AccountNumber\r\n\r\n\r\n\tSELECT \t\r\n\t'Account Transaction Record With Net-Zero Account' AS DataType,\r\n\t* \r\n\tFROM \r\n\tConEd.UploadConEdisonAccountBillingAdjustmentGas\r\n\tWHERE OriginalAccountNumber IN \r\n\t(\r\n\t\tSELECT AccountNumber from ConEd.UploadConEdisonNetZeroTransactions\r\n\t)\r\n\r\n\tSELECT \r\n\t'Meter Transaction Record with Net-Zero Account' AS DataType,\r\n\t* \r\n\tFROM\r\n\tConEd.UploadConEdisonMeterBillingAdjustmentGas\r\n\tWHERE OriginalAccountNumber IN \r\n\t(\r\n\t\tSELECT AccountNumber from ConEd.UploadConEdisonNetZeroTransactions\r\n\t)\r\n\r\n\r\nEND"
        }
      ]
    }
