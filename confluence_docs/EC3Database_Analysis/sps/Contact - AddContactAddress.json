    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Contact].[AddContactAddress]\n(\r\n\t@AgencyContact AS INT = 0,\r\n\t@FirstName AS VARCHAR(500),\r\n\t@LastName AS VARCHAR(500),\r\n\t@Email AS VARCHAR(500),\r\n\t@AuthenticatedUserID AS INT = 0,\r\n\t@DateAdded AS DATE,\r\n\t@ContactAddressSeqId AS INT OUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tBEGIN TRY\r\n\t\tBEGIN TRANSACTION;\r\n\r\n\t\tDECLARE @ContactName AS VARCHAR(500);\r\n\t\tSELECT @ContactName = CONCAT(@FirstName, ' ', @LastName), @DateAdded = ISNULL(@DateAdded, GETDATE());\r\n\r\n\t\tIF EXISTS (SELECT 1 FROM [Contact].[ContactAddress] WHERE EmailAddress = @Email)\r\n\t\tBEGIN\r\n\t\t\tUPDATE [Contact].[ContactAddress] \r\n\t\t\tSET AgencyContact =@AgencyContact\r\n\t\t\t\t,ContactName = @ContactName\r\n\t\t\t\t,ContactLastName = @LastName\r\n\t\t\t\t,ContactFirstName = @FirstName\r\n\t\t\t\t,EmailAddress= @Email\r\n\t\t\t\t,AuthenticatedUserID = @AuthenticatedUserID\r\n\t\t\t\t,DateAdded = @DateAdded\r\n\t\t\tWHERE EmailAddress = @Email;\r\n\t\tEND;\r\n\t\tELSE\r\n\t\tBEGIN\r\n\t\t\tINSERT INTO Contact.ContactAddress (AgencyContact, ContactName, ContactLastName, ContactFirstName, EmailAddress, AuthenticatedUserID, DateAdded)\r\n\t\t\tVALUES(@AgencyContact, @ContactName,@LastName, @FirstName, @Email, @AuthenticatedUserID, @DateAdded);\r\n\r\n\t\t\tSET @ContactAddressSeqId = SCOPE_IDENTITY();\r\n\t\tEND;\r\n\r\n\t\tCOMMIT TRANSACTION;\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tIF (@@TRANCOUNT > 0)\r\n\t\tBEGIN\r\n        \tROLLBACK TRANSACTION;\r\n\t\tEND;\r\n\r\n\t\tTHROW;\r\n\tEND CATCH;\r\nEND;"
        }
      ]
    }
  ]
