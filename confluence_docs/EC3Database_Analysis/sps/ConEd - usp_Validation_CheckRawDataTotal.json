      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Description:\tvalidate preload data by comparing total with the coversheet number\r\n-- =============================================\r\nCREATE PROCEDURE [ConEd].[usp_Validation_CheckRawDataTotal]\r\nAS\r\nBEGIN\r\n\tDECLARE @BillingPeriod AS BillingPeriod;\r\n\r\n\tSELECT @BillingPeriod = BillingPeriod\r\n\tFROM Billing.ApplicationTimeFrame\r\n\tWHERE CurrentProcessingPeriod = 'Y';\r\n\r\n\tDECLARE @therms AS INT, @ccf AS INT, @billedAmount AS BillingAmt;\r\n\r\n\tSELECT @billedAmount = acc.BilledAmount + AccCancel.BilledAmount\r\n\t\t,@therms = acc.Therms + AccCancel.Therms\r\n\t\t,@ccf = acc.CCF + AccCancel.CCF\r\n\tFROM (SELECT SUM(CAST(CAST(dbo.ConvertOverpunch(BilledAmount) AS INT) * .01 AS MONEY)) AS BilledAmount\r\n\t\t\t,SUM(CAST(dbo.ConvertOverpunch(Therms) AS int)) AS Therms\r\n\t\t\t,SUM(CAST(dbo.ConvertOverpunch(CCF) AS INT)) AS CCF\r\n\t\tFROM ConEd.UploadConEdisonAccountPreload) AS Acc,\r\n\t(SELECT ISNULL(SUM(CAST(CAST(dbo.ConvertOverpunch(BilledAmount) AS int) * .01 AS MONEY)), 0) AS BilledAmount\r\n\t\t,ISNULL(SUM(CAST(dbo.ConvertOverpunch(Therms) AS INT)), 0) AS Therms\r\n\t\t,ISNULL(SUM(CAST(dbo.ConvertOverpunch(CCF) AS INT)), 0) AS CCF\r\n\tFROM ConEd.UploadConEdisonCancellationPreload) AS AccCancel;\r\n\r\n\tIF(NOT EXISTS(SELECT * FROM ConEd.ConEdCoversheet WHERE BillingPeriod = @BillingPeriod AND CCF = @ccf AND Therm = @therms AND TotalBilledAmount = @billedAmount))\r\n\tBEGIN\r\n\t\tDECLARE @errMessage AS VARCHAR(MAX);\r\n\t\tSET @errMessage = 'Preload data does not match data record from coversheet';\r\n\t\tRAISERROR(@errMessage, 12, 1);\r\n\tEND;\r\nEND;"
        }
      ]
    }
