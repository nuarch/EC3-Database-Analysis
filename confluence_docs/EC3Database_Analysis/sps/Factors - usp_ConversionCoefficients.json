      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Factors].[usp_ConversionCoefficients]\n(\r\n\t@SearchText AS VARCHAR(150) = NULL\r\n\t,@PageSize AS INT\r\n\t,@CurrentPageNumber AS INT\r\n\t,@SortColumn AS VARCHAR(100) = 'BillingPeriod'\r\n\t,@SortOrder AS VARCHAR(100) = 'DESC'\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @RecordCount AS INT;\r\n\r\n\tSELECT @RecordCount = ISNULL(COUNT(Id), 0)\r\n\tFROM Factors.ConversionEquivalentsForBtuAndCO2eByBillingPeriod\r\n\tWHERE IsInUse = 1\r\n\t\tAND (@SearchText IS NULL \r\n\t      OR (EnergyType LIKE '%' + @SearchText + '%'\r\n\t\t\tOR BillingPeriod LIKE '%' + @SearchText + '%'\r\n\t        OR NumberOfUnits LIKE '%' + @SearchText + '%' \r\n\t\t\tOR MMBtus LIKE '%' + @SearchText + '%'\r\n\t\t    OR MMBtusFactor LIKE '%' + @SearchText + '%'\r\n\t\t\tOR CO2EquivalentEmissions LIKE '%' + @SearchText + '%'\r\n\t\t    OR CO2EquivalentEmissionsFactor LIKE '%' + @SearchText + '%'));\r\n\r\n    SELECT Id\r\n\t\t,EnergyDeliveryType\r\n\t\t,EnergyType\r\n\t\t,BillingPeriod\r\n\t\t,NumberOfUnits\r\n\t\t,MMBtus\r\n\t\t,MMBtusFactor\r\n\t\t,CO2EquivalentEmissions\r\n\t\t,CO2EquivalentEmissionsFactor\r\n\t\t,Notes\r\n\t\t,IsInUse\r\n\t\t,CreatedBy\r\n\t\t,CreatedOn\r\n\t\t,UpdatedBy\r\n\t\t,UpdatedOn\r\n\t\t,@RecordCount AS TotalCount\r\n\tFROM Factors.ConversionEquivalentsForBtuAndCO2eByBillingPeriod\r\n\tWHERE IsInUse = 1\r\n\t\tAND (@SearchText IS NULL \r\n\t      OR (EnergyType LIKE '%' + @SearchText + '%'\r\n\t\t\tOR BillingPeriod LIKE '%' + @SearchText + '%'\r\n\t        OR NumberOfUnits LIKE '%' + @SearchText + '%' \r\n\t\t\tOR MMBtus LIKE '%' + @SearchText + '%'\r\n\t\t    OR MMBtusFactor LIKE '%' + @SearchText + '%'\r\n\t\t\tOR CO2EquivalentEmissions LIKE '%' + @SearchText + '%'\r\n\t\t    OR CO2EquivalentEmissionsFactor LIKE '%' + @SearchText + '%'))\r\n  ORDER BY CASE WHEN(@SortColumn = '' ) THEN BillingPeriod END DESC,\r\n\t  CASE WHEN(@SortColumn = 'EnergyType' and @SortOrder = 'ASC') THEN EnergyType END ASC,\r\n\t  CASE WHEN(@SortColumn = 'EnergyType' and @SortOrder = 'DESC') THEN EnergyType END DESC,\r\n\t  CASE WHEN(@SortColumn = 'BillingPeriod' and @SortOrder = 'ASC') THEN BillingPeriod END ASC,\r\n\t  CASE WHEN(@SortColumn = 'BillingPeriod' and @SortOrder = 'DESC') THEN BillingPeriod END DESC,\r\n\t  CASE WHEN(@SortColumn = 'NumberOfUnits' and @SortOrder = 'ASC') THEN NumberOfUnits END ASC,\r\n\t  CASE WHEN(@SortColumn = 'NumberOfUnits' and @SortOrder = 'DESC') THEN NumberOfUnits END DESC,\r\n\t  CASE WHEN(@SortColumn = 'MMBtus' and @SortOrder = 'ASC') THEN MMBtus END ASC,\r\n\t  CASE WHEN(@SortColumn = 'MMBtus' and @SortOrder = 'DESC') THEN MMBtus END DESC,\r\n\t  CASE WHEN(@SortColumn = 'MMBtusFactor' and @SortOrder = 'ASC') THEN MMBtusFactor END ASC,\r\n\t  CASE WHEN(@SortColumn = 'MMBtusFactor' and @SortOrder = 'DESC') THEN MMBtusFactor END DESC,\r\n\t  CASE WHEN(@SortColumn = 'CO2EquivalentEmissions' and @SortOrder = 'ASC') THEN CO2EquivalentEmissions END ASC,\r\n\t  CASE WHEN(@SortColumn = 'CO2EquivalentEmissions' and @SortOrder = 'DESC') THEN CO2EquivalentEmissions END DESC,\r\n\t  CASE WHEN(@SortColumn = 'CO2EquivalentEmissionsFactor' and @SortOrder = 'ASC') THEN CO2EquivalentEmissionsFactor END ASC,\r\n\t  CASE WHEN(@SortColumn = 'CO2EquivalentEmissionsFactor' and @SortOrder = 'DESC') THEN CO2EquivalentEmissionsFactor END DESC\r\n\t  OFFSET CASE WHEN @PageSize = -1 THEN 0 ELSE @PageSize * (@CurrentPageNumber -1) END ROWS FETCH NEXT CASE WHEN @PageSize = -1 THEN IIF(@RecordCount > 0, @RecordCount, 1) ELSE @PageSize END ROWS ONLY;\r\nEND;"
        }
      ]
    }
  ]
}