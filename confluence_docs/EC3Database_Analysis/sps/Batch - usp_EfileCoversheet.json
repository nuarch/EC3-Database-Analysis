        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Error Message Length",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The error message is limited to 5000 characters, which may not be sufficient for very detailed error information."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Concurrency Issues",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": If multiple instances of this procedure run simultaneously, there could be race conditions or data consistency issues, especially if the "
                },
                {
                  "type": "text",
                  "text": "Batch.FileStep",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " table is updated concurrently."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Dependency on External Procedure",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure relies on the successful execution of "
                },
                {
                  "type": "text",
                  "text": "Nypa.usp_PreProcessingMatchCoverLetterToEfileCoversheet",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ". Any changes or issues in that procedure could affect the outcome of this procedure."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Batch].[usp_EfileCoversheet]\n(\r\n\t@shorePowerCredit AS MONEY\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @billperiod AS VARCHAR(20);\r\n\tSELECT TOP 1 @billperiod = BillingPeriod FROM Batch.FileStep\r\n\tWHERE BillingPeriod IN (SELECT MAX(BillingPeriod) FROM NYPA.UploadNYPAAccountBillingPreload);\r\n\r\n\tBEGIN TRY\r\n\t\tDECLARE @StatusCode AS INT;\r\n\t\t\r\n\t\tEXECUTE [Nypa].[usp_PreProcessingMatchCoverLetterToEfileCoversheet] @TotalCicMonthlyPaymentAmount = 0,\r\n\t\t\t@DcasWindCharges = 0,\r\n\t\t\t@CunyWindCharges = 0,\r\n\t\t\t@Shorepowercredit = @shorePowerCredit,\r\n\t\t\t@AuthenticatedUserId = 1,\r\n\t\t\t@Status = @StatusCode OUTPUT;\r\n\r\n\t\t-- Validation Pending....\r\n\t\r\n \t\t-- Update Step \t\t\r\n \t\t-- Success\r\n\t\tUPDATE Batch.FileStep SET IsSuccess = 1, UpdatedOn = GETDATE() WHERE BillingPeriod = @billperiod AND StepId = 3\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tDECLARE @Err AS VARCHAR(5000);\r\n\t\tSELECT @Err = 'Error #: ' + CAST(ERROR_NUMBER() AS VARCHAR(100)) + '. Procedure: ' + ERROR_PROCEDURE() + '. Error Line #: ' + CAST(ERROR_LINE() AS VARCHAR(100)) + '. Error Message: ' + ERROR_MESSAGE();\r\n\r\n\t\tUPDATE Batch.FileStep\r\n\t\tSET IsSuccess = 0, UpdatedOn = GETDATE(), [Message] = 'Error: Please contact administrator.', Error = @Err\r\n\t\tWHERE BillingPeriod = @billperiod AND StepId = 3;\r\n    END CATCH;\r\nEND;"
        }
      ]
    }
  ]
