    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [dbo].[aspnet_Roles_GetAllRoles] (\n    @ApplicationName           nvarchar(256))\r\nAS\r\nBEGIN\r\n    DECLARE @ApplicationId uniqueidentifier\r\n    SELECT  @ApplicationId = NULL\r\n    SELECT  @ApplicationId = ApplicationId FROM aspnet_Applications WHERE LOWER(@ApplicationName) = LoweredApplicationName\r\n    IF (@ApplicationId IS NULL)\r\n        RETURN\r\n    SELECT RoleName\r\n    FROM dbo.aspnet_Roles WHERE ApplicationId = @ApplicationId\r\n    ORDER BY RoleName\r\nEND"
        }
      ]
    }
