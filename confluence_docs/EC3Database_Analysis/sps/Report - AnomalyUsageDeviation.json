    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[AnomalyUsageDeviation]\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @PublishedBillingPeriod AS VARCHAR(6), @EarlierPublishedBillingPeriod AS VARCHAR(6), @MinDeviation AS DECIMAL(16, 2) = 0.0,\r\n\t\t@MinDemandDeviation AS DECIMAL(16, 2) = 0.0, @MonthName AS NVARCHAR(30), @EarlierMonthName AS NVARCHAR(30);\r\n\r\n\tSELECT @PublishedBillingPeriod = MAX(BillingPeriod) FROM Published.AccountLevelRawDataForCurrentPeriod;\r\n\tSELECT @EarlierPublishedBillingPeriod = MAX(BillingPeriod) FROM Published.AccountLevelRawDataForCurrentPeriod WHERE BillingPeriod <> @PublishedBillingPeriod;\r\n\tSELECT @MonthName = DATENAME(MM, @PublishedBillingPeriod + '01'), @EarlierMonthName = DATENAME(MM, @EarlierPublishedBillingPeriod + '01');\r\n\t\r\n\tSELECT R.CurrentAccountNumber\r\n\t\t,R.BillingPeriod\r\n\t\t,MAX(CAST(ROUND(R.UsageDeviation, 2) AS DECIMAL(18, 2))) AS UsageDeviation\r\n\t\t,MAX(CAST(ROUND(R.DemandDeviation, 2) AS DECIMAL(18, 2))) AS DemandDeviation\r\n\tFROM (SELECT DISTINCT\r\n\t\t\tC.CurrentAccountNumber\r\n\t\t\t,P.BillingPeriod\r\n\t\t\t,CASE WHEN P.AccountEnergyUsage = 0 AND C.AccountEnergyUsage = 0 THEN 0 \r\n\t\t\t\tWHEN P.AccountEnergyUsage = 0 AND C.AccountEnergyUsage <> 0 THEN 100 \r\n\t\t\t\tELSE (((CAST(C.AccountEnergyUsage AS FLOAT)*30/CAST(C.BillingPeriodDays AS FLOAT)) - (CAST(P.AccountEnergyUsage AS FLOAT) * 30/CAST(P.BillingPeriodDays AS FLOAT)))*100/(CAST(P.AccountEnergyUsage AS FLOAT) * 30/CAST(P.BillingPeriodDays AS FLOAT))) END AS UsageDeviation\r\n\t\t\t,CASE WHEN P.AccountDemandUsage = 0 AND  C.AccountDemandUsage = 0 THEN 0 \r\n\t\t\t\tWHEN P.AccountDemandUsage = 0 AND  C.AccountDemandUsage <> 0 THEN 100 \r\n\t\t\t\tWHEN P.AccountDemandUsage IS NULL THEN NULL \r\n\t\t\t\tELSE ((CONVERT(DECIMAL(18, 2), C.AccountDemandUsage) - CONVERT(DECIMAL(18, 2), P.AccountDemandUsage))*100/CONVERT(DECIMAL(18, 2), P.AccountDemandUsage))  END AS DemandDeviation\r\n\t\tFROM (SELECT DISTINCT\r\n\t\t\t\tBillingPeriodDays\r\n\t\t\t\t,CurrentAccountNumber\r\n\t\t\t\t,ISNULL(AccountDemandUsage, 0.0) AS AccountDemandUsage\r\n\t\t\t\t,AccountEnergyUsage\r\n\t\t\tFROM Published.TemporalAccountLevelRawDataForCurrentPeriod\r\n\t\t\tWHERE EffectiveStartPeriod <= @PublishedBillingPeriod AND EffectiveEndPeriod > @PublishedBillingPeriod\r\n\t\t\t\tAND BillingPeriod = @PublishedBillingPeriod AND BillingMonth = @MonthName AND BillingPeriodDays <> 0 ) AS C\r\n\t\t\tINNER JOIN (SELECT DISTINCT\r\n\t\t\t\t\tBillingPeriodDays\r\n\t\t\t\t\t,CurrentAccountNumber\r\n\t\t\t\t\t,AccountEnergyUsage\r\n\t\t\t\t\t,ISNULL(AccountDemandUsage, 0.0) AS AccountDemandUsage\r\n\t\t\t\t\t,BillingPeriod\r\n\t\t\t\tFROM Published.TemporalAccountLevelRawDataForCurrentPeriod\r\n\t\t\t\tWHERE EffectiveStartPeriod <= @EarlierPublishedBillingPeriod AND EffectiveEndPeriod > @EarlierPublishedBillingPeriod\r\n\t\t\t\t\tAND BillingPeriod = @EarlierPublishedBillingPeriod AND BillingMonth = @EarlierMonthName AND BillingPeriodDays <> 0) AS P ON C.CurrentAccountNumber = P.CurrentAccountNumber\r\n\t\t\tWHERE C.BillingPeriodDays <> 0 AND P.BillingPeriodDays <> 0\r\n\t\t) AS R\r\n\tWHERE R.UsageDeviation >= @MinDeviation OR R.DemandDeviation >= @MinDemandDeviation\r\n\tGROUP BY R.CurrentAccountNumber, R.BillingPeriod;\r\nEND;"
        }
      ]
    }
  ]
