    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [SBMR].[usp_Update_UpdateSBMRAccounts]\r\n\t/*\r\n\t<Accounts>\r\n\t\t<Account>\r\n\t\t\t<OriginalAccountNumber>\r\n\t\t\t<CurrentAccountNumber>\r\n\t*/\r\n\t@AccountInformationXML XML,\r\n\t@SBMRHeaderSeqID seqid,\r\n\t@AuthenticatedUserID seqid\r\nAS\r\nBEGIN\r\n\t\r\n\tDECLARE @UpdateSBMRAccounts TABLE\r\n\t(\r\n\t\tOriginalAccountNumber acctnum,\r\n\t\tCurrentAccountNumber acctnum\r\n\t)\r\n\t\r\n\tINSERT INTO @UpdateSBMRAccounts\r\n\t        ( OriginalAccountNumber ,\r\n\t          CurrentAccountNumber\r\n\t        )\r\n\tSELECT\r\n\t\tDISTINCT \r\n\t\tCAST(tbl.col.query('data(OriginalAccountNumber)') AS varchar),\r\n\t\tCAST(tbl.col.query('data(CurrentAccountNumber)') AS varchar) \r\n\tFROM \r\n\t\t@AccountInformationXML.nodes('//Accounts//Account') tbl(col)\r\n\t\r\n\t-- insert new records\r\n\tINSERT INTO SBMR.SBMRAccount\r\n\t        ( OriginalAccountNumber ,\r\n\t          CurrentAccountNumber ,\r\n\t          SBMRHeaderSeqid ,\r\n\t          AuthenticatedUserID ,\r\n\t          DateAdded ,\r\n\t          LastUpdate\r\n\t        )\r\n\tSELECT OriginalAccountNumber,\r\n\t\t   CurrentAccountNumber,\r\n\t\t   @SBMRHeaderSeqid,\r\n\t\t   @AuthenticatedUserID,\r\n\t\t   GETDATE(),\r\n\t\t   GETDATE()\r\n\tFROM @UpdateSBMRAccounts\r\n\tWHERE CurrentAccountNumber NOT IN \r\n\t(\r\n\t\tSELECT CurrentAccountNumber FROM SBMR.SBMRAccount\r\n\t\tWHERE SBMRHeaderSeqid = @SBMRHeaderSeqID\r\n\t)\r\n\t\r\n\t-- update existing records\r\n\tUPDATE a\r\n\t\tSET \r\n\t\t\ta.OriginalAccountNumber = ua.OriginalAccountNumber,\r\n\t\t\ta.LastUpdate = GETDATE(),\r\n\t\t\ta.AuthenticatedUserID = @AuthenticatedUserID\r\n\tFROM\r\n\tSBMR.SBMRAccount AS a\t\r\n\tINNER JOIN @UpdateSBMRAccounts AS ua\r\n\tON a.CurrentAccountNumber = ua.CurrentAccountNumber\r\n\tWHERE\r\n\ta.SBMRHeaderSeqID = @SBMRHeaderSeqID\r\n\t\r\n\t-- delete records removed by user\r\n\tDELETE FROM SBMR.SBMRAccount\r\n\tWHERE \r\n\tSBMRHeaderSeqid = @SBMRHeaderSeqID\r\n\tAND\r\n\tCurrentAccountNumber NOT\r\n\tIN (SELECT CurrentAccountNumber FROM @UpdateSBMRAccounts)\r\n\t\r\n\tSELECT 0;\r\nEND"
        }
      ]
    }
