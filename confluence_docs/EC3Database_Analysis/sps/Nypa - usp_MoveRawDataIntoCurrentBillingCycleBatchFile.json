    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE procedure [Nypa].[usp_MoveRawDataIntoCurrentBillingCycleBatchFile]\nas \r\n    begin\r\n        declare @command varchar(200)\r\n        declare @FiscalYear varchar(4)\r\n        declare @BillingPeriod varchar(6)\r\n\r\n        select  @FiscalYear = FiscalYear ,\r\n                @BillingPeriod = BillingPeriod\r\n        FROM Billing.ApplicationTimeFrame\r\n        where   ( CurrentProcessingPeriod = 'Y' )\r\n\r\n        exec sp_configure 'show advanced options', 1\r\n        reconfigure\r\n        exec sp_configure 'xp_cmdshell', 1\r\n        reconfigure\r\n        set @command = '\\\\mspwvd-dcsec3pd\\t$\\UploadDataFiles\\NYPA\\CurrentBillingCycle\\NypaMoveRawDataIntoCurrentBillingCycle.cmd '+@FiscalYear+' '+@BillingPeriod\r\n\t\tprint @command\r\n        exec master..xp_cmdshell @command\r\n        exec sp_configure 'show advanced options', 1\r\n        reconfigure\r\n        exec sp_configure 'xp_cmdshell', 0\r\n        reconfigure\r\n\r\n    end"
        }
      ]
