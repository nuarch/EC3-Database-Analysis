    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\tDerek Ho\r\n-- Create date: 02/23/2009\r\n-- Description:\tGet content for letter generation\r\n-- =============================================\r\nCREATE PROCEDURE [SBMR].[usp_Select_GetLetterContent] \r\n\t@SBMRHeaderSeqid INT\r\nAS \r\n    BEGIN\r\n         SELECT  RequestedAccountEffectiveDate,\r\n                u.Description AS [utilityCompany],\r\n                du.Description AS [deliveryUtilityCompany],\r\n                SbmrReferenceNumber,\r\n                ELOAddress,\r\n                UtilityServiceAccountName,\r\n                ad.AgencyName,\r\n                ca.ContactName,\r\n                ca.ContactTelephoneNumber,\r\n                ad.AgencyCodeOEC,\r\n                ( caC.ContactName + ' ' + caC.ContactTelephoneNumber ) AS [contractor],\r\n                h.EnergySource,\r\n                edt.Description AS energyDescription,\r\n                ac.Description AS [action],\r\n                h.BillingAddress,\r\n                utr.DeliveryTariffRate + ' - ' + utr.Description as serviceClassification,\r\n                h.ExternalNote\r\n        FROM SBMR.SBMRHeader AS h\r\n                LEFT JOIN Billing.UtilityCompany AS u \r\n\t\t\t\t\tON h.CommodityUtilityCompanySeqid = u.UtilityCompanySeqid\r\n                LEFT JOIN Billing.agencyDivision AS ad \r\n\t\t\t\t\tON h.AgencyDivisionSeqid = ad.AgencyDivisionSeqid\r\n                LEFT JOIN Contact.ContactAddress AS ca \r\n\t\t\t\t\tON h.ContactFacilityAccessSeqid = ca.ContactaddressSeqid\r\n                LEFT JOIN Contact.ContactAddress AS caC \r\n\t\t\t\t\tON h.contactContractorSeqid = caC.ContactaddressSeqid\r\n                LEFT JOIN SBMR.SBMRAction AS ac \r\n\t\t\t\t\tON h.SBMRAction = ac.SbmrActionSeqid\r\n                LEFT JOIN Billing.UtilityCompany AS du \r\n\t\t\t\t\tON h.DeliveryUtilityCompanySeqid = du.UtilityCompanySeqid\r\n\t\t\t\tLEFT JOIN Billing.EnergyDeliveryType AS edt\r\n\t\t\t\t\tON h.EnergySource = edt.EnergyDeliveryType\r\n\t\t\t\tLEFT JOIN Billing.UtilityTariffRateInformation as utr\r\n\t\t\t\t\ton h.DeliveryUtilityCompanySeqid = utr.UtilityCompanyTariff and utr.DeliveryTariffRate = h.ServiceClassification\t\t\t\t\t\r\n        WHERE   SBMRHeaderSeqid = @SBMRHeaderSeqid\r\n    END"
        }
      ]
    }
  ]
