    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "5. Performance Considerations"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Indexing",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Ensure that the "
                },
                {
                  "type": "text",
                  "text": "CrystalReportPath",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " column is indexed to optimize the existence check."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Transaction Scope",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The transaction scope is limited to the insert operations, which minimizes the duration of locks and reduces the risk of blocking other operations."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Error Handling",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of "
                },
                {
                  "type": "text",
                  "text": "@@error",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " for error checking is deprecated in favor of "
                },
                {
                  "type": "text",
                  "text": "TRY...CATCH",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " blocks, which provide more robust error handling."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "6. Potential Issues or Risks"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Concurrency",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of "
                },
                {
                  "type": "text",
                  "text": "@@identity",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " can lead to issues in a high-concurrency environment. It is recommended to use "
                },
                {
                  "type": "text",
                  "text": "SCOPE_IDENTITY()",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " to ensure the correct identity value is retrieved."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Error Handling",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure uses "
                },
                {
                  "type": "text",
                  "text": "goto",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " for error handling, which is not considered best practice. Implementing "
                },
                {
                  "type": "text",
                  "text": "TRY...CATCH",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " would improve readability and maintainability."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Hardcoded Values",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The "
                },
                {
                  "type": "text",
                  "text": "@CrystalReportType",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " is hardcoded as "
                },
                {
                  "type": "text",
                  "text": "1",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ". If this value needs to change, it requires modifying the procedure, which is not flexible."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Output Parameter",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The "
                },
                {
                  "type": "text",
                  "text": "@templateID",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " is set to "
                },
                {
                  "type": "text",
                  "text": "-1",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " in case of an error, which might not be sufficient to convey detailed error information. Consider logging errors or providing more descriptive error codes."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\tDerek Ho\r\n-- Create date: <Create Date,,>\r\n-- Description:\tAdd crystal report template.\r\n-- =============================================\r\nCREATE PROCEDURE [Scheduler].[usp_AddCrystalReportTemplate]\r\n\t@reportTemplatePath varchar(200),\r\n\t@templateID int out\r\nAS\r\nBEGIN\r\n\tdeclare @CrystalReportType int\r\n\tset @CrystalReportType = '1'\r\n\t\r\n\t-- template already exists\r\n\tif(exists(\r\n\t\tselect * from Scheduler.CrystalReportTemplate\r\n\t\twhere CrystalReportPath = @reportTemplatePath))\r\n\tbegin\r\n\t\tselect @templateID = \r\n\t\t\ttemplateID from Scheduler.CrystalReportTemplate\r\n\t\t\twhere CrystalReportPath = @reportTemplatePath\r\n\t\t\r\n\tend\r\n\telse\r\n\tbegin\r\n\t\t\r\n\t\tdeclare @intErrorCode int\r\n\t\t\r\n\t\tbegin transaction\r\n\r\n\t\tinsert into Scheduler.ReportTemplate \r\n\t\t(ReportTemplateType )\r\n\t\tvalues\r\n\t\t(@CrystalReportType)\r\n\t\t\r\n\t\tselect @intErrorCode = @@error\r\n\t\tIF (@@ERROR <> 0) \r\n\t\t\tgoto Err_Handler\r\n\r\n\t\tset @templateID = @@identity\r\n\t\t\r\n\t\tinsert into Scheduler.CrystalReportTemplate\r\n\t\t(TemplateID, CrystalReportPath)\r\n\t\tvalues\r\n\t\t(@@identity, @reportTemplatePath)\r\n\t\t\r\n\t\tselect @intErrorCode = @@error\r\n\t\tIF (@@ERROR <> 0) \r\n\t\t\tgoto Err_Handler \r\n\t\t\t\r\n\t\tcommit transaction\r\n\t\t\r\n\t\tErr_Handler:\r\n\t\tif(@intErrorCode <> 0) begin\r\n\t\t\tset @templateID = '-1'\r\n\t\t\trollback transaction\r\n\t\tend\r\n\tend\r\nEND"
        }
      ]
    }
  ]
}