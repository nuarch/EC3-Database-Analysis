      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [SBMR].[usp_SBMR_getUnassignedAccountsList]\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\t\r\n\tSELECT DISTINCT h.SalesType,\r\n        a.AccountSeqid,\r\n        u.ShortDesc AS UtilityCompany,\r\n        a.UtilityAccountProvider,\r\n        i.InvoiceAccountBillingGroupLongDesc,\r\n        i.InvoiceAccountBillingGroupDesc,\r\n        i.InvoiceAccountGroupSeqid,\r\n        a.OriginalAccountNumber,\r\n        a.UtilityServiceAddress,\r\n        ISNULL(h.SBMRHeaderSeqid, ROW_NUMBER() OVER(ORDER BY h.SBMRHeaderSeqid ASC)) AS SBMRHeaderSeqid,\r\n        h.SbmrReferenceNumber,\r\n        d.AgencyCodeOEC,\r\n        d.AgencyShortDesc,\r\n        d.AgencyDivisionSeqid,\r\n        f.oecFacilityNumber,\r\n        h.ELOAddress AS ServiceAddress\r\n    FROM Billing.Account AS a\r\n        INNER JOIN Billing.InvoiceAccountGroup AS i ON i.InvoiceAccountGroupSeqid = a.CurrentInvoiceAccountGroup\r\n        INNER JOIN Billing.UtilityCompany AS u ON a.UtilityAccountProvider = u.UtilityCompanySeqid\r\n        LEFT JOIN (SELECT DISTINCT OriginalAccountNumber, SBMRHeaderSeqid FROM\r\n\t\t\t(SELECT sba.OriginalAccountNumber,sba.SBMRHeaderSeqid FROM SBMR.SBMRAccount AS sba\r\n            UNION\r\n            SELECT sbm.CurrentAccountNumber OriginalAccountNumber, sbm.SBMRHeaderSeqid  FROM SBMR.SBMRMeter AS sbm) AS bth\r\n        ) AS sa ON a.OriginalAccountNumber LIKE CASE WHEN (LEN(sa.OriginalAccountNumber) >= 10 AND LEN(sa.OriginalAccountNumber) < 15) THEN '%' + sa.OriginalAccountNumber + '%' ELSE sa.OriginalAccountNumber END\r\n        LEFT JOIN SBMR.SBMRHeader AS h ON sa.SBMRHeaderSeqid = h.SBMRHeaderSeqid AND (a.UtilityAccountProvider = h.DeliveryUtilityCompanySeqid\r\n            OR (a.UtilityAccountProvider <> h.DeliveryUtilityCompanySeqid AND a.UtilityAccountProvider = h.CommodityUtilityCompanySeqid AND h.SalesType <> 'BT'))\r\n        LEFT JOIN Billing.Facility AS f ON h.FacilitySeqid = f.FacilitySeqid\r\n        LEFT JOIN Billing.AgencyDivision AS d ON h.AgencyDivisionSeqid = d.AgencyDivisionSeqid\r\n\tWHERE (a.FacilityAccount = '4623' OR a.AgencyAccount = '396')\r\n\t\tAND a.IsActive =1 AND a.IsCurrentRecord = 'Y'\r\n\tORDER BY h.SbmrReferenceNumber DESC,u.ShortDesc, a.OriginalAccountNumber;\r\nEND;"
        }
      ]
    }
  ]
