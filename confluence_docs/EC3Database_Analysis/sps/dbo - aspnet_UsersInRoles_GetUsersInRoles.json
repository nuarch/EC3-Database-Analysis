                },
                {
                  "type": "text",
                  "text": "aspnet_Roles",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", and "
                },
                {
                  "type": "text",
                  "text": "aspnet_UsersInRoles",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " tables have appropriate indexes on "
                },
                {
                  "type": "text",
                  "text": "LoweredApplicationName",
