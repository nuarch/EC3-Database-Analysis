          "type": "text",
          "text": "CREATE PROCEDURE [Common].[CreateRequestAccess]\n(\r\n\t@ApplicationName AS  VARCHAR(256),\r\n\t@UserName AS VARCHAR(256),\r\n\t@Password AS VARCHAR(128),\r\n\t@PasswordSalt AS VARCHAR(128),\r\n\t@Email AS VARCHAR(256),\r\n\t@PasswordQuestion AS VARCHAR(256),\r\n\t@PasswordAnswer AS VARCHAR(128),\r\n\t@IsApproved AS BIT,\r\n\t@CurrentTimeUtc AS DATETIME,\r\n\t@CreateDate AS DATETIME = NULL,\r\n\t@UniqueEmail AS INT = 0,\r\n\t@PasswordFormat AS INT = 0,\r\n\t@RoleNames AS VARCHAR(4000),\r\n\t@UserFirstName AS VARCHAR(100),\r\n\t@UserLastName AS VARCHAR(100),\r\n\t@AgencyDivisionSeqId AS seqid,\r\n\t@AgencyDivisionSeqIds AS XML,\r\n\t@IsAllAgency AS yesnoWithDefaultNo,\r\n\t@UserId AS UNIQUEIDENTIFIER OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tBEGIN TRY\t\t\r\n\t\tBEGIN TRANSACTION;\r\n\t\tDECLARE @MessageText AS VARCHAR(500), @ContactAddressSeqId AS INT, @AuthenticatedUserID AS seqid = 0;\r\n\r\n\t\tEXECUTE [dbo].[aspnet_Membership_CreateUser] @ApplicationName, @UserName, @Password , @PasswordSalt, @Email\r\n\t\t\t,@PasswordQuestion , @PasswordAnswer, @IsApproved ,@CurrentTimeUtc,\r\n\t\t\t@CreateDate,  @UniqueEmail ,  @PasswordFormat , @UserId = @UserId OUTPUT;\r\n\r\n\t\tIF (@UserId IS NULL)\r\n\t\tBEGIN\r\n\t\t\tROLLBACK TRANSACTION;\r\n\t\t\tSET @MessageText = 'User is not created';\r\n\t\t\tRAISERROR(@MessageText, 16, 1);\r\n\t\tEND;\r\n\r\n\t\tEXECUTE [dbo].[aspnet_UsersInRoles_AddUsersToRoles] @ApplicationName, @UserName, @RoleNames, @CurrentTimeUtc;\r\n\t\tEXECUTE [Membership].[usp_Membership_AddNewUser] @Email, @UserFirstName,@UserLastName, @AgencyDivisionSeqId;\r\n\r\n\t\tSELECT TOP (1) @AuthenticatedUserID = AuthenticatedUserID FROM Membership.EC3Membership \r\n\t\tWHERE UserID = @UserId ORDER BY MembershipSeqID DESC;\r\n\r\n\t\tIF (@AuthenticatedUserID !> 0)\r\n\t\tBEGIN\r\n\t\t\tROLLBACK TRANSACTION;\r\n\t\t\tSET @MessageText = 'AuthenticatedUserID is not found';\r\n\t\t\tRAISERROR(@MessageText, 16, 1);\r\n\t\tEND;\r\n\r\n\t\tEXECUTE\t[Membership].[usp_Access_UpdateUserAgencyAccess] @AgencyDivisionSeqIds, @AuthenticatedUserID, @IsAllAgency;\r\n\t\tEXECUTE [Contact].[AddContactAddress] @AgencyDivisionSeqId,\r\n\t\t\t\t @UserFirstName, @UserLastName, @Email, @AuthenticatedUserID, NULL, @ContactAddressSeqId OUTPUT;\r\n\r\n\t\tIF (@ContactAddressSeqId !> 0)\r\n\t\tBEGIN\r\n\t\t\tROLLBACK TRANSACTION;\r\n\t\t\tSET @MessageText = 'AddContactAddress is not created';\r\n\t\t\tRAISERROR(@MessageText, 16, 1);\r\n\t\tEND;\r\n\r\n\t\tCOMMIT TRANSACTION;\t\r\n\tEND TRY\r\n\tBEGIN CATCH\r\n\t\tIF (@@TRANCOUNT > 0)\r\n\t\tBEGIN\r\n\t\t\tROLLBACK TRANSACTION;\r\n\t\tEND;\r\n\r\n\t\tTHROW;\r\n\tEND CATCH;\r\nEND;"
        }
