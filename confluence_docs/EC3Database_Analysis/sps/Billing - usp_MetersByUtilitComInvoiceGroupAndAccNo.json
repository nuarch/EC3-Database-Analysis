    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[usp_MetersByUtilitComInvoiceGroupAndAccNo]\n(\r\n\t@UtilitycompanySeqid AS INT = NULL,\r\n\t@CurrentInvoiceAccountGroup AS INT = NULL,\r\n\t@CurrentAccountNumber AS VARCHAR(30) = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT \r\n\t\tM.CurrentMeterNumber AS MeterNumber, \r\n\t\tA.CurrentAccountNumber AS AccountNumber,  \r\n\t\tA.UtilityAccountProvider AS UtilitycompanySeqid, \r\n\t\tA.CurrentInvoiceAccountGroup,\r\n\t\tA.EnergyAccountDescription AS EnergyTypeSeqID\r\n\tFROM Billing.Meter AS M\tINNER JOIN Billing.AccountExchangeMeterTrack AS AEMT ON AEMT.OriginalMeterSeqid = M.MeterSeqid\r\n\t\tINNER JOIN Billing.Account AS A ON A.AccountSeqid = AEMT.OriginalAccountSeqid\r\n\tWHERE A.IsActive = 1\r\n\t\tAND M.IsActive = 1\r\n\t\tAND M.IsCurrentRecord = 'Y'\r\n\t\tAND A.CurrentAccountNumber = @CurrentAccountNumber \r\n\t\tAND A.UtilityAccountProvider = @UtilitycompanySeqid\r\n\t\tAND A.CurrentInvoiceAccountGroup = @CurrentInvoiceAccountGroup;\r\nEND;"
        }
      ]
    }
  ]
