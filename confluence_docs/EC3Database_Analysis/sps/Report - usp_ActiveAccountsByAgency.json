    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_ActiveAccountsByAgency]\n(\r\n    @EmailAddress AS VARCHAR(75)\r\n    ,@AgencyCodeOEC AS VARCHAR(MAX)\r\n\t,@IsAgencyUser AS BIT = 0\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @PublishedBillingPeriod AS VARCHAR(6);\r\n\r\n\tIF (@IsAgencyUser = 1)\r\n\tBEGIN\r\n\t\tSELECT @PublishedBillingPeriod = PublishedBillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\tEND;\r\n\tELSE\r\n\tBEGIN\r\n\t\tSELECT @PublishedBillingPeriod = MAX(PublishedBillingPeriod) FROM Published.MonthlyPublishedSummaryData;\r\n\tEND;\r\n\r\n\tDECLARE @spname AS VARCHAR(100) = OBJECT_NAME(@@PROCID);\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName\t= @spname,\r\n\t\t@StoredProcName = @spname,\r\n\t\t@RequestedBy = @EmailAddress,\r\n\t\t@prmPublishedBillingPeriod = @PublishedBillingPeriod,\r\n\t\t@prmBillingPeriod = NULL,\r\n\t\t@prmAgency_ies = @AgencyCodeOEC,\r\n\t\t@prmFacilityNumber_s = NULL,\r\n\t\t@prmStartingBillingPeriod = NULL,\r\n\t\t@prmEndingBillingPeriod = NULL;\r\n\r\n\tSELECT DISTINCT AD.Inactive\r\n\t\t,AD.AgencyCodeOEC\r\n\t\t,AD.AgencyName + ' (' + AD.AgencyShortDesc +')' AS AgencyName\r\n\t\t,F.Borough\r\n\t\t,F.[Block]\r\n\t\t,F.LotNumber\r\n\t\t,A.AccountStatus\r\n\t\t,F.OecFacilityNumber\r\n\t\t,F.FacilityName\r\n\t\t,F.Address1\r\n\t\t,A.CurrentAccountNumber\r\n\t\t,A.UtilityServiceAddress\r\n\t\t,F.CityPlanningBIN\r\n\t\t,UC.ShortDesc\r\n\t\t,EDT.EnergyType AS EnergyDeliveryType\r\n\t\t,A.OriginalAccountNumber\r\n\t\t,AB.LastPeriodBilled\r\n    FROM Billing.Account AS A\r\n        INNER JOIN Billing.AgencyDivision AS AD ON A.AgencyAccount = AD.AgencyDivisionSeqid\r\n\t\tINNER JOIN Billing.uftn_TableGetAgencyChildrenByAgencyCodeOEC(@AgencyCodeOEC, @EmailAddress) AS AG ON AD.AgencyCodeOEC = AG.AgencyCodeOEC\r\n        INNER JOIN Billing.Facility AS F ON A.FacilityAccount = F.FacilitySeqid\r\n        INNER JOIN Billing.UtilityCompany AS UC ON A.UtilityAccountProvider = UC.UtilityCompanySeqid\r\n        INNER JOIN Billing.EnergyDeliveryType AS EDT ON A.EnergyAccountDescription = EDT.EnergyDeliveryType\r\n        LEFT JOIN (SELECT UniqueAccountSeqId, MAX(BillingPeriod) AS LastPeriodBilled\r\n\t\t\tFROM Billing.AccountBilling\r\n\t\t\tWHERE BillingPeriod <= @PublishedBillingPeriod\r\n            GROUP BY UniqueAccountSeqId) AS AB ON AB.UniqueAccountSeqId = A.UniqueAccountSeqid\r\n    WHERE AD.Inactive = 'N' AND A.IsActive = 1\r\n\tORDER BY AD.AgencyCodeOEC, F.OecFacilityNumber, EDT.EnergyType, A.CurrentAccountNumber;\r\nEND;"
        }
      ]
    }
  ]
}