    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_AccountInformationByAccountNumber]\n(\r\n\t@OriginalAccountNumber AS acctnum = NULL\r\n\t,@Email AS emailaddr\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @spname VARCHAR(100) = OBJECT_NAME(@@PROCID)\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName\t\t\t\t\t= @spname,\r\n\t\t@StoredProcName\t\t\t\t= @spname,\r\n\t\t@RequestedBy\t\t\t\t= @Email,\r\n\t\t@prmPublishedBillingPeriod\t= NULL,\r\n\t\t@prmBillingPeriod\t\t\t= NULL,\r\n\t\t@prmAgency_ies\t\t\t\t= NULL,\r\n\t\t@prmFacilityNumber_s\t\t= NULL,\r\n\t\t@prmStartingBillingPeriod\t= NULL,\r\n\t\t@prmEndingBillingPeriod\t\t= NULL;\r\n\r\n\tDECLARE @SelectedAgencies TABLE (AgencyDivisionSeqID seqid NOT NULL, AgencyCodeOEC AgencyCodeOEC NOT NULL, AgencyName ldesc NOT NULL);\r\n\t\r\n\tINSERT INTO @SelectedAgencies\r\n\tSELECT DISTINCT A.AgencyDivisionSeqID, A.AgencyCodeOEC, A.AgencyName\r\n\tFROM dbo.uftn_TableGetActiveAgenciesByEmailAddress(@Email) AS A;\r\n\r\n\tDECLARE @FilteredAccount TABLE\r\n\t\t(RowID INT IDENTITY,\r\n\t\tUniqueAccountSeqID INT NOT NULL,\r\n\t\tAccountSeqID INT NOT NULL,\r\n\t\tFacilitySeqId INT NOT NULL,\r\n\t\tAgencyDivisionSeqId INT NOT NULL,\r\n\t\tOriginalAccountNumber acctnum NOT NULL,\r\n\t\tAccountAddress LongAddress NULL,\r\n\t\tUtilityCompany sdesc NULL);\r\n\r\n\tINSERT INTO @FilteredAccount\r\n        (UniqueAccountSeqID,\r\n\t\tAccountSeqID,\r\n\t\tFacilitySeqId,\r\n\t\tAgencyDivisionSeqId,\r\n\t\tOriginalAccountNumber,\r\n\t\tAccountAddress,\r\n\t\tUtilityCompany)\r\n    SELECT DISTINCT A.UniqueAccountSeqid,\r\n\t\tA.AccountSeqID,\r\n\t\tA.FacilityAccount,\r\n\t\tA.AgencyAccount,\r\n\t\tA.OriginalAccountNumber,\r\n\t\tA.UtilityServiceAddress,\r\n\t\tU.ShortDesc\r\n\tFROM @SelectedAgencies AS agency\r\n\t\tINNER JOIN Billing.Account AS A ON A.AgencyAccount = agency.AgencyDivisionSeqid\r\n\t\tINNER JOIN Billing.Facility AS F ON A.FacilityAccount = F.FacilitySeqid\r\n\t\tINNER JOIN Billing.UtilityCompany AS U ON A.UtilityAccountProvider = U.UtilityCompanySeqid\r\n\t\tLEFT JOIN Billing.AccountExchangeMeterTrack AS am ON A.AccountSeqid = am.OriginalAccountSeqid\r\n\t\tLEFT JOIN Billing.Meter AS M ON am.OriginalMeterSeqid = M.MeterSeqid\r\n\tWHERE A.AccountStatus IN ('AC', '46', 'UA') AND A.IsCurrentRecord = 'Y' AND A.IsActive = 1 AND A.AccountSeqID IS NOT NULL\r\n\t\tAND ISNULL(A.OriginalAccountNumber, '') LIKE COALESCE('%' + @OriginalAccountNumber + '%', ISNULL(A.OriginalAccountNumber, ''))\r\n\tORDER BY A.OriginalAccountNumber;\r\n\r\n\tSELECT a.RowID,\r\n\t\ta.UniqueAccountSeqID,\r\n        a.AccountSeqID,\r\n        a.FacilitySeqId,\r\n        a.AgencyDivisionSeqId,\r\n        a.OriginalAccountNumber,\r\n        a.AccountAddress,\r\n        a.UtilityCompany,\r\n\t\tISNULL((STUFF((SELECT ', ' + m.OriginalMeterNumber\r\n\t\t\tFROM Billing.AccountExchangeMeterTrack AS am\r\n\t\t\t\tINNER JOIN billing.Meter AS m ON am.OriginalMeterSeqid = m.MeterSeqid\r\n\t\t\tWHERE am.OriginalAccountSeqid = a.AccountSeqID\r\n\t\t\tFOR XML PATH('')), 1, 1, '') ), '') AS MeterNumbers\r\n\tFROM @FilteredAccount AS a;\r\nEND;"
        }
      ]
    }
  ]
}