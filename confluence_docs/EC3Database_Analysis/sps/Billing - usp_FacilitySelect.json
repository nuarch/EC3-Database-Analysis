    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[usp_FacilitySelect]\n(\r\n\t@SearchText AS VARCHAR(150) = NULL,\r\n\t@PageSize AS INT,\r\n\t@CurrentPageNumber AS INT,\r\n\t@SortColumn AS VARCHAR(100) = 'LastUpdate',\r\n\t@SortOrder AS VARCHAR(100) = 'DESC'\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @RecordCount AS INT;\r\n\r\n\tSELECT @RecordCount = ISNULL(COUNT(FacilitySeqid), 0)\r\n\tFROM Billing.Facility\r\n\tWHERE @SearchText IS NULL OR (OecFacilityNumber LIKE '%' + @SearchText + '%' OR FacilityName LIKE '%' + @SearchText + '%'\r\n\t\tOR LTRIM(RTRIM(COALESCE(HouseNumber, '') + ' ' + COALESCE(StreetName, '') + ' ' + COALESCE(Address1, '') + COALESCE(', ' + Address2, '') + COALESCE(', ' + City, '') + COALESCE(', ' + [State], '') + COALESCE(', ' + Zipcode, ''))) LIKE '%' + @SearchText + '%');\r\n\t\r\n    SELECT FacilitySeqid\r\n\t\t,OecFacilityNumber\r\n\t\t,FacilityName\r\n\t\t,LTRIM(RTRIM(COALESCE(HouseNumber, '') + ' ' + COALESCE(StreetName, '') + ' ' + COALESCE(Address1, '') + COALESCE(', ' + Address2, '') + COALESCE(', ' + City, '') + COALESCE(', ' + [State], '') + COALESCE(', ' + Zipcode, ''))) AS [Address]\r\n\t\t,NULL AS AgencyName\r\n\t\t,CityPlanningBIN\r\n\t\t,[Block]\r\n\t\t,LotNumber\r\n\t\t,COALESCE(ReviewNeeded, 'Y') AS IsReviewed\r\n\t\t,@RecordCount AS RecordCount\r\n\tFROM Billing.Facility\r\n\tWHERE @SearchText IS NULL OR (OecFacilityNumber LIKE '%' + @SearchText + '%' OR FacilityName LIKE '%' + @SearchText + '%' OR Borough + [Block] + LotNumber  LIKE '%' + @SearchText + '%'\r\n\t\tOR LTRIM(RTRIM(COALESCE(HouseNumber, '') + ' ' + COALESCE(StreetName, '') + ' ' + COALESCE(Address1, '') + COALESCE(', ' + Address2, '') + COALESCE(', ' + City, '') + COALESCE(', ' + [State], '') + COALESCE(', ' + Zipcode, ''))) LIKE '%' + @SearchText + '%')\r\n\tORDER BY CASE WHEN(@SortColumn = '' ) THEN ISNULL(LastUpdate, DateAdded) END DESC,\r\n\t\tCASE WHEN(@SortColumn = 'oecFacilityNumber' and @SortOrder = 'asc') THEN OecFacilityNumber END ASC,\r\n\t\tCASE WHEN(@SortColumn = 'oecFacilityNumber' and @SortOrder = 'desc') THEN OecFacilityNumber END DESC,\r\n\t\tCASE WHEN(@SortColumn = 'FacilityName' and @SortOrder = 'asc') THEN FacilityName END ASC,\r\n\t\tCASE WHEN(@SortColumn = 'FacilityName' and @SortOrder = 'desc') THEN FacilityName END DESC,\r\n\t\tCASE WHEN(@SortColumn = 'Address' and @SortOrder = 'asc') THEN HouseNumber END ASC,\r\n\t\tCASE WHEN(@SortColumn = 'Address' and @SortOrder = 'desc') THEN HouseNumber END DESC,\r\n\t\tCASE WHEN(@SortColumn = 'Block' and @SortOrder = 'asc') THEN [Block] END ASC,\r\n\t\tCASE WHEN(@SortColumn = 'Block' and @SortOrder = 'desc') THEN [Block] END DESC,\r\n\t\tCASE WHEN(@SortColumn = 'IsReviewed' and @SortOrder = 'asc') THEN ReviewNeeded END ASC,\r\n\t\tCASE WHEN(@SortColumn = 'IsReviewed' and @SortOrder = 'desc') THEN ReviewNeeded END DESC\r\n\t\tOFFSET CASE WHEN @PageSize = -1 THEN 0 ELSE @PageSize * (@CurrentPageNumber -1) END ROWS FETCH NEXT CASE WHEN @PageSize = -1 THEN IIF(@RecordCount > 0, @RecordCount, 1) ELSE @PageSize END ROWS ONLY;\r\nEND;"
        }
      ]
    }
  ]
}