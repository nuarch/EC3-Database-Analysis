    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "5. Performance Considerations"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Read Uncommitted Isolation Level",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of "
                },
                {
                  "type": "text",
                  "text": "SET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " allows reading uncommitted data, which can improve performance by reducing locking but may lead to dirty reads."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Joins and Indexing",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure involves multiple joins, which can be resource-intensive. Ensuring that the joined columns are indexed can improve performance."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Distinct Clause",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of "
                },
                {
                  "type": "text",
                  "text": "SELECT DISTINCT",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " can be costly in terms of performance, especially with large datasets, as it requires sorting and deduplication."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "6. Potential Issues or Risks"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Dirty Reads",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of the "
                },
                {
                  "type": "text",
                  "text": "READ UNCOMMITTED",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " isolation level can lead to dirty reads, where the data read might not be consistent or committed."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Email Address Logging",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure logs the email address of the requester, which could raise privacy concerns if not handled properly."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Date Conversion",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The conversion of dates using "
                },
                {
                  "type": "text",
                  "text": "CONVERT",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " might lead to errors if the date format is not consistent across the data."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Scalability",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": As the number of records grows, the performance might degrade due to the complexity of the joins and the use of "
                },
                {
                  "type": "text",
                  "text": "DISTINCT",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Hardcoded Logic",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure assumes that there is always a current billing period marked with 'Y', which might not be the case if the data is not maintained properly."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Published_ClosedAccountsBilledReport]\n(\r\n\t@EmailAddress AS VARCHAR(100)\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @spname AS VARCHAR(100) = OBJECT_NAME(@@PROCID);\r\n\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName\t\t\t\t\t= @spname,\r\n\t\t@StoredProcName\t\t\t\t= @spname,\r\n\t\t@RequestedBy\t\t\t\t= @EmailAddress,   \r\n\t\t@prmPublishedBillingPeriod\t= NULL,\r\n\t\t@prmBillingPeriod\t\t\t= NULL,\r\n\t\t@prmAgency_ies\t\t\t\t= '*',\r\n\t\t@prmFacilityNumber_s\t\t= NULL,\r\n\t\t@prmStartingBillingPeriod\t= NULL,\r\n\t\t@prmEndingBillingPeriod\t\t= NULL\r\n\t\r\n\tDECLARE @CurrentBillingPeriod AS VARCHAR(6);\r\n\tSELECT @CurrentBillingPeriod = BillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\r\n\tSELECT DISTINCT ab.BillingPeriod,\r\n\t\ta.CurrentAccountNumber\r\n\t\t,ad.AgencyCodeOEC\r\n\t\t,ad.AgencyName\r\n\t\t,f.OecFacilityNumber\r\n\t\t,f.FacilityName\r\n\t\t,f.Address1 AS FacilityAddress\r\n\t\t,a.UtilityServiceAddress\r\n\t\t,uc.ShortDesc AS UtilityCompany\r\n\t\t,CONVERT(VARCHAR(10), CONVERT(DATETIME, a.AccountEffectiveTurnOn, 1), 101) AS AccountEffectiveTurnOn\r\n\t\t,ab.ManualPaymentOverrideAmount\r\n\t\t,CONVERT(VARCHAR(10), a.LastUpdate, 101) AS LatestAccountDataModification\r\n\t\t,m.CurrentMeterNumber\r\n\t\t,mb.OriginalMeterNumber\r\n\t\t,mb.Consumption\r\n\t\t,CONVERT(VARCHAR(10), CONVERT(DATETIME, m.MeterEffectiveOnDate, 1), 101) AS MeterEffectiveOnDate\r\n\t\t,CONVERT(VARCHAR(10), CONVERT(DATETIME, m.MeterEffectiveOffDate, 1), 101) AS MeterEffectiveOffDate\r\n\t\t,a.UniqueAccountSeqid \r\n\t\t,a.IsActive AS IsAccountActive\r\n\t\t,m.IsActive AS IsMeterActive\r\n\tFROM Billing.Account AS a\r\n\t\tINNER JOIN Billing.AccountBilling AS ab ON a.UniqueAccountSeqid = ab.UniqueAccountSeqId\r\n\t\tLEFT JOIN Billing.MeterBilling AS mb ON mb.UniqueAccountSeqId = ab.UniqueAccountSeqId AND mb.BillingPeriod = ab.BillingPeriod\r\n\t\tLEFT JOIN Billing.Meter AS m ON mb.UniqueMeterSeqId = m.UniqueMeterSeqid AND m.IsCurrentRecord ='Y'\r\n\t\tINNER JOIN Billing.AgencyDivision AS ad ON ad.AgencyDivisionSeqid = a.AgencyAccount\r\n\t\tINNER JOIN Billing.Facility AS f ON f.FacilitySeqid = a.FacilityAccount\r\n\t\tINNER JOIN Billing.UtilityTariffRateInformation AS utri ON utri.UtilityTariffRateInformationSeqid = a.UtilityTariffRateInformationSeqid \r\n\t\tINNER JOIN Billing.UtilityCompany AS uc ON uc.UtilityCompanySeqid = a.UtilityAccountProvider\r\n\tWHERE a.IsActive = 0 AND a.IsCurrentRecord ='Y' AND ab.BillingPeriod = @CurrentBillingPeriod;\r\nEND;"
        }
      ]
    }
  ]
}