      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Billing].[usp_GetAccountsAndMetersByFacility]\n(\r\n\t@FacilitySeqId AS INT,\r\n\t@UtilityCompagnySeqId AS INT,\r\n\t@EnergyTypeSeqId AS INT,\r\n\t@SbmrId AS INT\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRAN ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT ISNULL(M.MeterSeqid, 0) AS MeterSeqId\r\n\t\t,ISNULL(M.CurrentMeterNumber, '') AS CurrentMeterNumber\r\n\t\t,ISNULL(M.OriginalMeterNumber, '') AS OriginalMeterNumber\r\n\t\t,A.FacilityAccount AS FacilitySeqId\r\n\t\t,F.OecFacilityNumber\r\n\t\t,F.FacilityName\r\n\t\t,A.CurrentAccountNumber\r\n\t\t,A.OriginalAccountNumber\r\n\t\t,A.AccountSeqid AS AccountSeqId\r\n\t\t,A.UtilityAccountProvider AS UtilityCompanySeqId\r\n\t\t,A.IsActive AS AccountActive\r\n\t\t,ISNULL(M.IsActive, 0) AS MeterActive\r\n\tFROM Billing.Account AS A\r\n\t\tINNER JOIN Billing.Facility AS F ON F.FacilitySeqid = A.FacilityAccount \r\n        LEFT JOIN Billing.Meter AS M ON M.UniqueAccountSeqID = A.UniqueAccountSeqid AND M.IsActive = 1 AND M.IsCurrentRecord = 'Y'\r\n    WHERE A.FacilityAccount = @FacilitySeqId                   \r\n        AND A.UtilityAccountProvider = @UtilityCompagnySeqId\r\n        AND A.EnergySource = @EnergyTypeSeqId\r\n\t\tAND A.IsActive = 1 AND A.IsCurrentRecord = 'Y'\r\n\tUNION\r\n\tSELECT DISTINCT 0 AS MeterSeqId\r\n\t\t,ISNULL(SM.CurrentMeterNumber, '') AS CurrentMeterNumber\r\n\t\t,ISNULL(SM.OriginalMeterNumber, '') AS OriginalMeterNumber\r\n\t\t,SH.FacilitySeqid AS FacilitySeqId\r\n\t\t,NULL AS OecFacilityNumber\r\n\t\t,NULL AS FacilityName\r\n\t\t,SA.CurrentAccountNumber\r\n\t\t,SA.OriginalAccountNumber\r\n\t\t,0 AS AccountSeqId\r\n\t\t,SH.CommodityUtilityCompanySeqid AS UtilityCompanySeqId\r\n\t\t,1 AS AccountActive\r\n\t\t,1 AS MeterActive\r\n\tFROM SBMR.SBMRAccount AS SA\r\n\t\tINNER JOIN SBMR.SBMRHeader AS SH ON SH.SBMRHeaderSeqid = SA.SBMRHeaderSeqid\r\n\t\tLEFT JOIN SBMR.SbmrMeter AS SM ON SA.SBMRHeaderSeqid = SM.SBMRHeaderSeqid AND SA.CurrentAccountNumber = SM.CurrentAccountNumber\r\n\tWHERE SA.SBMRHeaderSeqid = @SbmrId;\r\nEND;"
        }
      ]
