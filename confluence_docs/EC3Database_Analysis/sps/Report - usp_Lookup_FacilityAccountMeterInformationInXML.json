    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Lookup_FacilityAccountMeterInformationInXML]\n(\r\n\t@FacilitySeqID AS INT\r\n\t,@AgencyDivisionSeqID AS INT\r\n\t,@IsAgencyUser AS BIT = 0\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n    DECLARE @PublishedBillingPeriod AS VARCHAR(6);\r\n\tDECLARE @AccountNumbers TABLE\r\n\t\t(CurrentAccountNumber VARCHAR(15) NULL,\r\n\t\tEnergyType VARCHAR(3) NULL,\r\n\t\tUtilityCompany VARCHAR(20) NULL,\r\n\t\tAccountAddress VARCHAR(120) NULL);\r\n\r\n\tIF (@IsAgencyUser = 1)\r\n\tBEGIN\r\n\t\tSELECT @PublishedBillingPeriod = PublishedBillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\tEND;\r\n\tELSE\r\n\tBEGIN\r\n\t\tSELECT @PublishedBillingPeriod = MAX(PublishedBillingPeriod) FROM Published.MonthlyPublishedSummaryData;\r\n\tEND;\r\n\r\n\tINSERT INTO @AccountNumbers\r\n\t    (CurrentAccountNumber\r\n\t    ,EnergyType\r\n\t    ,UtilityCompany\r\n\t    ,AccountAddress)\r\n\tSELECT DISTINCT A.CurrentAccountNumber\r\n\t\t,A.EnergyType\r\n\t\t,A.UtilityCompany\r\n\t\t,A.AccountAddress\r\n\tFROM Report.uvw_AccountAndMeterListing AS A\r\n\t\tINNER JOIN Billing.AgencyDivision AS AD ON AD.AgencyCodeOEC = A.AgencyCodeOEC\r\n\tWHERE A.FacilitySeqid = @FacilitySeqID AND AD.AgencyDivisionSeqID = @AgencyDivisionSeqID\r\n\t\tAND A.PublishedBillingPeriod = @PublishedBillingPeriod;\r\n\t\t\r\n    IF(EXISTS(SELECT * FROM @AccountNumbers))\r\n\tBEGIN\r\n\t\tSELECT A.CurrentAccountNumber AS '@CurrentAccountNumber'\r\n\t\t\t,A.EnergyType AS '@EnergyType'\r\n\t\t\t,A.UtilityCompany AS '@UtilityCompany'\r\n\t\t\t,ISNULL(A.AccountAddress, '') AS '@AccountAddress'\r\n\t\t\t,(SELECT DISTINCT LTRIM(RTRIM(m.CurrentMeterNumber)) AS '@CurrentMeterNumber'\r\n\t\t\t\t,CASE WHEN m.MeterEffectiveOnDate = '99991231'\r\n\t\t\t\t\t\tOR m.MeterEffectiveOnDate IS NULL THEN '-'\r\n\t\t\t\t\tELSE SUBSTRING(m.MeterEffectiveOnDate, 1, 4) + '/' + SUBSTRING(m.MeterEffectiveOnDate, 5, 2) + '/' + SUBSTRING(m.MeterEffectiveOnDate, 7, 2) END AS '@EffectiveTurnOnDate'\r\n\t\t\t\t,ISNULL(m.UtilityServiceAddress, '') AS '@MeterAddress'\r\n\t\t\tFROM Billing.Meter AS m\r\n\t\t\t\tINNER JOIN Billing.AccountExchangeMeterTrack AS t ON m.MeterSeqid = t.OriginalMeterSeqid\r\n\t\t\tWHERE A.CurrentAccountNumber = t.OriginalAccountNumber AND m.MeterStatus IN ('46', 'AC', 'UA', 'UM') FOR XML PATH('Meter'), TYPE)\r\n\t\tFROM @AccountNumbers AS A\r\n\t\tFOR XML PATH('Account'), ROOT('Accounts');\r\n    END;\r\n    ELSE\r\n    BEGIN\r\n\t\tDECLARE @default AS XML = '<Accounts></Accounts>';\r\n\t\tSELECT @default;\r\n    END;\r\nEND;"
        }
      ]
    }
  ]
