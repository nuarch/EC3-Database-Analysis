              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Delete from `MembershipAgencyAccess`:",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " The procedure first deletes records from the "
                },
                {
                  "type": "text",
                  "text": "MembershipAgencyAccess",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " table where the "
                },
                {
                  "type": "text",
                  "text": "AuthenticatedUserID",
