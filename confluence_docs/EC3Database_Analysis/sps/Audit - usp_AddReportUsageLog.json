      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Audit].[usp_AddReportUsageLog]\n(\r\n\t@ReportName AS VARCHAR(100)\r\n\t,@StoredProcName AS VARCHAR(100)\r\n\t,@RequestedBy AS VARCHAR(75)\r\n\t,@prmPublishedBillingPeriod AS VARCHAR(6)\r\n\t,@prmBillingPeriod AS VARCHAR(6)\r\n\t,@prmAgency_ies AS VARCHAR(MAX)\r\n\t,@prmFacilityNumber_s AS VARCHAR(MAX)\r\n\t,@prmStartingBillingPeriod AS VARCHAR(6)\r\n\t,@prmEndingBillingPeriod AS VARCHAR(6)\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\r\n\tDECLARE @RequestedBillingPeriod AS VARCHAR(6);\r\n\r\n\tSELECT @ReportName = CASE @ReportName WHEN NULL THEN OBJECT_NAME(@@PROCID) ELSE @ReportName END;\r\n\tSELECT @StoredProcName = CASE @StoredProcName WHEN NULL THEN OBJECT_NAME(@@PROCID) ELSE @StoredProcName END;\r\n\tSELECT @RequestedBy = CASE @RequestedBy WHEN NULL THEN 'reportlog@dcas.nyc.gov' ELSE @RequestedBy END;\r\n\tSELECT @RequestedBillingPeriod = BillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\r\n\tINSERT INTO [Audit].ReportUsageLog\r\n\t\t(ReportName\r\n        ,StoredProcName\r\n        ,RequestedBy\r\n        ,RequestedOn\r\n        ,RequestedBillingPeriod\r\n        ,prmPublishedBillingPeriod\r\n        ,prmBillingPeriod\r\n        ,prmAgency_ies\r\n        ,prmFacilityNumber_s\r\n        ,prmStartingBillingPeriod\r\n        ,prmEndingBillingPeriod)\r\n\tVALUES (@ReportName\r\n        ,@StoredProcName\r\n        ,@RequestedBy\r\n        ,GETDATE()\r\n        ,@RequestedBillingPeriod\r\n        ,@prmPublishedBillingPeriod\r\n        ,@prmBillingPeriod\r\n        ,@prmAgency_ies\r\n        ,@prmFacilityNumber_s\r\n        ,@prmStartingBillingPeriod\r\n        ,@prmEndingBillingPeriod);\r\nEND;"
        }
