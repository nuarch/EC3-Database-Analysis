      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Common].[Automation_CheckApplicationTimeFrameAndProcessing] (@InvoiceAccountGroup int)\nAS\r\n\r\nBEGIN\r\n    \r\n\r\n--DECLARE @InvoiceAccountGroup INT =1\r\nDECLARE @ATFNote VARCHAR(500)\r\nDECLARE @UtilityProcessingNote VARCHAR(500)\r\nDECLARE @canStartProcessing bit\r\n\r\n\r\n\r\nDECLARE @ApplicationTimeFramePeriod VARCHAR(6)\r\nDECLARE @LastPublishedBillingPeriod VARCHAR(6)\r\nDECLARE @LastProcessedBillingPeriodForGivenUtility VARCHAR(6)\r\nDECLARE @ProcessingBillingPeriod VARCHAR(6)\r\nDECLARE @invoiceBillingGroupName VARCHAR(50) \r\n\r\nSELECT @ApplicationTimeFramePeriod = atf.BillingPeriod FROM Billing.ApplicationTimeFrame AS atf  WHERE atf.CurrentProcessingPeriod = 'Y'\r\nSELECT @LastPublishedBillingPeriod = MAX(talrdfcp.BillingPeriod) FROM Published.TemporalAccountLevelRawDataForCurrentPeriod AS talrdfcp\r\nSELECT @LastProcessedBillingPeriodForGivenUtility = MAX(ab.BillingPeriod) FROM Billing.AccountBilling AS ab WHERE ab.CurrentInvoiceAccountBillingGroup =1\r\nSELECT @ProcessingBillingPeriod = dbo.CalculateNextBillingPeriod(@LastPublishedBillingPeriod,'M')\r\nSELECT @invoiceBillingGroupName = iag.InvoiceAccountBillingGroupDesc FROM Billing.InvoiceAccountGroup AS iag WHERE iag.InvoiceAccountGroupSeqid =@InvoiceAccountGroup\r\n\r\n\r\n\r\nIF @ApplicationTimeFramePeriod = @ProcessingBillingPeriod  \r\nBEGIN\r\n    SET @ATFNote = 'Current processing period is '+@ApplicationTimeFramePeriod\r\n\tSET @canStartProcessing = 1\r\nEND\r\n\r\nIF @ApplicationTimeFramePeriod < @ProcessingBillingPeriod  \r\nBEGIN\r\n    SET @ATFNote = 'Please move forward Application Time Frame in order to start bill processing - '+ @ProcessingBillingPeriod\r\n\tSET @canStartProcessing = 0\r\nEND\r\n\r\nIF @LastProcessedBillingPeriodForGivenUtility = @ProcessingBillingPeriod  \r\nBEGIN\r\n    SET @UtilityProcessingNote = 'You already processed '+ @invoiceBillingGroupName +' for '+ @ProcessingBillingPeriod \r\n\tSET @canStartProcessing = 0\r\nEND\r\n\r\nIF @LastProcessedBillingPeriodForGivenUtility < @ProcessingBillingPeriod  \r\nBEGIN\r\n    SET @UtilityProcessingNote = 'You can start processing '+ @invoiceBillingGroupName +' for '+ @ProcessingBillingPeriod \r\n\tSET @canStartProcessing = 1\r\nEND\r\n\r\n\r\nSELECT @ATFNote TimeFrameNote, @UtilityProcessingNote UtilityProcessingNote, @canStartProcessing canStartProcessing\r\n\r\nEND"
        }
      ]
    }
