      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [ManualBill].[usp_InvoiceAccountGroup_SelectForManualBillingDataEntry]\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT DISTINCT CAST(IAG.InvoiceAccountGroupUtiliyCompany AS VARCHAR(15)) + '_' + CAST(IAG.InvoiceAccountGroupSeqid AS VARCHAR(15)) AS [Value]\r\n\t\t,IAG.InvoiceAccountBillingGroupDesc AS [Text]\r\n\tFROM Billing.InvoiceAccountGroup AS IAG\r\n\t\tINNER JOIN Billing.Account AS A ON A.CurrentInvoiceAccountGroup = IAG.InvoiceAccountGroupSeqid\r\n\t\tINNER JOIN Billing.Meter AS M ON A.UniqueAccountSeqid = M.UniqueAccountSeqID\r\n\tWHERE A.AccountStatus IN ('46' ,'AC', '27', '28') AND A.ManualDataEntry = 'Y' AND A.IsCurrentRecord = 'Y'\r\n\t\tAND IAG.Active = 1 AND M.IsCurrentRecord = 'Y'\r\n\tORDER BY 2;\r\nEND;"
        }
      ]
