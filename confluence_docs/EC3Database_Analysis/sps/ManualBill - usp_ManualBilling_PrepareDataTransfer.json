      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [ManualBill].[usp_ManualBilling_PrepareDataTransfer]\n\t@BillingPeriod varchar(6),\r\n\t@authenticatedID int,\r\n\t@utilityCompany dbo.seqid,\r\n\t@Status int  OUTPUT      \r\n   \r\n AS \r\n begin\r\n \r\n \r\n  --**********************************************************************************************************************************************************************************************************\r\n --\tAuthor: MOHAMMED BELARREM\r\n -- Description: Update the account information into the Adjustment table\r\n --\t\t\t\t Update the previous billing information into the Adjustment table before data is moved into the account billing side\r\n --\r\n --\tLog: \r\n --\t\tCreation 02/10/2009 MOH\r\n --     Update   01/07/2010 MOH\tModified the queries to add a utilityCompanySeqid link \t\r\n --\t\tUpdate   01/13/2010 MOH Added the logic to label records as BA\t\r\n --\t\tUpdate\t 01/14/2010 MOH\tChanged the AccountBillingStatusPeriod to be @BillingPeriod\t\t\t\t\t\t\r\n --**********************************************************************************************************************************************************************************************************\r\n\r\n \r\n\t\tset @Status = 9\r\n\t\r\n\t\t/**************************************************************************************\r\n\t\tUpdate the account information into the Adjustment table\r\n\t\t***************************************************************************************/\r\n\t\tUPDATE  ManualBill.UploadManualBillingAccountAdjustment\r\n\t\tSET     AccountBillingStatus\t\t\t= case when ( ManualBill.UploadManualBillingAccountAdjustment.AccountBillingSeqid is null and ManualBill.UploadManualBillingAccountAdjustment.BillingPeriod <> ManualBill.UploadManualBillingAccountAdjustment.BillingPeriodRevision ) then 'BA' else Account.AccountStatus end\r\n\t\t\t\t,AccountBillingpreviousStatus\t= Account.AccountpreviousStatus\r\n\t\t\t\t,AccountBillingStatusPeriod\t\t= @BillingPeriod\r\n\t\t\t\t,BillingCycle\t\t\t\t\t= Account.BillingCycle\r\n\t\t\t\t,SalesType\t\t\t\t\t\t= Account.SalesType\r\n\t\t\t\t,IsTimeOfDayAccount\t\t\t\t= Account.IsTimeOfDayAccount\r\n\t\t\t\t,FacilityName\t\t\t\t\t= Billing.Facility.FacilityName\t\t\t\t\r\n\t\t\t\t,ServiceAddress\t\t\t\t\t= Account.UtilityServiceAddress\r\n\t\t\r\n\t\tFROM\tManualBill.UploadManualBillingAccountAdjustment INNER JOIN\r\n                Billing.Account ON ManualBill.UploadManualBillingAccountAdjustment.OriginalAccountNumber = Billing.Account.OriginalAccountNumber AND \r\n                ManualBill.UploadManualBillingAccountAdjustment.UtilityCompanySeqid = Billing.Account.UtilityAccountProvider INNER JOIN\r\n                Billing.Facility ON Billing.Account.FacilityAccount = Billing.Facility.FacilitySeqid\r\n                \r\n                \r\n\t\t/**************************************************************************************\r\n\t\tUpdate the previous billing information into the Adjustment table\r\n\t\t***************************************************************************************/\r\n\t\t\r\n\t\tUPDATE  ManualBill.UploadManualBillingAccountAdjustment\r\n\t\tSET     PriorRevisedBilledAmount\t= AccountBilling.RevisedBilledAmount,\r\n\t\t\t\tPriorRevisedEnergy\t\t\t= IsNull(AccountBilling.AccountEnergyUsage, 0),\r\n\t\t\t\tPriorRevisedDemand\t\t\t= IsNull(AccountBilling.AccountDemandUsage1, 0)\r\n\t \r\n\t\tFROM \tBilling.AccountBilling INNER JOIN\r\n              \tManualBill.UploadManualBillingAccountAdjustment ON \r\n              \tBilling.AccountBilling.OriginalAccountNumber = ManualBill.UploadManualBillingAccountAdjustment.OriginalAccountNumber AND \r\n              \tBilling.AccountBilling.BillingPeriod = ManualBill.UploadManualBillingAccountAdjustment.BillingPeriodRevision AND \r\n              \tBilling.AccountBilling.BillingPeriodRevision = ManualBill.UploadManualBillingAccountAdjustment.BillingPeriodRevision INNER JOIN\r\n              \tBilling.AccountBillingPaperBill ON Billing.AccountBilling.AccountBillingSeqid = Billing.AccountBillingPaperBill.AccountBillingSeqid AND \r\n              \tBilling.AccountBilling.BillingPeriod = Billing.AccountBillingPaperBill.BillingPeriod AND \r\n              \tBilling.AccountBilling.BillingPeriodRevision = Billing.AccountBillingPaperBill.BillingPeriodRevision\r\n\t \r\n\t \r\n\t\tset @Status = 0\r\n \r\n end"
        }
      ]
    }
