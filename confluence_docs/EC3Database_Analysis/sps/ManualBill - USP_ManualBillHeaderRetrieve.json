    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [ManualBill].[USP_ManualBillHeaderRetrieve]\n(\r\n\t@manualBillHeaderId AS INT = NULL\r\n\t,@billingType AS CHAR(1) = NULL\r\n\t,@providerId AS INT = NULL\r\n\t,@billingGroupId AS INT = NULL\r\n\t,@pageNumber AS INT = NULL\r\n\t,@pageSize AS INT = NULL\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tSELECT @manualBillHeaderId = NULLIF(@manualBillHeaderId, 0), @billingType = NULLIF(@billingType, ''), @providerId = NULLIF(@providerId, 0)\r\n\t\t,@billingGroupId = NULLIF(@billingGroupId, 0), @pageNumber = ISNULL(NULLIF(@pageNumber, 0), 1), @pageSize = ISNULL(NULLIF(@pageSize, 0), 1000);\r\n\r\n\tSELECT AccountManualBillingHeaderSeqid, AccountSeqid, SummaryAccountNumber\r\n\t\t,CurrentInvoiceAccountGroup, AccountUtilityCompanySeqid\r\n\t\t,TotalAmountDue, ManualPaymentOverrideAmount\r\n\t\t,AccountEnergySource, AccountEnergyUsage, AccountDemandUsage, EnergyUnit\r\n\t\t,EnergyUsage, DemandUsage\r\n\t\t,BillCreationDate, DatePaymentDue\r\n\t\t,BillingPeriod, BillingPeriodDays, FromDate, ToDate, ActualOrEstimated\r\n\t\t,DateAdded, AuthenticatedUserID, LastUpdate\r\n\t\t,InitialPostingDate, BillingType\r\n\t\t,VoucherBillingStatus, IsLockedForEdit, InvoiceTrackingSeqid\r\n\tFROM ManualBill.uvw_AccountManualBillingHeaders\r\n\tWHERE AccountManualBillingHeaderSeqid = ISNULL(@manualBillHeaderId, AccountManualBillingHeaderSeqid)\r\n\t\tAND AccountUtilityCompanySeqid = ISNULL(@providerId, AccountUtilityCompanySeqid)\r\n\t\tAND CurrentInvoiceAccountGroup = ISNULL(@billingGroupId, CurrentInvoiceAccountGroup)\r\n\t\tAND 1 = CASE WHEN ISNULL(@billingType, '') <> '' THEN CASE WHEN BillingType = @billingType THEN 1 ELSE 0 END  ELSE 1 END\r\n\tORDER BY BillingPeriod DESC, AccountUtilityCompanySeqid ASC, CurrentInvoiceAccountGroup ASC;\r\nEND;"
        }
      ]
    }
  ]
}