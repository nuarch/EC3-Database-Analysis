      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_BWT_Billing_Request] @BillingPeriod dbo.BillingPeriod = '201101' AS\nSELECT DISTINCT TOP ( 100 ) PERCENT \r\n        LEFT(uvw_BWT_Billing_Request.BillingPeriod, 4) AS 'Year'\r\n,       RIGHT(uvw_BWT_Billing_Request.BillingPeriod, 2) AS 'Month'\r\n,       CAST(RIGHT(CONCAT('00000', uvw_BWT_Billing_Request.CurrentAccountNumber), 15) AS VARCHAR(15)) AS 'Account'\r\n,       FacilityName\r\n,       uvw_BWT_Billing_Request.BillingPeriod\r\n,       CAST(uvw_BWT_Billing_Request.AccountEnergyUsage AS INT) AS 'Energy On Peak (kWh)'\r\n,       CAST(uvw_BWT_Billing_Request.ConsumptionHoursOffPeak AS NUMERIC(12, 2)) AS 'Energy Off Peak (kWh)'\r\n,       uvw_BWT_Billing_Request.AccountDemandUsage AS 'Demand (metered KW)'\r\n,       uvw_BWT_Billing_Request.AccountReactivePowerEnergy AS 'Reactive Power (KVar)'\r\n,       CAST(uvw_BWT_Billing_Request.CommodityConsumption + uvw_BWT_Billing_Request.CommodityConsumptionOffPeak AS MONEY) AS 'Production Energy Charge'\r\n,       CAST(uvw_BWT_Billing_Request.CommodityDemand + uvw_BWT_Billing_Request.MinimumBilledDemandDollars AS MONEY) AS 'Production Demand Charges'\r\n,       CAST(uvw_BWT_Billing_Request.EnergyCostAdjustment AS MONEY) AS 'Production ECA Charges'\r\n,       CAST(uvw_BWT_Billing_Request.DeliveryDemand + uvw_BWT_Billing_Request.DeliveryMinimumBilledAmount AS MONEY) AS 'Base Delivery Charge'\r\n,       CAST(uvw_BWT_Billing_Request.GrossReceiptTax AS MONEY) AS 'Gross Receipt Tax'\r\n,       CAST(uvw_BWT_Billing_Request.CommodityAllocationCharge + uvw_BWT_Billing_Request.DeliveryAllocationCharge\r\n        + uvw_BWT_Billing_Request.CustomerLevelAdjustmentAmount AS MONEY) AS 'Fixed Charges'\r\n,       uvw_BWT_Billing_Request.RevisedReactivePowerDollars AS 'Delivery Reactive Power Charge'\r\n,       CASE WHEN uvw_BWT_Billing_Request.MinimumBilledDemandUsage = 0 THEN uvw_BWT_Billing_Request.MinimumBilledDemandUsage\r\n             ELSE uvw_BWT_Billing_Request.MinimumBilledDemandUsage - uvw_BWT_Billing_Request.AccountDemandUsage\r\n        END AS 'Calculated Min Production Demand '\r\n,       CASE WHEN uvw_BWT_Billing_Request.DeliveryMinimumBilledDemand = 0\r\n             THEN uvw_BWT_Billing_Request.DeliveryMinimumBilledDemand\r\n             ELSE uvw_BWT_Billing_Request.DeliveryMinimumBilledDemand - uvw_BWT_Billing_Request.AccountDemandUsage\r\n        END AS 'Calculated Min Delivery Demand '\r\n,       uvw_BWT_Billing_Request.RevisedBilledAmount AS 'Total Spend'\r\n,       uvw_BWT_Billing_Request.MeterEstimatedReading\r\nFROM Billing.uvw_BWT_Billing_Request\r\nWHERE   ( uvw_BWT_Billing_Request.BillingPeriod >= @BillingPeriod )\r\n  AND   ( uvw_BWT_Billing_Request.CurrentAccountNumber IN ( '005991805100000', '290118137435003', '290118801005009',\r\n                                                            '290118802000009', '290118803500007', '297518001000002',\r\n                                                            '390118309600019', '390118309700001', '490118530020004',\r\n                                                            '490118530800009', '490118801100006', '690118220000009',\r\n                                                            '690118220330000', '690118228100017', '690118801000006',\r\n                                                            '690118802100003', '690118802100009', '690118802500004',\r\n                                                            '790118801000005', '790118802000012', '790118802000019' ) )\r\nORDER BY uvw_BWT_Billing_Request.BillingPeriod DESC\r\n,       'Account'"
        }
      ]
    }
  ]
