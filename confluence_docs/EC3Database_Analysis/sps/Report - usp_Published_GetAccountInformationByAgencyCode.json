        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Read Uncommitted Isolation Level",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": This level allows dirty reads, which can improve performance by reducing locking overhead but may result in reading uncommitted data."
                }
              ]
            }
