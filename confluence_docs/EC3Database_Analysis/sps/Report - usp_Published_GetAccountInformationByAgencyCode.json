      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Published_GetAccountInformationByAgencyCode]\n(\r\n\t@EmailAddress AS VARCHAR(75)\r\n\t,@AgencyCode AS VARCHAR(6)\r\n\t,@OECFacilityNumber AS VARCHAR(7)\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\t\r\n\tDECLARE @spname AS VARCHAR(100) = OBJECT_NAME(@@PROCID);\r\n\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName = @spname,\r\n\t\t@StoredProcName = @spname,\r\n\t\t@RequestedBy = @EmailAddress,\r\n\t\t@prmPublishedBillingPeriod = NULL,\r\n\t\t@prmBillingPeriod = NULL,\r\n\t\t@prmAgency_ies = @AgencyCode,\r\n\t\t@prmFacilityNumber_s = @OECFacilityNumber,\r\n\t\t@prmStartingBillingPeriod = NULL,\r\n\t\t@prmEndingBillingPeriod = NULL;\r\n\r\n\tDECLARE @FacilitySeqid AS INT, @ResultByAgency AS CHAR(1);\r\n\r\n\tSELECT @FacilitySeqid = FacilitySeqid FROM Billing.Facility WHERE OecFacilityNumber = @OECFacilityNumber;\r\n\r\n\tDECLARE @AgencyAndItsDecendants TABLE(AgencyDivisionSeqID INT NULL);\r\n\r\n\tSET @ResultByAgency = CASE WHEN @FacilitySeqid IS NULL THEN 'Y' ELSE 'N' END;\r\n\r\n\tIF(@ResultByAgency = 'Y')\r\n\tBEGIN\r\n\t\tINSERT INTO @AgencyAndItsDecendants (AgencyDivisionSeqID)\r\n\t\tSELECT AgencyDivisionSeqID FROM Billing.uftn_TableGetAllAgencyChildrenByAgencyCodeOEC(@AgencyCode, @EmailAddress);\r\n\tEND;\r\n\r\n\tSELECT DISTINCT A.UniqueAccountSeqid AS AccountSeqid\r\n\t\t,A.OriginalAccountNumber\r\n\t\t,A.CurrentAccountNumber\r\n\t\t,A.UtilityServiceAddress\r\n\t\t,A.AccountEffectiveTurnOn\r\n\t\t,A.AccountStatus\r\n\t\t,AD.AgencyCodeOEC\r\n\t\t,AD.AgencyName\r\n\t\t,F.OecFacilityNumber\r\n\t\t,F.FacilityName\r\n\t\t,F.Address1\r\n\t\t,F.CityPlanningBIN\r\n\t\t,F.Borough\r\n\t\t,F.[Block]\r\n\t\t,F.LotNumber\r\n\t\t,ED.EnergyDeliveryType\r\n\t\t,ED.ShortDesc AS EnergyDeliveryTypeShortDesc\r\n\t\t,ED.EnergyUnit\r\n\t\t,UC.UtilityCompanySeqid\r\n\t\t,UC.ShortDesc AS UtilityShortDesc\r\n\t\t,UT.[Description] AS UtilityTariffRateDescription\r\n\tFROM Billing.Account AS A\r\n\t\tINNER JOIN Billing.AgencyDivision AS AD ON A.AgencyAccount = AD.AgencyDivisionSeqid\r\n\t\tINNER JOIN Billing.Facility AS F ON A.FacilityAccount = F.FacilitySeqid\r\n\t\tINNER JOIN Billing.UtilityCompany AS UC ON A.UtilityAccountProvider = UC.UtilityCompanySeqid\r\n\t\tINNER JOIN Billing.EnergyDeliveryType AS ED ON A.EnergySource = ED.EnergyDeliveryType\r\n\t\tINNER JOIN Billing.UtilityTariffRateInformation AS UT ON A.UtilityTariffRateInformationSeqid = UT.UtilityTariffRateInformationSeqid\r\n\tWHERE A.IsCurrentRecord = 'Y'\r\n\t\tAND (@ResultByAgency <> 'Y' OR A.AgencyAccount IN (SELECT AgencyDivisionSeqID FROM @AgencyAndItsDecendants))\r\n\t\tAND (@ResultByAgency <> 'N' OR A.FacilityAccount = @FacilitySeqid)\r\n\t\tAND AD.Inactive = 'N';\r\nEND;"
        }
      ]
    }
  ]
}