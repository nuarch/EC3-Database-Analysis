                {
                  "type": "text",
                  "text": "@StartingBillingPeriod",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " is less than or equal to "
                },
                {
                  "type": "text",
                  "text": "@EndingBillingPeriod",
                  "marks": [
                    {
                      "type": "code"
                    }
