      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date,,>\r\n-- Description:\t<Description,,>\r\n-- =============================================\r\nCREATE PROCEDURE [CrisNationalGridWest].[Usp_CreateCrisNationalGridWestLinkedServer]\r\nAS\r\nBEGIN\r\n--\t\r\nEXEC sp_addlinkedserver CrisNationalGridWestExchangeDetail, 'Jet 4.0','Microsoft.Jet.OLEDB.4.0', '\\\\dcasec3\\CrisNationalGridWest\\CurrentBillingCycle\\ExchangeDetail', NULL, 'Text' \r\n--\t\r\nEXEC sp_addlinkedserver CrisNationalGridWestMeterReadDetail, 'Jet 4.0','Microsoft.Jet.OLEDB.4.0', '\\\\dcasec3\\CrisNationalGridWest\\CurrentBillingCycle\\MeterReadDetail', NULL, 'Text' \r\n--\t\r\nEXEC sp_addlinkedserver CrisNationalGridWestBillingSummary, 'Jet 4.0','Microsoft.Jet.OLEDB.4.0', '\\\\dcasec3\\CrisNationalGridWest\\CurrentBillingCycle\\BillingSummary', NULL, 'Text' \r\n--\t\r\nEXEC sp_addlinkedserver CrisNationalGridWestAccountBillingDetail, 'Jet 4.0','Microsoft.Jet.OLEDB.4.0', '\\\\dcasec3\\CrisNationalGridWest\\CurrentBillingCycle\\AccountBillingDetail', NULL, 'Text' \r\n--\t\r\nEXEC sp_addlinkedserver CrisNationalGridWestPaymentDetail, 'Jet 4.0','Microsoft.Jet.OLEDB.4.0', '\\\\dcasec3\\CrisNationalGridWest\\CurrentBillingCycle\\PaymentDetail', NULL, 'Text' \r\n\t\r\nEND"
        }
