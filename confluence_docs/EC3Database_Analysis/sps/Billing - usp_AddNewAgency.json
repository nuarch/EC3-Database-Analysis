    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "4. Business Logic and Workflow"
        }
      ]
    },
    {
      "type": "orderedList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Parent Agency Division ID Retrieval",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure starts by retrieving the "
                },
                {
                  "type": "text",
                  "text": "AgencyDivisionSeqid",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " for the parent agency using the "
                },
                {
                  "type": "text",
                  "text": "@ParentAgencyCodeOEC",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Validation",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": It checks if an agency with the given "
                },
                {
                  "type": "text",
                  "text": "@AgencyCodeOEC",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " already exists in the "
                },
                {
                  "type": "text",
                  "text": "Billing.AgencyDivision",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " table."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Insertion",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": If the agency does not exist, it inserts a new record into the "
                },
                {
                  "type": "text",
                  "text": "Billing.AgencyDivision",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " table with the provided parameters."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Hierarchy Update",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": After insertion, it updates the "
                },
                {
                  "type": "text",
                  "text": "AgencyDivisionHierarchy",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " field. If there is no parent agency, it sets the hierarchy to the new agency's ID. Otherwise, it appends the new agency's ID to the parent's hierarchy."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Funding Group Association",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": It calls another stored procedure "
                },
                {
                  "type": "text",
                  "text": "usp_AddAgencyFundingGroup",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " to associate the new agency with a funding group."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Status Code Update",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Sets the "
                },
                {
                  "type": "text",
                  "text": "@StatusCode",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " to 1 to indicate successful completion."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "5. Performance Considerations"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Index Usage",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Ensure that the "
                },
                {
                  "type": "text",
                  "text": "AgencyCodeOEC",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " column is indexed to optimize the "
                },
                {
                  "type": "text",
                  "text": "EXISTS",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " check."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Concurrency",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The use of "
                },
                {
                  "type": "text",
                  "text": "SCOPE_IDENTITY()",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " is safe for retrieving the last inserted identity value in a multi-user environment."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Transaction Management",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure does not explicitly use transactions, which be a consideration if multiple operations need to be atomic."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "6. Potential Issues or Risks"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Data Integrity",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": If the "
                },
                {
                  "type": "text",
                  "text": "@ParentAgencyCodeOEC",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " does not exist, the "
                },
                {
                  "type": "text",
                  "text": "@ParentAgencyDivisionSeqid",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " will be "
                },
                {
                  "type": "text",
                  "text": "NULL",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", which could lead to incorrect hierarchy updates."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Error Handling",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The procedure lacks explicit error handling, which could lead to unhandled exceptions and inconsistent data states."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Concurrency Issues",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": Without explicit locking or transaction management, there could be race conditions if multiple users attempt to add agencies simultaneously."
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Output Parameter",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": The "
                },
                {
                  "type": "text",
                  "text": "@StatusCode",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " is only set to 1 for success; additional status codes for different failure scenarios could provide more granular feedback."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  PROCEDURE [Billing].[usp_AddNewAgency]\n(\r\n\t@ParentAgencyCodeOEC AS VARCHAR(6),\r\n\t@FisaAgencyCode AS VARCHAR(6),\r\n\t@AgencyCodeOEC AS VARCHAR(6),\r\n\t@Inactive AS VARCHAR(1),\r\n\t@AgencyName AS VARCHAR(75),\r\n\t@AgencyShortDesc AS VARCHAR(20),\r\n\t@BillToAgencyCode AS VARCHAR(3),\r\n\t@BillFromAgencyCode AS VARCHAR(3),\r\n\t@AgencyBillingType AS INT,\r\n\t@ReportAgencyFolder AS VARCHAR(75),\r\n\t@FireAuditTrigger AS VARCHAR(1),\r\n\t@AuthenticatedUserID AS INT,\r\n\t@DateAdded AS DATETIME,\r\n\t@LastUpdate AS DATETIME,\r\n\t@AgencyFundingSeqid AS INT,\r\n\t@StatusCode AS INT OUTPUT\r\n)\r\nAS\r\nBEGIN\r\n\tDECLARE @ParentAgencyDivisionSeqid AS VARCHAR(6) = (SELECT TOP (1) AgencyDivisionSeqid FROM Billing.AgencyDivision WHERE AgencyCodeOEC = @ParentAgencyCodeOEC);\r\n\r\n\t-- Validation\r\n\tIF(NOT EXISTS(SELECT * FROM Billing.AgencyDivision WHERE AgencyCodeOEC = @AgencyCodeOEC))\t\r\n\tBEGIN \r\n\t\tINSERT INTO [Billing].[AgencyDivision]\r\n\t\t\t([ParentAgencyDivisionSeqid]\r\n\t\t\t,[FisaAgencyCode]\r\n\t\t\t,[AgencyCodeOEC]\r\n\t\t\t,[Inactive]\r\n\t\t\t,[AgencyName]\r\n\t\t\t,[AgencyShortDesc]\r\n\t\t\t,[BillToAgencyCode]\r\n\t\t\t,[BillFromAgencyCode]\r\n\t\t\t,[AgencyBillingType]\r\n\t\t\t,[ReportAgencyFolder]\r\n\t\t\t,[FireAuditTrigger]\r\n\t\t\t,[AuthenticatedUserID]\r\n\t\t\t,[DateAdded]\r\n\t\t\t,[LastUpdate])\r\n\t\tVALUES (@ParentAgencyDivisionSeqid,\r\n\t\t\t@FisaAgencyCode,\r\n\t\t\t@AgencyCodeOEC,\r\n\t\t\t@Inactive,\r\n\t\t\t@AgencyName,\r\n\t\t\t@AgencyShortDesc,\r\n\t\t\t@BillToAgencyCode,\r\n\t\t\t@BillFromAgencyCode,\r\n\t\t\t@AgencyBillingType,\r\n\t\t\t@ReportAgencyFolder,\r\n\t\t\t@FireAuditTrigger,\r\n\t\t\t@AuthenticatedUserID,\r\n\t\t\t@DateAdded,\r\n\t\t\t@LastUpdate);\r\n\r\n\t\t-- get the ID of jut added record\r\n\t\tDECLARE @AgencyDivisionSeqID AS INT;\r\n\t\tSET @AgencyDivisionSeqID = CAST(SCOPE_IDENTITY() AS INT);\r\n\r\n\t\tIF (@ParentAgencyDivisionSeqid IS NULL)\r\n\t\tBEGIN \r\n\t\t\tUPDATE Billing.AgencyDivision SET AgencyDivisionHierarchy = '/'+CAST(@AgencyDivisionSeqID AS VARCHAR)+'/' WHERE AgencyDivisionSeqid = @AgencyDivisionSeqID;\r\n\t\tEND\r\n\t\tELSE \r\n\t\tBEGIN \r\n\t\t\tUPDATE c SET AgencyDivisionHierarchy = p.AgencyDivisionHierarchy.ToString()+CAST(@AgencyDivisionSeqID AS VARCHAR)+'/'\r\n\t\t\tFROM Billing.AgencyDivision p INNER JOIN Billing.AgencyDivision c ON p.AgencyDivisionSeqid = c.ParentAgencyDivisionSeqid\r\n\t\t\tWHERE c.AgencyDivisionSeqid = @AgencyDivisionSeqID;\r\n\t\tEND;\r\n\r\n\t\tEXECUTE Billing.usp_AddAgencyFundingGroup @AgencyDivisionSeqID, @AgencyFundingSeqid, @AuthenticatedUserID;\r\n\r\n\t\tSET @StatusCode = 1;\r\n\tEND;\r\nEND;"
        }
      ]
