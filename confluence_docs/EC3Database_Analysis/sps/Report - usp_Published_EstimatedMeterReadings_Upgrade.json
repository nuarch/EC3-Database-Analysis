      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Published_EstimatedMeterReadings_Upgrade]\n(\r\n\t@EmailAddress AS VARCHAR(75)\r\n\t,@PublishedBillingPeriod AS VARCHAR(6)\r\n\t,@AgencyCodeOEC AS VARCHAR(MAX)\r\n\t,@IsAgencyUser AS BIT = 0\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @spname AS VARCHAR(100) = OBJECT_NAME(@@PROCID);\r\n\r\n\tIF (@IsAgencyUser = 1)\r\n\tBEGIN\r\n\t\tSELECT @PublishedBillingPeriod = PublishedBillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\tEND\r\n\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName = @spname,\r\n\t\t@StoredProcName = @spname,\r\n\t\t@RequestedBy = @EmailAddress,   \r\n\t\t@prmPublishedBillingPeriod = @PublishedBillingPeriod,\r\n\t\t@prmBillingPeriod = NULL,\r\n\t\t@prmAgency_ies = @AgencyCodeOEC,\r\n\t\t@prmFacilityNumber_s = NULL,\r\n\t\t@prmStartingBillingPeriod = NULL,\r\n\t\t@prmEndingBillingPeriod = NULL;\r\n\r\n\tIF (@AgencyCodeOEC <> '*')\r\n\tBEGIN\r\n\t\tSELECT ML.Address1 + CASE WHEN ML.FacilityName IS NULL THEN '' ELSE ' [' + ML.FacilityName + ']' END AS [Facility Address/Name],\r\n\t\t\tML.OecFacilityNumber AS [OEC ID],\r\n\t\t\tISNULL(ML.Borough, '') + '- ' + ISNULL(ML.[Block], '') + '_ ' + ISNULL(ML.LotNumber, '') AS BBL,\r\n\t\t\tML.EnergyType AS [Energy Type],\t\t\t\t\t\r\n\t\t\tML.UtilityCompany AS [Utility Company],\r\n\t\t\tML.CurrentAccountNumber AS [Account Number],\r\n\t\t\tML.CurrentMeterNumber AS [Meter Number],\r\n\t\t\tML.ConsecutivePeriodsEstimatedReading [# of Months Since Last Meter Reading]\r\n\t\tFROM Published.TemporalAccountMeterLevelRawDataForCurrentPeriod AS ML \r\n\t\t\tINNER JOIN Billing.uftn_TableGetAgencyChildrenByAgencyCodeOEC(@AgencyCodeOEC, @EmailAddress) AS UA ON ML.AgencyCodeOEC = UA.AgencyCodeOEC\t\t\t\t\r\n\t\t\tLEFT JOIN Billing.Meter AS M ON M.MeterSeqid = ML.MeterSeqid AND M.MeterStatus <> '45' \r\n\t\tWHERE ML.EffectiveStartPeriod <= @PublishedBillingPeriod\r\n\t\t\tAND ML.EffectiveEndPeriod > @PublishedBillingPeriod\r\n\t\t\tAND @PublishedBillingPeriod = ML.BillingPeriod\r\n\t\t\tAND ML.ConsecutivePeriodsEstimatedReading >= 1\r\n\t\t\tAND M.MeterSeqid IS NOT NULL\r\n\t\t\tAND ML.DeliveryTariffRate NOT IN ('031', '032')\r\n\t\tORDER BY ML.UtilityCompany, ML.CurrentAccountNumber, ML.CurrentMeterNumber;\r\n\tEND;\r\n\tELSE\r\n\tBEGIN\r\n\t\tSELECT ML.Address1 + CASE WHEN ML.FacilityName IS NULL THEN '' ELSE ' [' + ML.FacilityName + ']' END AS [Facility Address/Name],\r\n\t\t\tML.OecFacilityNumber AS [OEC ID],\r\n\t\t\tISNULL(ML.Borough, '') + '- ' + ISNULL(ML.[Block], '') + '_ ' + ISNULL(ML.LotNumber, '') AS BBL,\r\n\t\t\tML.EnergyType AS [Energy Type],\t\t\t\t\t\r\n\t\t\tML.UtilityCompany AS [Utility Company],\r\n\t\t\tML.CurrentAccountNumber AS [Account Number],\r\n\t\t\tML.CurrentMeterNumber AS [Meter Number],\r\n\t\t\tML.ConsecutivePeriodsEstimatedReading [# of Months Since Last Meter Reading]\r\n\t\tFROM Published.TemporalAccountMeterLevelRawDataForCurrentPeriod AS ML\r\n\t\t\tINNER JOIN Billing.uftn_TableGetAgencyChildrenByAgencyCodeOEC(@AgencyCodeOEC, @EmailAddress) AS UA ON ML.AgencyCodeOEC = UA.AgencyCodeOEC\r\n\t\t\tLEFT JOIN Billing.Meter AS M ON M.MeterSeqid = ML.MeterSeqid AND M.MeterStatus <> '45' \r\n\t\tWHERE ML.EffectiveStartPeriod <= @PublishedBillingPeriod\r\n\t\t\tAND ML.EffectiveEndPeriod > @PublishedBillingPeriod\r\n\t\t\tAND @PublishedBillingPeriod = ML.BillingPeriod\r\n\t\t\tAND ML.ConsecutivePeriodsEstimatedReading >= 1\r\n\t\t\tAND M.MeterSeqid IS NOT NULL\r\n\t\t\tAND ML.DeliveryTariffRate NOT IN ('031', '032')\r\n\t\tORDER BY ML.UtilityCompany, ML.CurrentAccountNumber, ML.CurrentMeterNumber;\r\n\tEND;\r\nEND;"
        }
      ]
    }
