            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "@AllUsersScope bit",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": A flag indicating whether to count states for all users ("
                },
                {
                  "type": "text",
                  "text": "1",
                  "marks": [
                    {
                      "type": "code"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ") or per user ("
