    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Published_EnergyComparisonReportCityWide_Updated]\n(\r\n\t@PublishedBillingPeriod AS VARCHAR(6)\r\n\t,@IsAgencyUser AS BIT = 0\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @spname AS VARCHAR(100) = OBJECT_NAME(@@PROCID);\r\n\r\n\tIF (@IsAgencyUser = 1)\r\n\tBEGIN\r\n\t\tSELECT @PublishedBillingPeriod = PublishedBillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\tEND;\r\n\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName = @spname,\r\n\t\t@StoredProcName = @spname,\r\n\t\t@RequestedBy = 'reportlog@dcas.nyc.gov',\r\n\t\t@prmPublishedBillingPeriod = @PublishedBillingPeriod,\r\n\t\t@prmBillingPeriod = NULL,\r\n\t\t@prmAgency_ies = NULL,\r\n\t\t@prmFacilityNumber_s = NULL,\r\n\t\t@prmStartingBillingPeriod = NULL,\r\n\t\t@prmEndingBillingPeriod = NULL;\r\n\r\n\tDECLARE @CurrentFiscalYear AS VARCHAR(4), @BeginningFiscalYear AS VARCHAR(4);\r\n\r\n\tSELECT @currentFiscalYear = dbo.CalculateFiscalYear(@PublishedBillingPeriod);\r\n\tSET @BeginningFiscalYear = CAST((CAST(@currentFiscalYear AS INT) - 2) AS VARCHAR);\r\n\r\n\tSELECT A.BillingPeriod AS BillingPeriod,\r\n        A.FiscalYear,\r\n        A.CalendarYear,\r\n        A.[MonthName],\r\n        A.MonthNameYear,\r\n        A.BTU,\r\n        A.CO2,\r\n\t\tT.co2RunningTotal AS Co2RunningTotal,\r\n        DD.CurrentFiscalYear,\r\n        DD.CurrentMonthlyBaseCoolingDegreeDays,\r\n        DD.CurrentMonthlyBaseHeatingDegreeDays,\r\n        DD.PriorMonthlyBaseCoolingDegreeDays,\r\n        DD.PriorMonthlyBaseHeatingDegreeDays,\r\n        DD.CurrentFiscalYearBaseCoolingDegreeDays,\r\n        DD.CurrentFiscalYearBaseHeatingDegreeDays,\r\n        DD.CurrentFiscalYearNormalCoolingDegreeDays,\r\n        DD.CurrentFiscalYearNormalHeatingDegreeDays,\r\n        DD.PriorFiscalYearBaseCoolingDegreeDays,\r\n        DD.PriorFiscalYearBaseHeatingDegreeDays,\r\n        DD.PriorFiscalYearNormalCoolingDegreeDays,\r\n        DD.PriorFiscalYearNormalHeatingDegreeDays\r\n\tFROM Published.TemporalAccountLevelSummaryByCityWide AS A\r\n\t\tINNER JOIN (SELECT s1.FiscalYear, s1.BillingPeriod, SUM(s2.co2) co2RunningTotal, s1.EnergyType\r\n\t\t\tFROM Published.TemporalAccountLevelSummaryByCityWide AS s1\r\n\t\t\t\tINNER JOIN Published.TemporalAccountLevelSummaryByCityWide AS s2\r\n\t\t\t\t\tON s1.FiscalYear = s2.FiscalYear AND s2.BillingPeriod <= s1.BillingPeriod AND s1.EnergyType = s2.EnergyType\r\n\t\t\tWHERE s1.EffectiveStartPeriod <= @PublishedBillingPeriod AND s1.EffectiveEndPeriod > @PublishedBillingPeriod\r\n\t\t\t\tAND s2.EffectiveStartPeriod <= @PublishedBillingPeriod AND s2.EffectiveEndPeriod > @PublishedBillingPeriod\r\n\t\t\t\tAND s1.FiscalYear BETWEEN @BeginningFiscalYear AND @CurrentFiscalYear\r\n\t\t\tGROUP BY s1.FiscalYear, s1.BillingPeriod, s1.EnergyType) AS T\r\n\t\t\tON A.FiscalYear = T.FiscalYear AND A.BillingPeriod = T.BillingPeriod AND A.EnergyType = T.EnergyType\r\n        LEFT JOIN Factors.uftn_GetDegreeDayInformationForReporting(@PublishedBillingPeriod) AS DD\r\n\t\t\tON A.BillingPeriod = DD.BillingPeriod\r\n\tWHERE A.EffectiveStartPeriod <= @PublishedBillingPeriod AND A.EffectiveEndPeriod > @PublishedBillingPeriod\r\n\t\tAND A.FiscalYear BETWEEN @BeginningFiscalYear AND @CurrentFiscalYear\r\n\tORDER BY A.FiscalYear, T.BillingPeriod;\r\nEND;"
        }
      ]
    }
  ]
}