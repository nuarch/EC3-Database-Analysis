      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Report].[usp_Published_AccountAndMeterListing_Upgrade]\n(\r\n\t@EmailAddress AS VARCHAR(75)\r\n\t,@AgencyCodeOEC AS VARCHAR(MAX)\r\n\t,@OECFacilityNumber AS VARCHAR(MAX) = '*'\r\n\t,@IsAgencyUser AS BIT = 0\r\n)\r\nAS\r\nBEGIN\r\n\tSET NOCOUNT ON;\r\n\tSET TRANSACTION ISOLATION LEVEL READ UNCOMMITTED;\r\n\r\n\tDECLARE @spname AS VARCHAR(100) = OBJECT_NAME(@@PROCID), @PublishedBillingPeriod AS VARCHAR(6);\r\n\r\n\tIF (@IsAgencyUser = 1)\r\n\tBEGIN\r\n\t\tSELECT @PublishedBillingPeriod = PublishedBillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\tEND;\r\n\tELSE\r\n\tBEGIN\r\n\t\tSELECT @PublishedBillingPeriod = MAX(PublishedBillingPeriod) FROM Published.MonthlyPublishedSummaryData;\r\n\tEND;\r\n\r\n\tEXEC [Audit].usp_AddReportUsageLog\r\n\t\t@ReportName = @spname,\r\n\t\t@StoredProcName = @spname,\r\n\t\t@RequestedBy = @EmailAddress,\r\n\t\t@prmPublishedBillingPeriod = @PublishedBillingPeriod,\r\n\t\t@prmBillingPeriod = NULL,\r\n\t\t@prmAgency_ies = @AgencyCodeOEC,\r\n\t\t@prmFacilityNumber_s = @OECFacilityNumber,\r\n\t\t@prmStartingBillingPeriod = NULL,\r\n\t\t@prmEndingBillingPeriod = NULL;\r\n\r\n\tIF (@OECFacilityNumber = '*')\r\n\tBEGIN\r\n\t\tSELECT DISTINCT AML.OECBN,\r\n\t\t\tAML.BIN,\r\n\t\t\tAML.BBL,\r\n\t\t\tAML.AccountAddress,\r\n\t\t\tAML.MeterAddress,\r\n\t\t\tCASE WHEN AML.EnergyType = 'ELE' THEN 'Electric'\r\n\t\t\t\tWHEN AML.EnergyType = 'Gas' THEN 'Gas'\r\n\t\t\t\tWHEN AML.EnergyType = 'STM' THEN 'Steam'\r\n\t\t\t\tWHEN AML.EnergyType = 'Oil' THEN 'Oil'\r\n\t\t\t\tWHEN AML.EnergyType = 'CHW' THEN 'Chilled Water' ELSE AML.EnergyType END AS EnergyType,\r\n\t\t\tFORMAT(CAST(@PublishedBillingPeriod + '01' AS DATE), 'MMMM yyyy') AS PublishedBillingPeriod,\r\n\t\t\tAML.CurrentAccountNumber,\r\n\t\t\tAML.CurrentMeterNumber,\r\n\t\t\tCONVERT(VARCHAR(15), CAST(AML.MeterEffectiveOnDate AS DATE), 107) AS MeterEffectiveOnDate,\r\n\t\t\tAML.MeterStatus,\r\n\t\t\tAML.UtilityCompany,\r\n\t\t\tAML.FacilityName,\r\n\t\t\tAML.MeterConstant,\r\n\t\t\tAG.AgencyName + ' [' + AG.AgencyCodeOEC + ']' AS AgencyName\r\n\t\tFROM Report.uvw_AccountAndMeterListing AS AML\r\n\t\t\tINNER JOIN billing.uftn_TableGetAgencyChildrenByAgencyCodeOEC(@AgencyCodeOEC, @EmailAddress) AS AG\r\n\t\t\t\tON AML.AgencyCodeOEC = AG.AgencyCodeOEC\r\n\t\tWHERE AML.PublishedBillingPeriod = AML.BillingPeriod\r\n\t\tORDER BY AML.AccountAddress, AML.CurrentAccountNumber, AML.CurrentMeterNumber;\r\n\tEND;\r\n\tELSE\r\n\tBEGIN\r\n\t\tSELECT DISTINCT AML.OECBN,\r\n\t\t\tAML.BIN,\r\n\t\t\tAML.BBL,\r\n\t\t\tAML.AccountAddress,\r\n\t\t\tAML.MeterAddress,\r\n\t\t\tCASE WHEN AML.EnergyType = 'ELE' THEN 'Electric'\r\n\t\t\t\tWHEN AML.EnergyType = 'Gas' THEN 'Gas'\r\n\t\t\t\tWHEN AML.EnergyType = 'STM' THEN 'Steam'\r\n\t\t\t\tWHEN AML.EnergyType = 'Oil' THEN 'Oil'\r\n\t\t\t\tWHEN AML.EnergyType = 'CHW' THEN 'Chilled Water' ELSE AML.EnergyType END AS EnergyType,\r\n\t\t\tFORMAT(CAST(@PublishedBillingPeriod + '01' AS DATE), 'MMMM yyyy') AS PublishedBillingPeriod,\r\n\t\t\tAML.CurrentAccountNumber,\r\n\t\t\tAML.CurrentMeterNumber,\r\n\t\t\tCONVERT(VARCHAR(15), CAST(AML.MeterEffectiveOnDate AS DATE), 107) AS MeterEffectiveOnDate,\r\n\t\t\tAML.MeterStatus,\r\n\t\t\tAML.UtilityCompany,\r\n\t\t\tAML.FacilityName,\r\n\t\t\tAML.MeterConstant,\r\n\t\t\tAG.AgencyName + ' [' + AG.AgencyCodeOEC + ']' AS AgencyName\r\n\t\tFROM Report.uvw_AccountAndMeterListing AS AML\r\n\t\t\tINNER JOIN Billing.uftn_TableGetOECFacilityNumberByAgencyHierarchy(@AgencyCodeOEC, @OECFacilityNumber, @EmailAddress) AS AG\r\n\t\t\t\tON AML.AgencyCodeOEC = AG.AgencyCodeOEC AND AML.FacilitySeqid = AG.FacilitySeqid\r\n\t\tWHERE AML.PublishedBillingPeriod = AML.BillingPeriod\r\n\t\tORDER BY AML.AccountAddress, AML.CurrentAccountNumber, AML.CurrentMeterNumber;\r\n\tEND;\r\nEND;"
        }
      ]
    }
  ]
