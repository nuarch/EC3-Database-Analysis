        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [Batch].[usp_Valid2StartProcess]\n@output varchar(20) output\r\nAS\r\nBEGIN\r\n\r\n\tDECLARE @billperiod varchar(20)\r\n\tDECLARE @executedbillperiod varchar(20)\r\n\t--DECLARE @uploadedbillperiod varchar(20)\t\r\n\tDECLARE @nextbillingdate date\r\n\tDECLARE @nextbillperiod varchar(20)\t\r\n\r\n\t--SELECT @uploadedbillperiod = MAX(BillingPeriod) FROM NYPA.UploadNYPAAccountBillingPreload AS UNABP \r\n\tSELECT @executedbillperiod = MAX(TALRDFCP.BillingPeriod) FROM Published.TemporalAccountLevelRawDataForCurrentPeriod AS TALRDFCP\r\n\t\t\r\n\tSELECT @nextbillingdate = DATEADD(mm, DATEDIFF(m, 0, CONVERT(DATE, @executedbillperiod + '01')) + 1, 0)\r\n\r\n\tSELECT @nextbillperiod = LEFT(CONVERT(VARCHAR, @nextbillingdate, 112), 6)\r\n\t\r\n\t--IF (@uploadedbillperiod > @executedbillperiod)\r\n\t--\tBEGIN\r\n\t--\t\tSET @billperiod = @uploadedbillperiod\r\n\t--\tEND\r\n\r\n\tIF EXISTS (SELECT 1 FROM Batch.FileStep WHERE BillingPeriod = @nextbillperiod)\r\n\t\tBEGIN\r\n\t\t\tSET @billperiod = ''\t\r\n\t\tEND\r\n\r\n\tSET @output = @nextbillperiod\r\n\r\nEND"
        }
