        {
          "type": "text",
          "text": "7. Stored Procedure Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE PROCEDURE [ConEd].[usp_Validation_AccountRecordsWithIncorrectBillingPeriodRevision]\nAS\r\nBEGIN\t\r\n\tDECLARE @BillingPeriod AS BillingPeriod, @errMessage AS VARCHAR(MAX);\r\n\r\n\tSELECT @BillingPeriod = BillingPeriod FROM Billing.ApplicationTimeFrame WHERE CurrentProcessingPeriod = 'Y';\r\n\t\r\n\tIF(EXISTS(SELECT UploadConEdisonAccountSeqid FROM ConEd.UploadConEdisonAccount\r\n\t\tWHERE BillingPeriodRevision IS NULL OR BillingPeriodRevision > @BillingPeriod OR FirstPeriodCanceled IS NULL))\r\n\tBEGIN\t\t\r\n\t\tSET @errMessage = 'There are account with incorrect billing period information.';\r\n\t\tRAISERROR(@errMessage, 12, 1);\r\n\tEND;\t\r\n\t\r\n\tIF(EXISTS(SELECT ExchangeDataSeqid FROM Common.ExchangeData\r\n\t\tWHERE IsProcessed = 'N' AND Exclude = 'N' AND BillingPeriod = @BillingPeriod AND AccountBillingGroupSeqid = 2))\r\n\tBEGIN\t\t\r\n\t\tSET @errMessage = 'There is/are some ExchangeData thats is not processed. Please contact IT.';\r\n\t\tRAISERROR(@errMessage, 12, 1);\r\n\tEND;\r\nEND;"
        }
      ]
