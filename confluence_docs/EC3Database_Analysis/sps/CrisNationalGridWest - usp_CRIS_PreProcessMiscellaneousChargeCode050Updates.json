    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Generated on : 11/18/2015 (ZD)\r\n--\t\tcode to handle National Grid Code 50 fix\r\n--\t\tNOTE: these updates are done only for the fields that was genereted using MiscellaneousChargeAmount in calculations\r\n--\t\tIf there is 000 code and there is 050 amount in there, it mustbe entered here before updating next fields\r\n-- =============================================\r\nCREATE PROCEDURE [CrisNationalGridWest].[usp_CRIS_PreProcessMiscellaneousChargeCode050Updates]\r\nAS\r\nBEGIN\r\n\r\n\r\n--------------------------------------------------------------------------------------------------------------------------------------------------------\r\n\r\n\r\nUPDATE CrisNationalGridWest.UploadAccountBillingAdjustmentCrisGas SET Code050Amount = 0 WHERE Code050Amount IS NULL\r\nUPDATE CrisNationalGridWest.UploadAccountBillingAdjustmentCrisGas SET Code050Amount = MiscellaneousChargeAmount WHERE (MiscellaneousChargeType = '050')\r\n\r\nUPDATE    CrisNationalGridWest.UploadAccountBillingAdjustmentCrisGas\r\nSET  \r\n\tPaidAdjustmentAmount\t\t= PaidAdjustmentAmount - Code050Amount\r\n, TotalNetPaidAdjustmentCalc\t= TotalNetPaidAdjustmentCalc - Code050Amount          \r\n, OriginalBilledAmount\t\t\t= OriginalBilledAmount - Code050Amount\r\n,RevisedBilledAmount\t\t\t= RevisedBilledAmount - Code050Amount\r\n--------------------------------------------------------------------------------------------------------------------------------------------------------\r\n\r\nEND"
        }
      ]
