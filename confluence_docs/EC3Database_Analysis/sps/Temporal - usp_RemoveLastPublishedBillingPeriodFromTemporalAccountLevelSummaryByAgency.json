      "content": [
        {
          "type": "text",
          "text": "CREATE     PROCEDURE [Temporal].[usp_RemoveLastPublishedBillingPeriodFromTemporalAccountLevelSummaryByAgency]\n\t@PublishedBillingPeriod VARCHAR(6)\r\nAS\r\n\r\n\tDECLARE @MaxPeriod VARCHAR(6) = (SELECT MAX(EffectiveStartPeriod) FROM Published.TemporalAccountLevelSummaryByAgency)\r\n     \r\n\t-- Make sure user is removing latest period\r\n\tIF ( @MaxPeriod <> @PublishedBillingPeriod  )\r\n\tBEGIN\r\n\t\tRAISERROR ('ERROR: You can only remove the latest period, this period: %s', 12, 1, @MaxPeriod) \r\n\t\tRETURN;\r\n\tEND\r\n\r\n\r\nDELETE FROM Published.TemporalAccountLevelSummaryByAgency WHERE EffectiveStartPeriod = @PublishedBillingPeriod\r\n\r\nUPDATE Published.TemporalAccountLevelSummaryByAgency\r\nSET EffectiveEndPeriod = '999912'\r\nWHERE EffectiveEndPeriod = @PublishedBillingPeriod\r\n\r\nPRINT 'Removed billing Period: '+@PublishedBillingPeriod;"
        }
