    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE    FUNCTION [dbo].[SpacesTrailingAddress] (@Address varchar(25))\nRETURNS varchar(25) AS \r\nBEGIN \r\n--\r\ndeclare @CovertToAddressLength int\r\ndeclare @AddressWithLeadingZeroes varchar(3) \r\ndeclare @AsciiSpace char(1) \r\n--\r\nset @AsciiSpace =  Cast(' ' as char(1))\r\nset @CovertToAddressLength =  len(rtrim(ltrim(@Address)))\r\nif (@CovertToAddressLength < 25) \r\n   set @AddressWithLeadingZeroes = rtrim(ltrim(@Address))+REPLICATE ( @AsciiSpace, 25 - @CovertToAddressLength)\r\n   --set @AddressWithLeadingZeroes = rtrim(ltrim(@Address))+REPLICATE ( '' '', 25 - @CovertToAddressLength)\r\n--\r\n\r\nreturn @AddressWithLeadingZeroes\r\n\r\nEND"
