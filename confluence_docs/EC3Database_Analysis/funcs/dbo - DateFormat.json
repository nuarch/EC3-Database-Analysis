      "content": [
        {
          "type": "text",
          "text": "create FUNCTION [dbo].[DateFormat]  (@date varchar(6),@type varchar(1))\n--\r\nRETURNS varchar(20) AS  \r\nBEGIN \r\n--\r\ndeclare @year varchar(4)\r\ndeclare @month int\r\n--\r\nif (@type=1)\r\nbegin\r\nset @year = substring(@date,1,4)\r\nset @month = cast(substring(@date,4,2) as integer)\r\nreturn DATENAME(month, @date+'01') + ' ' + @year\r\nend\r\n\r\nreturn 0\r\n--\r\nEND"
        }
