      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[CalculateNextPeriod]  (@JulDate varchar(5),@BillingCycle varchar(1))\n--\r\nRETURNS varchar(6) AS  \r\nBEGIN \r\n--\r\ndeclare @NextBillingPeriodOffset varchar(5)\r\ndeclare @nextBillingPeriod varchar(6)\r\ndeclare @YY000 integer\r\n--\r\nset  @YY000 = cast (substring(@JulDate,1,2) as integer) * 1000\r\nset @NextBillingPeriodOffset = cast (substring(@JulDate,3,3) as integer) + [dbo].[MonthsInBillingCycle]  (@BillingCycle) * 30\r\nset @nextBillingPeriod = substring(@JulDate,1,2) +  cast(( @NextBillingPeriodOffset) as varchar(3))\r\n--\r\nreturn [dbo].[CalculateCurrentPeriod]  ( @nextBillingPeriod )\r\n--\r\nEND"
