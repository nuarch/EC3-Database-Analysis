      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[IsServiceTariffConventional] (@ServiceTariff varchar(14))\nRETURNS varchar(1) AS  \r\nBEGIN \r\n--\r\ndeclare @ConventionalAccount varchar(1)\r\nSet @ConventionalAccount = 'Y'\r\n--\r\nif (@ServiceTariff = '16-4 /A-1 /091') Set @ConventionalAccount = 'N'\r\nelse if (@ServiceTariff = '16-4 /A-2 /093') Set @ConventionalAccount = 'N'\r\nelse if (@ServiceTariff = '16-4 /A-3 /098') Set @ConventionalAccount = 'N'\r\n\r\nreturn @ConventionalAccount\r\nEND"
        }
