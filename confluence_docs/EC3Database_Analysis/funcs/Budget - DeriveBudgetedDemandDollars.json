    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [Budget].[DeriveBudgetedDemandDollars] (@BudgetedDemandUsage decimal(12,6), @BudgetCommodityDemand decimal(12,6), @BudgetDeliveryDemand decimal(12,6))\n\r\nRETURNS money AS  \r\nBEGIN \r\n--\r\ndeclare @BudgetedDemandDollars money\r\n--\r\nset @BudgetedDemandDollars = Cast (IsNull(@BudgetedDemandUsage,0)*(IsNull(@BudgetCommodityDemand,0)+IsNull(@BudgetDeliveryDemand,0)) as money)\r\nreturn \t@BudgetedDemandDollars\t\t\t\t\t\t \r\nEND"
        }
