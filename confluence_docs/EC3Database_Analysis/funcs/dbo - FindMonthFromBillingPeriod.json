    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[FindMonthFromBillingPeriod] (@BillingPeriod varchar(6))\nRETURNS varchar(20) As\r\nBEGIN\r\n\r\ndeclare @mm integer\r\ndeclare @yy integer\r\ndeclare @Month varchar(20)\r\n\r\nset @mm = cast(substring(@BillingPeriod,5,2) as integer)\r\nset @yy = cast(substring(@BillingPeriod,1,4) as integer)\r\n\r\nset @Month =\r\n    CASE @mm \r\n      WHEN 01 THEN 'January'\r\n      WHEN 02 THEN 'February'\r\n      WHEN 03 THEN 'March'\r\n      WHEN 04 THEN 'April'\r\n      WHEN 05 THEN 'May'\r\n      WHEN 06 THEN 'June'\r\n      WHEN 07 THEN 'July'\r\n      WHEN 08 THEN 'August'\r\n      WHEN 09 THEN 'September'\r\n      WHEN 10 THEN 'October'\r\n      WHEN 11 THEN 'November'\r\n      WHEN 12 THEN 'December'\r\n    END \r\n\r\n\r\nreturn @Month\r\nEND"
        }
