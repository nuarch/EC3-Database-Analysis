      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "@OverpunchValue (VARCHAR(7))",
                  "marks": [
                    {
                      "type": "strong"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ": This parameter represents the input string that contains the overpunch encoded number. The function expects a 7-character string where the last character is an overpunch character indicating both the sign and the last digit of the number."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "heading",
