      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[CreateSummerPeriod]\n(\r\n\t@CurrentBillingPeriod AS VARCHAR(6),\r\n\t@StartEnd AS VARCHAR(1)\r\n)\r\nRETURNS VARCHAR(6) AS\r\nBEGIN\r\n\tDECLARE @SummerYear AS VARCHAR(4), @mm AS INTEGER, @yyyy AS INTEGER;\r\n\r\n\tSELECT @mm = CAST(SUBSTRING(@CurrentBillingPeriod,5,2) AS INTEGER),\r\n\t\t@yyyy = CAST(SUBSTRING(@CurrentBillingPeriod,1,4) AS INTEGER);\r\n\t\r\n\tSET @SummerYear = CAST((@yyyy+1) AS VARCHAR(4));\r\n\r\n\tIF (6 <= @mm AND @mm <= 12)\r\n\t\tSET @SummerYear = CAST((@yyyy) AS VARCHAR(4));\r\n\r\n\tIF @StartEnd ='S'\r\n\t\tRETURN @SummerYear + '07';\r\n\tELSE\r\n\t\tRETURN @SummerYear + '09';\r\n\r\n\tRETURN '1876';\r\nEND;"
