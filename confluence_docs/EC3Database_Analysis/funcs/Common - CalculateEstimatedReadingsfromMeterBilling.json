      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Common].[CalculateEstimatedReadingsfromMeterBilling]\n(\r\n\t@UniqueMeterSeqID AS INT\r\n)\r\nRETURNS INT\r\nAS \r\nBEGIN\r\n\tDECLARE @currentNumberOfEstimatedReading AS INT;\r\n\r\n\t;WITH results AS (SELECT TOP (200) amb.EstimatedReading, amb.BillingPeriod,\r\n\t\t\tLAG(amb.EstimatedReading,1) OVER (ORDER BY amb.BillingPeriod) LagValue,\r\n\t\t\tROW_NUMBER () OVER (ORDER BY amb.BillingPeriod DESC) as ROW_NUMBE\r\n\t\tFROM (SELECT MB.BillingPeriod, MB.UniqueMeterSeqId, MAX(MB.EstimatedReading) AS EstimatedReading \r\n\t\t\tFROM Billing.MeterBilling AS MB\r\n\t\t\tGROUP BY MB.BillingPeriod, MB.UniqueMeterSeqId) AS amb\r\n\t\tWHERE amb.UniqueMeterSeqId = @UniqueMeterSeqID\r\n\t\tORDER BY amb.BillingPeriod DESC)\r\n\r\n\tSELECT @currentNumberOfEstimatedReading = ROW_NUMBE - 1\r\n\tFROM results\r\n\tWHERE results.BillingPeriod = (SELECT TOP (1) BillingPeriod FROM Billing.MeterBilling WHERE UniqueMeterSeqId = @UniqueMeterSeqID AND EstimatedReading = 'Act' ORDER BY BillingPeriod DESC);\r\n\r\n\t-- this part handles the meters which never had act reading from the beginning\r\n\tIF (@currentNumberOfEstimatedReading IS NULL)\r\n\tBEGIN\r\n\t\t;WITH results2 AS (SELECT TOP (200) amb.EstimatedReading, amb.BillingPeriod,\r\n\t\t\tLAG(amb.EstimatedReading,1) OVER (ORDER BY amb.BillingPeriod) AS LagValue,\r\n\t\t\tROW_NUMBER () OVER (ORDER BY amb.BillingPeriod DESC) AS ROW_NUMBE\r\n\t\tFROM (SELECT MB.BillingPeriod, MB.UniqueMeterSeqId, MAX(MB.EstimatedReading) AS EstimatedReading\r\n\t\t\tFROM Billing.MeterBilling AS MB\r\n\t\t\tGROUP BY MB.BillingPeriod, MB.UniqueMeterSeqId) AS amb\r\n\t\tWHERE amb.UniqueMeterSeqId = @UniqueMeterSeqID\r\n\t\tORDER BY amb.BillingPeriod DESC)\r\n\r\n\t\tSELECT @currentNumberOfEstimatedReading = MAX(ROW_NUMBE) FROM results2;\r\n\tEND;\r\n\r\n\tRETURN @currentNumberOfEstimatedReading;\r\nEND;"
        }
