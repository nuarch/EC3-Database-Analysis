    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- Created by Mubarak Abdella\n\r\n-- returns the previous billing period given YYYYMM and Billing Cycle \r\n-- 02/24/2009\r\n\r\n\r\n\r\nCREATE  FUNCTION [dbo].[CalculatePreviousBillingPeriod] (@YYYYMM varchar(6),@BillingCycle varchar(1))  \r\nRETURNS varchar(6)  AS\r\nBEGIN \r\nif @YYYYMM ='187601'  return '187601'\r\ndeclare @mm integer\r\ndeclare @yy integer\r\nset @mm = cast(substring(@YYYYMM,5,2) as integer) - [dbo].[MonthsInBillingCycle]  (@BillingCycle)\r\nset @yy = cast(substring(@YYYYMM,1,4) as integer) \r\nif @mm < 1 \r\n   begin\r\n      set @mm = @mm + 12\r\n      set @yy = @yy - 1\r\n    end\r\nif @mm < 10  return cast( (@yy) as varchar(4)) +'0'+  cast( (@mm) as varchar(1))\r\nelse return cast( (@yy) as varchar(4)) +  cast( (@mm) as varchar(2))\r\nreturn '187601'\r\nEND"
        }
      ]
