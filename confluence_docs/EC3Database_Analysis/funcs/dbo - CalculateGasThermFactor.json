      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[CalculateGasThermFactor]\n(\r\n\t@CCF AS dbo.EnergyUnit,\r\n\t@Therms AS dbo.EnergyUnit\r\n)\r\nRETURNS dbo.ThermsFactor AS\r\nBEGIN\r\n\tIF (@CCF = 0 OR ISNULL(@CCF, 0) = 0 OR ISNULL(@Therms, 0) = 0)\r\n\t\tRETURN 1.000;\r\n\t\r\n\tRETURN (@Therms*1.0)/@CCF;\r\nEND;"
        }
