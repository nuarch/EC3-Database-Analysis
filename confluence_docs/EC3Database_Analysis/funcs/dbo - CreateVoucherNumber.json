    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[CreateVoucherNumber] (@BillingPeriod varchar(6),@UtilityComapnySeqid integer, @VoucherSequenceNumber integer)\nRETURNS varchar(11) AS  \r\nBEGIN \r\n-- Build a Voucher Number from the input\r\ndeclare @VoucherNumber varchar(11)\r\ndeclare @YYMM varchar(4)\r\ndeclare @UtilityCompany varchar(2)\r\ndeclare @SequenceNumber varchar(3)\r\ndeclare @OriginalBilling char(1) =\"^\"\r\n--\r\nset @YYMM = substring(@BillingPeriod,3,4)\r\n--\r\nif (@UtilityComapnySeqid < 10)\r\n    set @UtilityCompany = '0'+ cast(@UtilityComapnySeqid as varchar(1))\r\nelse\r\n   set @UtilityCompany = cast(@UtilityComapnySeqid as varchar(2))\r\n--\r\nif (@OriginalBilling ='P')  \r\n   Begin\r\n      if (@VoucherSequenceNumber < 10)\r\n          set @SequenceNumber = '00'+ cast(@VoucherSequenceNumber as varchar(1))\r\n      else\r\n          set @SequenceNumber = '0'+ cast(@VoucherSequenceNumber as varchar(2))\r\n   End\r\nelse\r\n   Begin\r\n      if (@VoucherSequenceNumber < 10)\r\n          set @SequenceNumber = '00'+ cast(@VoucherSequenceNumber as varchar(1))\r\n      else if (9 < @VoucherSequenceNumber  and @VoucherSequenceNumber < 100)\r\n          set @SequenceNumber = '0'+ cast(@VoucherSequenceNumber as varchar(2))\r\n      else\r\n          set @SequenceNumber =  cast(@VoucherSequenceNumber as varchar(3))\r\n   End\r\n--\r\nset @VoucherNumber ='DEM' + @UtilityCompany + @YYMM + @SequenceNumber\r\n--\r\nreturn  @VoucherNumber\r\nEND"
        }
      ]
