      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Common].[CalculateConsecutiveNumberOfEstimatedReadings] (@AccountNumber varchar(15),@MeterNumber varchar(10),@UtilityCompanySeqid int,@BillingPeriod varchar(6),@BillingCycle varchar(1),@TypeOfReading varchar(3))\nRETURNS int AS  \r\nBEGIN \r\n--\r\n-- Any Actual billing automatically resets the ConsecutiveNumberOfEstimatedReadings to zero. \r\n--\r\nif @TypeOfReading = 'ACT' return 0\r\n--\r\n\r\n\r\ndeclare @PreviousPeriodNumberOfEstimatedReadings int\r\ndeclare @PreviousBillingPeriod varchar(6)\r\ndeclare @currentNumberOfEstimatedReading int\r\n\r\n--\r\n-- Determine the PreviousBillingPeriod relative to the current BillingPeriod and the accounts BillingCycle.\r\n--\r\nselect @PreviousBillingPeriod = \r\n\t\tmax(BillingPeriodRevision)\r\n\t\tfrom billing.MeterBilling \r\n\t\twhere OriginalAccountNumber = @AccountNumber\r\n\t\t\tand OriginalMeterNumber = @MeterNumber\r\n\t\t\tand AccountUtilityCompanySeqid = @UtilityCompanySeqid\r\n\t\t\tand BillingPeriodRevision < @BillingPeriod\r\n\r\n\r\nif(@PreviousBillingPeriod is null)\r\nbegin\r\n\tset  @currentNumberOfEstimatedReading =  0 -- return 0 if there is no previous meter billing record\r\nend\r\nelse\r\nbegin\r\n    select @PreviousPeriodNumberOfEstimatedReadings\r\n\t\t= ConsecutivePeriodsEstimatedReading from billing.MeterBilling \r\n\t\twhere OriginalAccountNumber = @AccountNumber\r\n\t\t\tand OriginalMeterNumber = @MeterNumber\r\n\t\t\tand AccountUtilityCompanySeqid = @UtilityCompanySeqid\r\n\t\t\tand BillingPeriodRevision = @PreviousBillingPeriod\r\n\t\r\n\tset  @currentNumberOfEstimatedReading =  @PreviousPeriodNumberOfEstimatedReadings + \r\n\t\t[dbo].[CalculateDeltaBillingPeriods](@PreviousBillingPeriod, @BillingPeriod, @BillingCycle) \r\n\t\t- 1\r\nend\r\n\r\nreturn  @currentNumberOfEstimatedReading\r\n\r\nEND"
        }
      ]
