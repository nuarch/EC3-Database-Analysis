      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[CalculateApplyMonthlyPercentageElectricSpannedBilled] (@MonthlyPeriod varchar(6), @TotalPercentage numeric(8,6))\nRETURNS numeric(8,6) AS \r\n\r\nBEGIN \r\n--\r\n--\t\t\t\t  KW\t  KWH\r\n--\t200701\t01\t0.0756\t0.0814\r\n--\t200702\t02\t0.0764\t0.0877\r\n--\t200703\t03\t0.0779\t0.0803\r\n--\t200704\t04\t0.0801\t0.0749\r\n--\t200705\t05\t0.0854\t0.0764\r\n--\t200706\t06\t0.0920\t0.0900\r\n--\t200707\t07\t0.0919\t0.0851\r\n--\t200708\t08\t0.0875\t0.0843\r\n--\t200709\t09\t0.0915\t0.0901\r\n--\t200710\t10\t0.0897\t0.0841\r\n--\t200711\t11\t0.0770\t0.0841\r\n--\t200712\t12\t0.0748\t0.0814\r\n--\r\ndeclare @MonthlyAppliedPercentage numeric(8,6)\r\ndeclare @MonthlyPercentage numeric(8,6)\r\ndeclare @BillingPeriod varchar(6)\r\ndeclare @BillingMonth varchar(2)\r\n--\r\nset @BillingPeriod = @MonthlyPeriod\r\nselect @BillingMonth = substring(@BillingPeriod,5,2)\r\n--\r\n--\tUsed the average Kilowatt usage for the period\r\n--\tJanuary 2007 through December 2007 as per Stuart Barth 7/8/2008\r\n--\t\r\nSELECT \r\n\t@MonthlyPercentage = Case @BillingMonth \r\n\t\t\t\t\t\t\twhen '01' then 0.0756\r\n\t\t\t\t\t\t\twhen '02' then 0.0764\r\n\t\t\t\t\t\t\twhen '03' then 0.0779\r\n\t\t\t\t\t\t\twhen '04' then 0.0801\r\n\t\t\t\t\t\t\twhen '05' then 0.0854\r\n\t\t\t\t\t\t\twhen '06' then 0.0920\r\n\t\t\t\t\t\t\twhen '07' then 0.0919\r\n\t\t\t\t\t\t\twhen '08' then 0.0875\r\n\t\t\t\t\t\t\twhen '09' then 0.0915\r\n\t\t\t\t\t\t\twhen '10' then 0.0897\r\n\t\t\t\t\t\t\twhen '11' then 0.0770\r\n\t\t\t\t\t\t\twhen '12' then 0.0748\r\n\t\t\t\t\t\t End\r\n\tset @MonthlyAppliedPercentage =  @MonthlyPercentage / @TotalPercentage\r\n--\r\nreturn @MonthlyAppliedPercentage\r\n\r\nEND"
        }
