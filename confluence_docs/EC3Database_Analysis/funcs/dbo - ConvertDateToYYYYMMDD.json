    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[ConvertDateToYYYYMMDD] ( @DateToConvert DateTime)\nRETURNS varchar(8) AS  \r\n\r\nBEGIN \r\n--\r\ndeclare @mm varchar(2)\r\ndeclare @dd varchar(2)\r\n\r\n--\r\nif (month(@DateToConvert) < 10 )\r\n\tset @mm = '0'+cast(month(@DateToConvert) as varchar(1))\r\nelse \r\n\tset @mm = cast(month(@DateToConvert) as varchar(2))\r\n\r\nif (day(@DateToConvert) < 10 )\r\n\tset @dd = '0'+cast(day(@DateToConvert) as varchar(1))\r\nelse \r\n\tset @dd = cast(day(@DateToConvert) as varchar(2))\r\n\r\nreturn cast(year(@DateToConvert) as varchar(4))+@mm+@dd\r\nEND"
        }
