    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Voucher].[GenerateNewInvoiceTrackingNumber]\n(\r\n\t@InvoiceBillingGroup dbo.seqid\r\n)\r\nreturns varchar(11)\r\nAS\r\nbegin\r\n\r\n\tdeclare @PaddedInvoiceBillingGroup varchar(2)\r\n\t\r\n\tdeclare @ShortFiscalYear varchar(2)\r\n\tdeclare @Month varchar(2)\r\n\tdeclare @Seqid varchar(1)\r\n\tdeclare @BillingPeriod dbo.BillingPeriod\r\n\t\r\n\tdeclare @PartialTrackingNumber varchar(10)\r\n\tdeclare @CurrentTopInvoiceTrackingNumber varchar(11)\r\n\tdeclare @Index int\r\n\r\n\t-- get current billing period \r\n\tselect @BillingPeriod = BillingPeriod from Billing.ApplicationTimeFrame WHERE  (CurrentProcessingPeriod = 'Y')\r\n\t\r\n\tset @Month = substring(@BillingPeriod, 5, 2)\r\n\t\r\n\tset @ShortFiscalYear = substring( dbo.CalculateFiscalYear(@BillingPeriod), 3, 2)\r\n\r\n\t-- get latest seqid from Invoice tracking table\r\n\tset @PaddedInvoiceBillingGroup = (Select Right('0' + Convert(VarChar(2), @InvoiceBillingGroup), 2) )\r\n\t\r\n\tset @PartialTrackingNumber = 'DEM' + @ShortFiscalYear  +  @Month + @PaddedInvoiceBillingGroup+'0'\r\n\t\t\r\n\tSELECT   top 1  @CurrentTopInvoiceTrackingNumber = DEMInvoiceNumber\r\n\tFROM Voucher.InvoiceTracking\r\n\tWHERE (CurrentInvoiceTrackingAccountGroup = @InvoiceBillingGroup) and ( DEMInvoiceNumber like @PartialTrackingNumber +'%' ) \r\n\torder by DEMInvoiceNumber desc\r\n\t\r\n\tif (@CurrentTopInvoiceTrackingNumber is not null )\r\n\t\tBEGIN\r\n\t\t\t\r\n\t\t\tset @Seqid = substring(@CurrentTopInvoiceTrackingNumber, 11, 1)\r\n\t\t\t\r\n\t\t\tif (@Seqid = 'Z')\r\n\t\t\t\tBegin\r\n\t\t\t\t\t-- RAISERROR ('The Invoice Billing group you selected has reached the limit of 36 Invoice Tracking Number for this period', 11, 1 ) \r\n\t\t\t\t\treturn null\r\n\t\t\t\tend\r\n\t\t\tselect @Index = charindex(@Seqid, '0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ')\r\n\t\t\tselect @Seqid = substring('123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ', @Index , 1 )\r\n\r\n\t\tend\r\n\telse\t-- no record is found\r\n\t\tBEGIN\r\n\t\t\tset @Seqid = '0'\r\n\t\tend\r\n\t\t\r\n\t-- return the next Invoice Tracking number \r\n\treturn \t@PartialTrackingNumber + @Seqid\r\n\r\nEND"
        }
