      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [Common].[CalculateProductionAndDeliveryTariff] (@UtilityCompanySeqid int,@TariffRateCommodity varchar(3))\nRETURNS varchar(14) AS  \r\nBEGIN \r\ndeclare @ProductionAndDeliveryTariffText varchar(14)\r\ndeclare @MissingProductionAndDeliveryTariff int\r\n--\r\n/*\r\n-- 5/24/2010\r\nSELECT @ProductionAndDeliveryTariffText = ProductionAndDeliveryTariff \r\nFROM Billing.UtilityTariffRate\r\nWHERE (UtilityCompanyTariff = @UtilityCompanySeqid) AND (TariffRateCommodity = @TariffRateCommodity)\r\n*/\r\n\r\n-- updated 5/24/2010\r\nSELECT @ProductionAndDeliveryTariffText = ShortDesc\r\nFROM billing.UtilityTariffRateInformation\r\nWHERE (UtilityCompanyTariff = @UtilityCompanySeqid) AND (DeliveryTariffRate = @TariffRateCommodity)\r\n\r\nset @MissingProductionAndDeliveryTariff = @@rowcount\r\n\r\nreturn case when @MissingProductionAndDeliveryTariff <> 0 then @ProductionAndDeliveryTariffText else 'Default Tariff (Fix)' end\r\nEND"
        }
