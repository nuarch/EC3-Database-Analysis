        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[ZeroLeadingSequenceNumber] (@seqnum int)\nRETURNS varchar(8) AS \r\nBEGIN \r\n--\r\ndeclare @CoverToSequenceNumber int\r\ndeclare @CoverToSequenceNumberLength int\r\ndeclare @SequenceNumberWithLeadingZeroes varchar(3) \r\ndeclare @AsciiZero char(1) \r\n--\r\nset @AsciiZero =  Cast(0 as char(1))\r\nset @SequenceNumberWithLeadingZeroes = Cast(@seqnum as varchar(3))\r\nset @CoverToSequenceNumberLength =  len(ltrim(@SequenceNumberWithLeadingZeroes))\r\nif (@CoverToSequenceNumberLength < 3) \r\n\tset @SequenceNumberWithLeadingZeroes = REPLICATE ( @AsciiZero, 3 - @CoverToSequenceNumberLength) +  ltrim(@SequenceNumberWithLeadingZeroes)\r\n--\r\n\r\nreturn @SequenceNumberWithLeadingZeroes\r\n\r\nEND"
        }
