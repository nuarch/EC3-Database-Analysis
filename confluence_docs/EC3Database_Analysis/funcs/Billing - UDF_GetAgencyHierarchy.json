      "content": [
        {
          "type": "text",
          "text": "--**************************************************************************************\n--* Description:\tRetrieve the agency hierarchy for the input agency [@agencyCode].\r\n--* AUTHOR:\t\t\tRAKESH MENON\r\n--* Created On:\t\t01/11/2016\r\n--**************************************************************************************\r\n--* Date       Tech\tDescription of Change\r\n--* ---------- ----\t-------------------------------------------------------------\r\n--* 01/11/2016 RM\tInitial Version \r\n--**************************************************************************************\r\nCREATE FUNCTION [Billing].[UDF_GetAgencyHierarchy](\r\n\t@agencyCode VARCHAR(6)\r\n)\r\nRETURNS @agencyHierarchy TABLE (\r\n    AgencyDivisionSeqID seqid NULL ,\r\n    ParentAgencyDivisionSeqID seqid NULL ,\r\n    AgencyCodeOEC VARCHAR(6) ,\r\n    AgencyDivisionHierarchy HIERARCHYID NULL ,\r\n    AgencyName VARCHAR(75)\r\n)\r\nAS\r\nBEGIN\r\n\r\n\t-- Start\r\n\tSET @agencyCode = ISNULL(NULLIF(@agencyCode, ''), '*');\r\n\r\n\tWITH AgencyCTE AS (\r\n\t\tSELECT AgencyDivisionSeqid, ISNULL(ParentAgencyDivisionSeqid, 0) AS ParentAgencyDivisionSeqid, 1 AS AgencyLevel\r\n\t\t\t, AgencyCodeOEC, AgencyName, CONVERT(VARCHAR(6), '') AS ParentAgencyCodeOEC, AgencyDivisionHierarchy\r\n\t\tFROM [Billing].[AgencyDivision]\r\n\t\tWHERE 1 = CASE WHEN @agencyCode = '*' THEN 1 ELSE CASE WHEN AgencyCodeOEC = @agencyCode THEN 1 ELSE 0 END END\r\n\t\t\tAND 1 = CASE WHEN @agencyCode = '*' THEN CASE WHEN ParentAgencyDivisionSeqid IS NULL THEN 1 ELSE 0 END ELSE 1 END\r\n\t\t\tAND Inactive = 'N'\r\n\r\n\t\tUNION ALL\r\n\r\n\t\tSELECT AD.AgencyDivisionSeqid, AD.ParentAgencyDivisionSeqid, AgencyLevel + 1 AS AgencyLevel\r\n\t\t\t, AD.AgencyCodeOEC, AD.AgencyName, C.AgencyCodeOEC AS ParentAgencyCodeOEC, AD.AgencyDivisionHierarchy\r\n\t\tFROM AgencyCTE C\r\n\t\tJOIN [Billing].[AgencyDivision] AD ON AD.ParentAgencyDivisionSeqid = C.AgencyDivisionSeqid\r\n\t\tWHERE AD.Inactive = 'N'\r\n\t)\r\n\t\tINSERT INTO @agencyHierarchy (AgencyDivisionSeqID, ParentAgencyDivisionSeqID, AgencyCodeOEC, AgencyName, AgencyDivisionHierarchy)\r\n\t\t\tSELECT AgencyDivisionSeqid, ParentAgencyDivisionSeqid, AgencyCodeOEC, AgencyCodeOEC + ' - ' + AgencyName AS AgencyName, AgencyDivisionHierarchy\r\n\t\t\tFROM AgencyCTE\r\n\t\t\tORDER BY AgencyDivisionHierarchy ASC;\r\n\r\n\tRETURN;\r\nEND"
        }
