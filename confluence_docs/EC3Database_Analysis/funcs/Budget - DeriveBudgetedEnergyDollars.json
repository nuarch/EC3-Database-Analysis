      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [Budget].[DeriveBudgetedEnergyDollars] (@BudgetedEnergyUsage int,\n@BudgetCommodityConsumption decimal(12,6), @BudgetCommodityConsumptionAdder decimal(12,6), \r\n@BudgetDeliveryConsumption decimal(12,6),@BudgetedOffPeakEnergyUsage int, @BudgetCommodityConsumptionOffPeak decimal(12,6)) \r\n\r\nRETURNS money AS  \r\nBEGIN \r\ndeclare @BudgetedEnergyDollars money\r\ndeclare @BudgetedEnergyUsageDecimal decimal(13,2)\r\ndeclare @BudgetedOffPeakEnergyUsageDecimal decimal(13,2)\r\n--\r\nselect @BudgetedEnergyUsageDecimal = cast(@BudgetedEnergyUsage as decimal(13,2))\r\nselect @BudgetedOffPeakEnergyUsageDecimal = cast(@BudgetedOffPeakEnergyUsage as decimal(13,2))\r\n\r\n--\r\nset @BudgetedEnergyDollars = Cast (IsNull(@BudgetedEnergyUsageDecimal,0)*(IsNull(@BudgetCommodityConsumption,0)+IsNull(@BudgetCommodityConsumptionAdder,0)+IsNull(@BudgetDeliveryConsumption,0)) +\r\n\t\t\t\t\t\t\t IsNull(@BudgetedOffPeakEnergyUsageDecimal,0)*( IsNull(@BudgetCommodityConsumptionOffPeak,0)+IsNull(@BudgetCommodityConsumptionAdder,0)+IsNull(@BudgetDeliveryConsumption,0)) as money)\r\nreturn \t@BudgetedEnergyDollars\t\t\t\t\t\t \r\nEND"
