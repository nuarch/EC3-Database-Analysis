    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[ConvertDateToStringDate] (@ymd smalldatetime)\nRETURNS varchar(8) AS  \r\nBEGIN \r\n--\r\ndeclare @y int\r\ndeclare @m int\r\ndeclare @d int\r\n--\r\ndeclare @yyyy Varchar(4)\r\ndeclare @mm  Varchar(2)\r\ndeclare @dd   Varchar(2)\r\n--\r\nset @yyyy = cast(year(@ymd) as varchar(4))\r\n--\r\nset @m = month(@ymd)\r\nif (@m < 10)\r\n  set @mm = '0'+cast(month(@ymd) as varchar(1))\r\nelse\r\n  set @mm = cast(month(@ymd) as varchar(2))\r\n--\r\n--\r\nset @D = DAY(@ymd)\r\nif (@d < 10)\r\n  set @dd = '0'+cast(day(@ymd) as varchar(1))\r\nelse\r\n  set @dd = cast(day(@ymd) as varchar(2))\r\n--\r\nreturn (@yyyy+@mm+@dd)\r\nEND"
        }
