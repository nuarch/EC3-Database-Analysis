    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[CalculateCurrentPeriodMod24]  ( @seqid integer )\nRETURNS varchar(6) AS  \r\nBEGIN \r\n--\r\n--\tThe data from July 2004 to April 2006 represent 22 buckets rether than 24\r\n--\tIt was easier to fix internally than rename to Mod22\r\n--\r\ndeclare @RelativePeriodNumber integer\r\n--\r\nset @RelativePeriodNumber = @seqid % 22\r\n--\r\n\r\nif @RelativePeriodNumber = 0\r\n\t\treturn '200604'\r\n  else if @RelativePeriodNumber < 4  \r\n\t\treturn '20040'+cast ((@RelativePeriodNumber+6) as varchar(1))\r\n  else if  3  < @RelativePeriodNumber and @RelativePeriodNumber < 7  \r\n  \t\treturn '2004'+cast ((@RelativePeriodNumber+6) as varchar(2))\r\n  else if  6  < @RelativePeriodNumber and @RelativePeriodNumber < 16  \r\n  \t\treturn '20050'+cast ((@RelativePeriodNumber-6) as varchar(1))\r\n  else if  15 < @RelativePeriodNumber and @RelativePeriodNumber < 19 \r\n  \t\treturn '2005'+cast ((@RelativePeriodNumber-6) as varchar(2))\r\n  else if  18  < @RelativePeriodNumber and @RelativePeriodNumber < 22\r\n  \t\treturn '20060'+cast ((@RelativePeriodNumber-18) as varchar(1))\r\n\r\nreturn 'XXXXXX'\r\n--\r\nEND"
        }
      ]
