    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[CalculateDeltaBillingPeriods]\n(\r\n\t@FromBillingPeriod AS VARCHAR(6),\r\n\t@ToBillingPeriod AS VARCHAR(6),\r\n\t@BillingCycle AS VARCHAR(1)\r\n)\r\nRETURNS INT AS\r\nBEGIN\r\n\tDECLARE @monthInCycle AS INT, @yearDifference AS INT, @monthDifference AS INT, @numberOfPeriod AS INT;\r\n\r\n\tSET @monthInCycle = dbo.MonthsInBillingCycle(@BillingCycle);\r\n\tSET @yearDifference = CAST(LEFT(@ToBillingPeriod, 4) AS INT) - CAST(LEFT(@FromBillingPeriod, 4) AS INT);\r\n\tSET @monthDifference = CAST(RIGHT(@ToBillingPeriod, 2) AS INT) - CAST(RIGHT(@FromBillingPeriod, 2) AS INT) + 1;\r\n\tSET @monthDifference = @monthDifference + 12 * @yearDifference;\r\n\tSET @numberOfPeriod = CEILING(CAST(@monthDifference AS FLOAT) / @monthInCycle);\r\n\tRETURN @numberOfPeriod;\r\nEND;"
        }
