      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [Budget].[CalcBudgetCombinedSurplus] (@BudgetDollars money, @BudgetUsage decimal(12,6),@ActualDollars money, @ActualUsage decimal(12,2),@TotalPaidAdjustment money)\n \r\n\t\t--ActualRate = ActualDollars/ActualUsage\t\r\n\t\t--AdjustmentSurplus = -TotalPaidAdjustment\t\r\n\t\t--BudgetRate =  BudgetDollars/BudgetUsage\t\r\n\t\t--RateSurplus = (BudgetRate - ActualRate) * BudgetUsage\t\r\n\t\t--CombinedSurplus = CurrentMonthSurplus - (RateSurplus  + UsageSurplus)\t\r\n\t\t--Total Surplus =  BudgetDollars - ActualDollars\t\r\n\t\t--UsageSurplus = (BudgetUsage - ActuaUsage) * BudgetRate\t\r\n\t\t--CurrentMonthSurplus = TotalSurplus - AdjustmentSurplus\t\r\n\r\nRETURNS decimal(12,6) AS  \r\nBEGIN \r\n--\r\ndeclare @BudgetRate decimal(12,6)\r\ndeclare @ActualRate decimal(12,6)\r\ndeclare @TotalSurplus decimal(12,6)\r\ndeclare @AdjustmentSurplus decimal(12,6)\r\ndeclare @CurrentMonthSurplus decimal(12,6)\r\ndeclare @CombinedSurplus decimal(12,6)\r\ndeclare @RateSurplus decimal(12,6)\r\ndeclare @UsageSurplus decimal(12,6)\r\n--\r\nselect @BudgetRate = case when isnull(@BudgetUsage,(0))=(0) then (0) else isnull(@BudgetDollars,(0))/@BudgetUsage end\r\nselect @ActualRate = case when isnull(@ActualUsage,(0))=(0) then (0) else isnull(@ActualDollars,(0))/@ActualUsage end\r\n--\r\nset @RateSurplus = Cast ((@BudgetRate-@ActualRate)*@BudgetUsage as decimal(12,6))\r\nset @UsageSurplus = Cast ((@BudgetRate-@ActualRate)*@BudgetRate as decimal(12,6))\r\nset @TotalSurplus = isnull(@BudgetDollars,0) - isnull(@ActualDollars,0)\r\nset @AdjustmentSurplus =  -1.00 * isnull(@TotalPaidAdjustment,0)\r\nset @CurrentMonthSurplus =  @TotalSurplus - @AdjustmentSurplus\r\n\r\n--\r\nset @CombinedSurplus = @CombinedSurplus - (@UsageSurplus+@RateSurplus)\r\n\r\nreturn \t@CombinedSurplus\t\t\t\t\t \r\nEND"
        }
