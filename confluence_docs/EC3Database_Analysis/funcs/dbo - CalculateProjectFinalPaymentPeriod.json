      "content": [
        {
          "type": "text",
          "text": "Create  FUNCTION [dbo].[CalculateProjectFinalPaymentPeriod](@ProjectPeriodFirstBilled varchar(6),@TotalNoOfPayments varchar(3))\n--\r\nRETURNS varchar(6) AS  \r\nBEGIN \r\n--\r\n\r\ndeclare @ProjectPeriodFinalpayment varchar(6)\r\ndeclare @yyyy int\r\ndeclare @mm int\r\ndeclare @TotalNumberOfPayments2 int\r\ndeclare @Newmm int\r\ndeclare @years int\r\n--\r\nset @TotalNumberOfPayments2=cast(@TotalNoOfPayments as integer)-1\r\nset @yyyy = cast(substring( @ProjectPeriodFirstBilled,1, 4) as integer)\r\nset @mm = cast(substring(@ProjectPeriodFirstBilled,5, 6) as integer)\r\nset @Newmm = @TotalNumberOfPayments2 + @mm\r\nset @mm = @Newmm % 12\r\nset @years = @Newmm / 12\r\nset @yyyy = @yyyy + @years\r\n\r\nif (@mm>0 and @mm<10) \r\n   set @ProjectPeriodFinalpayment=cast(@yyyy as varchar(4)) + '0'  + cast(@mm as varchar(1))\r\nelse if (@mm = 11) \r\n   set @ProjectPeriodFinalpayment=cast(@yyyy as varchar(4)) + cast(@mm as varchar(2))\r\nelse \r\n   Begin\r\n\tset @yyyy = @yyyy -1\r\n\tset @ProjectPeriodFinalpayment=cast(@yyyy as varchar(4)) + '12'\r\n   End\r\n\r\nreturn @ProjectPeriodFinalpayment\r\n--\r\n--\r\nend"
