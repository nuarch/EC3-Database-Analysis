      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Common].[MeterResetNotes] ( @MergeOrReset varchar(1),@FromDate varchar(8),@MeterFromReading int,@ToDate varchar(8),@MeterToReading int,@Ccf int,\n@ThermsFactor numeric(6,4),@Therms int,@MeterConstant int)\r\nRETURNS varchar(300) AS  \r\n\r\nBEGIN \r\n--\r\ndeclare @Notes varchar(300)\r\ndeclare @MeterMergeOrReset varchar(15)\r\n--\r\nif (@MergeOrReset='R') \r\n\tset @MeterMergeOrReset =  'Meter Reset: '\r\nelse\r\n\tset @MeterMergeOrReset =  'Meter Merge: '\r\n--\r\nset @Notes = @MeterMergeOrReset+'From Date '+cast(@FromDate as varchar(8))+' (Reading: '+cast(isnull(@MeterFromReading,0) as varchar(10))+') - To Date:  '+\r\ncast(@ToDate as varchar(8))+' (Reading: '+cast(isnull(@MeterToReading,0) as varchar(10))+')  CCF: '+\r\ncast(isnull(@Ccf,0) as varchar(6))+' Thermsfactor - '+cast(isnull(@ThermsFactor,1.03) as varchar(10))+' - Therms - '+cast(isnull(@Therms,0) as varchar(10))+' - Const - '+ \t\t\t\t\r\ncast(isnull(@MeterConstant,1) as varchar(10))\r\n--\r\nreturn @Notes\r\nEND"
        }
