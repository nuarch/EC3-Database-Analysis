      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [ManualBill].[GetPreviousPeriodEnergyUsage2]\n(\r\n\t@UniqueAccountSeqId AS INT,\r\n\t@BillingPeriod AS VARCHAR(6)\r\n)\r\nRETURNS INT\r\nAS\r\nBEGIN\r\n\tDECLARE @EnergyUsage AS INT;\r\n\t\r\n\tSELECT TOP(1) @EnergyUsage = AB.BilledUsage\r\n\tFROM ManualBill.AccountBillingEntry AS AB\r\n\t\tINNER JOIN Billing.Account A ON AB.UniqueAccountSeqId = A.UniqueAccountSeqid AND A.IsCurrenTRecord = 'Y'\r\n\tWHERE A.AccountStatus IN ('AC', '46') AND A.UniqueAccountSeqid = @UniqueAccountSeqId AND AB.BillingPeriod < @BillingPeriod\r\n\tORDER BY AB.BillingPeriod DESC;\r\n\t\r\n\tRETURN @EnergyUsage;\r\nEND;"
        }
