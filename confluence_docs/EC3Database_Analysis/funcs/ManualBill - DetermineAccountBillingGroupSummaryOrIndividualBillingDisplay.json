      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [ManualBill].[DetermineAccountBillingGroupSummaryOrIndividualBillingDisplay] ( @InvoiceAccountGroupUtiliyCompany int,@InvoiceAccountGroupSeqid int)\nRETURNS varchar(25) AS  \r\nBEGIN \r\n--\r\ndeclare @DisplayText varchar(20)\r\n--\r\nSELECT    @DisplayText = \r\n\tCASE WHEN InvoiceAccountGroupUtiliyCompany = 9 THEN CASE WHEN SummaryBilling = 'Y' THEN substring(InvoiceAccountBillingGroupDesc, 7, len(InvoiceAccountBillingGroupDesc) - 6) + ' Summary' ELSE \r\n\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\tsubstring(InvoiceAccountBillingGroupDesc, 7, len(InvoiceAccountBillingGroupDesc) - 6) + ' Individual' END \r\n\t\t WHEN InvoiceAccountGroupUtiliyCompany <> 9 THEN CASE WHEN SummaryBilling = 'Y' THEN ' Summary' ELSE ' Individual' END\r\n\tEND\r\nFROM InvoiceAccountGroup\r\nWHERE (InvoiceAccountGroupUtiliyCompany =@InvoiceAccountGroupUtiliyCompany) AND (InvoiceAccountGroupSeqid = @InvoiceAccountGroupSeqid)\r\n--\r\nreturn @DisplayText\r\nEND"
        }
