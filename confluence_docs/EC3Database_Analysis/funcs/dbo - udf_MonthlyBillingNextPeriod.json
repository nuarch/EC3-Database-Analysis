    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[udf_MonthlyBillingNextPeriod] (@BillingCycle varchar(1),\n\t\t\t\t\t\t      @Monthly varchar(6),\r\n\t\t\t\t\t\t      @BiMonthly varchar(6),\r\n\t\t\t\t\t\t      @Quarterly varchar(6),\r\n\t\t\t\t\t\t      @Yearly varchar(6))  \r\n-- =============================================\r\n-- Create udf_MonthlyBillingNextPeriod\r\n--  \r\n-- Set the Next Billing Period based upon the   \r\n-- Billing Cycle for the current records\r\n--  \r\n--  \r\n-- =============================================\r\nRETURNS varchar(6) AS  \r\nBEGIN \r\nif   @BillingCycle = 'M' return @Monthly\r\nelse if @BillingCycle = 'B' return @BiMonthly\r\nelse if @BillingCycle = 'Q' return @Quarterly\r\nelse if @BillingCycle = 'Y' return @Yearly\r\nreturn '187601'\r\nEND"
        }
      ]
