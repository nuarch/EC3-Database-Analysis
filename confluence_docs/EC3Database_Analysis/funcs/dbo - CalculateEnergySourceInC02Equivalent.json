    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "create  FUNCTION [dbo].[CalculateEnergySourceInC02Equivalent] (@ConsumptionUnit integer,@EnergyUnit [dbo].[EnergyDeliveryTypeUnit])\nRETURNS [dbo].[C02EquivalentBig] AS  \r\nBEGIN \r\n--\r\ndeclare @Unit varchar(3)\r\ndeclare @DecimalUnit [numeric](38, 6)\r\n--\r\nif (@ConsumptionUnit=0) return 0\r\n--\r\nselect @DecimalUnit = cast(@ConsumptionUnit as [numeric](38, 6))\r\nset @Unit = substring(@EnergyUnit,1,3)\r\n--\r\nif (@Unit = 'KWH') return (@DecimalUnit/10000000.) * 471.64  -- Electricity 1,000,000 kWh => 471.64 metric tons of CO2e\r\nelse if (@Unit = 'THE')  return (@DecimalUnit/1000.)*5.6048 -- Natural Gas 1,000 therms  => 5.6048 metric tons of CO2e\r\nelse if (@Unit = 'MLB')  return (@DecimalUnit/1000.)*59.05 -- Steam 1000 m#s => 59.05 metric tons of CO2e\r\nelse if (@Unit = 'GAL')  return (@DecimalUnit/1000.)*1.181   --Chilled Water 1000 tons => 1.181 metric tons of CO2e\r\nreturn 0\r\nEND"
        }
      ]
    }
