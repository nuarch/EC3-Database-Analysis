      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[ConvertOverpunch4ToDecimal] (@overPunchField varchar(4) )\nRETURNS    decimal(6,4)\r\nBEGIN \r\n-- Declare variables\r\n   DECLARE @convertedField   varchar(5)\r\n   DECLARE @decimalField    int\r\n--\r\n  select @convertedField  = [DBO].[ConvertOverpunch4](@overPunchField)\r\n  select @decimalField  = cast(@convertedField as  int)\r\n\r\nreturn @decimalField * .001\r\nEND"
        }
