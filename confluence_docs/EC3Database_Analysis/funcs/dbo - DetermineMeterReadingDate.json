      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[DetermineMeterReadingDate] ( @Consumption varchar(8),@Demand varchar(8))\nRETURNS varchar(8) AS  \r\n-- Determine the date that the meter was read independent of consumption or demand types.\r\n-- Combination meter types should be read on the same date.\r\n--\r\nBEGIN \r\n--\r\nif (@Consumption <> '00000000') return @Consumption\r\nif (@Demand <> '00000000') return @Demand\r\n-- > '89' or @Demand> '89' ) return 'EST'\r\n--\r\nreturn '99991231'\r\nEND"
        }
