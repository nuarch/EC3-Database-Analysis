      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[NypaRemoveProductionServiceClassHyphen]\n(\r\n\t@ProductionServiceClass AS VARCHAR(4)\r\n)\r\nRETURNS VARCHAR(3) AS\r\nBEGIN\r\n\tRETURN SUBSTRING(@ProductionServiceClass, 1, 2) + SUBSTRING(@ProductionServiceClass, 4, 1);\r\nEND;"
