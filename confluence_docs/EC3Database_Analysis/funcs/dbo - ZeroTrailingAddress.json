        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[ZeroTrailingAddress]\n(\r\n\t@Address AS VARCHAR(25)\r\n)\r\nRETURNS VARCHAR(25) AS\r\nBEGIN\r\n\tDECLARE @CovertToAddressLength AS INT, @AddressWithLeadingZeroes AS VARCHAR(3),\r\n\t@AsciiSpace AS CHAR(1); \r\n\r\n\tSELECT @AsciiSpace =  CAST(' ' AS CHAR(1)), @CovertToAddressLength = LEN(RTRIM(@Address));\r\n\r\n\tIF (@CovertToAddressLength < 25) \r\n\t\tSET @AddressWithLeadingZeroes = RTRIM(@Address) + REPLICATE(@AsciiSpace, 25 - @CovertToAddressLength);\r\n\r\n\tRETURN @AddressWithLeadingZeroes;\r\nEND;"
        }
      ]
