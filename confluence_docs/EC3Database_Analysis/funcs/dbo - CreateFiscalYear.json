    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[CreateFiscalYear] (@YYYYMM varchar(6),@Current varchar(1))\nRETURNS varchar(4) AS  \r\nBEGIN \r\ndeclare @FiscalYearAdjustment integer\r\n-- \"C\"urrent Fiscal Year or \"P\"revious Fiscal Year\r\nif @Current ='C' set @FiscalYearAdjustment = 0 else set @FiscalYearAdjustment = -1\r\ndeclare @mm integer\r\ndeclare @yy integer\r\nset @mm = cast(substring(@YYYYMM,5,2) as integer)\r\nset @yy = cast(substring(@YYYYMM,1,4) as integer)  + @FiscalYearAdjustment\r\nif 6 < @mm and @mm <= 12 return cast( (@yy+1) as varchar(4))\r\nelse   return cast( (@yy) as varchar(4))\r\nreturn '1876'\r\nEND"
        }
      ]
