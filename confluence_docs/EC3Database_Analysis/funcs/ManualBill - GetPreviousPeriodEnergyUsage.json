      "content": [
        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [ManualBill].[GetPreviousPeriodEnergyUsage]\n(\r\n\t@CurrentAccountNumver AS VARCHAR(15),\r\n\t@BillingPeriod AS VARCHAR(6)\r\n)\r\nRETURNS INT\r\nAS\r\nBEGIN\r\n\tDECLARE @EnergyUsage AS INT;\r\n\t\r\n\tSELECT TOP(1)  @EnergyUsage = AB.AccountEnergyUsage\r\n\tFROM ManualBill.AccountManualBillingHeader AS AB\r\n\t\tINNER JOIN Billing.Account AS A ON AB.UniqueAccountSeqID = A.UniqueAccountSeqID AND A.IsCurrenTRecord = 'Y'\r\n\tWHERE A.AccountStatus IN ('AC', '46')\r\n\t\tAND A.CurrentAccountNumber = @CurrentAccountNumver\r\n\t\tAND AB.BillingPeriod < @BillingPeriod\r\n\tORDER BY AB.BillingPeriod DESC;\r\n\t\r\n\tRETURN ISNULL(@EnergyUsage,0);\r\nEND;"
        }
      ]
