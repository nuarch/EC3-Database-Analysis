      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[DetermineKeyspanWestBillingPeriodHold] (@CurrentBillingPeriod varchar(6),@EvenBillingPeriod varchar(6),@OddBillingPeriod varchar(6),\n                                                           @IsFudgedRevisedBilling varchar(1),@CrisOrSpecialLedger integer,@BillingDays int)\r\nRETURNS varchar(6) AS  \r\n\r\nBEGIN \r\n--\r\ndeclare @WdNumber integer\r\ndeclare @BillingCycle varchar(1)\r\n--\r\ndeclare @RawPeriod varchar(6)\r\n--\r\nif (@EvenBillingPeriod > @OddBillingPeriod) \r\n    Begin\r\n       if (@OddBillingPeriod > @CurrentBillingPeriod) set @RawPeriod = @CurrentBillingPeriod else set @RawPeriod = @OddBillingPeriod\r\n    end\r\nelse\r\n    Begin\r\n       if (@EvenBillingPeriod > @CurrentBillingPeriod) set @RawPeriod = @CurrentBillingPeriod else set @RawPeriod = @EvenBillingPeriod\r\n    end\r\n\r\nif (@IsFudgedRevisedBilling = 'Y')\r\n   Begin\r\n      return @RawPeriod\r\n   End\r\nelse\r\n   Begin\r\n\tif (@CrisOrSpecialLedger = 3) set @BillingCycle = 'M' else set @BillingCycle = 'B'\r\n\r\n        return [dbo].MinValue([dbo].[CreateNextPeriod] (@RawPeriod,@BillingCycle),@CurrentBillingPeriod)\r\n   End\r\n--\r\nreturn 'XXXXXX'\r\nEND"
        }
