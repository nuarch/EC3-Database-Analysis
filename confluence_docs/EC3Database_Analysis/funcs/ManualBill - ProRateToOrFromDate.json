    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [ManualBill].[ProRateToOrFromDate]\n(\r\n\t@FromOrTo varchar(1),\t\t-- T:toDate; F:fromDate\r\n\t@BillingCycle varchar(1),\r\n\t@OutterFromDate varchar(8),\r\n\t@OutterToDate varchar(8),\r\n\t@Index int,\t\t\t\t-- position in @DeltaNumberOfPeriods\r\n\t@DeltaNumberOfPeriods int\r\n)\r\nRETURNS varchar(8)\r\nAS\r\nBEGIN\r\n\tdeclare @returnDate varchar(8)\r\n\tdeclare @Days int\r\n\r\n\t\r\n\t select @Days = CASE @BillingCycle\r\n\t\t\t\t\t\t WHEN 'M' THEN 30\r\n\t\t\t\t\t\t WHEN 'B' THEN 60\r\n\t\t\t\t\t\t WHEN 'Q' THEN 120\r\n\t\t\t\t\t\t WHEN 'Y' THEN 365\r\n\t\t\t\t\t\t ELSE 30\r\n\t\t\t\t\tEND\r\n\r\n\t\r\n\t\r\n\tif(@FromOrTo = 'T') -- toDate\r\n\tbegin\r\n\t\tif ( @Index < @DeltaNumberOfPeriods - 1 )\t\t\t\t\r\n\t\tbegin\r\n\t\t\t--- @returnDate = @OutterFromDate + @Days * (@Index + 1)\t\r\n\t\t\tset @returnDate = case when dbo.ConvertDatetimeToYYYYMMDD( dbo.ConvertYYYYMMDDToDatetime(@OutterFromDate) + @Days * (@Index + 1) ) < @OutterToDate \r\n\t\t\t\t\t\t\t\t\tthen dbo.ConvertDatetimeToYYYYMMDD( dbo.ConvertYYYYMMDDToDatetime(@OutterFromDate) + @Days * (@Index + 1) )  \r\n\t\t\t\t\t\t\t\t\telse @OutterToDate end\r\n\t\tend\r\n\t\telse \r\n\t\tbegin\r\n\t\t\tset @returnDate = @OutterToDate\r\n\t\tend\r\n\t\t\t\r\n\tend -- end get prorated to date for trip number\r\n\t\r\n\tif(@FromOrTo = 'F') -- fromDate\r\n\tbegin\r\n\t\tif ( @Index < @DeltaNumberOfPeriods)\r\n\t\tbegin\r\n\t\t\t--- @returnDate = @OutterFromDate + @Days * @Index\r\n\t\t\tset @returnDate = dbo.ConvertDatetimeToYYYYMMDD( dbo.ConvertYYYYMMDDToDatetime(@OutterFromDate) + @Days * @Index )\r\n\t\tEND \t\r\n\t\telse\r\n\t\tbegin\r\n\t\t\t--- pushes it back to the last logical from date\r\n\t\t\t--- @returnDate = @OutterFromDate + @Days * (@DeltaNumberOfPeriods - 1)\t\r\n\t\t\tset @returnDate = dbo.ConvertDatetimeToYYYYMMDD( dbo.ConvertYYYYMMDDToDatetime(@OutterFromDate) + @Days * (@DeltaNumberOfPeriods - 1)\t )\r\n\t\tEND\r\n\tend\r\n\t\t\r\n\treturn @returnDate\t\r\n\t\r\n\r\nEND"
        }
