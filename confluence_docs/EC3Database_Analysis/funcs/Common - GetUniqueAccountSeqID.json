      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Common].[GetUniqueAccountSeqID] (@AccountSeqID Int)\nRETURNS Int AS  \r\n\r\nBEGIN \r\n\r\n\t --********************************************************************************\r\n\t --\tAuthor: Vicky Yu\r\n\t -- Description:\t\r\n\t --\t\t\t\t\tReturns the UniqueAccountSeqID for the specified AccountSeqID  \r\n\t --\t\t\t\t \r\n\t -- Parameters:\r\n\t --\t\t\t\t\t@AccountSeqID\t\t\t:\tInt\r\n\t -- \r\n\t --\tLog: \r\n\t --\t\t            Creation 12/27/2018\r\n\t --\t\t\r\n\t --\r\n\t --******************************************************************************** \r\n\r\n\tDECLARE @UniqueAccountSeqID INT;\r\n\r\n\r\n\tSELECT @UniqueAccountSeqID = UniqueAccountSeqID\r\n\tFROM Billing.Account WHERE AccountSeqID = @AccountSeqID\r\n\r\n\tRETURN @UniqueAccountSeqID\r\n\r\nEND"
        }
