        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[ConvertStringDateToDate] ( @yyyymmdd varchar(8))\nRETURNS smalldatetime AS  \r\nBEGIN \r\n--\r\ndeclare @yyyy Varchar(4)\r\ndeclare @mm  Varchar(2)\r\ndeclare @dd   Varchar(2)\r\n--\r\nset @yyyy = substring(@yyyymmdd,1,4)\r\nset @mm  = substring(@yyyymmdd,5,2)\r\nset @dd = substring(@yyyymmdd,7,2)\r\n--\r\nreturn Cast((@yyyy+'-'+@mm+'-'+@dd) as smalldatetime)\r\nEND"
        }
      ]
