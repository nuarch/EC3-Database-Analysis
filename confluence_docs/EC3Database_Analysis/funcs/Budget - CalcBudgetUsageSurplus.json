    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [Budget].[CalcBudgetUsageSurplus]\n(\r\n\t@BudgetUsage EnergyUnit,\r\n\t@ActualUsage EnergyUnit,\r\n\t@BudgetRate FLOAT\r\n)\r\n\r\nRETURNS FLOAT AS  \r\nBEGIN \r\n\r\n\r\ndeclare @UsageSurplus FLOAT\r\n\r\nset @UsageSurplus = CAST((ISNULL(@BudgetUsage, 0) - ISNULL(@ActualUsage, 0)) AS FLOAT) * ISNULL(@BudgetRate, 0)\r\n\r\n\r\nreturn \t@UsageSurplus\t\t\t\t\t \r\nEND"
