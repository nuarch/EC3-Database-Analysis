    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[DetermineNYPABorough] (@AccountNumber varchar(15))\nRETURNS varchar(1) AS  \r\nBEGIN \r\n--\r\ndeclare @b varchar(1)\r\ndeclare @boroughCode varchar(1)\r\n--\r\nset @b = substring( @AccountNumber,1,1)\r\nset  @boroughCode = '0\r\n--'\r\nif (@b = '4') set @boroughCode = '1'\r\nelse if (@b = '3') set @boroughCode = '2'\r\nelse if (@b = '6') set @boroughCode = '3'\r\nelse if (@b = '2') set @boroughCode = '4'\r\nelse if (@b = '7') set @boroughCode = '5'\r\nelse if (@b = '5') set @boroughCode = '6'\r\n \r\nreturn @boroughCode\r\n\r\nEND"
        }
