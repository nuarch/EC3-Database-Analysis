      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[ConEdisonIsOrignalOrRevisedOnlyBilling] (@BillingPeriod varchar(6),@RevisedBillingPeriod varchar(6))\nRETURNS varchar(2) AS  \r\nBEGIN \r\n--\r\ndeclare @BillingCode varchar(2)\r\nSet @BillingCode = 'OR'\r\n--\r\nif (@BillingPeriod = @RevisedBillingPeriod) \r\n   Set @BillingCode = 'OR'\r\nelse \r\n   Set @BillingCode = 'RV'\r\nreturn @BillingCode\r\nEND"
