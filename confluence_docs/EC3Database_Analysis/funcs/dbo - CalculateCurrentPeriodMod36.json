    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[CalculateCurrentPeriodMod36]  ( @seqid integer )\nRETURNS varchar(6) AS  \r\nBEGIN \r\n--\r\ndeclare @RelativePeriodNumber integer\r\n--\r\nset @RelativePeriodNumber = dbo.MOD(@seqid,36)\r\n--\r\nif @RelativePeriodNumber = 0\r\n\t\treturn '200606'\r\n  else if @RelativePeriodNumber < 4  \r\n\t\treturn '20030'+cast ((@RelativePeriodNumber+6) as varchar(1))\r\n  else if  3  < @RelativePeriodNumber and @RelativePeriodNumber < 7  \r\n  \t\treturn '2003'+cast ((@RelativePeriodNumber+6) as varchar(2))\r\n  else if  6  < @RelativePeriodNumber and @RelativePeriodNumber < 16  \r\n  \t\treturn '20040'+cast ((@RelativePeriodNumber-6) as varchar(1))\r\n  else if  15 < @RelativePeriodNumber and @RelativePeriodNumber < 19 \r\n  \t\treturn '2004'+cast ((@RelativePeriodNumber-6) as varchar(2))\r\n  else if  18  < @RelativePeriodNumber and @RelativePeriodNumber < 28  \r\n  \t\treturn '20050'+cast ((@RelativePeriodNumber-18) as varchar(1))\r\n  else if  27 < @RelativePeriodNumber and @RelativePeriodNumber < 31\r\n  \t\treturn '2005'+cast ((@RelativePeriodNumber-18) as varchar(2))\r\n  else if  30  < @RelativePeriodNumber\r\n  \t\treturn '20060'+cast ((@RelativePeriodNumber-30) as varchar(1))\r\nreturn '187601'\r\n--\r\nEND"
        }
      ]
