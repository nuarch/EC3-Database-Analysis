      "content": [
        {
          "type": "text",
          "text": "CREATE     FUNCTION [dbo].[CalculateOECInvoiceNumber] (@UtilityCompanySeqid integer,@BillingPeriod varchar(6),@RegularBillingSequenceNumber int,@BillOrPenaltlyPayment varchar(1))\n    RETURNS varchar(11) AS  \r\n    BEGIN \r\n\r\n-- The FMS Invoice number is a twelve character freeform format.  The suggested format is:\r\n--   EC    -   OEC vouchers\r\n--      ## -  Utility Company Sequence ID\r\n--    YYMM -   Voucher billing period\r\n--    ### - RegularBillingSequenceNumber \r\n--              starting at zero (000)\r\n--               or a \r\n--  'P##'  - if a  Penaltly payment starting at zero \r\n--              (P00)\r\n--  \r\n--  FMSVoucherNumber\r\n--  OECInvoiceNumber\r\n--\r\ndeclare @UtilityCompany varchar(2)\r\ndeclare @yymm varchar(4)\r\ndeclare @SequenceNumber varchar(3)\r\n--\r\nset @yymm = substring(@BillingPeriod,3,4)\r\n\r\nif (@UtilityCompanySeqid < 10)\r\n\tset @UtilityCompany = '0' + cast(@UtilityCompanySeqid as varchar(1))\r\nelse\r\n\tset @UtilityCompany = cast(@UtilityCompanySeqid as varchar(2))\r\n--\r\nif (@RegularBillingSequenceNumber  < 10)\r\n\tset @SequenceNumber = '00' + cast(@RegularBillingSequenceNumber as varchar(1))\r\nelse   if (@RegularBillingSequenceNumber < 100)\r\n\t\tset @SequenceNumber = '0' + cast(@RegularBillingSequenceNumber AS varchar(2))\r\nelse   if (@RegularBillingSequenceNumber < 1000)\r\n\t\tset @SequenceNumber = cast(@RegularBillingSequenceNumber AS varchar(3))\r\nelse\r\n\t\tset @SequenceNumber = 'XXX'\r\n\r\nif (@BillOrPenaltlyPayment = 'P')\r\nBegin\r\n\tif (@RegularBillingSequenceNumber < 100)  \r\n\t    set @SequenceNumber = 'P' + substring(@SequenceNumber,2,2)\r\n\telse\r\n\t    set @SequenceNumber = 'PXX'\r\nEnd\r\nreturn  'EC' +  @UtilityCompany + @yymm + @SequenceNumber\r\n\r\nEND"
        }
      ]
