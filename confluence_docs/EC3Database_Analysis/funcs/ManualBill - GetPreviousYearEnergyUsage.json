    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [ManualBill].[GetPreviousYearEnergyUsage]\n(\r\n\t@CurrentAccountNumver varchar(15),\r\n\t@BillingPeriod varchar(6) \r\n)\r\nRETURNS int\r\nAS\r\nbegin\r\n-- =============================================\r\n-- Author:\t\tMohammed Belarrem\r\n-- Create date: 03/10/2010 \r\n-- Description:\treturn Previous Year's Energy Usage \r\n--\r\n--\r\n-- LOG:\t09/03/2010:\tMOH\tAdded the order by since it wasn't always returning the right period \r\n--      12/17/2018: VY  Updated for UniqueAccountSeqID\r\n-- =============================================\r\n\r\n\tdeclare @EnergyUsage int\r\n\tdeclare @PreviousYear dbo.BillingPeriod\r\n\t\r\n\tset @PreviousYear = ( select dbo.CreatePreviousPeriod(@BillingPeriod , 'Y'))\r\n\t\r\n\t\r\n\tSELECT TOP (1) @EnergyUsage = Billing.AccountBilling.AccountEnergyUsage\r\n\tFROM Billing.Account INNER JOIN\r\n                 Billing.AccountBilling \r\n           ON /* Billing.Account.AccountSeqid = Billing.AccountBilling.AccountSeqid Comment out on 12/17/2018 */\r\n\t\t         Billing.Account.UniqueAccountSeqid = Billing.AccountBilling.UniqueAccountSeqId and\r\n\t\t\t\t Billing.Account.IscurrentRecord = 'Y' /* added on 12/17/2018 */\r\n\tWHERE   (Billing.Account.AccountStatus IN ('AC', '46')) \r\n\t\t\tAND (Billing.Account.CurrentAccountNumber = @CurrentAccountNumver)\r\n\t\t\tand (Billing.AccountBilling.BillingPeriod <=  @PreviousYear )\r\n\t\t\tORDER BY BillingPeriod DESC \r\n\treturn @EnergyUsage\r\n\t\t\r\nEND"
        }
      ]
