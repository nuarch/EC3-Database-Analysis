    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[CalculateFiscalYear] (@YYYYMM varchar(6))\nRETURNS varchar(4) AS  \r\nBEGIN \r\ndeclare @FiscalYearAdjustment integer\r\ndeclare @mm integer\r\ndeclare @yy integer\r\nset @mm = cast(substring(@YYYYMM,5,2) as integer)\r\nset @yy = cast(substring(@YYYYMM,1,4) as integer)\r\nif 6 < @mm and @mm <= 12 return cast( (@yy+1) as varchar(4))\r\nelse   return cast( (@yy) as varchar(4))\r\nreturn '1876'\r\nEND"
        }
      ]
    }
