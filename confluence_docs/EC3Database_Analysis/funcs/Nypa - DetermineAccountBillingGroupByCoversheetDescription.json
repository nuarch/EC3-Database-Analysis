      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Nypa].[DetermineAccountBillingGroupByCoversheetDescription]\n(\r\n\t@ServiceClassification AS VARCHAR(14),\r\n\t@IsTimeOfDay AS VARCHAR(14),\r\n\t@BillingPeriod AS VARCHAR(6),\r\n\t@RevisedBillingPeriod AS VARCHAR(6)\r\n)\r\nRETURNS VARCHAR(64) AS\r\nBEGIN \r\n\tDECLARE @CoverSheetCategory AS VARCHAR(64);\r\n\tSELECT\r\n\t\t@CoverSheetCategory = CASE\r\n\t\tWHEN @ServiceClassification = 'GOV/NYC/080' AND @BillingPeriod = @RevisedBillingPeriod THEN 'STREETLIGHTING'\r\n\t\tWHEN @ServiceClassification = 'GOV/NYC/080' AND @BillingPeriod <> @RevisedBillingPeriod THEN 'STREETLIGHTING ADJUSTMENT'\r\n\t\tWHEN @IsTimeOfDay = 'N' AND @BillingPeriod = @RevisedBillingPeriod THEN 'METERED: CONVENTIONAL'\r\n\t\tWHEN @IsTimeOfDay = 'N' AND @BillingPeriod <> @RevisedBillingPeriod THEN 'METERED ADJUSTMENTS: CONVENTIONAL'\r\n\t\tWHEN @IsTimeOfDay = 'Y' AND @BillingPeriod = @RevisedBillingPeriod THEN 'METERED: TOD'\r\n\t\tWHEN @IsTimeOfDay = 'Y' AND @BillingPeriod <> @RevisedBillingPeriod THEN 'METERED ADJUSTMENTS: TOD'\r\n\t\tELSE '-1'\r\n\tEND;\r\n\tRETURN @CoverSheetCategory;\r\nEND;"
