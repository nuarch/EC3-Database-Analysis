        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[CalculateCurrentPeriod]  ( @JulDate varchar(5))\nRETURNS varchar(6) AS  \r\nBEGIN \r\n--\r\ndeclare @yyyymmdd varchar(8)\r\n--\r\nif @JulDate = '00000' return '187601'\r\n--\r\nset  @yyyymmdd =  [dbo].[JulianDateToYYYYMMDD] (@JulDate)\r\nreturn substring(@yyyymmdd,1,6)\r\nEND"
