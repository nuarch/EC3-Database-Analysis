    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE   FUNCTION [dbo].[ConvertOverpunch10ToDecimal] (@overPunchField varchar(10) )\nRETURNS    decimal(8,2)\r\nBEGIN \r\n-- Declare variables\r\n   DECLARE @convertedField   varchar(11)\r\n   DECLARE @decimalField   decimal(8,2)\r\n--\r\n  select @convertedField  = [DBO].[ConvertOverpunch10](@overPunchField)\r\n  select @decimalField  = [dbo].ConvertToDecimal(@convertedField)\r\n\r\nreturn @decimalField\r\nEND"
        }
