    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "Create  FUNCTION [dbo].[CalculateDeltaBillingPeriodsDHO]\n(@ConEdUtilityCode int ,@CalculatedFromDate varchar(6),@CalculatedToDate varchar(6),@BillingCycle  varchar(1), @TariffCode  varchar(3))\r\n\r\n--\r\nRETURNS int AS  \r\nBEGIN \r\n--\r\n\r\nreturn [dbo].[CalculateDeltaBillingPeriods] (\r\n\t  [dbo].[CalculateNextBillingPeriod]([dbo].DetermineConEdisonBillingPeriodProjected(@CalculatedFromDate,@TariffCode,@ConEdUtilityCode),@BillingCycle) -- fROM dATE\r\n  \t\t\t\t\t\t\t\t,[dbo].DetermineConEdisonBillingPeriodProjected(@CalculatedToDate,@TariffCode,@ConEdUtilityCode),@BillingCycle)\r\n--\r\nEND"
        }
      ]
