        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[DefineEnergySourceUnit]\n(\r\n\t@EnergyDescription AS INT\r\n)\r\nRETURNS VARCHAR(20)\r\nAS\r\nBEGIN\r\n\tIF (@EnergyDescription = 1)\r\n\t\tRETURN 'kWh';\r\n\tELSE IF (@EnergyDescription = 2)\r\n\t\tRETURN 'Therms';\r\n\tELSE IF (@EnergyDescription = 3)\r\n\t\tRETURN 'MLbs';\r\n\tELSE IF (@EnergyDescription = 4)\r\n\t\tRETURN 'Chilled Water';\r\n\tELSE IF (@EnergyDescription = 5)\r\n\t\tRETURN 'Oil';\r\n\tELSE RETURN 0;\r\n\r\n\tRETURN 0;\r\nEND;"
        }
      ]
