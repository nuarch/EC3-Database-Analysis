    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [CrisNationalGridWest].[DetermineToDateFromBillingPeriodAndWDNumber]\n(\r\n      @WDnumber varchar(2),\r\n      @BillingPeriod varchar(6)\r\n)\r\nRETURNS varchar(8)\r\nAS\r\nBEGIN\r\n            --******************************************************************************************************\r\n            --* Description: Returns the ToDate from the meter reading schedule based on the billing period and the WDNumber \r\n            --*\t\r\n            --* 06/02/2010 PAH: Creation\t\t\t \r\n            --* 06/02/2010 MOH: Update: Modified it to take into consideration the other WDNumber ( '21' if '01' etc)\t\t\t \r\n            --******************************************************************************************************\r\n\r\n            declare @ToDate varchar(8)\r\n\t\t\tDECLARE @TheOtherWDNumber VARCHAR(2)\r\n\t\t\t\r\n\t\t\tSET @TheOtherWDNumber = CASE WHEN (@WDNumber < '21') THEN CAST( CAST(@WDNumber AS int) + 20 AS VARCHAR(2))\r\n\t\t\t\t\t\t\t\t\t\t WHEN (@WDNumber = '40') THEN '20'\r\n\t\t\t\t\t\t\t\t\t\t ELSE CAST( CAST(@WDNumber AS int) % 20 AS VARCHAR(2))\r\n\t\t\t\t\t\t\t\t\tEND\r\n\r\n\t\t\tSET @TheOtherWDNumber = RIGHT( '00' + @TheOtherWDNumber , 2)\r\n\r\n            \r\n\t\t\tSELECT  @ToDate = ToDate\r\n\t\t\tFROM CrisNationalGridWest.CRISBillingPeriodByWD\r\n\t\t\tWHERE (BillingPeriod = @BillingPeriod) AND ( (WDNumber = @WDNumber) OR (WDNumber = @TheOtherWDNumber))      \r\n\t\t\t       \r\n            return @ToDate   \r\n      \r\n\r\nEND"
        }
      ]
