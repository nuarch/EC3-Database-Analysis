      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[ConvertOverpunch4ToInt32] (@overPunchField varchar(4) )\nRETURNS    int\r\nBEGIN \r\n-- Declare variables\r\n   DECLARE @convertedField   varchar(5)\r\n   DECLARE @IntegerlField   int\r\n--\r\n  select @convertedField  = [DBO].[ConvertOverpunch4](@overPunchField)\r\n  select @IntegerlField  = cast(@convertedField as int)\r\n\r\nreturn @IntegerlField\r\nEND"
