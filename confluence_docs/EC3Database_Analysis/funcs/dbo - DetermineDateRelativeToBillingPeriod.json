        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "Create FUNCTION [dbo].[DetermineDateRelativeToBillingPeriod](@BillingPeriod varchar(6),@BillingCycle varchar(1),@NumberOfDays int)\n--\r\nRETURNS DateTime AS  \r\nBEGIN \r\ndeclare @DeltaDays int \r\nset @DeltaDays = @NumberOfDays*[dbo].[MonthsInBillingCycle]  (@BillingCycle)\r\n--\r\n--select CONVERT(DATETIME, '20061019 00:00:00', 102)\r\n\r\nreturn DATEADD(day, @DeltaDays, CONVERT(DATETIME,@BillingPeriod+ '01 00:00:00', 102))\r\nEND"
        }
