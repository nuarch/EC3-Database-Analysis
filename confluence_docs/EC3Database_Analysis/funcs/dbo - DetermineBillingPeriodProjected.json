      "content": [
        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE   FUNCTION [dbo].[DetermineBillingPeriodProjected] (@ToDate varchar(8),@Utility int)\nRETURNS varchar(6) AS  \r\n\r\nBEGIN \r\n\r\ndeclare @BillingPeriod varchar(6)\r\n--\r\nSELECT @BillingPeriod=BillingPeriod FROM Billing.BillingPeriodProjected WHERE UtilityCompanySeqid=@Utility AND StartofPeriodTodate<=@ToDate AND EndofPeriodTodate >= @ToDate\r\n--\r\nreturn @BillingPeriod\r\n\r\nEND"
        }
      ]
