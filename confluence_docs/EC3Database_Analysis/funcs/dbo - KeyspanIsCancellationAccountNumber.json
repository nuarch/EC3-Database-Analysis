      "content": [
        {
          "type": "text",
          "text": "CREATE    FUNCTION [dbo].[KeyspanIsCancellationAccountNumber] (@BilledAmount varchar(10))\nRETURNS    varchar(1)\r\nBEGIN \r\ndeclare @yesno varchar(1)\r\ndeclare @BillingAmount money\r\nset @BillingAmount = cast([DBO].[ConvertOverpunch10ToDecimal] (@BilledAmount) as money)\r\n\r\nif (@BillingAmount < 0 ) \r\n    set @yesno = 'Y'\r\nelse\r\n    set @yesno = 'N'\r\nreturn @yesno\r\nEND"
