    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Common].[udf_GetUniqueAccountSeqId]\n(\r\n\t@AccountNumber AS VARCHAR(15)\r\n)\r\nRETURNS INT\r\nAS\r\nBEGIN\r\n\tDECLARE @LastUniqueAccountSeqid AS INT;\r\n\r\n\tIF EXISTS(SELECT * FROM Billing.Account WHERE OriginalAccountNumber = @AccountNumber AND IsActive = 1)\r\n\tBEGIN\r\n\t\tSELECT @LastUniqueAccountSeqid = UniqueAccountSeqid\r\n\t\tFROM Billing.Account\r\n\t\tWHERE DateAdded = (SELECT MAX(DateAdded) FROM Billing.Account WHERE OriginalAccountNumber = @AccountNumber AND IsActive = 1 GROUP BY OriginalAccountNumber)\r\n\t\t\tAND OriginalAccountNumber = @AccountNumber;\r\n\tEND;\r\n\tELSE\r\n\tBEGIN\r\n\t\tSELECT @LastUniqueAccountSeqid = UniqueAccountSeqid\r\n\t\tFROM Billing.Account\r\n\t\tWHERE DateAdded = (SELECT MAX(DateAdded) FROM Billing.Account WHERE OriginalAccountNumber = @AccountNumber GROUP BY OriginalAccountNumber)\r\n\t\t\tAND OriginalAccountNumber = @AccountNumber;\r\n\tEND;\r\n\r\n\tRETURN @LastUniqueAccountSeqid;\r\nEND;"
