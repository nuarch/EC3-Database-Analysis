          "type": "text",
          "text": "CREATE  FUNCTION [CrisNationalGridWest].[DetermineNewCRISFirstPeriodCanceledAdjustment]\n(\r\n\t  @SpecialLedgerNumber11 varchar(11),\r\n      @InitialFirstPeriodCanceled dbo.yyyymm,\r\n      @CurrentBillingPeriod dbo.yyyymm\r\n)\r\nRETURNS varchar(6)\r\nAS\r\nBEGIN\r\n            --******************************************************************************************************\r\n            --* Description:  calcualtes the top billing period that encapsulates the fromdate and then returns that period -1\r\n            --*                           INDEPENDENT on the WDNumber. the period is defined by all the dates between 01 and 21 or 21 and 01 (dependant on the period) \r\n            --* Mohammed Belarrem\r\n            --*   06/30/2010 PAH    created:    \r\n            --******************************************************************************************************\r\n\r\n            declare @BillingPeriod dbo.BillingPeriod\r\n            declare @FirstNewCRISBillingPeriodRevision dbo.BillingPeriod\r\n            \r\n\t\t\tSELECT \r\n\t\t\t\t\t@FirstNewCRISBillingPeriodRevision = CrisNationalGridWest.LastBillingPeriodAccountInSepecialLedger.FirstNewCRISBillingPeriodRevision\r\n\t\t\tFROM \r\n\t\t\t\t\tCrisNationalGridWest.UploadAccountBillingDetail INNER JOIN\r\n\t\t\t\t\tCrisNationalGridWest.LastBillingPeriodAccountInSepecialLedger ON \r\n\t\t\t\t\tCrisNationalGridWest.UploadAccountBillingDetail.SpecialLedgerAccountNUmber = CrisNationalGridWest.LastBillingPeriodAccountInSepecialLedger.SpecialLedgerNumber11\r\n\t\t\tWHERE \r\n\t\t\t\t\t(CrisNationalGridWest.LastBillingPeriodAccountInSepecialLedger.SpecialLedgerNumber11 = @SpecialLedgerNumber11) AND \r\n\t\t\t\t\t(CrisNationalGridWest.UploadAccountBillingDetail.SpecialLedgerAccountNUmber IS NOT NULL)\r\n\t\t\t\r\n\t\t\tselect @BillingPeriod =  case when @InitialFirstPeriodCanceled < @FirstNewCRISBillingPeriodRevision  then @FirstNewCRISBillingPeriodRevision else @InitialFirstPeriodCanceled end  \t\r\n\t\t\t--\r\n            return  case when @BillingPeriod >  @CurrentBillingPeriod  then @CurrentBillingPeriod else @BillingPeriod end  \r\n      \r\n\r\nEND"
        }
