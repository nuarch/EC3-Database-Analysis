      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[DefineEnergySource]  (@EnergyDescription varchar(3))\n--\r\nRETURNS int AS  \r\nBEGIN \r\n--\r\nif (@EnergyDescription = 'ELE') return 1\t\t-- Electric\r\n   else if (@EnergyDescription = 'GAS') return 2\t-- Gas\r\n   else if (@EnergyDescription = 'STM') return 3\t-- Steam\r\n   else if (@EnergyDescription = 'CHW') return 4\t-- Chilled Water\r\n   else if (@EnergyDescription = 'OIL') return 5\t-- Oil\r\n   else return 0\t\t\t\t\t-- Unknown (Default)\r\n  \r\n--\r\nRETURN 0\r\nEND"
