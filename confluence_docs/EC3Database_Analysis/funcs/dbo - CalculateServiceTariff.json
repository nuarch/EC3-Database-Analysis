      "content": [
        {
          "type": "text",
          "text": "CREATE   FUNCTION [dbo].[CalculateServiceTariff] (@CommodityOrDelivery varchar(1),@DeliveryTariff varchar(3),@CommodityTariff varchar(4),@TODAccount varchar(1))\nRETURNS varchar(3) AS  \r\nBEGIN \r\n--\r\ndeclare @ConventionalAccount varchar(3)\r\nSet @ConventionalAccount = 'YYY'\r\n--\r\nif (@TODAccount = 'N')\r\n   Begin\r\n-- Conventional Accounts\r\n\tif (@CommodityTariff = '16-1' and @DeliveryTariff = '062')\r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '062'\r\n\t      else\r\n\t\t  return '001'\r\n\t   End\r\n\telse if (@CommodityTariff = '16-2' and @DeliveryTariff = '069') \r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '069'\r\n\t      else\r\n\t\t  return '002'\r\n\t   End\r\n\telse if (@CommodityTariff = '16-4' and @DeliveryTariff = '091') \r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '911'\r\n\t      else\r\n\t\t  return '041'\r\n\t   End\r\n\telse if (@CommodityTariff = '16-4' and @DeliveryTariff = '093')\r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '931'\r\n\t      else\r\n\t\t  return '041'\r\n\t   End\r\n\telse if (@CommodityTariff = '16-4' and @DeliveryTariff = '098')\r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '981'\r\n\t      else\r\n\t\t  return '041'\r\n\t   End\r\n   End\r\nelse\r\n   Begin\r\n -- Time of Day Accounts\r\n\tif (@CommodityTariff = '16-1' and @DeliveryTariff = '062')\r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '062'\r\n\t      else\r\n\t\t  return '001'\r\n\t   End\r\n\telse if (@CommodityTariff = '16-2' and @DeliveryTariff = '069') \r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '069'\r\n\t      else\r\n\t\t  return '002'\r\n\t   End\r\n\telse if (@CommodityTariff = '16-4' and @DeliveryTariff = '091') \r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '911'\r\n\t      else\r\n\t\t  return '041'\r\n\t   End\r\n\telse if (@CommodityTariff = '16-4' and @DeliveryTariff = '093')\r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '931'\r\n\t      else\r\n\t\t  return '041'\r\n\t   End\r\n\telse if (@CommodityTariff = '16-4' and @DeliveryTariff = '098')\r\n\t   Begin\r\n\t      if (@CommodityOrDelivery = 'D')\r\n\t\t  return '981'\r\n\t      else\r\n\t\t  return '041'\r\n\t   End\r\n End\r\n\r\nreturn @ConventionalAccount\r\nEND"
