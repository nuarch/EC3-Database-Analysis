    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- ================================================\n-- Description: Remove extra spaces withing the String\r\n-- by kalpeshshirodker  (from http://kalpeshshirodker.wordpress.com/2009/09/24/truncate-extra-space-in-sql/)\r\n-- ================================================\r\ncreate FUNCTION [Common].[RemoveExtraSpaces]\r\n( \r\n\t@str nvarchar(max)\t-- Full string to remove extra spaces\r\n) \r\nRETURNS nvarchar(max)\r\nAS\r\nBEGIN\r\n-- Declare parameters\r\n\tSET @str = REPLACE(REPLACE(REPLACE(@str, SPACE(1), '<>'), '><', SPACE(0)), '<>', SPACE(1));\r\n-- Return the result of the function\r\nRETURN @str\r\nEND"
        }
