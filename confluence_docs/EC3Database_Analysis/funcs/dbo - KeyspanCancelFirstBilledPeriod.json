      "content": [
        {
          "type": "text",
          "text": "CREATE   FUNCTION [dbo].[KeyspanCancelFirstBilledPeriod] (@YYYYMM varchar(6),@BillingCycle varchar(1),@NumberOfPeriods int)\nRETURNS varchar(6) AS  \r\nBEGIN \r\nif @YYYYMM ='187601'  return '187601'\r\ndeclare @mm integer\r\ndeclare @yy integer\r\ndeclare @mm1 integer\r\ndeclare @yy1 integer\r\nset @mm1 = cast(substring(@YYYYMM,5,2) as integer) - [dbo].[MonthsInBillingCycle]  (@BillingCycle)* (@NumberOfPeriods - 1)\r\nset @mm  = @mm1 % 12\r\nset @yy1  = @mm1 / 12\r\nset @yy = cast(substring(@YYYYMM,1,4) as integer) + @yy1\r\nif @mm < 1 \r\n   begin\r\n      set @mm = @mm + 12\r\n      set @yy = @yy - 1\r\n    end\r\nif @mm < 10  return cast( (@yy) as varchar(4)) +'0'+  cast( (@mm) as varchar(1))\r\nelse return cast( (@yy) as varchar(4)) +  cast( (@mm) as varchar(2))\r\nreturn '187601'\r\nEND"
        }
