      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Published].[DetermineAccountLevelEstimatedOrActualBilling]\n(\r\n\t@PublishedBillingPeriod AS VARCHAR(6)\r\n\t,@BillingPeriod AS VARCHAR(6)\r\n\t,@OriginalAccountNumber AS VARCHAR(15)\r\n)\r\nRETURNS VARCHAR(3)\r\nAS\r\nBEGIN\r\n\tDECLARE @EstimatedReading AS VARCHAR(3);\r\n\r\n\tSELECT @EstimatedReading = MAX(EstimatedReading)\r\n\tFROM Published.TemporalAccountMeterLevelRawDataForCurrentPeriod\r\n\tWHERE EffectiveStartPeriod <= @PublishedBillingPeriod AND EffectiveEndPeriod > @PublishedBillingPeriod\r\n\tGROUP BY BillingPeriod, OriginalAccountNumber\r\n\tHAVING BillingPeriod = @BillingPeriod AND OriginalAccountNumber = @OriginalAccountNumber;\r\n\r\n\tIF(@@rowcount = 0)\r\n\tBEGIN\r\n\t\tSET @EstimatedReading = 'EST';\r\n\tEND;\r\n\r\n\tRETURN @EstimatedReading;\r\nEND;"
        }
