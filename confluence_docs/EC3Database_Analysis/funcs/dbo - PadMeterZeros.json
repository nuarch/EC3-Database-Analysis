    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE   FUNCTION [dbo].[PadMeterZeros]  (@meterNumber varchar(7))\n--\r\nRETURNS varchar(7) AS  \r\nBEGIN \r\ndeclare @lenOfMeterNumber integer\r\ndeclare @trimmedMeterNumber varchar(7)\r\nset @trimmedMeterNumber =  ltrim(rtrim(@MeterNumber))\r\nset @lenOfMeterNumber = len( @trimmedMeterNumber )\r\nif @lenOfMeterNumber  = 0  return '0000000'\r\nelse if @lenOfMeterNumber  = 1  return '000000' + cast (@trimmedMeterNumber as varchar(1))\r\nelse if @lenOfMeterNumber  = 2  return '00000' + cast (@trimmedMeterNumber as varchar(2))\r\nelse if @lenOfMeterNumber  = 3  return '0000' + cast (@trimmedMeterNumber as varchar(3))\r\nelse if @lenOfMeterNumber  = 4  return '000' + cast (@trimmedMeterNumber as varchar(4))\r\nelse if @lenOfMeterNumber  = 5  return '00' + cast (@trimmedMeterNumber as varchar(5))\r\nelse if @lenOfMeterNumber  = 6  return '0' + cast (@trimmedMeterNumber as varchar(6))\r\nreturn @MeterNumber\r\nEND"
        }
      ]
