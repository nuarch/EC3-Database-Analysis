    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[ConvertStringDateToPeriod] ( @yyyymm varchar(6))\nRETURNS smalldatetime AS  \r\nBEGIN \r\n--\r\ndeclare @yyyy Varchar(4)\r\ndeclare @mm  Varchar(2)\r\n--\r\nset @yyyy = substring(@yyyymm,1,4)\r\nset @mm  = substring(@yyyymm,5,2)\r\n--\r\nreturn Cast((@yyyy+'-'+@mm+'-01') as smalldatetime)\r\nEND"
        }
