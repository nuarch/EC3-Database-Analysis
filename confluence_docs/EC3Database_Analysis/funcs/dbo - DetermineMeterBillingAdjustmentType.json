      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[DetermineMeterBillingAdjustmentType] (@Consumption varchar(1),@Demand varchar(1))\n\r\nRETURNS varchar(1) AS  \r\n\r\nBEGIN \r\n--\r\ndeclare @AdjustmentCombination varchar(2)\r\n--\r\nset @AdjustmentCombination = IsNull(@Consumption,'*')+IsNull(@Demand,'*')\r\nif (@AdjustmentCombination = '1*') return '1'\r\nelse if (@AdjustmentCombination = '*4') return '2'\r\nelse if (@AdjustmentCombination = '14') return '3'\r\n--\r\n\r\nreturn '0'\r\nEnd"
        }
