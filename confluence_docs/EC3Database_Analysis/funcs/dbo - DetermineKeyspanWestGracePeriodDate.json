      "content": [
        {
          "type": "text",
          "text": "CREATE   FUNCTION [dbo].[DetermineKeyspanWestGracePeriodDate] ( @yyyymmdd varchar(8),@SLorCris varchar(1))\nRETURNS varchar(8) AS  \r\n\r\nBEGIN \r\n--\r\ndeclare @DayOfWeek int\r\ndeclare @GraceDays int\r\ndeclare @DaysAhead int\r\ndeclare @GraceDate datetime\r\n\r\n--\r\nif (@SLorCris = 3 ) set @GraceDays = 3 else set @GraceDays = 5\r\n--\r\nselect @DayOfWeek = DATEPART ( dw , @yyyymmdd)\r\n--\r\nset @DaysAhead = (@DayOfWeek + @GraceDays) - 7\r\n--\r\nif (@DaysAhead = 0 or @DaysAhead = 1)  set @GraceDays = @GraceDays + 2 \r\n--else if (@DaysAhead = 1)  set @GraceDays = @GraceDays + 1\r\n\r\nset @GraceDate = DATEADD(day, @GraceDays, @yyyymmdd)\r\n\r\nreturn cast(DATEPART ( yyyy , @GraceDate)*10000+DATEPART ( mm , @GraceDate)*100 + DATEPART ( dd , @GraceDate) as varchar(8)) \r\nEND"
