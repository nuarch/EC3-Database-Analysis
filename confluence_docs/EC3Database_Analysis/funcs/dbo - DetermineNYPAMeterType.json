    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[DetermineNYPAMeterType] ( @LegacyMeterType varchar(2))\nRETURNS varchar(1) AS  \r\n\r\nBEGIN \r\n--\r\ndeclare @NYPAMeterType varchar(1)\r\n--\r\nset @NYPAMeterType = substring(@LegacyMeterType ,2,1)\r\nif (@NYPAMeterType< 1 )  set @NYPAMeterType = 'E'\r\n--\r\nreturn @NYPAMeterType\r\nEND"
        }
