        {
          "type": "text",
          "text": "1",
          "marks": [
            {
              "type": "code"
            }
          ]
        },
        {
          "type": "text",
          "text": " for valid, "
        },
        {
          "type": "text",
          "text": "0",
          "marks": [
            {
              "type": "code"
            }
          ]
        },
        {
          "type": "text",
          "text": " for invalid)."
        }
