    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[GetStreetFromAddress] ( @address varchar(40))\nRETURNS varchar(24) AS  \r\n\r\nBEGIN \r\n--\r\ndeclare @Street varchar(40)\r\n\r\n\r\ndeclare @StartPosOfBlank int\r\n\r\ndeclare @blank varchar(1)\r\n\r\nset @blank = ' '\r\n\r\nset @StartPosOfBlank = CHARINDEX(@blank,@address,0)\r\n\r\nset @Street = rtrim(ltrim(substring(@address, @StartPosOfBlank, LEN(@address))))\r\n\r\n\r\n\r\nreturn @Street\r\n\r\n\r\nEND"
        }
