      "content": [
        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [dbo].[PadLeadingZeros]  (@JulDate varchar(5))\n--\r\nRETURNS varchar(5) AS  \r\nBEGIN \r\ndeclare @lenOfJuldate integer\r\ndeclare @trimmedJuldate varchar(5)\r\nset @trimmedJuldate =  ltrim(rtrim(@JulDate))\r\nset @lenOfJuldate = len( @trimmedJuldate )\r\nif @lenOfJuldate  = 0  return '00000'\r\nelse if @lenOfJuldate  = 1  return '0000' + cast (@trimmedJuldate as varchar(1))\r\nelse if @lenOfJuldate  = 2  return '000' + cast (@trimmedJuldate as varchar(2))\r\nelse if @lenOfJuldate  = 3  return '00' + cast (@trimmedJuldate as varchar(3))\r\nelse if @lenOfJuldate  = 4  return '0' + cast (@trimmedJuldate as varchar(4))\r\nreturn @JulDate\r\nEND"
        }
