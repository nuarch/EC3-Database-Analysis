    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "-- =============================================\n-- Author:\t\t<Author,,Name>\r\n-- Create date: <Create Date, ,>\r\n-- Description:\t<Description, ,>\r\n-- =============================================\r\nCREATE FUNCTION [dbo].[ConvertOverpunch] (@overPunchField varchar(1000) )\r\nRETURNS    varchar(1000)\r\nBEGIN \r\n\tDECLARE @OverPunchCodes varchar(20)\r\n\tDECLARE @OverPunchValues varchar(20)\r\n\tdeclare @OverPunch varchar(1)\r\n\tdeclare @overPunchValuePosition int\r\n\tDeclare @overPunchColumnLength int\r\n\tdeclare @convertedField varchar(1000)\r\n\r\n\tset @OverPunchCodes  = '{ABCDEFGHIJKLMNOPQR}'\r\n\tset @OverPunchValues = '01234567891234567890'\r\n\tset @overPunchField = ltrim(rtrim(@overPunchField))\r\n\tset @overPunchColumnLength =  len(@overPunchField)\r\n\tset @OverPunch = SUBSTRING(@overPunchField,@overPunchColumnLength,1 )\r\n\tselect  @overPunchValuePosition = CHARINDEX(@OverPunch,@OverPunchCodes)\r\n\t\r\n\tif (@overPunchValuePosition <> 0) \r\n\tbegin\r\n\t\tset @convertedField = SUBSTRING(@overPunchField,1,@overPunchColumnLength-1 )+SUBSTRING( @OverPunchValues, @overPunchValuePosition,1 )\r\n\t\tif (@overPunchValuePosition > 10)\r\n\t\t\tset @overPunchField =  ( '-' + @convertedField)\r\n\t\telse\r\n\t\t\tset @overPunchField = @convertedField\r\n\tend\r\n\r\n\treturn @overPunchField -- return @overPunchField\r\nEND"
        }
