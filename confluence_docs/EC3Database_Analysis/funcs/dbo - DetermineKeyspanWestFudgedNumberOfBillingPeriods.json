      "content": [
        {
          "type": "text",
          "text": "CREATE       FUNCTION [dbo].[DetermineKeyspanWestFudgedNumberOfBillingPeriods] ( @CurrentPeriod varchar(6),@FirstRevisedPeriod varchar(6), @CrisOrSL integer)\nRETURNS integer AS  \r\n\r\nBEGIN \r\n-- \r\ndeclare @FirstRevisedPeriodYYYY integer\r\ndeclare @FirstRevisedPeriodMM  integer\r\ndeclare @CurrentPeriodPeriodYYYY integer\r\ndeclare @CurrentPeriodPeriodMM  integer\r\ndeclare @TheDivisor integer\r\ndeclare @RevisedPeriodPlusOnePeriod VARCHAR(6)\r\n--\r\nset @RevisedPeriodPlusOnePeriod = @FirstRevisedPeriod\r\nif (@CrisOrSL = 3)  \r\n     Begin\r\n\t     --set @RevisedPeriodPlusOnePeriod = [dbo].[CreateNextPeriod] (@FirstRevisedPeriod,'M')  \r\n\t     set @TheDivisor = 1\r\n     End\r\nelse\r\n     Begin\r\n\t     --set @RevisedPeriodPlusOnePeriod = [dbo].[CreateNextPeriod] (@FirstRevisedPeriod,'B')  \r\n\t     set @TheDivisor = 2\r\n     End\r\n--\r\nset  @FirstRevisedPeriodYYYY   = cast(substring(@RevisedPeriodPlusOnePeriod,1,4) as integer)\r\nset  @FirstRevisedPeriodMM        = cast(substring(@RevisedPeriodPlusOnePeriod,5,2) as integer)\r\n--\r\nset  @CurrentPeriodPeriodYYYY = cast(substring(@CurrentPeriod,1,4) as integer)\r\nset  @CurrentPeriodPeriodMM      = cast(substring(@CurrentPeriod,5,2) as integer)\r\n--\r\n--return ((@CurrentPeriodPeriodYYYY - @FirstRevisedPeriodYYYY )*12 + (@CurrentPeriodPeriodMM- @FirstRevisedPeriodMM )+@TheDivisor )/@TheDivisor \r\nreturn ((@CurrentPeriodPeriodYYYY - @FirstRevisedPeriodYYYY )*12 + (@CurrentPeriodPeriodMM- @FirstRevisedPeriodMM ))/@TheDivisor + 1\r\nEND"
        }
