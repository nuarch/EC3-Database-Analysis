    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [CrisNationalGridWest].[DetermineFirstPeriodCanceledByAccountElseFromDate]\n(\r\n      @CurrentAccountNumber varchar(15),\r\n      @CurrentInvoiceAccountGroup int,\r\n      @FromDate dbo.FromDate\r\n)\r\nRETURNS varchar(6)\r\nAS\r\nBEGIN\r\n            --******************************************************************************************************\r\n            --* Description:  calcualtes the minimum billing period that encapsulates using the AccountNumber, InvoiceBillingGroup and fromdate \r\n            --*\t\t\t\t  and then returns th earliest period if it exists else projects the first period canceled\r\n            --*\t\t\t\t  using the original function CrisNationalGridWest.DetermineFirstPeriodCanceledByFromDate.\r\n            --*               \r\n            --* Mohammed Belarrem\r\n            --*   05/26/2010 MOH    created:    \r\n            --*\t  02/11/2011 PAH\tupdate:\t\tBased on CrisNationalGridWest.DetermineFirstPeriodCanceledByFromDate\t   \r\n            --******************************************************************************************************\r\n\r\n            declare @BillingPeriod dbo.BillingPeriod\r\n            declare @TheCount int\r\n            declare @TheRowCount int\r\n\t\t\t\r\n\t\t\tSELECT    @BillingPeriod = min(isnull(Billing.AccountBilling.BillingPeriodRevision,'187601')), @TheCount=count(*)\r\n\t\t\tFROM \r\n\t\t\t\t\tBilling.Account INNER JOIN\r\n\t\t\t\t\tBilling.AccountBilling ON Billing.Account.AccountSeqid = Billing.AccountBilling.AccountSeqid\r\n\t\t\tWHERE \r\n\t\t\t\t\t(Billing.Account.CurrentAccountNumber = @CurrentAccountNumber) AND \r\n\t\t\t\t\t(Billing.Account.CurrentInvoiceAccountGroup = @CurrentInvoiceAccountGroup) AND \r\n\t\t\t\t\t(Billing.AccountBilling.FromDate = @FromDate)\t\t\t\r\n\t\t\t--\r\n\t\t\tset @TheRowCount = @@ROWCOUNT\r\n\t\t\t--\r\n\t\t\tif (@BillingPeriod <> '187601') return @BillingPeriod\r\n\t\t\t--\r\n  \t\t\tSELECT TOP (1)  @BillingPeriod = BillingPeriod\r\n\t\t\tFROM CrisNationalGridWest.CRISBillingPeriodByWD\r\n\t\t\tWHERE (WDNumber IN ('20', '40')) AND (ToDate >= @FromDate ) AND (FromDate < @FromDate )\r\n            \r\n            return dbo.CreateNextPeriod(@BillingPeriod , 'M')  \r\n\r\n      \r\n\r\nEND"
        }
      ]
