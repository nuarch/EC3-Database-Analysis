      "content": [
        {
          "type": "text",
          "text": "CREATE FUNCTION [Factors].[GetAppropriateFactor] (@FactorType VARCHAR(3), @EnergyDeliveryType dbo.seqid, @CalendarYear VARCHAR(4))\n--\r\nRETURNS  DECIMAL(10, 7)\r\nAS \r\nBEGIN\r\n--\r\nDECLARE @Factor DECIMAL(10, 7) = 0\r\n--\r\nDECLARE @EnergyDeliveryTypeSeqid dbo.seqid\r\n\r\nDECLARE @BillingPeriod VARCHAR(6)\r\nSELECT @BillingPeriod = ATF.BillingPeriod FROM Billing.ApplicationTimeFrame AS ATF WHERE ATF.CurrentProcessingPeriod ='Y'\r\n\r\n--\r\nSELECT  @EnergyDeliveryTypeSeqid = MIN(Billing.EnergyDeliveryType.EnergyDeliveryType)\r\nFROM Billing.EnergyDeliveryType\r\nWHERE   Billing.EnergyDeliveryType.EnergyType IN ( SELECT  Billing.EnergyDeliveryType.EnergyType\r\n                                                   FROM Billing.EnergyDeliveryType\r\n                                                   WHERE   Billing.EnergyDeliveryType.EnergyDeliveryType = @EnergyDeliveryType )\r\n--\r\nIF @FactorType = 'BTU'\r\n    SELECT  @Factor = CEFBACBBP.MMBtusFactor\r\n    FROM Factors.ConversionEquivalentsForBtuAndCO2eByBillingPeriod AS CEFBACBBP\r\n    WHERE   CEFBACBBP.BillingPeriod = @BillingPeriod\r\n            AND CEFBACBBP.EnergyDeliveryType = @EnergyDeliveryTypeSeqid\r\nELSE\r\n    SELECT  @Factor = CEFBACBBPx.CO2EquivalentEmissionsFactor\r\n    FROM Factors.ConversionEquivalentsForBtuAndCO2eByBillingPeriod AS CEFBACBBPx\r\n    WHERE   CEFBACBBPx.BillingPeriod = @BillingPeriod\r\n            AND CEFBACBBPx.EnergyDeliveryType = @EnergyDeliveryTypeSeqid\r\n--\r\nRETURN @Factor\r\nEND"
        }
