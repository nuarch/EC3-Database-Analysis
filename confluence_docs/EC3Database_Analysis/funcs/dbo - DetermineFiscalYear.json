    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "Create FUNCTION [dbo].[DetermineFiscalYear]\n--ALTER FUNCTION dbo.DetermineFiscalYear\r\n    (\r\n     @BillingPeriod VARCHAR(40)\r\n    )\r\nRETURNS VARCHAR(4)\r\nAS\r\n    BEGIN\r\n        DECLARE @YR1 VARCHAR(4) = '1900'\r\n        DECLARE @YR2 VARCHAR(4) = '1900'\r\n        DECLARE @FiscalYear VARCHAR(4)\r\n\r\n        SET @YR1 = CONCAT(LEFT(@BillingPeriod, 4), '07')\r\n\r\n        SET @YR2 = CONCAT(LEFT(@BillingPeriod, 4), '12')\r\n\r\n        SET @FiscalYear = CASE WHEN @BillingPeriod >= @YR1\r\n                                    AND @BillingPeriod <= @YR2\r\n                               THEN CAST(CAST(LEFT(@BillingPeriod, 4) AS INT) + 1 AS VARCHAR(4))\r\n                               ELSE CAST(LEFT(@BillingPeriod, 4) AS VARCHAR(4))\r\n                          END\r\n\r\n        RETURN @FiscalYear\r\n    END"
        }
      ]
