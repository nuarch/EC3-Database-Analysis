        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [dbo].[JulianDateToYYYYMMDD] (@YYDDD varchar(5))\nRETURNS varchar(8) AS  \r\nBEGIN \r\ndeclare @baseDateForJulianConversion datetime\r\n-- Return Type YYYYMMDD\r\ndeclare @YYYYMMDD varchar(8)\r\ndeclare @PaddedJulDate varchar(5)\r\ndeclare @YY varchar(2)\r\ndeclare @DDD int\r\n--\r\ndeclare @YYYYBaseFromJauuaryFirst varchar(23)\r\ndeclare @x datetime\r\n-- Default Value for a \"00000\" is '18760101'\r\nset @YYYYMMDD = '18760101'\r\nset  @PaddedJulDate = [dbo].[PadLeadingZeros] (@YYDDD)\r\nset @YYDDD = @PaddedJulDate\r\nif (@YYDDD ='00000')  return (@YYYYMMDD)\r\nset @YY = substring(@YYDDD,1,2)\r\n-- The -1 is to compensate for January 1\r\nset @DDD = cast (substring(@YYDDD,3,3) as int) - 1\r\n if ('75' <=@YY and @YY <= '99')  \r\n\tset @YYYYBaseFromJauuaryFirst =  '19' +  @YY + '-01-01'\r\nelse\r\n\tset @YYYYBaseFromJauuaryFirst =  '20' +  @YY + '-01-01'\r\nset @baseDateForJulianConversion = cast(@YYYYBaseFromJauuaryFirst as datetime) \r\nreturn  convert(varchar(8),dateadd(day,@DDD,convert(char(11),@baseDateForJulianConversion ,113)),112)\r\nEND"
        }
      ]
