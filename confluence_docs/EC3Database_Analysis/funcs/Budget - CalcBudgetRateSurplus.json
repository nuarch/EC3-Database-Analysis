    },
    {
      "type": "heading",
      "attrs": {
        "level": 1
      },
      "content": [
        {
          "type": "text",
          "text": "8. Function Definition"
        }
      ]
    },
    {
      "type": "codeBlock",
      "attrs": {
        "language": "sql"
      },
      "content": [
        {
          "type": "text",
          "text": "CREATE  FUNCTION [Budget].[CalcBudgetRateSurplus]\n(\r\n\t@BudgetRate FLOAT,\r\n\t@ActualRate FLOAT,\r\n\t@BudgetUsage EnergyUnit\r\n)\r\nRETURNS FLOAT AS  \r\nBEGIN \r\n\r\ndeclare @RateSurplus FLOAT\r\nset @RateSurplus = ( ISNULL(@BudgetRate, 0) - ISNULL(@ActualRate, 0) ) * CAST(ISNULL(@BudgetUsage, 0) AS FLOAT)\r\n\r\nreturn \t@RateSurplus\t\t\t\t\t \r\nEND"
        }
      ]
    }
